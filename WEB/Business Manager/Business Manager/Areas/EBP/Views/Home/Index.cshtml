    <div class="row">
        <div class="col-12"></div>
    </div>
</div>

<footer class="mt-auto py-3 footer">
</footer>

@Html.Resource("js",
    @<script>
        $(document).ready(function () {
            $(".owl-carousel").owlCarousel({
                items: 1,
                loop: true,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true
            });
        });
    </script>
)
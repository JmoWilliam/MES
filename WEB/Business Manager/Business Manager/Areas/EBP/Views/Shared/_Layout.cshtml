@using Business_Manager.Helpers
@{
    string dateCache = DateTime.Now.ToString("MMddmmss");
}
<!DOCTYPE html>
<html lang="zh-Hant-TW" class="h-100">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="format-detection" content="telephone=no,email=no,adress=no" />
    <meta name="theme-color" content="#a8e4a0" />
    <meta name="description" content="中揚光電員工福利整合平台" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-touch-fullscreen" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#a8e4a0" />
    <meta name="apple-mobile-web-app-title" content="JMO EBP" />
    <link href="@Url.Content("~/Areas/EBP/manifest.json")?@dateCache" rel="manifest" />
    <link href="@Url.Content("~/Areas/EBP/Content/images/favicon.ico")" rel="shortcut icon" sizes="32x32" />
    <link href="@Url.Content("~/Areas/EBP/Content/images/icon-192x192.png")" rel="apple-touch-icon" sizes="192x192" />
    <link href="@Url.Content("~/Content/bootstrap/4.5.3/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/fontawesome.pro/5.13.0/css/all.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/owl.carousel.2/2.3.4/owl.carousel.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/owl.carousel.2/2.3.4/owl.theme.default.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/select2/4.1.0-rc.0/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/offline.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/EBP/Content/ebp.min.css")?@dateCache" rel="stylesheet" />
    @Html.RenderResources("css")
</head>
<body class="">
    @RenderBody()
    <script src="@Url.Content("~/Scripts/app.js")"></script>
    <script src="@Url.Content("~/Scripts/offline.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/4.5.3/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/owl.carousel.2/2.3.4/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/Scripts/system.setting.js")?@dateCache"></script>
    <script src="@Url.Content("~/Scripts/toastr/2.1.3/toastr.setting.js")"></script>
    <script src="@Url.Content("~/Scripts/select2/4.1.0-rc.0/select2.full.min.js")"></script>
    <script src="@Url.Content("~/Areas/EBP/Scripts/ebp.js")?@dateCache"></script>
    @Html.RenderResources("js")
</body>
</html>
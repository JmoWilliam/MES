@{
    string controllerName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    string actionName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);

    switch (controllerName.ToUpper())
    {
        case "GAMING":
            switch (actionName.ToUpper())
            {
                case "BINGO":
                case "BINGOLOTTERY":
                case "BINGOVERIFICATION":
                    Layout = "~/Views/Shared/_LayoutGaming.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "HOME":
            switch (actionName.ToUpper())
            {
                case "GATE":
                case "GATEDETAIL":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "FLOWERBOOK":
            Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
            break;
        case "USER":
            switch (actionName.ToUpper())
            {
                case "LOGIN":
                    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
                    break;
                case "BINGO":
                case "LOTTERY":
                case "MLOGIN":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "MESREPORT":
            switch (actionName)
            {
                case "IFrameBarcodeTracking":
                case "IFrameProductionHistory":
                case "IFrameMeasurementRecord":
                case "IFrameBarcodeProcessEvent":
                case "IFrameOrderStockReport":
                    Layout = "~/Views/MesReport/_Layout.cshtml";
                    break;
                case "SaleRankingManagement":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;

            }
            break;
        case "PRODUCTION":
            switch (actionName)
            {
                case "OspSupplierManagement":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "TASKMANAGER":
            switch (actionName)
            {
                case "TaskDistribution":
                    Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;

        case "PRODUCTIONHISTORY":
            switch (actionName)
            {
                case "Index":
                    Layout = "~/Views/Shared/_LayoutProductionHistory.cshtml";
                    break;
                case "IndexForSupplier":
                default:
                    Layout = "~/Views/Shared/_LayoutProductionHistoryForSupplier.cshtml";
                    break;
            }
            //Layout = "~/Views/Shared/_LayoutProductionHistory.cshtml";
            break;
        case "MESPLATFORM":
            switch (actionName)
            {
                case "PRODUCTIONHISTORY":
                    Layout = "~/Views/Shared/_LayoutProductionHistory.cshtml";
                    break;
                case "PRODUCTIONHISTORYFORSUPPLIER":
                    Layout = "~/Views/Shared/_LayoutProductionHistoryForSupplier.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_LayoutProductionHistory.cshtml";
                    break;
            }
            break;
        case "PICKINGSYSTEM":
            Layout = "~/Views/Shared/_LayoutPicking.cshtml";
            break;
        case "CHAT":
            Layout = "~/Views/Shared/_LayoutChat.cshtml";
            break;
        case "DEMAND":
            switch (actionName)
            {
                case "IFrameFlowPreview":
                case "IFrameDemandTrack":
                    Layout = "~/Views/Demand/_Layout.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "TASK":
            switch (actionName)
            {
                case "ReplyInterface":
                    Layout = "~/Views/Shared/_LayoutPmis.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "INVENTORYTRANSACTION":
            Layout = "~/Views/Shared/_LayoutInventoryTransaction.cshtml";
            break;
        case "PURCHASEREQUISITION":
            switch (actionName)
            {
                case "HistoryPrice":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                case "IFrameHistoryPrice":
                    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
                    break;
                default:
                    Layout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
        case "QCPLANNINGPROCESS":
            Layout = "~/Views/Shared/_LayoutQcPlanningPlatform.cshtml";
            break;
        case "PRODUCTIONHISTORYFORSUPPLIER":
            Layout = "~/Views/Shared/_LayoutProductionHistoryForSupplier.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}   
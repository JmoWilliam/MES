@using Business_Manager.Helpers
@{
    string itemName = "ViewProcessItem";
    string itemNameText = "查看製程相關資料";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row mb-3" id="query@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtProcessNameQ@(itemName)" name="txtProcessNameQ@(itemName)"
                                               placeholder="請輸入製程名稱" />
                                    </div>
                                    <div class="col-auto">
                                        <button id="queryButton@(itemName)" type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i> 搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">製程代碼</th>
                                        <th scope="col" style="min-width: 200px;">製程名稱</th>
                                        <th scope="col" style="min-width: 175px;">變更日期</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let ProcessId@(itemName);
        let ProcessName@(itemName);
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            processId@(itemName) = config.objectProcessId;
            processName@(itemName) = config.objectProcessName;

            $("#desProcessName@(itemName)").html($(processName@(itemName)).text());

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetProcessItem", "ScmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ProcessName": $("#txtProcessNameQ@(itemName)").val(),
                "Status": statusList.join(","),
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessNo}" style="max-width: 200px;">${item.ProcessNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessName}" style="max-width: 200px;">${item.ProcessName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.LastModifiedDate}" style="max-width: 200px;">${item.LastModifiedDate}</td>
                                        <td class="text-center col-sticky">
                                            <label class="control control-solid control-solid-info control--radio">
                                                <input type="radio" name="chkProcessId@(itemName)" data-process-item-id="${item.ProcessId}" value="${item.ProcessId}" />
                                                <span class="control__indicator"></span>
                                            </label>
                                            <input type="hidden" name="txtProcessId@(itemName)" data-process-item-id="${item.ProcessId}" value="${item.ProcessId}" />
                                            <input type="hidden" name="txtProcessNo@(itemName)" data-process-item-id="${item.ProcessId}" value="${item.ProcessNo}" />
                                            <input type="hidden" name="txtProcessName@(itemName)" data-process-item-id="${item.ProcessId}" value="${item.ProcessName}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-process-item-id]:checked") {
                    let ProcessId = $(this).data("process-item-id");

                    if (ProcessId) {
                        let ProcessName = $(`input[name="txtProcessName@(itemName)"][data-process-item-id="${ProcessId}"]`).val();

                        if (processId@(itemName)) ElementSetValue(processId@(itemName), ProcessId, "change");
                        if (processName@(itemName)) ElementSetValue(processName@(itemName), ProcessName, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
        )
@using Business_Manager.Helpers
@{
    string itemName = "EcRegisterManagment";
    string itemNameText = "電商註冊管理";

    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
                )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary btnReturn" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboOrganizaitonTypeQ@(itemName)">客人類型</label>
                            <div class="col-12">
                                <select class="form-control edit-column" id="cboOrganizaitonTypeQ@(itemName)" name="cboOrganizaitonTypeQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtMemberNameQ@(itemName)">客戶名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtMemberNameQ@(itemName)" name="txtMemberNameQ@(itemName)" placeholder="請輸入客戶名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtOrgShortNameQ@(itemName)">公司簡稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtOrgShortNameQ@(itemName)" name="txtOrgShortNameQ@(itemName)" placeholder="請輸入公司簡稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboStatusQ@(itemName)">狀態</label>
                            <div class="col-12">
                                <select class="form-control edit-column" id="cboStatusQ@(itemName)" name="cboStatusQ@(itemName)"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 100px;">客人類型</th>
                                        <th scope="col" style="min-width: 100px;">註冊代號</th>
                                        <th scope="col" style="min-width: 150px;">公司簡稱</th>
                                        <th scope="col" style="min-width: 150px;">規模</th>
                                        <th scope="col" style="min-width: 150px;">客戶名稱</th>
                                        <th scope="col" style="min-width: 200px;">客戶電子郵件</th>
                                        <th scope="col" style="min-width: 100px;">公司聯絡人</th>
                                        <th scope="col" style="min-width: 150px;">聯絡電話</th>
                                        @*<th scope="col" style="min-width: 150px;">公司電子郵件</th>
                                            <th scope="col" style="min-width: 150px;">公司地址</th>*@
                                        <th scope="col" style="min-width: 150px;">描述</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="MemberId" name="MemberId" value="-1" />
                        <input type="hidden" id="OrgId" name="OrgId" value="-1" />
                        <input type="hidden" id="OrganizaitonTypeId" name="OrganizaitonTypeId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">公司簡稱 / 客戶名稱<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtOrgShortName@(itemName)" name="txtOrgShortName@(itemName)" placeholder="請輸入公司簡稱">
                                    <input type="text" class="form-control" id="txtMemberName@(itemName)" name="txtMemberName@(itemName)" placeholder="請輸入客戶名稱">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">客戶電子郵件<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtMemberEmail@(itemName)" name="txtMemberEmail@(itemName)" placeholder="請輸入客戶電子郵件">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">公司聯絡人 / 聯絡電話<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtContactName@(itemName)" name="txtContactName@(itemName)" placeholder="請輸入公司聯絡人">
                                    <input type="text" class="form-control" id="txtContactPhone@(itemName)" name="txtContactPhone@(itemName)" placeholder="請輸入聯絡電話">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">公司電子郵件 / 描述<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtContactEmail@(itemName)" name="txtContactEmail@(itemName)" placeholder="請輸入公司電子郵件">
                                    <input type="text" class="form-control" id="txtDescription@(itemName)" name="txtDescription@(itemName)" placeholder="請輸入描述">

                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">公司地址<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtAddress@(itemName)" name="txtAddress@(itemName)" placeholder="請輸入公司地址">
                                </div>
                            </div>
                        </div>
                        <div class="tab" style="white-space:unset;">
                            <ul class="nav nav-tabs nav-fill mb-3" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tabActive" data-toggle="tab" href="#tabBasic">
                                        <i class="fas fa-clipboard"></i> 公司資料
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabBasic">
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label">客人類型 / 規模<span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <div class="input-group">
                                            <select class="form-control col-md-3 col-lg-3" id="cboOrganizaitonType@(itemName)" name="cboOrganizaitonType@(itemName)" placeholder="請選擇客人類型"></select>
                                            <select class="form-control col-md-3 col-lg-3" id="cboOrganizaitonScale@(itemName)" name="cboOrganizaitonScale@(itemName)" placeholder="請選擇規模"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row" data-org-type="1">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboCustomers@(itemName)">客戶</label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <div class="input-group">
                                            <select class="form-control" id="cboCustomers@(itemName)" name="cboCustomers@(itemName)"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row" data-org-type="2">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboSuppliers@(itemName)">供應商</label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <div class="input-group">
                                            <select class="form-control" id="cboSuppliers@(itemName)" name="cboSuppliers@(itemName)"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label">註冊代號<span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtOrganizationCode@(itemName)" name="txtOrganizationCode@(itemName)" placeholder="請輸入註冊代號" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>

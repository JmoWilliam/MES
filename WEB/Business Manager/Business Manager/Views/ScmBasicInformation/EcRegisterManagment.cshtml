            </div>
            <div class="card-footer text-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success read-hide" onclick="Save@(itemName)()" style="display:none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboOrganizaitonTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MemberOrganization.OrganizaitonType" }, "", "NA", "", "TypeName", "TypeNo"); //客人類型
            ComboBoxs.Default("#cboStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "EipMember.Status" }, "", "NA", "", "StatusDesc", "StatusNo"); //狀態
            
            
            $("#cboOrganizaitonTypeQ@(itemName), #cboStatusQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetMember", "ScmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "OrganizaitonType": $("#cboOrganizaitonTypeQ@(itemName)").val(),
                "MemberName": $("#txtMemberNameQ@(itemName)").val(),
                "OrgShortName": $("#txtOrgShortNameQ@(itemName)").val(),
                "Status": $("#cboStatusQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OrganizaitonTypeName}" style="max-width: 100px;">${item.OrganizaitonTypeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OrganizationCode}" style="max-width: 100px;">${item.OrganizationCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OrgShortName}" style="max-width: 150px;">${item.OrgShortName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OrganizaitonScaleName}" style="max-width: 150px;">${item.OrganizaitonScaleName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MemberName}" style="max-width: 150px;">${item.MemberName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MemberEmail}" style="max-width: 200px;">${item.MemberEmail}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ContactName}" style="max-width: 100px;">${item.ContactName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ContactPhone}" style="max-width: 150px;">${item.ContactPhone}</td>
                                        @*<td class="ellipsis" data-toggle="tooltip" title="${item.ContactEmail}" style="max-width: 150px;">${item.ContactEmail}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Address}" style="max-width: 150px;">${item.Address}</td>*@
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Description}" style="max-width: 150px;">${item.Description}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-member-id="${item.MemberId}" ${(item.Status == 'A' ? 'checked' : '')} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName("Status", item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-read" href="javascript:Read@(itemName)(${item.MemberId});"><i class="fas fa-eye"></i></a>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.MemberId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="12" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-member-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(MemberId) {
            $("#MemberId").val(MemberId ? MemberId : 0);

            $(objForm@(itemName) + " fieldset").attr("disabled", false);
            $(objForm@(itemName) + " select").attr("disabled", false);
            $(".read-hide").show();

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName), div[data-org-type]");

            ComboBoxs.Default("#cboOrganizaitonType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MemberOrganization.OrganizaitonType" }, "", "NA", "", "TypeName", "TypeNo");    //客人類型
            ComboBoxs.Default("#cboOrganizaitonScale@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MemberOrganization.OrganizaitonScale" }, "", "NA", "", "TypeName", "TypeNo");  //規模
            ComboBoxs.Default("#cboCustomers@(itemName)", "@Url.Action("GetCustomer", "ScmBasicInformation")", { "Status": "A" }, "", "CHOOSE-NUMBER", "請選擇客戶", "CustomerWithNo", "CustomerId"); //客戶
            ComboBoxs.Default("#cboSuppliers@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "Status": "A" }, "", "CHOOSE-NUMBER", "請選擇供應商", "SupplierWithNo", "SupplierId");  //供應商

            //依據客人類型會跳不同選擇框
            $("#cboOrganizaitonType@(itemName)").off("change").on("change", function () {
                $("[data-org-type]").hide();
                switch ($(this).val()) {
                    case "1":
                        $(`[data-org-type="1"]`).show();

                        $("#cboCustomers@(itemName)").on("change", function () {
                            let CustomerFullNo = $(this).find(':selected').text();
                            let CustomerNo = CustomerFullNo.split(' ')[0];
                            $("#txtOrganizationCode@(itemName)").val(CustomerNo);
                            $("#cboCustomers@(itemName)").val();
                        });
                        break;
                    case "2":
                        $(`[data-org-type="2"]`).show();
                        $("#cboSuppliers@(itemName)").on("change", function () {
                            let SupplierFullNo = $(this).find(':selected').text();
                            let SupplierNo = SupplierFullNo.split(' ')[0];
                            $("#txtOrganizationCode@(itemName)").val(SupplierNo);
                            $("#cboSuppliers@(itemName)").val();
                        });
                        break;
                }
            });

            if (MemberId > 0) {

                let targetUrl = "@Url.Action("GetMember", "ScmBasicInformation")";
                let postData = {
                    "MemberId": MemberId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtOrgShortName@(itemName)").val(item.OrgShortName);
                        $("#txtMemberName@(itemName)").val(item.MemberName);
                        $("#txtMemberEmail@(itemName)").val(item.MemberEmail);
                        $("#txtContactName@(itemName)").val(item.ContactName);
                        $("#txtContactPhone@(itemName)").val(item.ContactPhone);
                        $("#txtContactEmail@(itemName)").val(item.ContactEmail);
                        $("#txtDescription@(itemName)").val(item.Description);
                        $("#txtAddress@(itemName)").val(item.Address);

                        $("#cboOrganizaitonType@(itemName)").val(item.OrganizaitonType).trigger("change");
                        $("#cboOrganizaitonScale@(itemName)").val(item.OrganizaitonScale);
                        $("#txtOrganizationCode@(itemName)").val(item.OrganizationCode);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            $("#cboOrganizaitonType@(itemName), #cboOrganizaitonScale@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "50%"
            });

            $("#cboCustomers@(itemName), #cboSuppliers@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        }

        function Read@(itemName)(MemberId) {
            Edit@(itemName)(MemberId);
            $(objForm@(itemName) + " fieldset").attr("disabled", true);
            $(objForm@(itemName) + " select").attr("disabled", true);
            $(".read-hide").hide();
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {

                let MemberId = parseInt($("#MemberId").val());

                if (MemberId > 0) {
                    let targetUrl = "@Url.Action("UpdateMember", "ScmBasicInformation")";
                    let postData = {
                        "MemberId": MemberId,
                        "OrgShortName": $("#txtOrgShortName@(itemName)").val(),
                        "MemberName": $("#txtMemberName@(itemName)").val(),
                        "MemberEmail": $("#txtMemberEmail@(itemName)").val(),
                        "ContactName": $("#txtContactName@(itemName)").val(),
                        "ContactPhone": $("#txtContactPhone@(itemName)").val(),
                        "ContactEmail": $("#txtContactEmail@(itemName)").val(),
                        "Description": $("#txtDescription@(itemName)").val(),
                        "Address": $("#txtAddress@(itemName)").val(),
                        "OrganizaitonType": $("#cboOrganizaitonType@(itemName)").val(),
                        "OrganizaitonScale": $("#cboOrganizaitonScale@(itemName)").val(),
                        "OrganizationCode": $("#txtOrganizationCode@(itemName)").val(),
                        "OrganizaitonTypeId": $("#OrganizaitonTypeId@(itemName)").val() == "1" ? $("#cboCustomers@(itemName)").val() : $("#cboSuppliers@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var MemberId = $(this).data("member-id");

            let targetUrl = "@Url.Action("UpdateMemberStatus", "ScmBasicInformation")";
            let postData = {
                "MemberId": MemberId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }
    </script>
        )
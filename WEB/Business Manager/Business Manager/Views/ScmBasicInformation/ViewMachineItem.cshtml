@using Business_Manager.Helpers
@{
    string itemName = "ViewMachineItem";
    string itemNameText = "查看機台相關資料";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前製程: <span class="sub-text" id="desProcessName@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row mb-3" id="query@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-12 col-md-2 col-lg-2" style="display: flex;align-items: center;">
                                        <select class="form-control" id="cboShopIdQ@(itemName)" name="cboShopIdQ@(itemName)"
                                                data-msg-required="請選擇所屬車間" data-rule-required="true" style="min-width: 100px;"></select>
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtMachineNameQ@(itemName)" name="txtMachineNameQ@(itemName)"
                                               placeholder="請輸入機台名稱" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 175px;">所屬車間</th>
                                        <th scope="col" style="min-width: 175px;">機台代碼</th>
                                        <th scope="col" style="min-width: 200px;">機台名稱</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let processId@(itemName);
        let processName@(itemName);
        let machineId@(itemName);
        let machineName@(itemName);
        let shopName@(itemName);
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            processId@(itemName) = config.objectProcessId;
            processName@(itemName) = config.objectProcessName;
            machineId@(itemName) = config.objectMachineId;
            machineName@(itemName) = config.objectMachineName;
            shopName@(itemName) = config.objectShopName;

            $("#desProcessName@(itemName)").html($(processName@(itemName)).text());

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            GetUserInfo@(itemName)();
            ComboBoxs.Default("#cboShopIdQ@(itemName)", "@Url.Action("GetWorkShop", "MesBasicInformation")",
                { "CompanyId": companyId@(itemName), "Status": "A" }, "", "NA", "", "ShopName", "ShopId");

            if (!isMobile) {
                $("#cboShopIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMachineItem", "ScmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ShopId": $("#cboShopIdQ@(itemName)").val(),
                "MachineName": $("#txtMachineNameQ@(itemName)").val(),
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ShopName}" style="max-width: 200px;">${item.ShopName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineNo}" style="max-width: 200px;">${item.MachineNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineName}" style="max-width: 200px;">${item.MachineName}</td>
                                        <td class="text-center col-sticky">
                                            <label class="control control-solid control-solid-info control--radio">
                                                <input type="radio" name="chkMachineId@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.MachineId}" />
                                                <span class="control__indicator"></span>
                                            </label>
                                            <input type="hidden" name="txtShopId@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.ShopId}" />
                                            <input type="hidden" name="txtShopName@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.ShopName}" />
                                            <input type="hidden" name="txtMachineId@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.MachineId}" />
                                            <input type="hidden" name="txtMachineNo@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.MachineNo}" />
                                            <input type="hidden" name="txtMachineName@(itemName)" data-machine-item-id="${item.MachineId}" value="${item.MachineName}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="11" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-machine-item-id]:checked") {
                    let MachineId = $(this).data("machine-item-id");

                    if (MachineId) {
                        let shopName = $(`input[name="txtShopName@(itemName)"][data-machine-item-id="${MachineId}"]`).val();
                        let machineId = $(`input[name="txtMachineId@(itemName)"][data-machine-item-id="${MachineId}"]`).val();
                        let machineName = $(`input[name="txtMachineName@(itemName)"][data-machine-item-id="${MachineId}"]`).val();
                        
                        if (shopName@(itemName)) ElementSetValue(shopName@(itemName), shopName, "change");
                        if (machineId@(itemName)) ElementSetValue(machineId@(itemName), machineId, "change");
                        if (machineName@(itemName)) ElementSetValue(machineName@(itemName), machineName, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = '@Url.Action("GetLoginByKey", "User")';
            let postData = {
                'UserNo': $.cookie('Login'),
                'KeyText': $.cookie('LoginKey')
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == 'success') {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, 'alert', 0);
            }
        }
    </script>
                )
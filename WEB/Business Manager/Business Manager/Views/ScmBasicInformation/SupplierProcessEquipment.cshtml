@using Business_Manager.Helpers
@{
    string itemName = "SupplierProcessEquipment";
}

@Html.Resource("css",
    @<style>
         .header-title {
             width: 95%;
             margin: 1rem auto;
             display: flex;
             flex-direction: row;
             color: #959595;
             font-size: 1rem;
             font-weight: 700;
             position: sticky;
             top: 0;
             background: #e4eeff;
             padding: 10px 20px;
             border-bottom: 1px solid #eee;
         }

         .flow-card {
             margin-bottom: 25px;
             width: 95%;
             display: flex;
             flex-direction: row;
             padding: 20px 10px;
             font-size: 1rem;
             border-radius: 5px;
             margin: 0 auto 30px;
             -webkit-box-shadow: 0px 2px 28px -5px rgba(114,114,114,0.2);
             -moz-box-shadow: 0px 2px 28px -5px rgba(114,114,114,0.2);
             box-shadow: 0px 2px 28px -5px rgba(114,114,114,0.20);
         }

         select.select3 {
             padding: 20px;
             width: 100%;
             height: 100px;
             border-color: #c9cdcf;
             border-radius: 3px;
         }

             select.select3:focus-visible {
                 border: 1px solid #a768f3;
                 outline: none;
             }

         .help-block {
             display: none;
             margin: 5px 0 0;
             border: 3px dashed #b1b1b1;
             border-radius: 5px;
             padding: 5px 10px;
         }

         dt {
             float: left;
             clear: left;
             width: 110px;
         }

             dt::after {
                 content: "：";
             }

         dd {
             margin: 0 0 0 80px;
             padding: 0;
             color: #36a2f5;
             font-weight: bold;
         }
    </style>

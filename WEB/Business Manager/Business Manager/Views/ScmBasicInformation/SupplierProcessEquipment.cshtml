@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Expand@(itemName)() {
            if (parseInt($("#SupplierId").val()) > 0) {
                $(".advanced-block").slideDown("slow");

                Return@(itemName)();
            } else {
                alert("請先儲存供應商單號", "alert");
            }
        }

        function ProcessClear@(itemName)() {
            $("#aMachineClear@(itemName)").click();
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            GetUserInfo@(itemName)();
            ComboBoxs.Default(
                "#cboProcessIdQ@(itemName)", "@Url.Action("GetProcess", "ScmBasicInformation")",
                {"CompanyId": companyId@(itemName), "SupplierId": $("#SupplierId").val(), "Status": "A" }, "", "NA", "", "ProcessWithNo", "ProcessId"
            );
            ComboBoxs.Default(
                "#cboShopIdQ@(itemName)", "@Url.Action("GetWorkShop", "ScmBasicInformation")",
                { "CompanyId": companyId@(itemName), "SupplierId": $("#SupplierId").val(), "Status": "A" },
                "", "NA", "", "ShopName", "ShopId"
            );
            ComboBoxs.Default(
                "#cboMachineIdQ@(itemName)", "@Url.Action("GetMachine", "ScmBasicInformation")",
                { "CompanyId": companyId@(itemName), "SupplierId": $("#SupplierId").val(), "ShopId": $("#cboShopIdQ@(itemName)").val(), "Status": "A" },
                "", "NA", "", "MachineWithNo", "MachineId");

            if (!isMobile) {
                $("#cboProcessIdQ@(itemName), #cboMachineIdQ@(itemName), #cboShopIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetSupplierProcessEquipment", "ScmBasicInformation")";

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "SupplierId": $("#SupplierId").val(),
                "ProcessId": $("#cboProcessIdQ@(itemName)").val(),
                "MachineId": $("#cboMachineIdQ@(itemName)").val(),
                "ShopId": $("#cboShopIdQ@(itemName)").val(),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SupplierShortName}" style="min-width: 200px;">${item.SupplierShortName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessName}" style="min-width: 200px;">${item.ProcessName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineName}" style="min-width: 175px;">${item.MachineName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ShopName}" style="min-width: 175px;">${item.ShopName}</td>
                                        <td class="text-center auth-status-switch">
                                            <input type="checkbox" name="chkSupplierMachineStatus@(itemName)" data-supplier-process-equipment-id="${item.SmId}" ${item.Status == `A` ? `checked` : ''} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, `${item.Status}`)}</td>
                                        <td class="text-center active-content" scope="col" style="max-width: 650px; min-width: 600px;">
                                            <!--編輯-->
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.SmId}');" style="">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <!--刪除供應商機台資訊-->
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.SmId}');" style="">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#listData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkSupplierMachineStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkSupplierMachineStatus@(itemName)'][data-supplier-process-equipment-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(SmId) {
            $("#SmId").val(SmId ? SmId : 0);
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            $("#txtProcessId@(itemName)").siblings(".help-block").hide();
            $("#txtMachineId@(itemName)").siblings(".help-block").hide();
            $("#txtProcessId@(itemName)").val("");
            $("#txtMachineId@(itemName)").val("");

            if (SmId > 0) {
                let targetUrl = "@Url.Action("GetSupplierProcessEquipment", "ScmBasicInformation")";
                let postData = {
                    "SmId": SmId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtProcessId@(itemName)").val(item.ProcessId);
                        $("#txtMachineId@(itemName)").val(item.MachineId);
                        if (item.ProcessId > 0) {
                            $("#txtProcessId@(itemName)").siblings(".help-block").show();
                            $("#desProcessName@(itemName)").html(item.ProcessName);
                        }
                        if (item.MachineId > 0) {
                            $("#txtMachineId@(itemName)").siblings(".help-block").show();
                            $("#desMachineName@(itemName)").html(item.MachineName);
                            $("#desShopName@(itemName)").html(item.ShopName);                    
                        }
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            let popConfig = {
                targetSelector: "#txtProcessId@(itemName)",
                popFunction: "PopViewProcessItem",
                objectProcessId: "#txtProcessId@(itemName)",
                objectProcessName: "#desProcessName@(itemName)",
            };
            InitPopView(popConfig);

            let popConfig2 = {
                targetSelector: "#txtMachineId@(itemName)",
                popFunction: "PopViewMachineItem",
                objectProcessId: "#txtProcessId@(itemName)",
                objectProcessName: "#desProcessName@(itemName)",
                objectMachineId: "#txtMachineId@(itemName)",
                objectMachineName: "#desMachineName@(itemName)",
                objectShopName: "#desShopName@(itemName)",
            };
            InitPopView(popConfig2);
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let smId = parseInt($("#SmId").val());

                if (smId <= 0) {
                    let targetUrl = "@Url.Action("AddSupplierProcessEquipment", "ScmBasicInformation")";
                    let postData = {
                        "SupplierId": $("#SupplierId").val(),
                        "ProcessId": $("#txtProcessId@(itemName)").val(),
                        "MachineId": $("#txtMachineId@(itemName)").val(),
                        "Status": "A"
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateSupplierProcessEquipment", "ScmBasicInformation")";
                    let postData = {
                        "SmId": smId,
                        "SupplierId": $("#SupplierId").val(),
                        "ProcessId": $("#txtProcessId@(itemName)").val(),
                        "MachineId": $("#txtMachineId@(itemName)").val(),
                        "Status": "A"
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(SmId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteSupplierProcessEquipment", "ScmBasicInformation")";
                    let postData = {
                        "SmId": SmId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function StatusSwitch@(itemName)() {
            var smId = $(this).data("supplier-process-equipment-id");

            let targetUrl = "@Url.Action("UpdateSupplierMachineStatus", "ScmBasicInformation")";
            let postData = {
                "SmId": smId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }

        function Return@(itemName)() {
            $(".tsn-mode").show();
            Switch("#listData@(itemName)", "#editData@(itemName)");
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = '@Url.Action("GetLoginByKey", "User")';
            let postData = {
                'UserNo': $.cookie('Login'),
                'KeyText': $.cookie('LoginKey')
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == 'success') {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, 'alert', 0);
            }
        }
    </script>
                                                        )


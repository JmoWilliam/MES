@using Business_Manager.Helpers
@{
    string itemName = "ProjectBudgetManagement";
    string itemNameText = "專案預算管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .help-block {
             display: none;
             margin: 5px 0 0;
             border: 3px dashed #b1b1b1;
             border-radius: 5px;
             padding: 5px 10px;
         }

         dt {
             float: left;
             clear: left;
             width: 110px;
         }

             dt::after {
                 content: "：";
             }

         dd {
             margin: 0 0 0 80px;
             padding: 0;
             color: #36a2f5;
             font-weight: bold;
         }
    </style>
                        )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">專案代號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtProjectNoQ@(itemName)" name="txtProjectNoQ@(itemName)"
                                       placeholder="請輸入專案代號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">專案名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtProjectNameQ@(itemName)" name="txtProjectNameQ@(itemName)"
                                       placeholder="請輸入專案名稱">
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-success auth-sync" href="javascript:Sync@(itemName)();"><i class="fas fa-sync"></i>ERP資料同步</a>
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col">專案代號</th>
                                        <th scope="col">專案名稱</th>
                                        <th scope="col">生效日期</th>
                                        <th scope="col">失效日期</th>
                                        <th scope="col">結案碼</th>
                                        <th scope="col">備註</th>
                                        <th class="text-center" scope="col">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--新增/編輯-->
<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="ProjectId" name="ProjectId" value="-1" />

                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtProjectNo@(itemName)">專案代號<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtProjectNo@(itemName)" name="txtProjectNo@(itemName)" value=""/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtProjectName@(itemName)">專案名稱<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtProjectName@(itemName)" name="txtProjectName@(itemName)" value=""/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtEffectiveDate@(itemName)">生效日期</label>
                                    <div class="col-12">
                                        <input type="date" class="form-control" id="txtEffectiveDate@(itemName)" name="txtEffectiveDate@(itemName)" value=""/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtExpirationDate@(itemName)">失效日期</label>
                                    <div class="col-12">
                                        <input type="date" class="form-control" id="txtExpirationDate@(itemName)" name="txtExpirationDate@(itemName)" value=""/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtRemark@(itemName)">備註</label>
                                    <div class="col-12">
                                        <textarea class="form-control" id="txtRemark@(itemName)" name="txtRemark@(itemName)" rows="2"
                                                  placeholder="請輸入備註"
                                                  data-msg-required="請輸入備註"
                                                  data-msg-maxlength="必須少於 255 個字元" maxlength="255"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<!--其他分頁-->
<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link  active" data-toggle="tab" href="#tabProjectDetail">
                        <i class="fas fa-sliders-h"></i> 設定專案預算資料
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabPrDetail">
            @Html.Partial("ProjectDetail")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let userDepartmentId = -1;

        let userId@(itemName) = -1;
        let companyId@(itemName) = -1;

        let localCurrency@(itemName);

        $(document).ready(function () {
            GetLoginByKey@(itemName)();

            GetErpLocalCurrency@(itemName)();

            Query@(itemName)();

            if (!isMobile) {
                $("#cboUserIdQ@(itemName)").select2({
                    dropdownAutoWidth: true,
                    dropdownParent: $("#modalQuery@(itemName)"),
                    width: "100%"
                });
            }

            $("#txtDocDate@(itemName)").change(function () {
                let docDate = $("#txtDocDate@(itemName)").val();
                $("#txtPrDate@(itemName)").val(docDate);
            });

            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUserByAuthority", "BasicInformation")", { "FunctionCode": "PurchaseRequisition", "DetailCode": "add", "Status": "A" }, "", "ALL", "", "UserWithNo", "UserId");

            $("#txtPrNoQ@(itemName), #txtPrErpFullNoQ@(itemName), #txtMtlItemNoQ@(itemName), #txtEditionQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }
            });
        });

        function GetLoginByKey@(itemName)(){
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            if (!objPage) objPage = objPage@(itemName);
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetProject", "ScmBasicInformation")";

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ProjectNo": $("#txtProjectNoQ@(itemName)").val(),
                "ProjectName": $("#txtProjectNameQ@(itemName)").val(),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProjectNo}">${item.ProjectNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProjectName}">${item.ProjectName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.EffectiveDate != `1900-01-01` ? item.EffectiveDate : ``}">${item.EffectiveDate != `1900-01-01` ? item.EffectiveDate : ``}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ExpirationDate != `1900-01-01` ? item.ExpirationDate : ``}">${item.ExpirationDate != `1900-01-01` ? item.ExpirationDate : ``}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CloseCode == `Y` ? `已結案` : `未結案`}">${item.CloseCode == `Y` ? `已結案` : `未結案`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Remark}">${item.Remark}</td>
                                        <td class="text-center active-content">
                                            <a class="active-link auth-read" href="javascript:ViewProjectDetail@(itemName)('${item.ProjectId}');"><i class="fas fa-caret-circle-down"></i></a>
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.ProjectId}');"><i class="fas fa-edit"></i></a>
                                            <a class="active-link auth-update" href="javascript:CloseProject@(itemName)('${item.ProjectId}');"><i class="fas fa-window-close"></i> 結案</a>
                                        </td>
                                      </tr>`;

                        innerHtml += `<tr data-project-id="${item.ProjectId}" style="display: none;">
                                        <td colspan="8" style="background-color: #ebd0c0;">
                                          <table style="width: 100%; margin: auto; border: 1px solid #d7d7e1;">
                                            <thead>
                                             <tr>
                                                <th class="thead-customized" scope="col">#</th>
                                                <th class="thead-customized" scope="col">專案類型</th>
                                                <th class="thead-customized" scope="col">版本</th>
                                                <th class="thead-customized" scope="col">預算費用</th>
                                                <th class="thead-customized" scope="col">預算費用(本幣)</th>
                                                <th class="thead-customized" scope="col">狀態</th>
                                                <th class="thead-customized" scope="col">備註</th>
                                              </tr>
                                           </thead>
                                            <tbody></tbody>
                                          </table>
                                        </td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(projectId) {
            $("#ProjectId").val(projectId ? projectId : 0);
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            if (projectId > 0) {
                let targetUrl = "@Url.Action("GetProject", "ScmBasicInformation")";
                let postData = {
                    "ProjectId": projectId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtProjectNo@(itemName)").val(item.ProjectNo);
                        $("#txtProjectName@(itemName)").val(item.ProjectName);
                        $("#txtEffectiveDate@(itemName)").val(item.EffectiveDate != "1900-01-01" ? item.EffectiveDate : "");
                        $("#txtExpirationDate@(itemName)").val(item.ExpirationDate != "1900-01-01" ? item.ExpirationDate : "");
                        $("#txtRemark@(itemName)").val(item.Remark);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }

                ExpandProjectDetail(projectId);
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ProjectId = parseInt($("#ProjectId").val());
                if (ProjectId <= 0) {
                    let targetUrl = "@Url.Action("AddProject", "ScmBasicInformation")";
                    let postData = {
                        "ProjectNo": $("#txtProjectNo@(itemName)").val(),
                        "ProjectName": $("#txtProjectName@(itemName)").val(),
                        "EffectiveDate": $("#txtEffectiveDate@(itemName)").val(),
                        "ExpirationDate": $("#txtExpirationDate@(itemName)").val(),
                        "Remark": $("#txtRemark@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        let projectId;
                        $.each(data.result, function (i, item) {
                            projectId = item.ProjectId;
                        });
                        $("#ProjectId").val(projectId);
                        ExpandProjectDetail(projectId);
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateProject", "ScmBasicInformation")";
                    let postData = {
                        "ProjectId": ProjectId,
                        "ProjectNo": $("#txtProjectNo@(itemName)").val(),
                        "ProjectName": $("#txtProjectName@(itemName)").val(),
                        "EffectiveDate": $("#txtEffectiveDate@(itemName)").val(),
                        "ExpirationDate": $("#txtExpirationDate@(itemName)").val(),
                        "Remark": $("#txtRemark@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        ReturnProjectDetail();
                    }
                }
            }
        }

        function CloseProject@(itemName)(projectId) {
            swal.fire({
                titleText: "確認要結案嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("CloseProject", "ScmBasicInformation")";
                    let postData = {
                        "ProjectId": projectId
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            });
        }

        function ViewProjectDetail@(itemName)(projectId) {
            if ($("tr[data-project-id='" + projectId + "']").is(':visible')) {
                $("tr[data-project-id='" + projectId + "']").hide();
                return;
            }

            $("tr[data-project-id]").hide();
            $("tr[data-project-id='" + projectId + "']").show();

            let targetUrl = "@Url.Action("GetProjectDetail", "ScmBasicInformation")";
            let postData = {
                "ProjectId": projectId
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            let innerHtml = '';
            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        innerHtml += `<tr>
                                        <td>${i+1}.</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProjectTypeName}" style="min-width: 150px;">${item.ProjectTypeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Edition}" style="min-width: 150px;">${item.Edition}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BudgetAmount.toLocaleString(`en`)}" style="min-width: 150px;">${item.BudgetAmount.toLocaleString(`en`)} <code>${item.Currency}</code></td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.LocalBudgetAmount.toLocaleString(`en`)}" style="min-width: 150px;">${item.LocalBudgetAmount.toLocaleString(`en`)} <code>${localCurrency@(itemName)}</code></td>
                                        ${JdugeStatus@(itemName)(`${item.Status}`, `${item.StatusName}`)}
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Remark}" style="min-width: 150px;">${item.Remark}</td>
                                      </tr>`;

                        function JdugeStatus@(itemName)(status, statusName) {
                            let innerHtml = '';
                            if (status == "P") {
                                //BPM簽核流程
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: #3c66df; font-weight: 600;" class="far fa-money-check-edit"></i> ${statusName}</td>`;
                            }
                            else if (status == "Y") {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: green; font-weight: 600;" class="fad fa-badge-check"></i> ${statusName}</td>`;
                            }
                            else if (status == "N") {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: brown;" class="fad fa-flag-checkered"></i> ${statusName}</td>`;
                            }
                            else if (status == "E") {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: cornflowerblue;" class="fas fa-user-edit"></i> ${statusName}</td>`;
                            }
                            else if (status == "C") {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: #78716e;" class="fas fa-exclamation-circle"></i> ${statusName}</td>`;
                            }
                            else if (status == "K") {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: cornflowerblue;" class="fas fa-user-edit"></i> ${statusName}</td>`;
                            }
                            else {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;">${statusName}</td>`;
                            }
                            return innerHtml;
                        }
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="15" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
                $("tr[data-project-id='" + projectId + "'] tbody").html(innerHtml);
                TableComponentInit();
            }
        }

        function GetErpLocalCurrency@(itemName)() {
            let targetUrl = "@Url.Action("GetErpLocalCurrency", "PurchaseRequisition")";

            let postData = {
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        localCurrency@(itemName) = item.MA003;
                    });
                }
            }
            else {
                alert(data.msg, 5000);
            }
        }

        function Sync@(itemName)() {
            let targetUrl = "@Url.Action("UpdateProjectManualSynchronize", "ScmBasicInformation")";
            let postData = {
                
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }

        function Return@(itemName)() {
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            ResetForm(objForm@(itemName));
            //Query@(itemName)();
            InitData@(itemName)();
        }
    </script>
        )
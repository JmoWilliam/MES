    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-item');
            const processSteps = document.querySelectorAll('.process-step');
            const contentSections = document.querySelectorAll('.content-section');
            const accordionButtons = document.querySelectorAll('.accordion-button');

            function setActive(targetId) {
                navItems.forEach(item => {
                    item.classList.toggle('active-nav', item.getAttribute('href') === `#${targetId}`);
                    item.classList.toggle('inactive-nav', item.getAttribute('href') !== `#${targetId}`);
                });

                const targetNavId = `nav-${targetId}`;
                processSteps.forEach(step => {
                    step.classList.toggle('active', step.id === targetNavId || (targetId === 'overview' && step.id === 'nav-planning'));
                });
                
                contentSections.forEach(section => {
                    section.classList.toggle('active', section.id === targetId);
                });
                
                if (targetId !== 'overview') {
                    document.getElementById('overview').classList.remove('active');
                }
            }

            function navigateToSection(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href')?.substring(1) || this.id.replace('nav-', '');
                setActive(targetId);
                
                const targetElement = document.getElementById(targetId);
                if (targetElement) {
                   window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                   });
                } else if (targetId !== 'overview'){
                    const workflowElement = document.getElementById('interactive-workflow');
                    window.scrollTo({
                        top: workflowElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            }

            navItems.forEach(item => item.addEventListener('click', navigateToSection));
            processSteps.forEach(step => step.addEventListener('click', navigateToSection));

            accordionButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling;
                    button.classList.toggle('open');

                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                    }
                });
            });

            const initialHash = window.location.hash.substring(1);
            if (initialHash && document.getElementById(initialHash)) {
                setActive(initialHash);
            } else {
                setActive('overview');
                processSteps.forEach(step => step.classList.remove('active'));
                document.getElementById('nav-planning').classList.add('active');
                document.getElementById('planning').classList.add('active');
                document.getElementById('overview').classList.remove('active');
            }


            const ctx = document.getElementById('performanceChart').getContext('2d');
            const performanceChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['一月', '二月', '三月', '四月', '五月', '六月'],
                    datasets: [{
                        label: '準時交貨率 (%)',
                        data: [95, 92, 98, 88, 97, 99],
                        backgroundColor: 'rgba(15, 118, 110, 0.6)',
                        borderColor: 'rgba(13, 148, 136, 1)',
                        borderWidth: 1,
                        borderRadius: 5,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 80,
                            max: 100,
                            grid: {
                                color: '#e2e8f0'
                            },
                            ticks: {
                                color: '#64748b'
                            }
                        },
                        x: {
                           grid: {
                                display: false
                           },

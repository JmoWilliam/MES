        let currentDownloadPath = '';

        function showTab(tabName) {
            // Hide all content
            const contents = document.querySelectorAll('.cycle-content');
            contents.forEach(content => content.classList.remove('active'));

            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));

            // Show selected content
            document.getElementById(tabName).classList.add('active');

            // Add active class to clicked tab
            event.target.classList.add('active');
        }

        function showDownloadModal(fileName, filePath) {
            document.getElementById('downloadFileName').textContent = fileName;
            currentDownloadPath = filePath;
            document.getElementById('downloadModal').style.display = 'block';
        }

        function closeDownloadModal() {
            document.getElementById('downloadModal').style.display = 'none';
            currentDownloadPath = '';
        }

        function downloadFile() {
            if (!currentDownloadPath) {
                showCustomAlert('文件路徑未設定');
                return;
            }

            try {
                // 嘗試開啟網路共享文件
                window.open('file:///' + currentDownloadPath.replace(/\\/g, '/'), '_blank');

                // 同時執行改進的複製功能
                copyPathToClipboard(currentDownloadPath);

            } catch (error) {
                console.error('下載錯誤:', error);
                copyPathToClipboard(currentDownloadPath);
            }

            closeDownloadModal();
        }

        // 改進的複製功能（方法3：混合方案）
        function copyPathToClipboard(path) {
            // 先嘗試現代 Clipboard API
            if (navigator.clipboard && window.isSecureContext) {
                navigator.clipboard.writeText(path).then(() => {
                    showCustomAlert('✅ 路徑複製成功！\n請在檔案總管中按 Ctrl+V 貼上路徑存取文件。');
                }).catch(err => {
                    console.log('現代 API 失敗，嘗試傳統方法:', err);
                    fallbackCopyPath(path);
                });
            } else {
                // 不支援現代 API 時使用傳統方法
                fallbackCopyPath(path);
            }
        }

        function showCustomAlert(message) {
            // 創建對話框元素
            const alertBox = document.createElement('div');
            alertBox.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: white;
                border: 2px solid #4CAF50;
                border-radius: 8px;
                padding: 20px;

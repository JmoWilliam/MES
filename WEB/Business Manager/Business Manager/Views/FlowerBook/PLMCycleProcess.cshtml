@using Business_Manager.Helpers
@{
    string itemName = "PLMCycleProcess";
    string itemNameText = "中揚光電 - 整合產品開發流程圖";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
        body {
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            border-bottom: 3px solid #3498db;
            padding-bottom: 15px;
            margin-bottom: 30px;
        }

        .flowchart {
            display: flex;
            flex-direction: column;
            gap: 30px;
            margin: 30px 0;
        }

        .stage {
            border: 2px solid #3498db;
            border-radius: 10px;
            padding: 20px;
            background-color: #f8f9fa;
            position: relative;
        }

        .stage-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background-color: #3498db;
            color: white;
            padding: 15px;
            border-radius: 8px;
        }

        .stage-number {
            font-size: 24px;
            font-weight: bold;
            margin-right: 20px;
            background-color: white;
            color: #3498db;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stage-title {
            flex: 1;
        }

            .stage-title h2 {
                margin: 0;
                font-size: 20px;
            }

        .stage-subtitle {
            font-size: 14px;
            opacity: 0.9;
        }

        .stage-content {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }

        .content-section {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
        }

            .content-section h3 {
                margin: 0 0 10px 0;
                color: #2c3e50;
                font-size: 16px;
                border-bottom: 2px solid #e9ecef;
                padding-bottom: 8px;
            }

            .content-section ul {
                margin: 10px 0;
                padding-left: 20px;
            }

            .content-section li {
                margin: 5px 0;
                font-size: 14px;
                color: #555;
            }

        .activities {
            background-color: #fff3cd;
            border-left: 4px solid #ffc107;
        }

        .documents {
            background-color: #e3f2fd;
            border-left: 4px solid #2196f3;
        }

        .departments {
            background-color: #e8f5e9;
            border-left: 4px solid #4caf50;
        }

        .arrow {
            text-align: center;
            font-size: 30px;
            color: #3498db;
            margin: -10px 0;
        }

        .decision-box {
            background-color: #ffebee;
            border: 2px solid #f44336;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin: 20px auto;
            max-width: 400px;
        }

            .decision-box h3 {
                color: #f44336;
                margin: 0 0 10px 0;
            }

        .parallel-stages {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
            margin: 20px 0;
        }

        .product-type {
            background-color: #e1f5fe;
            border: 2px solid #03a9f4;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
        }

            .product-type h4 {
                color: #03a9f4;
                margin: 0 0 10px 0;
            }

        .notes {
            background-color: #fce4ec;
            border: 1px solid #f8bbd0;
            border-radius: 8px;
            padding: 15px;
            margin-top: 30px;
        }

            .notes h3 {
                color: #c2185b;
                margin: 0 0 10px 0;
            }

            .notes ul {
                margin: 10px 0;
                padding-left: 20px;
            }

        .legend {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 20px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .legend-box {
            width: 30px;
            height: 20px;
            border-radius: 4px;
        }
    </style>
)



<div class="row">
    <div class="container">
        <h1>中揚光電整合產品開發流程圖<br><small>設計開發管理程序 + APQP&CP程序</small></h1>

        <!-- 產品類型分類 -->
        <div class="parallel-stages">
            <div class="product-type">
                <h4>鏡頭產品開發</h4>
                <p>C0→C1→C2→C3(EVT)→C4(DVT)→C5(PVT)→C6(MP)→C7(EOL)</p>
            </div>
            <div class="product-type">
                <h4>模造產品開發</h4>
                <p>C0→C1→C2→C3(EVT)→C4(DVT)→C5(PVT)→C6(MP)</p>
            </div>
            <div class="product-type">
                <h4>模具開發</h4>
                <p>C0→C1→C2(含補正)</p>
            </div>
        </div>
        <div class="flowchart">
            <!-- C0階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C0</div>
                    <div class="stage-title">
                        <h2>產品提案階段</h2>
                        <div class="stage-subtitle">New Product Proposal</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>市場調查</li>
                            <li>客戶需求確認</li>
                            <li>可行性評估</li>
                            <li>開案決策</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>RFQ客戶需求單 (P-R001表01)</li>
                            <li>塑膠鏡片可行性評估表 (P-R001表02)</li>
                            <li>模造可行性評估表 (P-R001表15)</li>
                            <li>鏡頭可行性評估表 (P-R001表16)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>業務單位</li>
                            <li><strong>協辦：</strong>PM、研發單位</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C1階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C1</div>
                    <div class="stage-title">
                        <h2>構想規劃階段 / 產品設計規劃</h2>
                        <div class="stage-subtitle">Project Development Planning</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>Kick off會議</li>
                            <li>設計目標訂定</li>
                            <li>初期BOM建立</li>
                            <li>初期製造流程規劃</li>
                            <li>跨功能小組成立(APQP小組)</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>產品開發評估表 (P-R001表03)</li>
                            <li>開發計劃時程表 (P-R001表05)</li>
                            <li>品質規劃時程表 (P-R002表06)</li>
                            <li>APQP矩陣功能組織表 (P-R002表04)</li>
                            <li>品質規劃小組人員表 (P-R002表03)</li>
                            <li>產品保證計畫 (P-R002表05)</li>
                            <li>管制特性一覽表(初版) (P-R002表02)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>業務單位</li>
                            <li><strong>協辦：</strong>研發單位</li>
                            <li><strong>參與：</strong>PM彙整</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C2階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C2</div>
                    <div class="stage-title">
                        <h2>設計階段 / 樣品試作</h2>
                        <div class="stage-subtitle">Prototyping (Mockup sample)</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>Design Review</li>
                            <li>軟硬體設計</li>
                            <li>模具開模(模造/模具)</li>
                            <li>原型樣本建立</li>
                            <li>設計FMEA(DFMEA)</li>
                            <li>特殊特性識別</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>圖面配佈簽收表 (P-R001表06)</li>
                            <li>製造流程圖 (P-R001表07)</li>
                            <li>DFMEA文件</li>
                            <li>管制計劃Control Plan (P-R001表09)</li>
                            <li>新設備工模具需求清單 (P-R002表07)</li>
                            <li>量具/試驗設備需求清單 (P-R002表08)</li>
                            <li>開發製造可行性承諾 (P-R002表09)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>研發單位</li>
                            <li><strong>協辦：</strong>製造、業務、品保單位</li>
                            <li><strong>參與：</strong>PM協調</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C3階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C3</div>
                    <div class="stage-title">
                        <h2>試作階段 (EVT)</h2>
                        <div class="stage-subtitle">Engineering Verification Test</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>T0/T1試模(模造)</li>
                            <li>Mockup試組(鏡頭)</li>
                            <li>EVT試組</li>
                            <li>初期環測投入</li>
                            <li>製程FMEA(PFMEA)</li>
                            <li>量測系統分析(MSA)規劃</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>試作報告書(EVT) (P-R001表11)</li>
                            <li>正式製程流程圖 (P-R001表07)</li>
                            <li>PFMEA文件</li>
                            <li>量產前管制計劃 (P-R001表09)</li>
                            <li>製程指導書/SOP</li>
                            <li>產品品質/製程檢討 (P-R002表10)</li>
                            <li>管制特性一覽表(正式) (P-R002表02)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>研發、製造單位</li>
                            <li><strong>協辦：</strong>品保、業務單位</li>
                            <li><strong>參與：</strong>採購、廠務</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C4階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C4</div>
                    <div class="stage-title">
                        <h2>試產階段 (DVT)</h2>
                        <div class="stage-subtitle">Design Verification Test</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>T2試作(模造)</li>
                            <li>DVT試組</li>
                            <li>環測投入(完整版)</li>
                            <li>MSA執行</li>
                            <li>初期製程能力研究(SPC)</li>
                            <li>PPAP準備</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>試作報告書(DVT) (P-R001表11)</li>
                            <li>MSA評價報告</li>
                            <li>初期製程能力評估(SPC)</li>
                            <li>PPAP文件 (P-R004)</li>
                            <li>產品承認書 (P-R001表12)</li>
                            <li>產品包裝評價表 (P-R002表11)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>研發、品保單位</li>
                            <li><strong>參與：</strong>製造、採購、廠務設備</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C5階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C5</div>
                    <div class="stage-title">
                        <h2>導入生產 (PVT)</h2>
                        <div class="stage-subtitle">Production Verification Test</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>PVT試組</li>
                            <li>生產製程穩定性確認</li>
                            <li>正式圖面文件發佈</li>
                            <li>模具及生產工具移轉</li>
                            <li>轉量產會議</li>
                            <li>初期品管理實施</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>試作報告書(PVT) (P-R001表11)</li>
                            <li>品質承認書 (P-R001表18)</li>
                            <li>新產品導入生產確認表 (P-R002表13)</li>
                            <li>產品品質規劃簽署報告 (P-R002表12)</li>
                            <li>量產管制計劃 (P-R001表09)</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>製造單位</li>
                            <li><strong>協辦：</strong>研發、品保、採購、廠務設備</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="arrow">⬇</div>
            <!-- C6階段 -->
            <div class="stage">
                <div class="stage-header">
                    <div class="stage-number">C6</div>
                    <div class="stage-title">
                        <h2>量產 (MP)</h2>
                        <div class="stage-subtitle">Mass Production</div>
                    </div>
                </div>
                <div class="stage-content">
                    <div class="content-section activities">
                        <h3>🔨 主要活動</h3>
                        <ul>
                            <li>正式量產</li>
                            <li>降低變異</li>
                            <li>客戶滿意度追蹤</li>
                            <li>持續改善</li>
                        </ul>
                    </div>
                    <div class="content-section documents">
                        <h3>📄 產出文件</h3>
                        <ul>
                            <li>生產日報表</li>
                            <li>品質報告</li>
                            <li>客訴處理報告</li>
                        </ul>
                    </div>
                    <div class="content-section departments">
                        <h3>👥 負責單位</h3>
                        <ul>
                            <li><strong>主導：</strong>製造單位</li>
                            <li><strong>支援：</strong>品保、生管</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- 階段檢核 -->
        <div class="decision-box">
            <h3>⚠️ 階段轉換檢核機制</h3>
            <p>每個階段完成須：</p>
            <ul style="text-align: left;">
                <li>填寫「C1~C5 Check List」(P-R002表01)</li>
                <li>召開階段審查會議</li>
                <li>經管理階層核准後進入下階段</li>
            </ul>
        </div>
        <!-- 重要說明 -->
        <div class="notes">
            <h3>📌 重要說明</h3>
            <ul>
                <li><strong>特殊特性管理：</strong>依《特殊特性作業標準》(W-R045)執行，需標記於所有相關文件</li>
                <li><strong>設計變更管理：</strong>任何設計變更須依《工程變更管理程序》(P-R007)辦理</li>
                <li><strong>車規產品：</strong>汽車類產品須完整執行APQP所有要求</li>
                <li><strong>階段合併：</strong>視客戶需求可合併開發階段，但須確保所有文件產出</li>
                <li><strong>初期品管理：</strong>新產品導入須實施《初期管理作業程序》(P-R005)</li>
            </ul>
        </div>
        <!-- 圖例 -->
        <div class="legend">
            <div class="legend-item">
                <div class="legend-box" style="background-color: #fff3cd;"></div>
                <span>主要活動</span>
            </div>
            <div class="legend-item">
                <div class="legend-box" style="background-color: #e3f2fd;"></div>
                <span>產出文件</span>
            </div>
            <div class="legend-item">
                <div class="legend-box" style="background-color: #e8f5e9;"></div>
                <span>負責單位</span>
            </div>
        </div>
    </div>
</div>

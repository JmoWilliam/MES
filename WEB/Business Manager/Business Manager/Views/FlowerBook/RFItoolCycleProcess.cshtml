

@using Business_Manager.Helpers
@{
    string itemName = "RFItoolCycleProcess";
    string itemNameText = "中揚光電 - RFI文件程序軟體分析流程圖";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Microsoft JhengHei', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 20px;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border-radius: 15px;
            color: white;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

        .workflow-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .process-step {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-left: 5px solid;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .process-step:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .process-step::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 50px;
            height: 50px;
            background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3));
            transform: rotate(45deg) translate(25px, -25px);
        }

        .step-fill { border-left-color: #4CAF50; }
        .step-approve { border-left-color: #FF9800; }
        .step-notify { border-left-color: #2196F3; }
        .step-stats { border-left-color: #9C27B0; }

        .step-icon {
            font-size: 2.5em;
            margin-bottom: 15px;
            display: block;
        }

        .step-fill .step-icon { color: #4CAF50; }
        .step-approve .step-icon { color: #FF9800; }
        .step-notify .step-icon { color: #2196F3; }
        .step-stats .step-icon { color: #9C27B0; }

        .step-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }

        .step-description {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .software-comparison {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-top: 40px;
        }

        .software-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .software-card:hover {
            transform: scale(1.02);
        }

        .software-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--card-color) 0%, var(--card-color-light) 100%);
        }

        .lark-card {
            --card-color: #00D4AA;
            --card-color-light: #7FFFD4;
        }

        .bpm-card {
            --card-color: #FF6B6B;
            --card-color-light: #FFB3B3;
        }

        .zentao-card {
            --card-color: #4ECDC4;
            --card-color-light: #A7ECDC4;
        }

        .software-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .software-logo {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            margin-right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2em;
            color: white;
            font-weight: bold;
        }

        .lark-card .software-logo { background: linear-gradient(135deg, #00D4AA, #7FFFD4); }
        .bpm-card .software-logo { background: linear-gradient(135deg, #FF6B6B, #FFB3B3); }
        .zentao-card .software-logo { background: linear-gradient(135deg, #4ECDC4, #A7ECDC4); }

        .software-title {
            font-size: 1.8em;
            font-weight: bold;
            color: #333;
        }

        .pros-cons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 20px;
        }

        .pros, .cons {
            padding: 20px;
            border-radius: 12px;
            position: relative;
        }

        .pros {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            border-left: 4px solid #28a745;
        }

        .cons {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border-left: 4px solid #dc3545;
        }

        .pros h4, .cons h4 {
            font-size: 1.2em;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .pros h4::before {
            content: "✓";
            margin-right: 8px;
            color: #28a745;
            font-weight: bold;
        }

        .cons h4::before {
            content: "✗";
            margin-right: 8px;
            color: #dc3545;
            font-weight: bold;
        }

        .pros ul, .cons ul {
            list-style: none;
        }

        .pros li, .cons li {
            margin-bottom: 8px;
            padding-left: 20px;
            position: relative;
            line-height: 1.5;
            font-size: 0.95em;
        }

        .pros li::before {
            content: "•";
            color: #28a745;
            position: absolute;
            left: 0;
            font-weight: bold;
        }

        .cons li::before {
            content: "•";
            color: #dc3545;
            position: absolute;
            left: 0;
            font-weight: bold;
        }

        .recommendation {
            background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
            border-radius: 20px;
            padding: 30px;
            margin-top: 40px;
            box-shadow: 0 10px 25px rgba(253, 203, 110, 0.3);
        }

        .recommendation h3 {
            font-size: 1.8em;
            color: #2d3436;
            margin-bottom: 20px;
            text-align: center;
        }

        .recommendation-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
        }

        .phase {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #e17055;
        }

        .phase h4 {
            color: #2d3436;
            margin-bottom: 15px;
            font-size: 1.3em;
        }

        .phase p {
            line-height: 1.6;
            color: #636e72;
        }

        .arrow {
            text-align: center;
            font-size: 2em;
            color: #74b9ff;
            margin: 20px 0;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        .flow-diagram {
            background: white;
            border-radius: 20px;
            padding: 40px;
            margin: 40px 0;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .flow-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .flow-step {
            flex: 1;
            min-width: 200px;
            text-align: center;
            position: relative;
        }

        .flow-step-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            color: white;
            font-weight: bold;
            position: relative;
            z-index: 2;
        }

        .flow-step:nth-child(1) .flow-step-circle { background: linear-gradient(135deg, #4CAF50, #81C784); }
        .flow-step:nth-child(2) .flow-step-circle { background: linear-gradient(135deg, #FF9800, #FFB74D); }
        .flow-step:nth-child(3) .flow-step-circle { background: linear-gradient(135deg, #2196F3, #64B5F6); }
        .flow-step:nth-child(4) .flow-step-circle { background: linear-gradient(135deg, #9C27B0, #BA68C8); }

        .flow-step-arrow {
            position: absolute;
            top: 35px;
            right: -25px;
            font-size: 2em;
            color: #ddd;
            z-index: 1;
        }

        .flow-step:last-child .flow-step-arrow {
            display: none;
        }

        @@media (max-width: 768px) {
            .flow-steps {
                flex-direction: column;
            }

            .flow-step-arrow {
                top: auto;
                bottom: -25px;
                right: 50%;
                transform: translateX(50%) rotate(90deg);
            }

            .pros-cons {
                grid-template-columns: 1fr;
            }
        }
</style>
                        )



<div class="row">
<div class="container">
        <div class="header">
            <h1>🔄 RFI文件程序軟體分析</h1>
            <p>基於中揚光電生產循環的智能化流程分析</p>
        </div>

        <div class="flow-diagram">
            <h2 style="text-align: center; margin-bottom: 40px; color: #333; font-size: 2em;">RFI文件處理流程</h2>
            <div class="flow-steps">
                <div class="flow-step">
                    <div class="flow-step-circle">📝</div>
                    <h3>填寫階段</h3>
                    <p>生產計劃、品質管制、委外加工等資訊需求收集</p>
                    <div class="flow-step-arrow">→</div>
                </div>
                <div class="flow-step">
                    <div class="flow-step-circle">✅</div>
                    <h3>簽核階段</h3>
                    <p>權責主管核准，涉及生管、品保、製造等多部門</p>
                    <div class="flow-step-arrow">→</div>
                </div>
                <div class="flow-step">
                    <div class="flow-step-circle">📢</div>
                    <h3>通知階段</h3>
                    <p>相關單位協調配合，確保資訊有效傳達</p>
                    <div class="flow-step-arrow">→</div>
                </div>
                <div class="flow-step">
                    <div class="flow-step-circle">📊</div>
                    <h3>統計階段</h3>
                    <p>數據彙整、分析報表、改善建議產出</p>
                </div>
            </div>
        </div>

        <div class="workflow-section">
            <div class="process-step step-fill">
                <span class="step-icon">📝</span>
                <h3 class="step-title">填寫階段</h3>
                <p class="step-description">
                    配合CO-101生產計劃作業，收集客戶訂單需求、銷售預測、安全庫存需求等關鍵資訊。
                    整合CO-104品質管制作業的檢驗標準與規範要求。
                </p>
            </div>
            
            <div class="process-step step-approve">
                <span class="step-icon">✅</span>
                <h3 class="step-title">簽核階段</h3>
                <p class="step-description">
                    依據CO-102生產管制作業流程，建立多層級審批機制。
                    涵蓋生管人員、製造單位主管、品保人員等權責單位的核准流程。
                </p>
            </div>
            
            <div class="process-step step-notify">
                <span class="step-icon">📢</span>
                <h3 class="step-title">通知階段</h3>
                <p class="step-description">
                    配合CO-103委外製造及加工作業，確保外包廠商及時接收資訊。
                    整合CO-106設備管制與CO-107工業安全衛生的協調通知機制。
                </p>
            </div>
            
            <div class="process-step step-stats">
                <span class="step-icon">📊</span>
                <h3 class="step-title">統計階段</h3>
                <p class="step-description">
                    結合CO-105倉儲管理作業的盤點統計功能。
                    整合CO-108生產成本作業的數據分析，產出管理決策所需報表。
                </p>
            </div>
        </div>

        <h2 style="text-align: center; margin: 50px 0 30px; color: #333; font-size: 2.2em;">💻 軟體平台深度比較</h2>

        <div class="software-comparison">
            <div class="software-card lark-card">
                <div class="software-header">
                    <div class="software-logo">L</div>
                    <div class="software-title">Lark 飛書</div>
                </div>
                
                <div class="pros-cons">
                    <div class="pros">
                        <h4>優勢特點</h4>
                        <ul>
                            <li>整合即時通訊與協作</li>
                            <li>移動端支援完善</li>
                            <li>模板化設計簡便</li>
                            <li>雲端同步無縫</li>
                            <li>成本效益高</li>
                            <li>學習曲線平緩</li>
                        </ul>
                    </div>
                    
                    <div class="cons">
                        <h4>限制因素</h4>
                        <ul>
                            <li>流程控制機制有限</li>
                            <li>權限管理精細度不足</li>
                            <li>統計分析功能基礎</li>
                            <li>客製化能力受限</li>
                            <li>機密文件安全考量</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="software-card bpm-card">
                <div class="software-header">
                    <div class="software-logo">B</div>
                    <div class="software-title">華凌 BPM</div>
                </div>
                
                <div class="pros-cons">
                    <div class="pros">
                        <h4>優勢特點</h4>
                        <ul>
                            <li>強大工作流自動化</li>
                            <li>嚴格權限管控機制</li>
                            <li>高度表單客製化</li>
                            <li>完整多層級審批</li>
                            <li>深度系統整合能力</li>
                            <li>符合企業級需求</li>
                        </ul>
                    </div>
                    
                    <div class="cons">
                        <h4>限制因素</h4>
                        <ul>
                            <li>學習曲線較陡峭</li>
                            <li>建置維護成本高</li>
                            <li>移動端體驗待改善</li>
                            <li>流程變更彈性不足</li>
                            <li>介面相對傳統</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="software-card zentao-card">
                <div class="software-header">
                    <div class="software-logo">Z</div>
                    <div class="software-title">禅道</div>
                </div>
                
                <div class="pros-cons">
                    <div class="pros">
                        <h4>優勢特點</h4>
                        <ul>
                            <li>專案管理整合完善</li>
                            <li>需求追蹤功能完整</li>
                            <li>文件版本控制嚴謹</li>
                            <li>開源客製化彈性</li>
                            <li>測試品質管理整合</li>
                        </ul>
                    </div>
                    
                    <div class="cons">
                        <h4>限制因素</h4>
                        <ul>
                            <li>非專業BPM工具</li>
                            <li>簽核流程功能有限</li>
                            <li>製造業適用性不足</li>
                            <li>生產統計報表欠缺</li>
                            <li>非技術人員上手難</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="recommendation">
            <h3>🎯 階段性導入建議策略</h3>
            <div class="recommendation-content">
                <div class="phase">
                    <h4>第一階段：快速啟動</h4>
                    <p><strong>建議採用：Lark</strong><br>
                    建立基礎RFI流程，提升團隊協作效率。成本低、風險小，易於全員推廣使用。</p>
                </div>
                
                <div class="phase">
                    <h4>第二階段：流程深化</h4>
                    <p><strong>建議採用：華凌BPM</strong><br>
                    當RFI流程需要嚴格管控時，導入專業BPM系統，實現標準化流程管理。</p>
                </div>
                
                <div class="phase">
                    <h4>第三階段：專業整合</h4>
                    <p><strong>評估導入：禅道</strong><br>
                    針對研發導向的RFI需求，可考慮整合專案管理功能，提升技術管理效率。</p>
                </div>
            </div>
        </div>

        <div class="arrow">⬇️</div>
        
        <div style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); border-radius: 20px; padding: 30px; text-align: center; margin-top: 40px;">
            <h3 style="color: #2d3436; margin-bottom: 20px; font-size: 1.8em;">🏆 最終建議</h3>
            <p style="font-size: 1.2em; line-height: 1.8; color: #636e72;">
                基於中揚光電生產循環的複雜度與機密文件管理需求，<br>
                建議採用 <strong style="color: #e17055;">華凌BPM</strong> 作為長期解決方案，<br>
                並在導入初期使用 <strong style="color: #00b894;">Lark</strong> 作為過渡工具。<br>
                <em>既確保流程控制嚴謹性，又兼顧使用者接受度與導入成本。</em>
            </p>
        </div>
    </div>
</div>

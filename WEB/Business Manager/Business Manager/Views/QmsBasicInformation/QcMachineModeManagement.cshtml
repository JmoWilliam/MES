@using Business_Manager.Helpers
@{
    string itemName = "QcMachineModeManagement";
    string itemNameText = "量測機型管理";
    string authority = ViewBag.authority;
}

@Html.Resource("css",
    @<style>
    </style>
                                                        )
<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcMachineModeNoQ@(itemName)">量測機型編號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcMachineModeNoQ@(itemName)" name="txtQcMachineModeNoQ@(itemName)" placeholder="請輸入量測機型編號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcMachineModeNameQ@(itemName)">量測機型名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcMachineModeNameQ@(itemName)" name="txtQcMachineModeNameQ@(itemName)" placeholder="請輸入量測機型名稱" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">量測機型名稱</th>
                                        <th scope="col" style="min-width: 200px;">量測機型編號</th>
                                        <th scope="col" style="min-width: 200px;">量測機型描述</th>
                                        <th scope="col" style="min-width: 200px;">項目編號</th>
                                        <th class="text-center" scope="col" style="min-width: 300px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="QcMachineModeId" name="QcMachineModeId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcMachineModeNo@(itemName)">機型編號 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcMachineModeNo@(itemName)" name="txtQcMachineModeNo@(itemName)" placeholder="請輸入機型編號"
                                       data-msg-required="請輸入機型編號" data-rule-required="true"
                                       data-msg-maxlength="必須少於 10 個字元" maxlength="10" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcMachineModeName@(itemName)">機型名稱 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcMachineModeName@(itemName)" name="txtQcMachineModeName@(itemName)" placeholder="請輸入機型名稱"
                                       data-msg-required="請輸入機型名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcMachineModeDesc@(itemName)">機型描述 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcMachineModeDesc@(itemName)" name="txtQcMachineModeDesc@(itemName)" placeholder="請輸入機型描述"
                                       data-msg-required="請輸入機型描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtItemNo@(itemName)">項目編號 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtItemNo@(itemName)" name="txtItemNo@(itemName)" placeholder="請輸入項目編號"
                                       data-msg-required="請輸入項目編號" data-rule-required="true"
                                       data-msg-maxlength="必須少於 3 個字元" maxlength="3" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabQmmDetail">
                        <i class="fas fa-computer-classic"></i> 機台列表
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabQmmDetail">
            @Html.Partial("QmmDetail")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {

            Query@(itemName)();
            
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetQcMachineMode", "QmsBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "QcMachineModeId": $("#txtQcMachineModeIdQ@(itemName)").val(),
                "QcMachineModeNo": $("#txtQcMachineModeNoQ@(itemName)").val(),
                "QcMachineModeName": $("#txtQcMachineModeNameQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcMachineModeName}" style="max-width: 200px;">${item.QcMachineModeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcMachineModeNo}" style="max-width: 200px;">${item.QcMachineModeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcMachineModeDesc}" style="max-width: 200px;">${item.QcMachineModeDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ItemNo}" style="max-width: 200px;">${item.ItemNo}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.QcMachineModeId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.QcMachineModeId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="4" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(QcMachineModeId) {
            $("#QcMachineModeId").val(QcMachineModeId ? QcMachineModeId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");


            if (QcMachineModeId > 0) {
                let targetUrl = "@Url.Action("GetQcMachineMode", "QmsBasicInformation")";
                let postData = {
                    "QcMachineModeId": QcMachineModeId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtQcMachineModeNo@(itemName)").val(item.QcMachineModeNo);
                        $("#txtQcMachineModeName@(itemName)").val(item.QcMachineModeName);
                        $("#txtQcMachineModeDesc@(itemName)").val(item.QcMachineModeDesc);
                        $("#txtItemNo@(itemName)").val(item.ItemNo);
                    });

                    ExpandQmmDetail();
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let QcMachineModeId = parseInt($("#QcMachineModeId").val());

                if (QcMachineModeId <= 0) {
                    let targetUrl = "@Url.Action("AddQcMachineMode", "QmsBasicInformation")";
                    let postData = {
                        "QcMachineModeNo": $("#txtQcMachineModeNo@(itemName)").val(),
                        "QcMachineModeName": $("#txtQcMachineModeName@(itemName)").val(),
                        "QcMachineModeDesc": $("#txtQcMachineModeDesc@(itemName)").val(),
                        "ItemNo": $("#txtItemNo@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#QcMachineModeId").val(item.QcMachineModeId);
                        });
                        ExpandQmmDetail();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateQcMachineMode", "QmsBasicInformation")";
                    let postData = {
                        "QcMachineModeId": QcMachineModeId,
                        "QcMachineModeNo": $("#txtQcMachineModeNo@(itemName)").val(),
                        "QcMachineModeName": $("#txtQcMachineModeName@(itemName)").val(),
                        "QcMachineModeDesc": $("#txtQcMachineModeDesc@(itemName)").val(),
                        "ItemNo": $("#txtItemNo@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(QcMachineModeId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteQcMachineMode", "QmsBasicInformation")";
                    let postData = {
                        "QcMachineModeId": QcMachineModeId,
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }
    </script>
)
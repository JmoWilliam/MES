@using Business_Manager.Helpers
@{
    string itemName = "ViewAddRepairGroup";
    string itemNameText = "新增維修群組";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增-維修群組</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtRepairGroupNo@(itemName)">群組代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtRepairGroupNo@(itemName)" name="txtRepairGroupNo@(itemName)" placeholder="請輸入群組代碼"
                                       data-msg-required="請輸入群組代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtRepairGroupName@(itemName)">群組名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtRepairGroupName@(itemName)" name="txtRepairGroupName@(itemName)" placeholder="請輸入群組名稱"
                                       data-msg-required="請輸入群組名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-12">
                                <select class="form-control" id="cboStatusNo@(itemName)" name="cboStatusNo@(itemName)" aria-invalid="false"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtRepairGroupDesc@(itemName)">描述</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtRepairGroupDesc@(itemName)" name="txtRepairGroupDesc@(itemName)" placeholder="請輸入影響原因"
                                       data-msg-required="請輸入群組描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        function Pop@(itemName)() {
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            ComboBoxs.Default("#cboStatusNo@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "Status" }, "", "CHOOSE", "", "StatusDesc", "StatusNo");

            if (!isMobile) {
                $("#cboStatusNo@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            let targetUrl = "@Url.Action("AddRepairGroup", "QmsBasicInformation")";
            let postData = {
                "GroupNo": $("#txtRepairGroupNo@(itemName)").val(),
                "GroupName": $("#txtRepairGroupName@(itemName)").val(),
                "Status": $("#cboStatusNo@(itemName)").val(),
                "GroupDesc": $("#txtRepairGroupDesc@(itemName)").val()
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);
            
            if (data) {
                let id = "RepairGroup" + data.result[0]["GroupId"].toString();
                closeModal@(itemName)(id);
                ComboBoxs.Default("#cboRepairGroupNoViewAddNgClass", "@Url.Action("GetRepairGroup", "QmsBasicInformation")", {}, "", "CHOOSE", "", "RepairGroupWithText", "GroupId");
                ComboBoxs.Default("#cboRepairGroupNoViewAddNgCause", "@Url.Action("GetRepairGroup", "QmsBasicInformation")", {}, "", "CHOOSE", "", "RepairGroupWithText", "GroupId");
                ComboBoxs.Default("#cboRepairClassNoViewAddNgCause", "@Url.Action("GetRepairClass", "QmsBasicInformation")", { "GroupId": $("#cboRepairGroupNo@(itemName)").val(), "Status": "A" }, "", "CHOOSE", "", "RepairClassWithText", "ClassId");
            }
        }

        function closeModal@(itemName)(id) {
            $("#modal@(itemName)").modal("hide");
            $("#modal@(itemName)").find("input").val("");
            ReturnRepairManagement(id);
        }
    </script>
    )
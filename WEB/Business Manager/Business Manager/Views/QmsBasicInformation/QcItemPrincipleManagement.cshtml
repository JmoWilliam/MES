@using Business_Manager.Helpers
@{
    string itemName = "QcItemPrincipleManagement";
    string itemNameText = "量測項目編碼原則管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboQcClassIdQ@(itemName)">產品類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboQcClassIdQ@(itemName)" name="cboQcClassIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboQmmDetailIdQ@(itemName)">量測機台</label>
                            <div class="col-12">
                                <select class="form-control" id="cboQmmDetailIdQ@(itemName)" name="cboQmmDetailIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtPrincipleNoQ@(itemName)">編碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrincipleNoQ@(itemName)" name="txtPrincipleNoQ@(itemName)" placeholder="請輸入編碼"
                                       data-msg-required="請輸入編碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 4 個字元" maxlength="4" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtPrincipleDescQ@(itemName)">編碼名稱描述</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrincipleDescQ@(itemName)" name="txtPrincipleDescQ@(itemName)" placeholder="請輸入編碼"
                                       data-msg-required="請輸入編碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 150 個字元" maxlength="150" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 150px;">產品類別</th>
                                        <th scope="col" style="min-width: 200px;">量測機台</th>
                                        <th scope="col" style="min-width: 200px;">編碼</th>
                                        <th scope="col" style="min-width: 200px;">編碼名稱描述</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="PrincipleId" name="PrincipleId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboQcClassId@(itemName)">產品類別 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboQcClassId@(itemName)" name="cboQcClassId@(itemName)"
                                        data-msg-required="請選擇產品類別" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboQmmDetailId@(itemName)">量測機台 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboQmmDetailId@(itemName)" name="cboQmmDetailId@(itemName)"
                                        data-msg-required="請選擇量測機台" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtPrincipleNo@(itemName)">編碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtPrincipleNo@(itemName)" name="txtPrincipleNo@(itemName)" placeholder="請輸入設備名稱"
                                       data-msg-required="請輸入編碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 4 個字元" maxlength="4" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtPrincipleDesc@(itemName)">編碼名稱描述 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtPrincipleDesc@(itemName)" name="txtPrincipleDesc@(itemName)" placeholder="請輸入設備描述"
                                       data-msg-required="請輸入編碼名稱描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 150 個字元" maxlength="150" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {            
            ComboBoxs.Default("#cboQcClassIdQ@(itemName)", "@Url.Action("GetQcClassNew", "QmsBasicInformation")", { "Status": "A"}, "", "NA", "", "QcClassWithText", "QcClassId");
            ComboBoxs.Default("#cboQmmDetailIdQ@(itemName)", "@Url.Action("GetQmmDetail", "QmsBasicInformation")", { "Status": "A" }, "", "NA", "", "MachineName", "QmmDetailId");


            Query@(itemName)();


            if (!isMobile) {
                $("#cboQcClassIdQ@(itemName), #cboQmmDetailIdQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetQcItemPrinciple", "QmsBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "QcClassId": $("#cboQcClassIdQ@(itemName)").val(),
                "QmmDetailId": $("#cboQmmDetailIdQ@(itemName)").val(),
                "PrincipleNo": $("#txtPrincipleNoQ@(itemName)").val().trim(),
                "PrincipleDesc": $("#txtPrincipleDescQ@(itemName)").val().trim()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcClassName}" style="max-width: 200px;">${item.QcClassName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineName}" style="max-width: 200px;">${item.MachineName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PrincipleNo}" style="max-width: 200px;">${item.PrincipleNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PrincipleDesc}" style="max-width: 200px;">${item.PrincipleDesc}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.PrincipleId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.PrincipleId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

        }

        function Edit@(itemName)(PrincipleId) {
            $("#PrincipleId").val(PrincipleId ? PrincipleId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboQcClassId@(itemName)", "@Url.Action("GetQcClassNew", "QmsBasicInformation")", { "Status": "A"}, "", "NA", "", "QcClassWithText", "QcClassId");
            ComboBoxs.Default("#cboQmmDetailId@(itemName)", "@Url.Action("GetQmmDetail", "QmsBasicInformation")", { "Status": "A" }, "", "NA", "", "MachineName", "QmmDetailId");

            if (PrincipleId > 0) {
                let targetUrl = "@Url.Action("GetQcItemPrinciple", "QmsBasicInformation")";
                let postData = {
                    "PrincipleId": PrincipleId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboQcClassId@(itemName)").val(item.QcClassId);
                        $("#cboQmmDetailId@(itemName)").val(item.QmmDetailId);
                        $("#txtPrincipleNo@(itemName)").val(item.PrincipleNo);
                        $("#txtPrincipleDesc@(itemName)").val(item.PrincipleDesc);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
            if (!isMobile) {
                $("#cboQcClassId@(itemName), #cboQmmDetailId@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let PrincipleId = parseInt($("#PrincipleId").val());

                if (PrincipleId <= 0) {
                    let targetUrl = "@Url.Action("AddQcItemPrinciple", "QmsBasicInformation")";
                    let postData = {
                        "QcClassId": $("#cboQcClassId@(itemName)").val(),
                        "QmmDetailId": $("#cboQmmDetailId@(itemName)").val(),
                        "PrincipleNo": $("#txtPrincipleNo@(itemName)").val(),
                        "PrincipleDesc": $("#txtPrincipleDesc@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#PrincipleId").val(item.PrincipleId);
                        });
                        alert("新增成功", "success", 0);

                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateQcItemPrinciple", "QmsBasicInformation")";
                    let postData = {
                        "PrincipleId": PrincipleId,
                        "QcClassId": $("#cboQcClassId@(itemName)").val(),
                        "QmmDetailId": $("#cboQmmDetailId@(itemName)").val(),
                        "PrincipleNo": $("#txtPrincipleNo@(itemName)").val(),
                        "PrincipleDesc": $("#txtPrincipleDesc@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(PrincipleId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteQcItemPrinciple", "QmsBasicInformation")";
                    let postData = {
                        "PrincipleId": PrincipleId,
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }
    </script>
)
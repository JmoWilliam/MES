@using Business_Manager.Helpers
@{
    string itemName = "ViewAddQcGroup";
    string itemNameText = "新增量測群組";
}

@Html.Resource("css",
    @<style>
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增-量測群組</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcGroupNo@(itemName)">群組代碼 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcGroupNo@(itemName)" name="txtQcGroupNo@(itemName)" placeholder="請輸入群組代碼"
                                       data-msg-required="請輸入群組代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcGroupName@(itemName)">群組名稱 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcGroupName@(itemName)" name="txtQcGroupName@(itemName)" placeholder="請輸入群組名稱"
                                       data-msg-required="請輸入群組名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtQcGroupDesc@(itemName)">描述</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtQcGroupDesc@(itemName)" name="txtQcGroupDesc@(itemName)" placeholder="請輸入影響原因"
                                       data-msg-required="請輸入群組描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-12">
                                <select class="form-control" id="cboStatusNo@(itemName)" name="cboStatusNo@(itemName)" aria-invalid="false"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objForm@(itemName) = "#editForm@(itemName)";


        function Pop@(itemName)() {
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            ComboBoxs.Default("#cboStatusNo@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "Status" }, "", "CHOOSE", "", "StatusDesc", "StatusNo");

            if (!isMobile) {
                $("#cboStatusNo@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let targetUrl = "@Url.Action("AddQcGroup", "QmsBasicInformation")";
                let postData = {
                    "QcGroupNo": $("#txtQcGroupNo@(itemName)").val(),
                    "QcGroupName": $("#txtQcGroupName@(itemName)").val(),
                    "Status": $("#cboStatusNo@(itemName)").val(),
                    "QcGroupDesc": $("#txtQcGroupDesc@(itemName)").val()
                };

                let data = DataAccess.EditContinued(targetUrl, postData, false);

                if (data) {
                    let id = "QcGroup" + data.result[0]["QcGroupId"].toString();
                    closeModal@(itemName)(id);
                    ComboBoxs.Default("#cboQcGroupIdViewAddQcClass", "@Url.Action("GetQcGroup", "QmsBasicInformation")", {}, "", "CHOOSE", "", "QcGroupWithText", "QcGroupId");
                    ComboBoxs.Default("#cboQcGroupIdViewAddQcItem", "@Url.Action("GetQcGroup", "QmsBasicInformation")", {}, "", "CHOOSE", "", "QcGroupWithText", "QcGroupId");
                    ComboBoxs.Default("#cboQcClassNoViewAddQcItem", "@Url.Action("GetQcClass", "QmsBasicInformation")", { "QcGroupId": $("#cboQcGroupNo@(itemName)").val(), "Status": "A" }, "", "CHOOSE", "", "QcClassWithText", "QcClassId");
                }
            }
        }

        function closeModal@(itemName)(id) {
            $("#modal@(itemName)").modal("hide");
            $("#modal@(itemName)").find("input").val("");
            ReturnQcItemManagement(id);
        }
    </script>
    )
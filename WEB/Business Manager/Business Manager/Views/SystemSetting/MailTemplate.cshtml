@Html.Resource("js",
   @<script src="https://cdn.tiny.cloud/1/9y2uosfk0sy9dh2ht270rz260b8hppx6cxxesnpu0cnu3s05/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script> 
)

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboHostQ@(itemName)", "@Url.Action("GetMailServer", "SystemSetting")", {}, "", "ALL", "", "Host", "ServerId");

            $("#cboHostQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMailTemplate", "SystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ServerId": $("#cboHostQ@(itemName)").val(),
                "MailName": $("#txtMailNameQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">主機</span>${item.Host}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MailName}" style="max-width: 150px;"><span class="stack-title">郵件名稱</span>${item.MailName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MailSubject}" style="max-width: 250px;"><span class="stack-title">郵件主旨</span>${item.MailSubject}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.MailId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.MailId});"><i class="fas fa-trash-alt"></i></a>
                                          <a class="active-link auth-send-setting" href="javascript:PopViewMailSendSetting(${item.MailId});"><i class="fas fa-cog"></i><span>寄送設定</span></a>
                                          <a class="active-link auth-test-mail" href="javascript:TestMail@(itemName)(${item.MailId});"><i class="fas fa-paper-plane"></i><span>發送測試郵件</span></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(MailId) {
            $("#MailId").val(MailId ? MailId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboHost@(itemName)", "@Url.Action("GetMailServer", "SystemSetting")", {}, "", "CHOOSE", "請選擇", "Host", "ServerId");
            ComboBoxs.Default("#cboMailFrom@(itemName)", "@Url.Action("GetMailUser", "SystemSetting")", {}, "", "CHOOSE", "請選擇", "DisplayName", "Id");
            ComboBoxs.Default("#cboMailTo@(itemName)", "@Url.Action("GetMailUser", "SystemSetting")", {}, "", "CHOOSE", "", "DisplayName", "Id");
            ComboBoxs.Default("#cboMailCc@(itemName)", "@Url.Action("GetMailUser", "SystemSetting")", {}, "", "CHOOSE", "", "DisplayName", "Id");
            ComboBoxs.Default("#cboMailBcc@(itemName)", "@Url.Action("GetMailUser", "SystemSetting")", {}, "", "CHOOSE", "", "DisplayName", "Id");

            tinymce.remove("#txtMailContent@(itemName)");

            if (MailId > 0) {
                let targetUrl = "@Url.Action("GetMailTemplate", "SystemSetting")";
                let postData = {
                    "MailId": MailId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboHost@(itemName)").val(item.ServerId);
                        $("#txtMailName@(itemName)").val(item.MailName);
                        $("#cboMailFrom@(itemName)").val(item.MailFrom);
                        $("#cboMailTo@(itemName)").val(item.MailTo.split(','));
                        $("#cboMailCc@(itemName)").val(item.MailCc.split(','));
                        $("#cboMailBcc@(itemName)").val(item.MailBcc.split(','));
                        $("#txtMailSubject@(itemName)").val(item.MailSubject);
                        $("#txtMailContent@(itemName)").val(decodeURI(item.MailContent));
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            $("#cboHost@(itemName), #cboMailFrom@(itemName), #cboMailTo@(itemName), #cboMailCc@(itemName), #cboMailBcc@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
            
            tinymce.init({
                selector: 'textarea#txtMailContent@(itemName)',
                language: 'zh_TW',
                plugins: 'lists advlist link autolink charmap code directionality emoticons fullscreen help image insertdatetime media nonbreaking pagebreak preview searchreplace table visualblocks visualchars wordcount',
                toolbar1: 'undo redo searchreplace | cut copy paste pastetext | forecolor backcolor | fontsize fontfamily',
                toolbar2: 'table | bold italic underline strikethrough blockquote | alignleft aligncenter alignright alignjustify alignnone | bullist numlist',
                toolbar3: 'image media | link | charmap | emoticons | insertdatetime | newdocument fullscreen preview help',
                skin: 'small',
                icons: 'small',
                file_picker_types: 'file image media',
                file_picker_callback: (callback, value, meta) => {
                    PopViewTinymceFileManager(callback);
                },
                insertdatetime_formats: ['%H:%M:%S', '%I:%M:%S %p', '%Y-%m-%d', '%Y/%m/%d'],
                statusbar: false
            });
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let MailId = parseInt($("#MailId").val());

                if (MailId <= 0) {
                    let targetUrl = "@Url.Action("AddMailTemplate", "SystemSetting")";
                    let postData = {
                        "ServerId": $("#cboHost@(itemName)").val(),
                        "MailName": $("#txtMailName@(itemName)").val(),
                        "MailFrom": $("#cboMailFrom@(itemName)").val(),
                        "MailTo": $("#cboMailTo@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailCc": $("#cboMailCc@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailBcc": $("#cboMailBcc@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailSubject": $("#txtMailSubject@(itemName)").val(),
                        "MailContent": encodeURI(tinymce.get("txtMailContent@(itemName)").getContent())
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateMailTemplate", "SystemSetting")";
                    let postData = {
                        "MailId": MailId,
                        "ServerId": $("#cboHost@(itemName)").val(),
                        "MailName": $("#txtMailName@(itemName)").val(),
                        "MailFrom": $("#cboMailFrom@(itemName)").val(),
                        "MailTo": $("#cboMailTo@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailCc": $("#cboMailCc@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailBcc": $("#cboMailBcc@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "MailSubject": $("#txtMailSubject@(itemName)").val(),
                        "MailContent": encodeURI(tinymce.get("txtMailContent@(itemName)").getContent())
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(MailId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteMailTemplate", "SystemSetting")";
                    let postData = {
                        "MailId": MailId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block");
            Query@(itemName)();
        }

        function TestMail@(itemName)(MailId) {
            swal.fire({
                titleText: "確認要發送測試郵件嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("SendMailTemplate", "SystemSetting")";
                    let postData = {
                        "MailId": MailId
                    };

                    let result = DataAccess.Other(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }
    </script>
)
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let json@(itemName) = {
            UserType: "",
            Account: "",
            InnerCode: "",
            DisplayName: "",
            Employee: {},
            Customer: {},
            Supplier: {},
        };

        let Operations = new OperationControl@(itemName)();

        $(document).ready(function () {
            ComboBoxs.Default("#cboUserTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "UserInfo.UserType" }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboCompanyIdQ@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", {}, "", "ALL", "", "CompanyWithNo", "CompanyId");
            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": $("#cboCompanyIdQ@(itemName)").val(), "Status": "A" }, "", "ALL", "", "DepartmentWithNo", "DepartmentId");

            $("#cboUserTypeQ@(itemName), #cboCompanyIdQ@(itemName), #cboDepartmentIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#cboUserTypeQ@(itemName)").change(function () {
                $(".query-advanced").hide();

                switch ($(this).val()) {
                    case "C": //客戶
                        break;
                    case "E": //內部員工
                        $(".query-employee").show();
                        break;
                    case "S": //供應商
                        break;
                    default:
                        break;
                }
            });

            $("#cboCompanyIdQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": $("#cboCompanyIdQ@(itemName)").val(), "Status": "A" }, "", "CHOOSE", "", "DepartmentWithNo", "DepartmentId");
            });

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetUser", "SystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "UserType": $("#cboUserTypeQ@(itemName)").val(),
                "CompanyId": $("#cboCompanyIdQ@(itemName)").val(),
                "Departments": $("#cboDepartmentIdQ@(itemName) option:selected").toArray().map(item => item.value).join(),
                "InnerCode": $("#txtInnerCodeQ@(itemName)").val(),
                "DisplayName": $("#txtDisplayNameQ@(itemName)").val(),
                "Status": $("input[name='cbxStatusQ@(itemName)']:checked").toArray().map(item => item.value).join()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr data-user-id="${item.UserId}" data-previous="${item.PreviousId}" data-next="${item.NextId}">
                                        <td>${_row}</td>
                                        <td>${item.UserTypeInfo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Account}" style="max-width: 100px;">${item.Account}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.InnerCode}" style="max-width: 100px;">${item.InnerCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DisplayName}" style="max-width: 100px;">${item.DisplayName}</td>
                                        <td class="text-center active-content">
                                          <div class="btn-group mb-4 show" style="margin-bottom: 0 !important; position: static;">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-user-id="${item.UserId}" style="padding-top: 0; padding-bottom: 0;">動作</button>
                                            <div class="dropdown-menu btn-text-left-block" data-user-id="${item.UserId}" style="overflow-y: auto; z-index: 999; max-height: 150px;">
                                              <a class="dropdown-item btn-text-left auth-update" href="javascript:Edit@(itemName)(${item.UserId});"><i class="fas fa-edit"></i>修改</a>
                                              <a class="dropdown-item btn-text-left auth-delete" href="javascript:Operations.Delete(${item.UserId});"><i class="fas fa-trash"></i>刪除</a>
                                              <a class="dropdown-item btn-text-left auth-password-reset" href="javascript:Operations.PasswordReset(${item.UserId});"><i class="fas fa-unlock-alt"></i><span>密碼重置</span></a>
                                            </div>
                                          </div>
                                        </td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-user-id="${item.UserId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${item.StatusName}</td>
                                        <td style="padding: 0;">
                                          <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                            <tbody>
                                              ${DetailData@(itemName)(item.UserEmployee)}
                                            </tbody>
                                          </table>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-user-id]").change(function () {
                Operations.StatusSwitch($(this).data("user-id"));
            });

            $(".dropdown-toggle").off("click").on("click", function () {
                let interfacingId = $(this).data("user-id");

                if ($(`.dropdown-menu[data-user-id='${interfacingId}']`).hasClass("show")) {
                    $(".dropdown-menu").removeClass("show");
                } else {
                    $(".dropdown-menu").removeClass("show");

                    $(`.dropdown-menu[data-user-id='${interfacingId}']`).addClass("show");
                    $(`.dropdown-menu[data-user-id='${interfacingId}']`).css({
                        top: `${$(this).position().top + $(this).height() + 5}px`,
                        left: `${$(this).position().left - $(this).width() + 38}px`
                    });
                }
            });

            $("body").off("click").on("click", function (e) {
                if ($(".dropdown-menu").hasClass("show")) {
                    if (!$(e.target).hasClass("dropdown-toggle")
                        && !$(e.target).parents().hasClass("dropdown-toggle")) {
                        $(".dropdown-menu").removeClass("show");
                    }
                }
            });
        }

        function DetailData@(itemName)(source) {
            let html = '';

            if (source) {
                let json = JSON.parse(source);

                if (json.data.length > 0) {
                    html += `<tr>
                               <th rowspan="2" style="width: 75px; max-width: 75px;">內部員工</th>
                               <th style="width: 150px;">部門</th>
                               <th style="width: 150px;">職務</th>
                               <th style="width: 150px;">職務類別</th>
                               <th style="width: 250px;">Email</th>
                             </tr>`;

                    for (let x = 0; x < json.data.length; x++) {
                        html += `<tr>
                                   <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].DepartmentNo} ${json.data[x].DepartmentName}" style="width: 150px; max-width: 150px;">
                                     ${json.data[x].LogoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${json.data[x].LogoIcon}" />`}${json.data[x].DepartmentNo} ${json.data[x].DepartmentName}
                                   </td>
                                   <td style="width: 150px;">${json.data[x].Job}</td>
                                   <td style="width: 150px;">${json.data[x].JobType}</td>
                                   <td style="width: 250px;">${json.data[x].Email}</td>
                                 </tr>`;
                    }
                }
            }

            return html;
        }

        function Edit@(itemName)(UserId) {
            $("tr[data-user-id]").removeClass("data-selected");
            $("#editData@(itemName) .datail-box").hide();

            json@(itemName) = {
                UserType: "",
                Account: "",
                InnerCode: "",
                DisplayName: "",
                Employee: {},
                Customer: {},
                Supplier: {},
            };

            $("#UserId").val(UserId ? UserId : 0);
            $("#PreviousId").val(0);
            $("#NextId").val(0);

            $(objForm@(itemName) + " fieldset").attr("disabled", false);
            $(objForm@(itemName) + " select").attr("disabled", false);

            $("#editData@(itemName)").addClass("active");

            ComboBoxs.Default("#cboUserTypes@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "UserInfo.UserType" }, "", "CHOOSE", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboCompanyId@(itemEmployee)", "@Url.Action("GetCompany", "BasicInformation")", {}, "", "NA", "", "CompanyWithNo", "CompanyId");
            ComboBoxs.Default("#cboDepartmentId@(itemEmployee)", "@Url.Action("GetDepartment", "BasicInformation")", {}, "", "NA", "", "DepartmentWithNo", "DepartmentId");
            ComboBoxs.Default("#cboGender@(itemEmployee)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "UserEmployee.Gender" }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboEmployeeStatus@(itemEmployee)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "UserEmployee.EmployeeStatus" }, "", "NA", "", "StatusName", "StatusNo");

            $("#editForm@(itemName) .form-control").off("change").on("change", function () {
                json@(itemName).UserType = $("#cboUserTypes@(itemName)").val() ? $("#cboUserTypes@(itemName)").val().join() : "";
                json@(itemName).Account = $("#txtAccount@(itemName)").val();
                json@(itemName).InnerCode = $("#txtInnerCode@(itemName)").val();
                json@(itemName).DisplayName = $("#txtDisplayName@(itemName)").val();
            });

            $("#editForm@(itemEmployee) .form-control").off("change").on("change", function () {
                json@(itemName).Employee.DepartmentId = $("#cboDepartmentId@(itemEmployee)").val();
                json@(itemName).Employee.Gender = $("#cboGender@(itemEmployee)").val();
                json@(itemName).Employee.Email = $("#txtEmail@(itemEmployee)").val();
                json@(itemName).Employee.Job = $("#txtJob@(itemEmployee)").val();
                json@(itemName).Employee.JobType = $("#txtJobType@(itemEmployee)").val();
                json@(itemName).Employee.EmployeeStatus = $("#cboEmployeeStatus@(itemEmployee)").val();
            });

            $("#editForm@(itemCustomer) .form-control").off("change").on("change", function () {
                json@(itemName).Customer.Contact = $("#txtContact@(itemCustomer)").val();
                json@(itemName).Customer.ContactPhone = $("#txtContactPhone@(itemCustomer)").val();
                json@(itemName).Customer.ContactAddress = $("#txtContactAddress@(itemCustomer)").val();
            });

            $("#editForm@(itemSupplier) .form-control").off("change").on("change", function () {
                json@(itemName).Supplier.Contact = $("#txtContact@(itemSupplier)").val();
                json@(itemName).Supplier.ContactPhone = $("#txtContactPhone@(itemSupplier)").val();
                json@(itemName).Supplier.ContactAddress = $("#txtContactAddress@(itemSupplier)").val();
            });

            $("#cboCompanyId@(itemEmployee), #cboDepartmentId@(itemEmployee), #cboUserTypes@(itemName), #cboGender@(itemEmployee), #cboEmployeeStatus@(itemEmployee)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#cboUserTypes@(itemName)").on("change", function (e) {
                if ($("#cboUserTypes@(itemName)").val().includes("E")) $(".detail-employee").show();
                if ($("#cboUserTypes@(itemName)").val().includes("C")) $(".detail-customer").show();
                if ($("#cboUserTypes@(itemName)").val().includes("S")) $(".detail-supplier").show();
            });

            $("#cboUserTypes@(itemName)").on("select2:unselecting", function (e) {
                e.preventDefault();

                swal.fire({
                    titleText: "確認要取消選取嗎?",
                    text: "相關資料會清除，請確認是否要執行!",
                    icon: "warning",
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        let tempArray = $("#cboUserTypes@(itemName)").val();

                        switch (e.params.args.data.id) {
                            case "E":
                                ResetForm("#editForm@(itemEmployee)");
                                $(".detail-employee").hide();
                                json@(itemName).Employee = {};

                                $("#cboCompanyId@(itemEmployee), #cboDepartmentId@(itemEmployee), #cboUserTypes@(itemName), #cboGender@(itemEmployee), #cboEmployeeStatus@(itemEmployee)").select2("destroy").select2({
                                    dropdownAutoWidth: true,
                                    width: "100%"
                                });
                                
                                delete tempArray[tempArray.indexOf("E")];
                                break;
                            case "C":
                                ResetForm("#editForm@(itemCustomer)");
                                $(".detail-customer").hide();
                                json@(itemName).Customer = {};

                                delete tempArray[tempArray.indexOf("C")];
                                break;
                            case "S":
                                ResetForm("#editForm@(itemSupplier)");
                                $(".detail-supplier").hide();
                                json@(itemName).Supplier = {};

                                delete tempArray[tempArray.indexOf("S")];
                                break;
                            default:
                                break;
                        }

                        $("#cboUserTypes@(itemName)").val(tempArray).trigger("change");
                    }
                });
            });

            $("#cboCompanyId@(itemEmployee)").change(function () {
                ComboBoxs.Default("#cboDepartmentId@(itemEmployee)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": $("#cboCompanyId@(itemEmployee)").val() }, "", "NA", "", "DepartmentWithNo", "DepartmentId");
            });

            if (UserId > 0) {
                let targetUrl = "@Url.Action("GetUser", "SystemSetting")";
                let postData = {
                    "UserId": UserId
                };
                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#PreviousId").val($(`tr[data-user-id="${UserId}"]`).data("previous"));
                        $("#NextId").val($(`tr[data-user-id="${UserId}"]`).data("next"));

                        $("#cboUserTypes@(itemName)").val(item.UserType.split(',')).trigger("change");
                        $("#txtAccount@(itemName)").val(item.Account);
                        $("#txtInnerCode@(itemName)").val(item.InnerCode);
                        $("#txtDisplayName@(itemName)").val(item.DisplayName);

                        json@(itemName).UserType = item.UserType;
                        json@(itemName).Account = item.Account;
                        json@(itemName).InnerCode = item.InnerCode;
                        json@(itemName).DisplayName = item.DisplayName;
                        if (item.UserEmployee) {
                            json@(itemName).Employee = JSON.parse(item.UserEmployee).data[0];
                            $("#cboCompanyId@(itemEmployee)").val(json@(itemName).Employee.CompanyId).trigger('change.select2');
                            $("#cboDepartmentId@(itemEmployee)").val(json@(itemName).Employee.DepartmentId).trigger('change.select2');
                            $("#cboGender@(itemEmployee)").val(json@(itemName).Employee.Gender).trigger('change.select2');
                            $("#txtEmail@(itemEmployee)").val(json@(itemName).Employee.Email);
                            $("#txtJob@(itemEmployee)").val(json@(itemName).Employee.Job);
                            $("#txtJobType@(itemEmployee)").val(json@(itemName).Employee.JobType);
                            $("#cboEmployeeStatus@(itemEmployee)").val(json@(itemName).Employee.EmployeeStatus).trigger('change.select2');
                        }
                        if (item.UserCustomer) {
                            json@(itemName).Customer = JSON.parse(item.UserCustomer).data[0];
                            $("#txtContact@(itemCustomer)").val(json@(itemName).UserCustomer.Contact);
                            $("#txtContactPhone@(itemCustomer)").val(json@(itemName).UserCustomer.ContactPhone);
                            $("#txtContactAddress@(itemCustomer)").val(json@(itemName).UserCustomer.ContactAddress);
                        }
                        if (item.UserSupplier) {
                            json@(itemName).Supplier = JSON.parse(item.UserSupplier).data[0];
                            $("#txtContact@(itemSupplier)").val(json@(itemName).UserSupplier.Contact);
                            $("#txtContactPhone@(itemSupplier)").val(json@(itemName).UserSupplier.ContactPhone);
                            $("#txtContactAddress@(itemSupplier)").val(json@(itemName).UserSupplier.ContactAddress);
                        }

                        $(`tr[data-user-id="${UserId}"]`).addClass("data-selected");
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function OperationControl@(itemName)() {
            addMethod(this, "StatusSwitch", function (UserId) {
                let targetUrl = "@Url.Action("UpdateUserStatus", "SystemSetting")";
                let postData = {
                    "UserId": UserId
                };

                let result = DataAccess.Update(targetUrl, postData, false, true);

                if (result) {
                    Query@(itemName)();
                }
            });

            addMethod(this, "Previous", function () {
                let PreviousId = parseInt($("#PreviousId").val());

                if (PreviousId > 0) {
                    Edit@(itemName)(PreviousId);
                } else {
                    alert("已是第一筆資料!");
                }
            });

            addMethod(this, "Next", function () {
                let NextId = parseInt($("#NextId").val());

                if (NextId > 0) {
                    Edit@(itemName)(NextId);
                } else {
                    alert("已是最後一筆資料!");
                }
            });

            addMethod(this, "Save", function () {
                let formValid = [];
                formValid.push($(objForm@(itemName)).valid());
                if ($("#cboUserTypes@(itemName)").val().includes("E")) formValid.push($("#editForm@(itemEmployee)").valid());
                if ($("#cboUserTypes@(itemName)").val().includes("C")) formValid.push($("#editForm@(itemCustomer)").valid());
                if ($("#cboUserTypes@(itemName)").val().includes("S")) formValid.push($("#editForm@(itemSupplier)").valid());

                if (formValid.indexOf(false) == -1) {
                    let UserId = parseInt($("#UserId").val());

                    if (UserId <= 0) {
                        let targetUrl = "@Url.Action("AddUser", "SystemSetting")";
                        let postData = {
                            "UserJson": JSON.stringify(json@(itemName))
                        };
                        let result = DataAccess.Add(targetUrl, postData, false, true);

                        if (result) {
                            Operations.EditClose();
                        }
                    } else {
                        let targetUrl = "@Url.Action("UpdateUser", "SystemSetting")";
                        let postData = {
                            "UserId": UserId,
                            "UserJson": JSON.stringify(json@(itemName))
                        };

                        let result = DataAccess.Update(targetUrl, postData, false, true);

                        if (result) {
                            Operations.EditClose();
                        }
                    }
                }
            });

            addMethod(this, "Delete", function (UserId) {
                swal.fire({
                    titleText: "確認要刪除嗎?",
                    text: "此動作無法復原，請確認是否要執行!",
                    icon: "warning",
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        let targetUrl = "@Url.Action("DeleteUser", "SystemSetting")";
                        let postData = {
                            "UserId": UserId > 0 ? UserId : parseInt($("#UserId").val())
                        };

                        let result = DataAccess.Delete(targetUrl, postData, false, true);

                        if (result) {
                            Operations.EditClose();
                        }
                    }
                });
            });

            addMethod(this, "PasswordReset", function (UserId) {
                let targetUrl = "@Url.Action("UpdateUserPasswordReset", "SystemSetting")";
                let postData = {
                    "UserId": UserId
                };

                let result = DataAccess.Other(targetUrl, postData, false, true);

                if (result) {
                    Operations.EditClose();
                }
            });

            addMethod(this, "EditClose", function () {
                ResetForm(objForm@(itemName));
                $("#editData@(itemName)").removeClass("active");
                Query@(itemName)();
            });
        }
    </script>

@using Business_Manager.Helpers
@{
    string itemName = "ApiKeyManagement";
    string itemNameText = "Api金鑰管理";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtKeyTextQ@(itemName)">金鑰</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtKeyTextQ@(itemName)" name="txtKeyTextQ@(itemName)" placeholder="請輸入金鑰" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtPurposeQ@(itemName)">用途</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPurposeQ@(itemName)" name="txtPurposeQ@(itemName)" placeholder="請輸入用途" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 400px;">金鑰</th>
                                        <th scope="col" style="min-width: 250px;">用途</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-header card-page-header">
                <h2  class="card-page-title">詳細資料</h2>
                <span class="card-actions">
                    <a href="javascript: void(0);" data-card-toggle><i class="fas fa-2x fa-caret-up"></i></a>
                </span>
            </div>
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="KeyId" name="KeyId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtKeyText@(itemName)">金鑰 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtKeyText@(itemName)" name="txtKeyText@(itemName)" placeholder="請輸入金鑰"
                                           readonly
                                           data-msg-required="請產生金鑰" data-rule-required="true"
                                           data-msg-maxlength="必須少於 64 個字元" maxlength="64" />
                                    <div class="input-group-append">
                                        <div class="btn-group">
                                            <a class="btn btn-danger" href="javascript:void(0);" onclick="Generate@(itemName)()"><i class="fas fa-random"></i></a>
                                            <a class="btn btn-info" href="javascript:void(0);" onclick="CopyToClipboard('#txtKeyText@(itemName)')"><i class="fas fa-copy"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtPurpose@(itemName)">用途 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtPurpose@(itemName)" name="txtPurpose@(itemName)" placeholder="請輸入用途"
                                       data-msg-required="請輸入用途" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabApiKeyFunction">
                        <i class="fas fa-key-skeleton"></i> Api適用功能
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabApiKeyFunction">
            @Html.Partial("ApiKeyFunction")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            
            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetApiKey", "SystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "KeyText": $("#txtKeyTextQ@(itemName)").val(),
                "Purpose": $("#txtPurposeQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.KeyText}" style="max-width: 400px;">
                                          <span class="stack-title">金鑰</span>
                                          <span class="stack-content">
                                            <a href="javascript:void(0);" onclick="CopyToClipboard('input[name=hidKeyText@(itemName)][data-key-id=${item.KeyId}]')"><i class="fas fa-copy"></i></a>
                                            <input type="text" name="hidKeyText@(itemName)" data-key-id="${item.KeyId}" value="${item.KeyText}" style="display: none;" />
                                            ${item.KeyText}
                                          </span>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Purpose}" style="max-width: 250px;"><span class="stack-title">用途</span>${item.Purpose}</td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-key-id="${item.KeyId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.KeyId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.KeyId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-key-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(KeyId) {
            $("#KeyId").val(KeyId ? KeyId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            if (KeyId > 0) {
                let targetUrl = "@Url.Action("GetApiKey", "SystemSetting")";
                let postData = {
                    "KeyId": KeyId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtKeyText@(itemName)").val(item.KeyText);
                        $("#txtPurpose@(itemName)").val(item.Purpose);
                    });

                    ExpandApiKeyFunction();
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let KeyId = parseInt($("#KeyId").val());

                if (KeyId <= 0) {
                    let targetUrl = "@Url.Action("AddApiKey", "SystemSetting")";
                    let postData = {
                        "KeyText": $("#txtKeyText@(itemName)").val(),
                        "Purpose": $("#txtPurpose@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#KeyId").val(item.KeyId);
                        });

                        ExpandApiKeyFunction();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateApiKey", "SystemSetting")";
                    let postData = {
                        "KeyId": KeyId,
                        "KeyText": $("#txtKeyText@(itemName)").val(),
                        "Purpose": $("#txtPurpose@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(KeyId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteApiKey", "SystemSetting")";
                    let postData = {
                        "KeyId": KeyId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var keyId = $(this).data("key-id");

            let targetUrl = "@Url.Action("UpdateApiKeyStatus", "SystemSetting")";
            let postData = {
                "KeyId": keyId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }

        function Generate@(itemName)() {
            let targetUrl = "@Url.Action("GetRandomApiKey", "SystemSetting")";
            let postData = {};

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                $("#txtKeyText@(itemName)").val(data.result);
            } else {
                alert(data.msg, "alert", 0);
            }
        }
    </script>
)
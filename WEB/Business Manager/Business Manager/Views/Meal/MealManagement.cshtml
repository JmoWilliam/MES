            let targetUrl = "@Url.Action("UpdateMealStatus", "Meal")";
            let postData = {
                "MealId": MealId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }

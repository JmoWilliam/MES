@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let mealId@(itemName);
        let orderType@(itemName);

        $(document).ready(function () {
            Query@(itemName)();

            ComboBoxs.Default("#cboRestaurantIdQ@(itemName)", "@Url.Action("GetRestaurantId", "Meal")", {}, "", "NA", "", "RestaurantName", "RestaurantId");    //所屬餐廳
            ComboBoxs.Default("#cboOrderType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "OrderSetting.OrderType" }, "", "NA", "", "TypeName", "TypeNo");     //設定類型(贈[DEF]/備品)

            $(".advanced-block a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetRestaurantMeal", "Meal")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "RestaurantId": $("#cboRestaurantIdQ@(itemName)").val(),
                "MealName": $("#txtMealNameQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">餐廳</span>${item.RestaurantName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MealName}" style="max-width: 175px;"><span class="stack-title">餐點名稱</span>${item.MealName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MealPrice}" style="max-width: 175px;"><span class="stack-title">餐點價格</span>${item.MealPrice}</td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-meal-id="${item.MealId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.MealId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.MealId});"><i class="fas fa-trash-alt"></i></a>
                                          <!--複製餐點-->
                                          <a class="active-link auth-update" href="javascript:PopCopyMeal@(itemName)('${item.MealId}');">
                                              <i class="fas fa-copy"> 複製餐點</i>
                                          </a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-meal-id]").change(StatusSwitch@(itemName));
        }

        function InitParameter@(itemName)(selector) {
            let initFnString = "Expand";
            let content = selector.attr("href").split('#tab')[1].split('@(itemName)')[0];

            switch (content) {
                case "ViewMealCategory":
                    initFnString += "ViewMealCategory";
                    break;
                case "ViewMcDetail":
                    initFnString += "ViewMcDetail";
                    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        }

        function Edit@(itemName)(MealId) {
            $("#MealId").val(MealId ? MealId : 0);

            if (!isMobile) {
                $("#cboRestaurantId@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#txtMealImage@(itemName)").val("");

            ComboBoxs.Default("#cboRestaurantId@(itemName)", "@Url.Action("GetRestaurantId", "Meal")", {}, "", "NA", "", "RestaurantName", "RestaurantId");    //所屬餐廳
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            if (MealId > 0) {
                let targetUrl = "@Url.Action("GetRestaurantMeal", "Meal")";
                let postData = {
                    "MealId": MealId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboRestaurantId@(itemName)").val(item.RestaurantId);
                        $("#txtMealName@(itemName)").val(item.MealName);
                        $("#txtMealPrice@(itemName)").val(item.MealPrice);

                        let mealImageList = [];
                        if (item.MealImage != null) {
                            let mealImageJson = JSON.parse(item.MealImage);
                            $.each(mealImageJson.data, function (j, item2) {
                                mealImageList.push(item2.FileId);
                            });
                        }
                        $("#txtMealImage@(itemName)").val(item.MealImage);
                    });

                    if ($(".advanced-block .flag-tabs > .flag-item > .flag-link").first().hasClass("active")) {
                        InitParameter@(itemName)($(".advanced-block .flag-tabs > .flag-item").first().find("a"));
                    } else {
                        $(".advanced-block .flag-tabs > .flag-item").first().find("a").trigger("click");
                    }
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            let uploadConfig = {
                fileSelector: "#fileMealImage@(itemName)",
                targetSelector: "#txtMealImage@(itemName)",
                required: false,
                uploadPath: "/Meal/MealManagement",
                maxFileCount: 1,
                defaultFile: $("#txtMealImage@(itemName)").val()
            };
            Suites.FileUpload(uploadConfig);
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let MealId = parseInt($("#MealId").val());

                if (MealId <= 0) {
                    let targetUrl = "@Url.Action("AddRestaurantMeal", "Meal")";
                    let postData = {
                        "RestaurantId": $("#cboRestaurantId@(itemName)").val(),
                        "MealName": $("#txtMealName@(itemName)").val(),
                        "MealPrice": $("#txtMealPrice@(itemName)").val(),
                        "MealImage": $("#txtMealImage@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#MealId").val(item.MealId);
                        });

                        //頁面切換
                        if ($(".advanced-block .flag-tabs > .flag-item > .flag-link").first().hasClass("active")) {
                            InitParameter@(itemName)($(".advanced-block .flag-tabs > .flag-item").first().find("a"));
                        } else {
                            $(".advanced-block .flag-tabs > .flag-item").first().find("a").trigger("click");
                        }
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateRestaurantMeal", "Meal")";
                    let postData = {
                        "MealId": MealId,
                        "RestaurantId": $("#cboRestaurantId@(itemName)").val(),
                        "MealName": $("#txtMealName@(itemName)").val(),
                        "MealPrice": $("#txtMealPrice@(itemName)").val(),
                        "MealImage": $("#txtMealImage@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        if ($(".advanced-block .flag-tabs > .flag-item > .flag-link").first().hasClass("active")) {
                            InitParameter@(itemName)($(".advanced-block .flag-tabs > .flag-item").first().find("a"));
                        } else {
                            $(".advanced-block .flag-tabs > .flag-item").first().find("a").trigger("click");
                        }
                    }
                }
            }
        }

        function PopCopyMeal@(itemName)(MealId) {
            mealId@(itemName) = MealId;

            ComboBoxs.Default("#cboCompanyId@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", {}, "", "NA", "", "CompanyName", "CompanyId");

            $("#cboCompanyId@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#modalCopyMeal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function CloseCopyMeal@(itemName)() {
            ResetForm("#CopyMealForm@(itemName)");

            $("#modalCopyMeal@(itemName)").modal("hide");

            Query@(itemName)();
        }

        function CopyMealSave@(itemName)() {
            swal.fire({
                titleText: "確認執行餐點複製至該公司別嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("AddCopyRestaurantMeal", "Meal")";
                    let postData = {
                        "CompanyId": $("#cboCompanyId@(itemName)").val(),
                        "MealId": mealId@(itemName)
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                        CloseCopyMeal@(itemName)();
                    }
                }
            });
        }

        function PopCalendarDate@(itemName)() {
            $(".timeinfo").hide();

            $("#cboOrderType@(itemName)").change(function () {
                $(".timeinfo").show();

                let targetUrl = "@Url.Action("GetCalendarDate", "Meal")";
                let postData = {
                    "OrderType": $("#cboOrderType@(itemName)").val()
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtStartTime@(itemName)").val(item.StartTime);
                        $("#txtEndTime@(itemName)").val(item.EndTime);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            });

            $("#modalCalendarDate@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function CalendarDateSave@(itemName)() {
            swal.fire({
                titleText: "確認修改訂餐開放時間嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateCalendarDate", "Meal")";
                    let postData = {
                        "StartTime": $("#txtStartTime@(itemName)").val(),
                        "EndTime": $("#txtEndTime@(itemName)").val(),
                        "OrderType": $("#cboOrderType@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                        CloseCalendarDate@(itemName)();
                    }
                }
            });
        }

        function CloseCalendarDate@(itemName)() {
            ResetForm("#CalendarDateForm@(itemName)");

            $("#modalCalendarDate@(itemName)").modal("hide");

            Query@(itemName)();
        }

        function Delete@(itemName)(MealId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {

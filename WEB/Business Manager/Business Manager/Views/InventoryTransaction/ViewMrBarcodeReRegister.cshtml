@using Business_Manager.Helpers
@{
    string itemName = "ViewMrBarcodeReRegister";
    string itemNameText = "條碼綁定資料管理(退料)";
}

@Html.Resource("css",
    @<style>
    </style>
                                        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">品號: <span class="sub-text" id="desMtlItemNo@(itemName)"></span></span>
                    <span class="sub-title">品名: <span class="sub-text" id="desMtlItemName@(itemName)"></span></span>
                    <span class="sub-title">目前數量: <span class="sub-text" id="desTotalBarcodeQty@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:Close@(itemName)();"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtBarcodeNo@(itemName)" name="txtBarcodeNo@(itemName)"
                                               placeholder="請輸入條碼"
                                               onkeyup="this.value=this.value.replace(/[, ]/g,'')" />
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="max-width: 200px;">條碼代碼</th>
                                        <th scope="col" style="max-width: 200px;">建立人員</th>
                                        <th scope="col" style="max-width: 250px;">建立時間</th>
                                        <th class="text-center" scope="col" style="min-width: 65px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let mrDetailId@(itemName);
        let mrId@(itemName);

        function Pop@(itemName)(MrDetailId, MtlItemNo, MtlItemName, TotalBarcodeQty, MrId) {
            mrDetailId@(itemName) = MrDetailId;
            $("#desMtlItemNo@(itemName)").html(MtlItemNo);
            $("#desMtlItemName@(itemName)").html(MtlItemName);
            $("#desTotalBarcodeQty@(itemName)").html(TotalBarcodeQty);

            $("#txtBarcodeNo@(itemName)").val("");

            Query@(itemName)();

            mrId@(itemName) = MrId;

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            setTimeout(function (i, item) {
                $("#txtBarcodeNo@(itemName)").focus();
            },300);
        }

        $("#txtBarcodeNo@(itemName)").keydown(function (event) {
            if (event.keyCode == 13) {
                Save@(itemName)();
                return false;
            }
        });

        $("#queryForm@(itemName)").keydown(function (event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                return false;
            }
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMrBarcodeReRegister", "InventoryTransaction")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MrDetailId": mrDetailId@(itemName),
                "BarcodeNo": $("#txtBarcodeNoQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}${item.TrayBarcode == `Y` ? `(${item.TrayNo})` : ``}">
                                            ${item.BarcodeNo}<code>${item.TrayBarcode == `Y` ? `(${item.TrayNo})` : ``}</code>
                                            <br>
                                            ${JudgeItemValue@(itemName)(`${item.ItemValue}`)}
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo}${item.UserName}"><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}">${item.CreateDate}</td>
                                        <td class="text-center active-content" scope="col">
                                            <!--刪除-->
                                            <a class="active-link" href="javascript:Delete@(itemName)('${item.BarcodeReRegisterId}');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                      </tr>`;

                        function JudgeItemValue@(itemName)(itemValue) {
                            let innerHtml = '';
                            if (itemValue != "null") {
                                let itemValueJson = JSON.parse(itemValue);
                                $.each(itemValueJson["data"], function (k, item2) {
                                    innerHtml += `<code>${item2.ItemValue}</code><br>`;
                                });
                            }

                            return innerHtml;
                        }
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Save@(itemName)() {
            let barcodeNo = $("#txtBarcodeNo@(itemName)").val();
            if (barcodeNo != "") {
                let targetUrl = "@Url.Action("AddMrBarcodeReRegister", "InventoryTransaction")";
                let postData = {
                    "MrDetailId": mrDetailId@(itemName),
                    "BarcodeNo": $("#txtBarcodeNo@(itemName)").val()
                };

                let result = DataAccess.Add(targetUrl, postData, false, false);

                if (result) {
                    Return@(itemName)();
                    EditMaterialRequisition(mrId@(itemName));
                    $("#txtBarcodeNo@(itemName)").val("");
                }
                else {
                    $("#txtBarcodeNo@(itemName)").val("");
                }
            }
        }

        function Delete@(itemName)(BarcodeReRegisterId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteMrBarcodeReRegister", "Inventory")";
                    let postData = {
                        "BarcodeReRegisterId": BarcodeReRegisterId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                        EditMaterialRequisition(mrId@(itemName));
                    }
                }
            });
        }

        function Return@(itemName)() {
            $("#txtBarcodeNo@(itemName)").val("");
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
        )
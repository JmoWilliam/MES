@using Business_Manager.Helpers
@{
    string itemName = "DepartmentRate";
    string itemNameText = "部門費用率資料";
}

@Html.Resource("css",
    @<style>
    </style>
)

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">編寫者 包含離職 <input type="checkbox" id="cboIncludeStopQ@(itemName)" name="cboIncludeStopQ@(itemName)" onchange="LoadAuthor()" /></label>
                            <div class="col-12">
                                <select class="form-control" id="cboAuthorQ@(itemName)" name="cboAuthorQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cboDeptRateStatusQ@(itemName)A" name="cboDeptRateStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cboDeptRateStatusQ@(itemName)S" name="cboDeptRateStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">啟用日期 <input type="checkbox" id="cbxEnableDateQ@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartEnableDateQ@(itemName)" name="txtStartEnableDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndEnableDateQ@(itemName)" name="txtEndEnableDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">關閉日期 <input type="checkbox" id="cbxDisabledDateQ@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDisabledDateQ@(itemName)" name="txtStartDisabledDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDisabledDateQ@(itemName)" name="txtEndDisabledDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-department-rate" href="javascript:Add@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 125px;">編寫者</th>
                                        <th scope="col" style="min-width: 100px;">人工費用率</th>
                                        <th scope="col" style="min-width: 100px;">製造費用率</th>
                                        <th scope="col" style="min-width: 125px;">啟用日期</th>
                                        <th scope="col" style="min-width: 125px;">關閉日期</th>
                                        <th scope="col" style="min-width: 100px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--修改-->
<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        @(Html.Hidden("DepartmentRateId", -1, new { id= "DepartmentRateId" }))
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboAuthorId@(itemName)">編寫者 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboAuthorId@(itemName)" name="cboAuthorId@(itemName)"
                                        data-msg-required="請選擇編寫者" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboAuthorId@(itemName)">人工費用率 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                @Html.TextBox("txtResourceRate" + itemName, 0,
                               new { id = "txtResourceRate" + itemName, @class= "form-control"
                               , min="0", max="100", maxlength = "5"
                               , onkeyup = "ValidateFloat(this, value)"
                               , @data_msg_required = "請輸人工費用率"
                               , @data_rule_required="true"})
                            </div>
                            @*<div class="col-12 col-md-4 col-lg-4">%</div>*@
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboAuthorId@(itemName)">製造費用率 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                @Html.TextBox("txtOverheadRate" + itemName, 0,
                               new { id = "txtOverheadRate" + itemName, @class= "form-control"
                               , min="0", max="100", maxlength = "5"
                               , onkeyup = "ValidateFloat(this, value)"
                               , @data_msg_required = "請輸製造費用率"
                               , @data_rule_required="true" })
                            </div>
                            @*<div class="col-12 col-md-4 col-lg-4">%</div>*@
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let isValid = true;
        let objPage@(itemName) = {
            'pageIndex': 0,
            'pageSize': 10
        };

        let userId@(itemName);
        let companyId@(itemName);
        let objForm@(itemName) = '#editForm@(itemName)';
        let listAuthor = '@(Html.Raw(Url.Action("GetUser", "BasicInformation")))';


        $(function () {
            GetUserInfo@(itemName)();

            let currentDate = new Date();
            Suites.DatePicker('txtEndEnableDateQ@(itemName)', currentDate);
            Suites.DatePicker('txtEndDisabledDateQ@(itemName)', currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.DatePicker('txtStartEnableDateQ@(itemName)', currentDate);
            Suites.DatePicker('txtStartDisabledDateQ@(itemName)', currentDate);

            //取得搜尋編寫者選單
            LoadAuthor();
            if (!isMobile) {
                $('#cboAuthorQ@(itemName)').select2({
                    dropdownAutoWidth: true,
                    width: '100%'
                });
            }
        });

        function LoadAuthor() {
            ComboBoxs.Default('#cboAuthorQ@(itemName)', listAuthor, { 'CompanyId': companyId@(itemName), 'Status': $('#cboIncludeStopQ@(itemName)').is(':checked') ? '' : 'A' }, '', 'NA', '', 'UserWithDepartment', 'UserId');
        }

        function Expand@(itemName)() {
            if (parseInt($('#DepartmentId').val()) > 0) {
                $('.advanced-block').slideDown('slow');

                Return@(itemName)();
            } else {
                alert("請先儲存部門", 'alert');
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
            $('#modalQuery@(itemName)').modal('hide');
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch('#listData@(itemName)', '#editData@(itemName)');
            Query@(itemName)();
        }


        //query page
        function QueryPage@(itemName)() {
            InitData@(itemName)(objPage@(itemName));
            $('#modalQuery@(itemName)').modal('hide');
        }

        //return page
        function ReturnPage@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch('#listData@(itemName)', '#editData@(itemName)');
            QueryPage@(itemName)();
        }

        function Add@(itemName)() {
            $('.btn-save').show();
            $(objForm@(itemName) + ' input').prop('disabled', false);
            $(objForm@(itemName) + ' textarea').prop('disabled', false);
            $(objForm@(itemName) + ' select').prop('disabled', false);
            InitDetail@(itemName)();
        }

        function Read@(itemName)(departmentRateId) {
            $('.btn-save').hide();
            $(objForm@(itemName) + ' input').prop('disabled', true);
            $(objForm@(itemName) + ' textarea').prop('disabled', true);
            $(objForm@(itemName) + ' select').prop('disabled', true);
            InitDetail@(itemName)(departmentRateId);
        }

        function Edit@(itemName)(departmentRateId) {
            $('.btn-save').show();
            $(objForm@(itemName) + ' input').prop('disabled', false);
            $(objForm@(itemName) + ' textarea').prop('disabled', false);
            $(objForm@(itemName) + ' select').prop('disabled', false);
            InitDetail@(itemName)(departmentRateId);
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cboDeptRateStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = '@Url.Action("GetDepartmentRate", "BasicInformation")';
            let postData = {
                'OrderBy': '',
                'PageIndex': (objPage.pageIndex + 1),
                'PageSize': objPage.pageSize,
                'DepartmentId': $('#DepartmentId').val(),
                'AuthorId': $('#cboAuthorQ@(itemName) :selected').val(),
                'StartEnableDate': ($('#cbxEnableDateQ@(itemName)').is(':checked') ? $('#txtStartEnableDateQ@(itemName)').val() : ''),
                'EndEnableDate': ($('#cbxEnableDateQ@(itemName)').is(':checked') ? $('#txtEndEnableDateQ@(itemName)').val() : ''),
                'StartDisabledDate': ($('#cbxDisabledDateQ@(itemName)').is(':checked') ? $('#txtStartDisabledDateQ@(itemName)').val() : ''),
                'EndDisabledDate': ($('#cbxDisabledDateQ@(itemName)').is(':checked') ? $('#txtEndDisabledDateQ@(itemName)').val() : ''),
                'Status': statusList.join(',')
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == 'success') {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                $.each(data.result, function (i, item) {
                    let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + '.';
                    let resourceRate = roundDown(item.ResourceRate, 2); //roundDown(item.ResourceRate * 100, 2) + '%';
                    let overheadRate = roundDown(item.OverheadRate, 2); //roundDown(item.OverheadRate * 100, 2) + '%';

//<td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}">${item.CreateDate}</td>
//<td class="ellipsis" data-toggle="tooltip" title="${item.UserName}">${item.UserName}</td>

                    innerHtml += `<tr>
<td><span class="stack-title">#</span>${_row}</td>
<td class="ellipsis" data-toggle="tooltip" title="${item.Author}"><span class="stack-title">編寫者</span>${item.Author}</td>
<td class="ellipsis" data-toggle="tooltip" title="${resourceRate}"><span class="stack-title">人工費用率</span>${resourceRate}</td>
<td class="ellipsis" data-toggle="tooltip" title="${overheadRate}"><span class="stack-title">製造費用率</span>${overheadRate}</td>
<td class="ellipsis" data-toggle="tooltip" title="${item.EnableDate}"><span class="stack-title">啟用日期</span>${item.EnableDate}</td>
<td class="ellipsis" data-toggle="tooltip" title="${item.DisabledDate}"><span class="stack-title">關閉日期</span>${item.DisabledDate}</td>
<td class="text-center auth-status-switch" data-departmentrate-row="${item.DepartmentRateId}">
<span class="stack-title">狀態</span>
${item.CaanEdit == `Y` ? `<input type="checkbox" name="chkStatus@(itemName)" data-width="100" data-height="25" data-departmentrate-id="${item.DepartmentRateId}" />` : (item.Status == `A` ? `<b style="color:#070;">已${item.StatusName}</b>` : `<b style="color:#f00;">已${item.StatusName}</b>`)}
</td>
<td class="text-center active-content col-sticky">
<span class="stack-title">操作</span>
<a class="active-link auth-read" href="javascript:Read@(itemName)(${item.DepartmentRateId});"><i class="fas fa-eye"></i></a>
${item.CaanEdit == `Y` ? `<a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.DepartmentRateId});"><i class="fas fa-edit"></i></a>` : `<a class="active-link auth-update active-disable" href="javascript:void(0);"><i class="fas fa-edit"></i></a>`}
${item.CaanEdit == `Y` ? `<a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.DepartmentRateId});"><i class="fas fa-trash-alt"></i></a>` : `<a class="active-link auth-delete active-disable" href="javascript:void(0);"><i class="fas fa-trash-alt"></i></a>`}
</td></tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                    <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                </tr>`;
                }
            }
            else {
                alert(data.msg, 'alert', 0);
            }                

            $('#tblData@(itemName) tbody').html(innerHtml);

            Pager('#page@(itemName)', pageCount, objPage, InitData@(itemName));

            SetElement();
            $('input[name="chkStatus@(itemName)"][data-departmentrate-id]').change(StatusSwitch@(itemName));

            //$.ajax({
            //    type: 'post',
            //    dataType: 'json',
            //    async: false,
            //    url: targetUrl,
            //    data: postData,
            //}).done(function (data) {
            //}).fail(function (xhr, text, error) {
            //});
        }

        function InitDetail@(itemName)(departmentRateId) {

            Switch('#editData@(itemName)', '#listData@(itemName)');

            $('#DepartmentRateId').val(departmentRateId);

            let authorStatus = $('#cboAuthorId@(itemName)').attr('disabled') ? '' : 'A';
            let companyId = companyId@(itemName); //$('#cboAuthorId@(itemName)').attr('disabled') ? '' : companyId@(itemName);
            let authorId = userId@(itemName);

            if (departmentRateId > 0) {
                let targetUrl = '@Url.Action("GetDepartmentRateDetail", "BasicInformation")';
                let postData = {
                    'DepartmentRateId': departmentRateId
                };

                $.ajax({
                    type: 'post',
                    dataType: 'json',
                    async: false,
                    url: targetUrl,
                    data: postData,
                }).done(function (data) {
                    if (data.status == 'success') {
                        $.each(data.result, function (i, item) {
                            let resourceRate = roundDown(item.ResourceRate, 2); //roundDown(item.ResourceRate * 100, 2);
                            let overheadRate = roundDown(item.OverheadRate, 2); //roundDown(item.OverheadRate * 100, 2);
                            authorId = item.Author;
                            $('#txtResourceRate@(itemName)').val(resourceRate);
                            $('#txtOverheadRate@(itemName)').val(overheadRate);
                        });
                    }
                    else {
                        alert(data.msg, "alert", 0);
                    }
                }).fail(function (xhr, text, error) {

                });
            }

            ComboBoxs.Default('#cboAuthorId@(itemName)', listAuthor, { 'CompanyId': companyId, 'Status': authorStatus }, authorId, 'NA', '', 'UserWithDepartment', 'UserId'); //編寫者
            if (!isMobile) {
                $('#cboAuthorId@(itemName)').select2({
                    dropdownAutoWidth: true,
                    width: '100%'
                });
            }
        }

        function Delete@(itemName)(departmentRateId) {
            swal.fire({
                title: '確定要刪除嗎?',
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = '@Url.Action("DeleteDepartmentRateDetail", "BasicInformation")';
                    let postData = {
                        'DepartmentRateId': departmentRateId
                    };

                    if (DataAccess.Delete(targetUrl, postData, false, true)) {
                        QueryPage@(itemName)();
                    }

                    @*$.ajax({
                        type: 'post',
                        dataType: 'json',
                        async: false,
                        url: targetUrl,
                        data: postData
                    }).done(function (data) {
                        if (data.status == 'success') {
                            Query@(itemName)();
                        }
                        else {
                            alert(data.msg, "alert", 0);
                        }
                    }).fail(function (xhr, text, error) {

                    });*@
                }
            });
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {

                let departmentRateId = $('#DepartmentRateId').val();
                let targetUrl = '';
                let postData = {};

                if (departmentRateId <= 0) {
                    targetUrl = '@Url.Action("AddDepartmentRate", "BasicInformation")';
                    postData = {
                        'DepartmentId': $('#DepartmentId').val(),
                        'AuthorId': $('#cboAuthorId@(itemName) :selected').val(),
                        'ResourceRate': $('#txtResourceRateDepartmentRate').val(),
                        'OverheadRate': $('#txtOverheadRateDepartmentRate').val()
                    };

                    if (DataAccess.Add(targetUrl, postData, false, true)) {
                        ReturnPage@(itemName)();
                    }
                }
                else {
                    targetUrl = '@Url.Action("UpdateDepartmentRate", "BasicInformation")';
                    postData = {
                        'DepartmentRateId': departmentRateId,
                        'AuthorId': $('#cboAuthorId@(itemName) :selected').val(),
                        'ResourceRate': $('#txtResourceRateDepartmentRate').val(),
                        'OverheadRate': $('#txtOverheadRateDepartmentRate').val()
                    };

                    if (DataAccess.Update(targetUrl, postData, false, true)) {
                        ReturnPage@(itemName)();
                    }
                }

                @*$.ajax({
                    type: 'post',
                    dataType: 'json',
                    async: false,
                    url: targetUrl,
                    data: postData
                }).done(function (data) {
                    if (data.status == 'success') {
                        Return@(itemName)();
                    }
                    else {
                        alert(data.msg, "alert", 0);
                    }
                    }).fail(function (xhr, text, error) {
                        console.log(xhr);
                });*@
            }
        }

        function StatusSwitch@(itemName)() {
            let isChecked = $(this).prop('checked');
            let actionText = isChecked ? '啟用' : '停用';
            let departmentRateId = $(this).data('departmentrate-id');

            swal.fire({
                titleText: `確定要${actionText}嗎?`,
                text: `${actionText}後將無法復原，請確認是否要執行!`,
                icon: 'warning',
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = '@Url.Action("UpdateDepartmentRateStatus", "BasicInformation")';
                    let postData = {
                        'DepartmentRateId': departmentRateId
                    };
                   $.ajax({
                        type: 'post',
                        dataType: 'json',
                        async: false,
                        url: targetUrl,
                        data: postData
                    }).done(function (data) {
                        if (result) {
                            QueryPage@(itemName)();
                        }
                    }).fail(function (xhr, text, error) {

                    });
                }
                else {
                    $(this).prop({ 'checked': !isChecked });

                    if (isChecked)
                        $(`td[data-departmentrate-row="${departmentRateId}"] > div`).prop({ 'class': 'toggle btn btn-danger off btn-xs' });
                    else
                        $(`td[data-departmentrate-row="${departmentRateId}"] > div`).prop({ 'class': 'toggle btn btn-success btn-xs' });
                }
            });
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = '@Url.Action("GetLoginByKey", "User")';
            let postData = {
                'UserNo': $.cookie('Login'),
                'KeyText': $.cookie('LoginKey')
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == 'success') {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, 'alert', 0);
            }
        }

        function SetElement() {
            setTimeout(() => {
                $('input[name="chkStatus@(itemName)"]').bootstrapToggle({
                    on: '準備啟用',
                    off: '未啟用',
                    onstyle: 'success',
                    offstyle: 'danger',
                    size: 'mini'
                });
            }, 0);
        }
    </script>

                    )
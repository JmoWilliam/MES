@Html.Resource("js",
    @<script>
        $(document).ready(function () {
            $(".ui-link").click(function () {
                let link = $(this).data("ui-link");
                
                switch (link) {
                    case 1:
                        console.log(link);
                        if ($(".side-nav").hasClass("active")) {
                            $(".side-nav").removeClass("active");
                        } else {
                            $(".side-nav").addClass("active");
                        }
                        break;
                }
            });

            $("body").off("click").on("click", function (e) {
                if ($(".side-nav").hasClass("active")) {
                    if (!$(e.target).hasClass("ui-link")
                        && !$(e.target).hasClass("side-nav")
                        && !$(e.target).parents().hasClass("side-nav")) {
                        $(".side-nav").removeClass("active");
                    }
                }
            });
        });
    </script>

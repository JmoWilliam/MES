@using Business_Manager.Helpers
@{
    string itemName = "FunctionSetting";
    string itemNameText = "功能別設定";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboSystemIdQ@(itemName)">所屬系統</label>
                            <div class="col-12">
                                <select class="form-control" id="cboSystemIdQ@(itemName)" name="cboSystemIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboModuleIdQ@(itemName)">所屬模組</label>
                            <div class="col-12">
                                <select class="form-control" id="cboModuleIdQ@(itemName)" name="cboModuleIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtFunctionCodeQ@(itemName)">功能代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtFunctionCodeQ@(itemName)" name="txtFunctionCodeQ@(itemName)" placeholder="請輸入功能代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtFunctionNameQ@(itemName)">功能名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtFunctionNameQ@(itemName)" name="txtFunctionNameQ@(itemName)" placeholder="請輸入功能名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 125px;">#</th>
                                        <th scope="col" style="min-width: 100px;">系統代碼</th>
                                        <th scope="col" style="min-width: 200px;">系統名稱</th>
                                        <th scope="col" style="min-width: 200px;">模組代碼</th>
                                        <th scope="col" style="min-width: 200px;">模組名稱</th>
                                        <th scope="col" style="min-width: 200px;">功能代碼</th>
                                        <th scope="col" style="min-width: 200px;">功能名稱</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="FunctionId" name="FunctionId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboSystemId@(itemName)">所屬系統 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboSystemId@(itemName)" name="cboSystemId@(itemName)"
                                        data-msg-required="請選擇所屬系統" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboModuleId@(itemName)">所屬模組 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboModuleId@(itemName)" name="cboModuleId@(itemName)"
                                        data-msg-required="請選擇所屬模組" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtFunctionCode@(itemName)">功能代碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtFunctionCode@(itemName)" name="txtFunctionCode@(itemName)" placeholder="請輸入功能代碼"
                                       data-msg-required="請輸入功能代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtFunctionName@(itemName)">功能名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtFunctionName@(itemName)" name="txtFunctionName@(itemName)" placeholder="請輸入功能名稱"
                                       data-msg-required="請輸入功能名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxUrlTarget@(itemName)">另開視窗</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxUrlTarget@(itemName)" name="cbxUrlTarget@(itemName)" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabFunctionDetail">
                        <i class="fas fa-list-alt"></i> 詳細功能設定
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabFunctionDetail">
            @Html.Partial("FunctionDetail")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboSystemIdQ@(itemName)", "@Url.Action("GetSystem", "BasicInformation")", {}, "", "ALL", "", "SystemWithCode", "SystemId");
            ComboBoxs.Default("#cboModuleIdQ@(itemName)", "@Url.Action("GetModule", "BasicInformation")", { "SystemId": $("#cboSystemIdQ@(itemName)").val() }, "", "ALL", "", "ModuleWithCode", "ModuleId");

            $("#cboSystemIdQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboModuleIdQ@(itemName)", "@Url.Action("GetModule", "BasicInformation")", { "SystemId": $("#cboSystemIdQ@(itemName)").val() }, "", "ALL", "", "ModuleWithCode", "ModuleId");
            });

            if (!isMobile) {
                $("#cboSystemIdQ@(itemName), #cboModuleIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetFunction", "BasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ModuleId": $("#cboModuleIdQ@(itemName)").val(),
                "SystemId": $("#cboSystemIdQ@(itemName)").val(),
                "FunctionCode": $("#txtFunctionCodeQ@(itemName)").val(),
                "FunctionName": $("#txtFunctionNameQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr id="${item.FunctionId}">
                                        ${Sort@(itemName)(_row)}
                                        <td><span class="stack-title">系統代碼</span>${item.SystemCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SystemName}" style="max-width: 200px;"><span class="stack-title">系統名稱</span>${item.SystemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ModuleCode}" style="max-width: 200px;"><span class="stack-title">模組代碼</span>${item.ModuleCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ModuleName}" style="max-width: 200px;"><span class="stack-title">模組名稱</span>${item.ModuleName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FunctionCode}" style="max-width: 200px;"><span class="stack-title">功能代碼</span>${item.FunctionCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FunctionName}" style="max-width: 200px;"><span class="stack-title">功能名稱</span>${item.FunctionName}</td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-function-id="${item.FunctionId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link" href="javascript:Edit@(itemName)(${item.FunctionId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-function-id]").change(StatusSwitch@(itemName));

            $("#tblData@(itemName) tbody").sortable({
                cancel: ".disabled-sort",
                handle: ".sort-handle",
                update: function (event, ui) {

                    let targetUrl = "@Url.Action("UpdateFunctionSort", "BasicInformation")";
                    let postData = {
                        "ModuleId": $("#cboModuleIdQ@(itemName)").val(),
                        "FunctionList": $(this).sortable("toArray", { attribute: 'id' }).join()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });

            function Sort@(itemName)(rowIndex) {
                let html = '';

                if ($("#cboModuleIdQ@(itemName)").val() > 0) {
                    html = `<td class="text-center active-content auth-sort">
                              <a class="active-link sort-handle" href="javascript:void(0);"><i class="fas fa-arrows-alt"></i><span>排序</span></a>
                            </td>`;
                } else {
                    html = `<td><span class="stack-title">#</span>${rowIndex}</td>`;
                }

                return html;
            }
        }

        function Edit@(itemName)(FunctionId) {
            $("#FunctionId").val(FunctionId ? FunctionId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboSystemId@(itemName)", "@Url.Action("GetSystem", "BasicInformation")", {}, "", "NA", "", "SystemWithCode", "SystemId");
            ComboBoxs.Default("#cboModuleId@(itemName)", "@Url.Action("GetModule", "BasicInformation")", { "SystemId": $("#cboSystemId@(itemName)").val() }, "", "NA", "", "ModuleWithCode", "ModuleId");

            $("#cboSystemId@(itemName)").change(function () {
                ComboBoxs.Default("#cboModuleId@(itemName)", "@Url.Action("GetModule", "BasicInformation")", { "SystemId": $("#cboSystemId@(itemName)").val() }, "", "NA", "", "ModuleWithCode", "ModuleId");
            });

            if (FunctionId > 0) {
                let targetUrl = "@Url.Action("GetFunction", "BasicInformation")";
                let postData = {
                    "FunctionId": FunctionId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboSystemId@(itemName)").val(item.SystemId).trigger("change");
                        $("#cboModuleId@(itemName)").val(item.ModuleId);
                        $("#txtFunctionCode@(itemName)").val(item.FunctionCode);
                        $("#txtFunctionName@(itemName)").val(item.FunctionName);
                        $("#cbxUrlTarget@(itemName)").prop("checked", item.UrlTarget == "_blank" ? true : false);
                    });

                    ExpandFunctionDetail();
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboSystemId@(itemName), #cboModuleId@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let FunctionId = parseInt($("#FunctionId").val());

                if (FunctionId <= 0) {
                    let targetUrl = "@Url.Action("AddFunction", "BasicInformation")";
                    let postData = {
                        "ModuleId": $("#cboModuleId@(itemName)").val(),
                        "FunctionCode": $("#txtFunctionCode@(itemName)").val(),
                        "FunctionName": $("#txtFunctionName@(itemName)").val(),
                        "UrlTarget": $("#cbxUrlTarget@(itemName):checked").length > 0 ? "_blank" : ""
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#FunctionId").val(item.FunctionId);
                        });

                        ExpandFunctionDetail();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateFunction", "BasicInformation")";
                    let postData = {
                        "FunctionId": FunctionId,
                        "ModuleId": $("#cboModuleId@(itemName)").val(),
                        "FunctionCode": $("#txtFunctionCode@(itemName)").val(),
                        "FunctionName": $("#txtFunctionName@(itemName)").val(),
                        "UrlTarget": $("#cbxUrlTarget@(itemName):checked").length > 0 ? "_blank" : ""
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var FunctionId = $(this).data("function-id");

            let targetUrl = "@Url.Action("UpdateFunctionStatus", "BasicInformation")";
            let postData = {
                "FunctionId": FunctionId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }
    </script>
)
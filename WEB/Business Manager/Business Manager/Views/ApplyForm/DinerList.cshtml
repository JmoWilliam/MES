        function DetailData@(itemName)(source) {
            let html = '';

            if (source) {
                let json = JSON.parse(source); //需先轉成json

                for (let x = 0; x < json.data.length; x++) {
                    html += `<tr>
                               <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].RestaurantName}" style="width: 100px; max-width: 100px;">${json.data[x].RestaurantName}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].MealName}" style="width: 150px; max-width: 150px;">${json.data[x].MealName}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].UmoDetailQty}" style="width: 50px; max-width: 50px;">${json.data[x].UmoDetailQty}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${MealPrice(json.data[x].UmoDetailPrice, json.data[x].UmoAdditionalInfo)}" style="width: 75px; max-width: 75px;">$${MealPrice(json.data[x].UmoDetailPrice, json.data[x].UmoAdditionalInfo)}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].UmoDetailRemark}" style="width: 150px; max-width: 150px;">${json.data[x].UmoDetailRemark}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${McDetailData@(itemName)(json.data[x].UmoAdditionalInfo)}" style="width: 150px; max-width: 150px;">${McDetailData@(itemName)(json.data[x].UmoAdditionalInfo)}</td>
                               <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].PickupName}" style="width: 75px; max-width: 75px;">${json.data[x].PickupName}</td>
                             </tr>`;
                }
            }

            return html;
        }

        function McDetailData@(itemName)(json) {
            let html = '';

            if (json) {
                for (let x = 0; x < json.length; x++) {
                    html += `${json[x].McDetailName} ($${json[x].UmoAdditionalPrice})`;

                    if (x < json.length - 1) {
                        html += `、`;
                    }
                }
            }

            return html;
        }

        //計算餐點金額及數量
        function MealPrice(price, json) {
            let totalPrice = 0;

            totalPrice += price;
            if (json) {
                for (var i = 0; i < json.length; i++) {
                    totalPrice += json[i].UmoAdditionalPrice;
                }
            }

            return totalPrice;
        }

        function Edit@(itemName)(UmoId) {
            $("#UmoId").val(UmoId ? UmoId : 0);

            $(objForm@(itemName) + " fieldset").attr("disabled", false);
            $(objForm@(itemName) + " select").attr("disabled", false);

            $(".read-hide").show();

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            let currentDate = new Date();
            Suites.DatePicker("txtUmoDate@(itemName)", currentDate);

            ComboBoxs.Default("#cboCompanyId@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", {}, companyId@(itemName), "NA", "", "CompanyName", "CompanyId");
            ComboBoxs.Default("#cboUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { }, "", "NA", "", "UserWithDepartment", "UserId");

            mealJson = JSON.parse('{ "UmoDetail" : []}');

            if (UmoId > 0) {
                let targetUrl = "@Url.Action("GetDinerInfo", "ApplyForm")";
                let postData = {
                    "UmoId": UmoId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtUmoNo@(itemName)").val(item.UmoNo);
                        $("#cboCompanyId@(itemName)").val(item.CompanyId);
                        $("#cboUserId@(itemName)").val(item.UserId);
                        Suites.SetDateDropper("#txtUmoDate@(itemName)", new Date(item.UmoDate));
                        $("#txtUmoDiscount@(itemName)").val(item.UmoDiscount);
                        $("#txtUmoAmount@(itemName)").val(item.UmoAmount);

                        $(".edit-column").attr("disabled", true);
                        $(".edit-column-price").attr("disabled", false);

                        mealJson.UmoDetail = JSON.parse(item.UmoDetail).data;
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            LoadMeal@(itemName)(mealJson);

            //修改公司時，需一併修正人員及餐點
            $("#cboCompanyId@(itemName)").change(function () {
                ComboBoxs.Default("#cboUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "CompanyId": $("#cboCompanyId@(itemName)").val() }, "", "NA", "", "UserWithDepartment", "UserId");
            });

            $("#cboCompanyId@(itemName), #cboUserId@(itemName), #cboMealId@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        }


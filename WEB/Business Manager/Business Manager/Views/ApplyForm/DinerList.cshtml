        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let UmoId = parseInt($("#UmoId").val());

                if (UmoId <= 0) {
                    let targetUrl = "@Url.Action("AddDinerInfo", "ApplyForm")";
                    let postData = {
                        "CompanyId": $("#cboCompanyId@(itemName)").val(),
                        "UserId": $("#cboUserId@(itemName)").val(),
                        "UmoDate": $("#txtUmoDate@(itemName)").val(),
                        "UmoDiscount": $("#txtUmoDiscount@(itemName)").val(),
                        "UmoAmount": $("#txtUmoAmount@(itemName)").val(),
                        "MealDetails": JSON.stringify(mealJson)
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateDinerInfo", "ApplyForm")";
                    let postData = {
                        "UmoId": UmoId,
                        "UmoNo": $("#txtUmoNo@(itemName)").val(),
                        "CompanyId": $("#cboCompanyId@(itemName)").val(),
                        "UserId": $("#cboUserId@(itemName)").val(),
                        "UmoDate": $("#txtUmoDate@(itemName)").val(),
                        "UmoDiscount": $("#txtUmoDiscount@(itemName)").val(),
                        "UmoAmount": $("#txtUmoAmount@(itemName)").val(),
                        "MealDetails": JSON.stringify(mealJson)
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(UmoId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteDinerInfo", "ApplyForm")";
                    let postData = {
                        "UmoId": UmoId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        //客製化選項刪除
        function DeleteDetail@(itemName)(index) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    if (mealJson.UmoDetail.length <= 1) {
                        alert("至少需有一筆【餐點相關資料】!");
                    } else {
                        mealJson.UmoDetail.splice(index, 1);
                        LoadMeal@(itemName)(mealJson);
                    }
                }
            });
        }


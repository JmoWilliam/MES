@using Business_Manager.Helpers
@{
    string itemName = "ViewSubsidyRange";
    string itemNameText = "補助區間資料";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <button class="close" type="button" onclick="Close@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <select class="form-control" id="cboAnnualIdQ@(itemName)" name="cboAnnualIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto text-right text-md-left text-lg-left">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                        <button type="button" class="btn btn-info auth-subsidy-range" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th class="text-center" scope="col" style="min-width: 75px;">年度</th>
                                        <th scope="col" style="min-width: 150px;">補助區間</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">開始日期</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">結束日期</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
                <div class="row" id="editData@(itemName)" style="display: none;">
                    <div class="col-12">
                        <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                            <fieldset>
                                <input type="hidden" id="SubsidyRangeId" name="SubsidyRangeId" value="-1" />
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboAnnualId@(itemName)">年度 <span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <select class="form-control" id="cboAnnualId@(itemName)" name="cboAnnualId@(itemName)"
                                                data-msg-required="請選擇年度" data-rule-required="true"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtRangeName@(itemName)">區間名稱 <span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <input type="text" class="form-control" id="txtRangeName@(itemName)" name="txtRangeName@(itemName)" placeholder="請輸入區間名稱"
                                               data-msg-required="請輸入區間名稱" data-rule-required="true"
                                               data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtStartDate@(itemName)">開始日期 <span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <input type="text" class="form-control datedropper" id="txtStartDate@(itemName)" name="txtStartDate@(itemName)" placeholder="請輸入開始日期"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                               readonly />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtEndDate@(itemName)">結束日期 <span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-9 col-lg-9">
                                        <input type="text" class="form-control datedropper" id="txtEndDate@(itemName)" name="txtEndDate@(itemName)" placeholder="請輸入結束日期"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                               readonly />
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success edit-mode" onclick="Save@(itemName)()" style="display: none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let rangeType = "";
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Pop@(itemName)(RangeType) {
            rangeType = RangeType;

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            ComboBoxs.Default("#cboAnnualIdQ@(itemName)", "@Url.Action("GetAnnual", "EbpBasicInformation")", {}, "", "ALL", "", "Annual", "AnnualId");

            Query@(itemName)();

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#cboAnnualIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetSubsidyRange", "ApplyForm")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "AnnualId": $("#cboAnnualIdQ@(itemName)").val(),
                "RangeType": rangeType
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="text-center"><span class="stack-title">年度</span>${item.Annual}</td>
                                        <td><span class="stack-title">補助區間</span>${item.RangeName}</td>
                                        <td class="text-center"><span class="stack-title">開始日期</span>${item.StartDate}</td>
                                        <td class="text-center"><span class="stack-title">結束日期</span>${item.EndDate}</td>
                                        <td class="text-center">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-subsidy-range-id="${item.SubsidyRangeId}" ${(item.Status == 'A' ? 'checked' : '')} />
                                        </td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-subsidy-range" href="javascript:Edit@(itemName)(${item.SubsidyRangeId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-subsidy-range" href="javascript:Delete@(itemName)(${item.SubsidyRangeId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            DelayFn(
                function () {
                    $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                        on: "啟用",
                        off: "停用",
                        onstyle: "success",
                        offstyle: "danger",
                        size: "mini"
                    });
                }, 1);

            $("input[name='chkStatus@(itemName)'][data-subsidy-range-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(SubsidyRangeId) {
            $("#SubsidyRangeId").val(SubsidyRangeId ? SubsidyRangeId : 0);

            let currentDate = new Date();

            Suites.DatePicker("txtStartDate@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() + 3);
            Suites.DatePicker("txtEndDate@(itemName)", currentDate);
           
            ComboBoxs.Default("#cboAnnualId@(itemName)", "@Url.Action("GetAnnual", "EbpBasicInformation")", {}, "", "NA", "", "Annual", "AnnualId");

            Switch("#editData@(itemName), .edit-mode", "#listData@(itemName), .list-mode");

            if (SubsidyRangeId > 0) {
                let targetUrl = "@Url.Action("GetSubsidyRange", "ApplyForm")";
                let postData = {
                    "SubsidyRangeId": SubsidyRangeId,
                    "RangeType": rangeType
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboAnnualId@(itemName)").val(item.AnnualId);
                        $("#txtRangeName@(itemName)").val(item.RangeName);
                        $("#txtStartDate@(itemName)").val(item.StartDate);
                        $("#txtEndDate@(itemName)").val(item.EndDate);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            $("#cboAnnualId@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let SubsidyRangeId = parseInt($("#SubsidyRangeId").val());

                if (SubsidyRangeId <= 0) {
                    let targetUrl = "@Url.Action("AddSubsidyRange", "ApplyForm")";
                    let postData = {
                        "AnnualId": $("#cboAnnualId@(itemName)").val(),
                        "RangeType": rangeType,
                        "RangeName": $("#txtRangeName@(itemName)").val(),
                        "StartDate": $("#txtStartDate@(itemName)").val(),
                        "EndDate": $("#txtEndDate@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateSubsidyRange", "ApplyForm")";
                    let postData = {
                        "SubsidyRangeId": SubsidyRangeId,
                        "AnnualId": $("#cboAnnualId@(itemName)").val(),
                        "RangeName": $("#txtRangeName@(itemName)").val(),
                        "StartDate": $("#txtStartDate@(itemName)").val(),
                        "EndDate": $("#txtEndDate@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(SubsidyRangeId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteSubsidyRange", "ApplyForm")";
                    let postData = {
                        "SubsidyRangeId": SubsidyRangeId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function StatusSwitch@(itemName)() {
            var SubsidyRangeId = $(this).data("subsidy-range-id");

            let targetUrl = "@Url.Action("UpdateSubsidyRangeStatus", "ApplyForm")";
            let postData = {
                "SubsidyRangeId": SubsidyRangeId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Query@(itemName)();
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
        }

        function Close@(itemName)() {
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            $("#modal@(itemName)").modal("hide");
        }
    </script>
)
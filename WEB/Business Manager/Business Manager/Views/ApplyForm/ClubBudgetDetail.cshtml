@using Business_Manager.Helpers
@{
    string itemName = "ClubBudgetDetail";
    string itemNameText = "社團經費明細";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="card card-shadow">
    <div class="card-body">
        <div class="row" id="listData@(itemName)">
            <div class="col-12">
                <form autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-row align-items-center mb-2">
                            <div class="col-12 col-md-auto col-lg-auto text-right text-md-left text-lg-left">
                                <button type="button" class="btn btn-info read-hide" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <div class="table-custom">
                    <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                        <thead>
                            <tr>
                                <th scope="col" style="min-width: 75px;">#</th>
                                <th scope="col" style="min-width: 125px;">發生日期</th>
                                <th scope="col" style="min-width: 200px;">內容說明</th>
                                <th scope="col" style="min-width: 100px;">參與人數</th>
                                <th scope="col" style="min-width: 125px;">金額</th>
                                <th scope="col" style="min-width: 200px;">活動地點</th>
                                <th class="text-center" scope="col" style="min-width: 150px;">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="pagination" id="page@(itemName)"></div>
            </div>
        </div>
        <div class="row" id="editData@(itemName)" style="display: none;">
            <div class="col-12">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="ClubBudgetDetailId" name="ClubBudgetDetailId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtOccurrenceDate@(itemName)">發生日期 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtOccurrenceDate@(itemName)" name="txtOccurrenceDate@(itemName)" placeholder="請輸入發生日期"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       data-msg-required="請輸入發生日期" data-rule-required="true"
                                       readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtDetailDesc@(itemName)">內容說明 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtDetailDesc@(itemName)" name="txtDetailDesc@(itemName)"
                                          rows="2" placeholder="請輸入內容說明"
                                          data-msg-required="請輸入內容說明" data-rule-required="true"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtPlayer@(itemName)">參與人數 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="number" class="form-control" id="txtPlayer@(itemName)" name="txtPlayer@(itemName)" placeholder="請輸入參與人數"
                                       data-msg-required="請輸入參與人數" data-rule-required="true"
                                       data-msg-min="請輸入參與人數" min="5"
                                       value="0" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAmount@(itemName)">金額 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="number" class="form-control" id="txtAmount@(itemName)" name="txtAmount@(itemName)" placeholder="請輸入金額"
                                       data-msg-required="請輸入金額" data-rule-required="true"
                                       data-msg-min="請輸入金額" min="1"
                                       value="0" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtActiveRegion@(itemName)">活動地點 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtActiveRegion@(itemName)" name="txtActiveRegion@(itemName)"
                                          rows="2" placeholder="請輸入活動地點"
                                          data-msg-required="請輸入活動地點" data-rule-required="true"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer text-center text-lg-right edit-mode" style="display: none;">
        <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
        <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Expand@(itemName)() {
            if (parseInt($("#ClubBudgetSubsidyId").val()) > 0) {
                $(".read-hide").hide();

                if ($("#Status").val() == "N") {
                    $(".read-hide").show();
                }

                Return@(itemName)();

                $("#queryForm@(itemName)").keydown(function (event) {
                    if (event.keyCode == 13) {
                        event.preventDefault();
                        return false;
                    }
                });
            } else {
                alert("請先儲存補助內容", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetClubBudgetDetail", "ApplyForm")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ClubBudgetSubsidyId": $("#ClubBudgetSubsidyId").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                                                
                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">發生日期</span>${item.OccurrenceDate}</td>
                                        <td><span class="stack-title">內容說明</span>${item.DetailDesc}</td>
                                        <td><span class="stack-title">參與人數</span>${item.Player}</td>
                                        <td><span class="stack-title">金額</span>${item.Amount}</td>
                                        <td><span class="stack-title">活動地點</span>${item.ActiveRegion}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          ${$(`#Status`).val() == `N` ? `<a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.ClubBudgetDetailId});"><i class="fas fa-edit"></i></a>` : ``}
                                          ${$(`#Status`).val() == `N` ? `<a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.ClubBudgetDetailId});"><i class="fas fa-trash-alt"></i></a>` : ``}
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(ClubBudgetDetailId) {
            $("#ClubBudgetDetailId").val(ClubBudgetDetailId ? ClubBudgetDetailId : 0);

            let currentDate = new Date();
            Suites.DatePicker("txtOccurrenceDate@(itemName)", currentDate);

            Switch("#editData@(itemName), .edit-mode", "#listData@(itemName), .list-mode");

            if (ClubBudgetDetailId > 0) {
                let targetUrl = "@Url.Action("GetClubBudgetDetail", "ApplyForm")";
                let postData = {
                    "ClubBudgetDetailId": ClubBudgetDetailId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtOccurrenceDate@(itemName)").val(item.OccurrenceDate);
                        $("#txtDetailDesc@(itemName)").val(item.DetailDesc);
                        $("#txtPlayer@(itemName)").val(item.Player);
                        $("#txtAmount@(itemName)").val(item.Amount);
                        $("#txtActiveRegion@(itemName)").val(item.ActiveRegion);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ClubBudgetDetailId = parseInt($("#ClubBudgetDetailId").val());

                if (ClubBudgetDetailId <= 0) {
                    let targetUrl = "@Url.Action("AddClubBudgetDetail", "ApplyForm")";
                    let postData = {
                        "ClubBudgetSubsidyId": $("#ClubBudgetSubsidyId").val(),
                        "OccurrenceDate": $("#txtOccurrenceDate@(itemName)").val(),
                        "DetailDesc": $("#txtDetailDesc@(itemName)").val(),
                        "Player": $("#txtPlayer@(itemName)").val(),
                        "Amount": $("#txtAmount@(itemName)").val(),
                        "ActiveRegion": $("#txtActiveRegion@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateClubBudgetDetail", "ApplyForm")";
                    let postData = {
                        "ClubBudgetDetailId": ClubBudgetDetailId,
                        "OccurrenceDate": $("#txtOccurrenceDate@(itemName)").val(),
                        "DetailDesc": $("#txtDetailDesc@(itemName)").val(),
                        "Player": $("#txtPlayer@(itemName)").val(),
                        "Amount": $("#txtAmount@(itemName)").val(),
                        "ActiveRegion": $("#txtActiveRegion@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(ClubBudgetDetailId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteClubBudgetDetail", "ApplyForm")";
                    let postData = {
                        "ClubBudgetDetailId": ClubBudgetDetailId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
        }
    </script>
)
)

     <div class="body-bg">
         <div class="login-content" style="">
             <div class="login-block">
                 <div class="logo">
                     <img src="@Url.Content("~/Content/images/logo-chat.png")" />
                 </div>
                 <div class="login-form">
                     <form autocomplete="off" method="post">

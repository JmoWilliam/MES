@using Business_Manager.Helpers
@{
    string itemName = "ViewStaff";
    string itemNameText = "所屬同仁資料維護";
}

@Html.Resource("css",
    @<style>
        td {
            vertical-align: middle;
        }
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">事務員 <span class="sub-text" id="desUserName@(itemName)"></span></span>
                </h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form autocomplete="off" id="queryForm@(itemName)">
                </form>
                <div class="table-custom">
                    <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                        <thead>
                            <tr>
                                <th scope="col" style="min-width: 75px;">#</th>
                                <th scope="col" style="min-width: 200px;">人員</th>
                                <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let userId@(itemName);

        function Pop@(itemName)(userId, userName) {
            userId@(itemName) = userId;
            $("#desUserName@(itemName)").html(`${userName}`);

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            InitData@(itemName)();
        }

        function InitData@(itemName)() {
            let innerHtml = '';

            let targetUrl = "@Url.Action("GetStaffInfo", "EbpBasicInformation")";
            let postData = {
                "UserId": userId@(itemName)
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        let _row = (i + 1) + ".";

                        innerHtml += `<tr>
                                            <td><span class="stack-title">#</span>${_row}</td>
                                            <td><span class="stack-title">所屬同仁</span>${item.UserName}</td>

                                            <td class="text-center active-content">
                                              <span class="stack-title">操作</span>
                                                <a class="active-link" href="javascript:Delete@(itemName)('${item.UserId}', '${item.StaffUserId}');"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                          </tr>`;
                    });
                } else {
                    Close@(itemName)();
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
        }

        function Delete@(itemName)(UserId, StaffUserId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteStaffUser", "EbpBasicInformation")";
                    let postData = {
                        "UserId": UserId,
                        "StaffUserId": StaffUserId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        InitData@(itemName)();
                        QueryOrderMealSteward();
                    }
                }
            });
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal('hide');
        }
    </script>
)
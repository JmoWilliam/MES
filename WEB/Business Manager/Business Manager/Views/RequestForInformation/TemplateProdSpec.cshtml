        function Edit@(itemName)() {
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            $(`#cboControlType@(itemName)Box`).html($(`#tempControlType@(itemName)`).html()); //複製下拉選單

            $(`#editData@(itemName) input[name='chkStatus@(itemName)'], #editData@(itemName) input[name='chkRequired@(itemName)']`).change(function () {
                let checked = this.checked;
                if (checked) $(`#editData@(itemName) input[name="${this.name}"]`).attr('checked', true);
                else $(`#editData@(itemName) input[name="${this.name}"]`).removeAttr('checked', true);
            });
        }

        function Save@(itemName)(TempProdSpecId) {
            if ($(objForm@(itemName)).valid()) {
                if (TempProdSpecId <= 0) {
                    let targetUrl = "@Url.Action("AddTemplateProdSpec", "RequestForInformation")";
                    let data = DataAccess.EditContinued(targetUrl,
                        {
                            ProTypeGroupId: $("#ProTypeGroupId").val(),
                            SpecName: $(`${objForm@(itemName)} #txtSpecName@(itemName)`).val(),
                            SpecEName: $(`${objForm@(itemName)} #txtSpecEName@(itemName)`).val(),
                            ControlType: $(`${objForm@(itemName)} #cboControlType@(itemName) :selected`).val(),
                            Required: $(`${objForm@(itemName)} input[name="chkRequired@(itemName)"]`).prop('checked') ? `1` : `0`,
                            Status: $(`${objForm@(itemName)} input[name="chkStatus@(itemName)"]`).prop('checked') ? `A` : `S`
                        }, false);

                    if (data) {
                        TempProdSpecId = data.result.TempProdSpecId;
                        ReturnById@(itemName)(TempProdSpecId); //查詢此規格資料 by TempProdSpecId

                        //focus 特效
                        $(`#listData@(itemName)`).animate({
                            scrollTop: $(`#${TempProdSpecId}`).offset().top
                        }, 300);
                        $(`#listData@(itemName) #${TempProdSpecId}`).removeClass(`border-success`).addClass(`border-focus`);
                        $(`#${TempProdSpecId}`).off('click').on('click', function () { $(this).removeClass(`border-focus`).addClass(`border-success`) });
                    }
                }
            }
        }

        function SaveDetail@(itemName)() {
            @*if ($(objForm@(itemName)).valid()) {}*@

            let TempProdSpecId = $(this).data("tempps-id");
            let TempPsDetailId = $(this).data("temppsdetail-id");

            if (TempPsDetailId <= 0) {
                let targetUrl = "@Url.Action("AddTemplateProdSpecDetail", "RequestForInformation")";
                let data = DataAccess.EditContinued(targetUrl,
                    {
                        TempProdSpecId: TempProdSpecId,
                        ControlType: $(`#tblDefault@(itemName)-${TempProdSpecId} #cboControl@(itemName)-${TempProdSpecId}:selected`).val(),
                        FeatureName: $(`#tblDefault@(itemName)-${TempProdSpecId} #txtFeatureName@(itemName)-${TempProdSpecId}`).val(),
                        DataType: $(`#tblDefault@(itemName)-${TempProdSpecId} #txtDataType@(itemName)-${TempProdSpecId}`).val(),
                        Description: "", //預留欄位
                    }, false);

                if (data) {
                    GetData@(itemName)(TempProdSpecId);
                }
            }
        }

        function CloseNewRow@(itemName)() {
            let TempProdSpecId = $(this).data("tempps-id");
            $(`#tblDefault@(itemName)-${TempProdSpecId} div[id="-1"]`).html('');
        }

        function Read@(itemName)(TempProdSpecId) {
            Edit@(itemName)(TempProdSpecId);
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function ReturnById@(itemName)(TempProdSpecId) {
            $(`#TempProdSpecId`).val(TempProdSpecId);
            $(`#listData@(itemName) .read-hide`).show();

            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function Return@(itemName)() {
            $(`#TempProdSpecId`).val(-1); //列表頁需重置資料id
            $(`#listData@(itemName) .read-hide`).hide();

            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();

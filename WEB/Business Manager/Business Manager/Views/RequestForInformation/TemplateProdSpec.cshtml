            $("#txtSpecNameQ@(itemName), #txtFeatureNameQ@(itemName)").val("");
            $("#txtSpecNameQ@(itemName), #txtFeatureNameQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }

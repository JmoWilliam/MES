@{ Layout = null; }
@{ Response.Charset = "UTF-8"; }
@{ Response.ContentType = "text/html; charset=utf-8"; }
@{
    var userDisplayName = ViewBag.UserDisplayName as string;
    var userNo = ViewBag.UserNo as string;
    var userName = ViewBag.UserName as string;
    var departmentName = ViewBag.DepartmentName as string;
    var companyName = ViewBag.CompanyName as string;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>量测排程系统 - 数据查询</title>
    
    <!-- Bootstrap CSS -->
    <link href="/Content/bootstrap/4.5.3/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/Content/fontawesome.pro/5.13.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Content/QmsSchedule/styles.css" rel="stylesheet">
</head>
<body>
    <!-- 头部导航 -->
    <header class="bg-white shadow-sm">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-chart-line text-primary me-3 fa-lg"></i>
                    <h1 class="h2 mb-0 text-dark fw-bold">量测排程系统</h1>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-circle text-muted me-2"></i>
                    <span class="me-3" id="currentUserDisplay"
                          data-user-display="@userDisplayName"
                          data-user-no="@userNo"
                          data-user-name="@userName"
                          data-department-name="@departmentName"
                          data-company-name="@companyName">
                        当前登录：@(string.IsNullOrWhiteSpace(userDisplayName) ? "加载中..." : userDisplayName)
                    </span>
                    <button class="btn btn-outline-primary btn-sm" id="logoutBtn">
                        <i class="fas fa-sign-out-alt me-1"></i>登出
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- 主要内容区域 -->
    <main class="container-fluid py-4 px-4">
        <!-- 查询区域 -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-3">量测机台排程追踪</h4>
                        <div class="row align-items-end">
                            <div class="col-md-4">
                                <label for="orderNumberQuery" class="form-label">送检单号:</label>
                                <input type="text" class="form-control" id="orderNumberQuery" placeholder="请输入送检单号">
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary" id="queryBtn">
                                    <i class="fas fa-search me-1"></i>查询
                                </button>
                            </div>
                        </div>
                        
                        <!-- 查询结果信息区域 -->
                        <div class="row mt-4" id="queryInfoSection" style="display: none;">
                            <div class="col">
                                <div class="alert fade show" id="queryInfoAlert">
                                    <div id="queryInfoContent">
                                        <!-- 查询信息将动态显示 -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 机台作业列表区域 -->
        <div class="row mb-4" id="machineOperationSection" style="display: none;">
            <div class="col">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0" id="machineOperationTitle">
                            <i class="fas fa-cogs me-2"></i>机台作业列表
                        </h5>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary me-2" id="machineBadge">机台</span>
                            <button class="btn btn-sm btn-outline-secondary" id="closeMachineList">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="machineOperationTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>序号</th>
                                        <th>送检单号</th>
                                        <th>送检人员</th>
                                        <th>送检时间</th>
                                        <th>开始时间</th>
                                        <th>结束时间</th>
                                        <th>当前状态</th>
                                        <th>备注</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- 机台作业数据将动态填充 -->
                                </tbody>
                            </table>
                        </div>
                        <!-- 分页控制 -->
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="pagination-info">
                                <span>共 <strong id="totalRecords">0</strong> 条记录</span>
                            </div>
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item">
                                        <button class="page-link" id="prevPageQuery">
                                            <i class="fas fa-chevron-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item">
                                        <span class="page-link" id="currentPageQuery">1/1 页</span>
                                    </li>
                                    <li class="page-item">
                                        <button class="page-link" id="nextPageQuery">
                                            <i class="fas fa-chevron-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 机台类型选择区域 -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex align-items-center gap-2">
                    <select class="form-select form-select-sm" id="machineGroupSelector" style="width: 200px;">
                        <option value="">请选择机台类型</option>
                    </select>
                    <button class="btn btn-outline-primary btn-sm" id="showAllBtn">显示所有</button>
                </div>
            </div>
        </div>

        <!-- 机台组切换提示 -->
        <!-- <div class="row" id="machineGroupNotice" style="display: none;">
            <div class="col-12">
                <div class="machine-group-switch-notice" id="switchNotice">
                    <i class="fas fa-info-circle me-2"></i>
                    <span id="switchNoticeText">已切换到 QV-4 量测机台状态</span>
                </div>
            </div>
        </div> -->

        <!-- 机台状态区域 -->
        <div class="row" id="machineStatusSections">
            <!-- 机台状态区域将通过 JavaScript 动态生成 -->
        </div>
    </main>


    <!-- jQuery -->
    <script src="/Scripts/QmsSchedule/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="/Scripts/bootstrap/4.5.3/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/Scripts/QmsSchedule/query.js"></script>
</body>
</html>




@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {


            //時間
            let currentDate = new Date();
            Suites.DateDropper("#txtStartReqDateQ@(itemName), #txtEndReqDateQ@(itemName)");
            Suites.SetDateDropper("#txtEndReqDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.SetDateDropper("#txtStartReqDateQ@(itemName)", currentDate);

            //單據名稱
            ComboBoxs.Default("#cboReqNameQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "PrErpPrefix", "Condition": "31" }, "", "NA", "", "PrErpPrefix", "PrErpPrefix");
            //請購部門
            ComboBoxs.Default("#cboReqDepNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "Department", "Status": "A" }, "", "NA", "", "DepartmentName", "DepartmentNo");
            //請購人員
            ComboBoxs.Default("#cboReqUserNoQ@(itemName)", "@Url.Action("GetUserByAuthority", "BasicInformation")", { "FunctionCode": "PurchaseRequisition", "DetailCode": "add", "Status": "A" }, "", "NA", "", "UserWithNo", "UserNo");
            //會計分類名稱
            ComboBoxs.Default("#cboAccountingCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "1" }, "", "NA", "", "TypeName", "TypeNo");
            //倉管分類名稱
            ComboBoxs.Default("#cboWarehouseCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "2" }, "", "NA", "", "TypeName", "TypeNo");
            //業務分類名稱
            ComboBoxs.Default("#cboBusinessCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "3" }, "", "NA", "", "TypeName", "TypeNo");
            //生管分類名稱
            ComboBoxs.Default("#cboManagementCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "4" }, "", "NA", "", "TypeName", "TypeNo");
            //採購人員
            ComboBoxs.Default("#cboPurUserNoQ@(itemName)", "@Url.Action("GetUserByAuthority", "BasicInformation")", { "FunctionCode": "PurchaseRequisition", "DetailCode": "add", "Status": "A" }, "", "NA", "", "UserWithNo", "UserNo");
            

            //搜尋動作
            Query@(itemName)();


            
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetRBAnnualProcurementReport", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "StartReqDate": ($("#cbxReqDate@(itemName)").is(":checked") ? $("#txtStartReqDateQ@(itemName)").val() : ""),
                "EndReqDate": ($("#cbxReqDate@(itemName)").is(":checked") ? $("#txtEndReqDateQ@(itemName)").val() : ""),
                "ReqName": $("#cboReqNameQ@(itemName)").val(),
                "ReqNo": $("#txtReqNoQ@(itemName)").val(),
                "ReqDepNo": $("#cboReqDepNoQ@(itemName)").val(),
                "ReqUserNo": $("#cboReqUserNoQ@(itemName)").val(),
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val(),
                "PurUserNo": $("#cboPurUserNoQ@(itemName)").val(),
                "PurVendorName": $("#txtPurVendorNameQ@(itemName)").val()                
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">請購日期</span>${item.ReqDate}</td>
                                        <td><span class="stack-title">單據名稱</span>${item.ReqName}</td>
                                        <td><span class="stack-title">請購單號</span>${item.ReqNo}</td>
                                        <td><span class="stack-title">確認碼</span>${item.ConfirmationCode}</td>
                                        <td><span class="stack-title">確認者編號</span>${item.ConfirmationUserNo}</td>
                                        <td><span class="stack-title">確認者</span>${item.ConfirmationUserName}</td>
                                        <td><span class="stack-title">部門編號</span>${item.ReqDepNo}</td>
                                        <td><span class="stack-title">請購部門</span>${item.ReqDepName}</td>
                                        <td><span class="stack-title">人員工號</span>${item.ReqUserNo}</td>
                                        <td><span class="stack-title">請購人員</span>${item.ReqUserName}</td>
                                        <td><span class="stack-title">請購備註</span>${item.ReqRemark}</td>
                                        <td><span class="stack-title">品項序號</span>${item.ReqLineNo}</td>
                                        <td><span class="stack-title">品號</span>${item.MtlItemNo}</td>
                                        <td><span class="stack-title">品名</span>${item.MtlItemName}</td>
                                        <td><span class="stack-title">規格</span>${item.MtlItemSpec}</td>
                                        <td><span class="stack-title">會計分類名稱</span>${item.AccountingCategoryName}</td>
                                        <td><span class="stack-title">倉管分類名稱</span>${item.WarehouseCategoryName}</td>
                                        <td><span class="stack-title">業務分類名稱</span>${item.BusinessCategoryName}</td>
                                        <td><span class="stack-title">生管分類名稱</span>${item.ManagementCategoryName}</td>
                                        <td><span class="stack-title">請購單位</span>${item.ReqUnit}</td>
                                        <td><span class="stack-title">請購數量</span>${item.ReqQty}</td>
                                        <td><span class="stack-title">專案代號</span>${item.ProjectCode}</td>
                                        <td><span class="stack-title">專案名稱</span>${item.ProjectName}</td>
                                        <td><span class="stack-title">品項備註</span>${item.ReqLineRemark}</td>
                                        <td><span class="stack-title">請購單創建日</span>${item.ReqCreateDate}</td>
                                        <td><span class="stack-title">請購單創建者編號</span>${item.ReqCreateUserNo}</td>
                                        <td><span class="stack-title">請購單創建者</span>${item.ReqCreateUserName}</td>
                                        <td><span class="stack-title">結案碼</span>${item.CaseCloseCode}</td>
                                        <td><span class="stack-title">課稅別</span>${item.TaxType}</td>
                                        <td><span class="stack-title">幣別</span>${item.CurrencyType}</td>
                                        <td><span class="stack-title">匯率</span>${item.ExchangeRate}</td>
                                        <td><span class="stack-title">營業稅率</span>${item.BusinessTaxRate}</td>
                                        <td><span class="stack-title">人員帳號</span>${item.PurUserNo}</td>
                                        <td><span class="stack-title">採購人員</span>${item.PurUserName}</td>
                                        <td><span class="stack-title">廠商編號</span>${item.PurVendorNo}</td>
                                        <td><span class="stack-title">廠商簡稱</span>${item.PurVendorName}</td>
                                        <td><span class="stack-title">採購數量</span>${item.PurQty}</td>
                                        <td><span class="stack-title">採購單位</span>${item.PurUnit}</td>
                                        <td><span class="stack-title">採購幣別</span>${item.PurCurrencyType}</td>
                                        <td><span class="stack-title">採購單價</span>${item.PurPrice}</td>
                                        <td><span class="stack-title">採購金額</span>${item.PurAmount}</td>
                                        <td><span class="stack-title">本幣未稅採購金額</span>${item.LocalCurrencyUntaxedPurAmount}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="43" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }


        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("ExcelRBAnnualProcurementReport", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex":  -1,
                "PageSize": -1,
                "StartReqDate": ($("#cbxReqDate@(itemName)").is(":checked") ? $("#txtStartReqDateQ@(itemName)").val() : ""),
                "EndReqDate": ($("#cbxReqDate@(itemName)").is(":checked") ? $("#txtEndReqDateQ@(itemName)").val() : ""),
                "ReqName": $("#cboReqNameQ@(itemName)").val(),
                "ReqNo": $("#txtReqNoQ@(itemName)").val(),
                "ReqDepNo": $("#cboReqDepNoQ@(itemName)").val(),
                "ReqUserNo": $("#cboReqUserNoQ@(itemName)").val(),
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val(),
                "PurUserNo": $("#cboPurUserNoQ@(itemName)").val(),
                "PurVendorName": $("#txtPurVendorNameQ@(itemName)").val()
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }

    </script>
                                )

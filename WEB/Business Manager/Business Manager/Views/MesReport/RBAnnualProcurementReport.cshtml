
@using Business_Manager.Helpers
@{
    string itemName = "RBAnnualProcurementReport";
    string itemNameText = "年購粗胚明細";
    string authority = ViewBag.authority;


    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .btn-secondary {
             color: #6c757d;
             background-color: #fff;
             border-color: #6c757d;
         }
    </style>
                                                )

<input type="hidden" id="pageAuthority" value="@authority" />

<!--搜尋內容-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 450px;overflow-y: auto;">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboReqNameQ@(itemName)">單據名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboReqNameQ@(itemName)" name="cboReqNameQ@(itemName)">
                                    <option value="">-- 請選擇單據名稱 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtReqNoQ@(itemName)">請購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtReqNoQ@(itemName)" name="txtReqNoQ@(itemName)" placeholder="請輸入請購單號 EX:3108-2025012301 " />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboReqDepNoQ@(itemName)">請購部門</label>
                            <div class="col-12">
                                <select class="form-control" id="cboReqDepNoQ@(itemName)" name="cboReqDepNoQ@(itemName)">
                                    <option value="">-- 請選擇請購部門 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboReqUserNoQ@(itemName)">請購人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboReqUserNoQ@(itemName)" name="cboReqUserNoQ@(itemName)">
                                    <option value="">-- 請選擇請購人員 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtSearchKeyQ@(itemName)">品號/品名/規格</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)" placeholder="請輸入品號/品名/規格" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboAccountingCategoryNoQ@(itemName)">會計分類名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboAccountingCategoryNoQ@(itemName)" name="cboAccountingCategoryNoQ@(itemName)">
                                    <option value="">-- 請選擇會計分類名稱 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboWarehouseCategoryNoQ@(itemName)">倉管分類名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboWarehouseCategoryNoQ@(itemName)" name="cboWarehouseCategoryNoQ@(itemName)">
                                    <option value="">-- 請選擇倉管分類名稱 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboBusinessCategoryNoQ@(itemName)">業務分類名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboBusinessCategoryNoQ@(itemName)" name="cboBusinessCategoryNoQ@(itemName)">
                                    <option value="">-- 請選擇業務分類名稱 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboManagementCategoryNoQ@(itemName)">生管分類名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboManagementCategoryNoQ@(itemName)" name="cboManagementCategoryNoQ@(itemName)">
                                    <option value="">-- 請選擇生管分類名稱 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboPurUserNoQ@(itemName)">採購人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboPurUserNoQ@(itemName)" name="cboPurUserNoQ@(itemName)">
                                    <option value="">-- 請選擇採購人員 --</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtPurVendorNameQ@(itemName)">廠商簡稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPurVendorNameQ@(itemName)" name="txtPurVendorNameQ@(itemName)" placeholder="請輸入廠商簡稱" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購日期 <input type="checkbox" id="cbxReqDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartReqDateQ@(itemName)" name="txtStartReqDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndReqDateQ@(itemName)" name="txtEndReqDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
                <button type="button" class="btn btn-success" onclick="Excel@(itemName)()" style="margin: auto;"><i class="fas fa-file-excel"></i>匯出</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
    </div>
</div>


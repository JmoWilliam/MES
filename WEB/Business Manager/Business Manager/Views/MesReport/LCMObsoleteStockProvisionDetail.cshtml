@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";



        $(document).ready(function () {


            let currentDate = new Date();
            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);

            
            //會計分類名稱
            ComboBoxs.Default("#cboAccountingCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "1" }, "", "NA", "", "TypeName", "TypeNo");
            //倉管分類名稱
            ComboBoxs.Default("#cboWarehouseCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "2" }, "", "NA", "", "TypeName", "TypeNo");
            //業務分類名稱
            ComboBoxs.Default("#cboBusinessCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "3" }, "", "NA", "", "TypeName", "TypeNo");
            //生管分類名稱
            ComboBoxs.Default("#cboManagementCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "4" }, "", "NA", "", "TypeName", "TypeNo");

            $(" #cboAccountingCategoryNoQ@(itemName), #cboBusinessCategoryNoQ@(itemName), #cboBusinessCategoryNoQ@(itemName), #cboManagementCategoryNoQ@(itemName) ").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            //搜尋動作
            Query@(itemName)();



        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetLCMObsoleteStockProvisionDetail", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val(),
                "RedirectType": 1
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                //pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                pageCount = data.result.length > 0 ? parseInt(data.TotalCount) : 0;
                console.log(1, data.result.length);
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">品號</span>${item.ItemID}</td>
                                        <td><span class="stack-title">品名</span>${item.ItemName}</td>
                                        <td><span class="stack-title">規格</span>${item.ItemSpec}</td>
                                        <td><span class="stack-title">庫存單位</span>${item.InventoryUnit}</td>
                                        <td><span class="stack-title">庫存數量</span>${item.InventoryQty}</td>
                                        <td><span class="stack-title">庫存金額</span>${item.InventoryAmount}</td>
                                        <td><span class="stack-title">單位成本</span>${item.UnitCost}</td>
                                        <td><span class="stack-title">庫別編號</span>${item.InventoryNo}</td>
                                        <td><span class="stack-title">庫別名稱</span>${item.InventoryName}</td>
                                        <td><span class="stack-title">儲存位置</span>${item.StorageLocation}</td>
                                        <td><span class="stack-title">庫齡條件</span>${item.InventoryAgeCondition}</td>
                                        <td><span class="stack-title">呆滯提列金額</span>${item.StagnantProvisionAmt}</td>
                                        <td><span class="stack-title">存貨淨額</span>${item.InventoryNetAmount}</td>
                                        <td><span class="stack-title">存貨淨單價</span>${item.InventoryNetPrice}</td>
                                        <td><span class="stack-title">課稅別</span>${item.TaxType}</td>
                                        <td><span class="stack-title">幣別</span>${item.CurrencyType}</td>
                                        <td><span class="stack-title">匯率</span>${item.ExRate === null ? '' : item.ExRate}</td>
                                        <td><span class="stack-title">營業稅率</span>${item.BusinessTaxRate === null ? '' : item.BusinessTaxRate}</td>
                                        <td><span class="stack-title">最近訂單單價</span>${item.RecentOrderPrice === null ? '' : item.RecentOrderPrice}</td>
                                        <td><span class="stack-title">最近訂單本幣未稅單價</span>${item.RecentOrdLocCurExTaxPrice === null ? '' : item.RecentOrdLocCurExTaxPrice}</td>
                                        <td><span class="stack-title">淨變現單價</span>${item.NetRealizablePrice === null ? '' : item.NetRealizablePrice}</td>
                                        <td><span class="stack-title">單價差額</span>${item.UnitPriceVariance === null ? '' : item.UnitPriceVariance}</td>
                                        <td><span class="stack-title">差額金額</span>${item.VarianceAmount === null ? '' : item.VarianceAmount}</td>
                                        <td><span class="stack-title">判斷</span>${item.Decision}</td>
                                        <td><span class="stack-title">會計分類編號</span>${item.AccountingCategoryNo}</td>
                                        <td><span class="stack-title">會計分類名稱</span>${item.AccountingCategoryName}</td>
                                        <td><span class="stack-title">倉管分類編號</span>${item.WarehouseCategoryNo}</td>
                                        <td><span class="stack-title">倉管分類名稱</span>${item.WarehouseCategoryName}</td>
                                        <td><span class="stack-title">業務分類編號</span>${item.BusinessCategoryNo}</td>
                                        <td><span class="stack-title">業務分類名稱</span>${item.BusinessCategoryName}</td>
                                        <td><span class="stack-title">生管分類編號</span>${item.ManagementCategoryNo}</td>
                                        <td><span class="stack-title">生管分類名稱</span>${item.ManagementCategoryName}</td>
                                        <td><span class="stack-title">品號創建日</span>${item.ProductCreatDate}</td>
                                        <td><span class="stack-title">品號創建者編號</span>${item.ProductCreatNo}</td>
                                        <td><span class="stack-title">品號創建者名</span>${item.ProductCreatName}</td>
                                        <td><span class="stack-title">品號修改日</span>${item.ProductUpdateDate}</td>
                                        <td><span class="stack-title">品號修改者編號</span>${item.ProductUpdateNo}</td>
                                        <td><span class="stack-title">品號修改者名</span>${item.ProductUpdateName}</td>
                                        <td><span class="stack-title">最近入庫日</span>${item.ReWarInDate}</td>
                                        <td><span class="stack-title">最近出庫日</span>${item.ReWarOutDate}</td>
                                        <td><span class="stack-title">進出創建日</span>${item.ReWarCreatDate}</td>
                                        <td><span class="stack-title">進出創建者編號</span>${item.ReWarCreatNo}</td>
                                        <td><span class="stack-title">進出創建者名</span>${item.ReWarCreatName}</td>
                                        <td><span class="stack-title">進出修改日</span>${item.ReWarUpdateDate}</td>
                                        <td><span class="stack-title">進出修改者編號</span>${item.ReWarUpdateNo}</td>
                                        <td><span class="stack-title">進出修改者名</span>${item.ReWarUpdateName}</td>
                                        <td><span class="stack-title">品號生效日</span>${item.ProductEffectiveDate}</td>
                                        <td><span class="stack-title">品號失效日</span>${item.ProductExpiryDate}</td>
                                      </tr>`;

                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="17" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }


        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("LCMObsoleteStockProvisionDetailExcel", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": -1 ,
                "PageSize": -1 ,
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val(),
                "RedirectType": 2
            }; 

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }

    </script>
                                                                        )
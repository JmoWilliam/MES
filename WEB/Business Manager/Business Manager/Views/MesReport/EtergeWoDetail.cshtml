<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboWoModeQ@(itemName)">製程</label>
                            <div class="col-12">
                                <select class="form-control" id="cboWoModeQ@(itemName)" name="cboWoModeQ@(itemName)">
                                    <option value="">-- 請選擇生產模式 --</option>
                                </select>
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtWoErpNoQ@(itemName)">製令</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtWoErpNoQ@(itemName)" name="txtWoErpNoQ@(itemName)" placeholder="請輸入製令 Ex: 20230825001" />
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtMtlItemNoQ@(itemName)">品號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)" placeholder="請輸入品號" />
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtBarcodeNoQ@(itemName)">條碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtBarcodeNoQ@(itemName)" name="txtBarcodeNoQ@(itemName)" placeholder="請輸入品號" />
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboUserIdQ@(itemName)">完工人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)">
                                    <option value="">-- 請選擇完工人員 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label">時間</label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-12 col-form-label">條碼狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    良品
                                    <input type="checkbox" id="cbxBarcodeStatusQ@(itemName)Y" name="cbxBarcodeStatusQ@(itemName)" value="P" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    不良品
                                    <input type="checkbox" id="cbxBarcodeStatusQ@(itemName)N" name="cbxBarcodeStatusQ@(itemName)" value="F" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    報廢品
                                    <input type="checkbox" id="cbxBarcodeStatusQ@(itemName)N" name="cbxBarcodeStatusQ@(itemName)" value="S" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label">是否最新過站</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxTransferStatusQ@(itemName)Y" name="cbxTransferStatusQ@(itemName)" value="1" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>

                        @*<div class="col-lg-2 col-6 mt-4">
            <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
        </div>*@
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>



<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-header">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn file-excel" href="javascript:Excel@(itemName)();"><i class="fas fa-file-excel"></i>匯出</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col" style="min-width: 50px;">#</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">工作日</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">製令</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">產品品號</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">產品品名</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">條碼</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">製程</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">機台</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">開工人員</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">上製程完工時間</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">開工時間</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">完工時間</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">完工人員</th>
                                        <th class="text-center" scope="col" style="min-width: 100px;">過站數量</th>
                                        <th class="text-center" scope="col" style="min-width: 100px;">條碼狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">不良原因</th>
                                        <th class="text-center" scope="col" style="min-width: 120px;">加工時間/s</th>
                                        <th class="text-center" scope="col" style="min-width: 120px;">等待時間/s</th>
                                        <th class="text-center" scope="col" style="min-width: 120px;">是否最新過站</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 30
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let userId@(itemName);
        let companyId@(itemName);
        let userNo@(itemName);

        if (!isMobile) {//txtNewValue
            $("#cboWoModeQ@(itemName), #cboUserIdQ@(itemName)").select2({
            dropdownAutoWidth: true,
            width: "100%"
        });

        }

        $(document).ready(function () {
            GetUserInfo@(itemName)()
            let currentDate = new Date();
            Suites.DatePicker("txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 1);
            Suites.DatePicker("txtStartDateQ@(itemName)", currentDate);

            @*ComboBoxs.Default("#cboWoModeQ@(itemName)", "@Url.Action("GetProdMode", "MesBasicInformation")", {}, "", "NA", "", "txtProdModeWithText", "ModeId");*@
            ComboBoxs.Default("#cboWoModeQ@(itemName)", "@Url.Action("GetProcess", "MesBasicInformation")", {}, "", "NA", "", "ProcessName", "ProcessId");
        
            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "", "NA", "", "UserWithDepartment", "UserId");


            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetWoData", "MesReport")";
    //txtBarcodeNoQ
            let postData = {
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
                "ProcessId": $("#cboWoModeQ@(itemName)").val(),
                "WoErpFullNo": $("#txtWoErpNoQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val(),
                "BarcodeNo": $("#txtBarcodeNoQ@(itemName)").val(),
                "Status": $("input[name='cbxBarcodeStatusQ@(itemName)']:checked").toArray().map(item => item.value).join(","),
                "isNewFinish": $("input[name='cbxTransferStatusQ@(itemName)']:checked").toArray().map(item => item.value).join(","),
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize
            };

            let data = DataAccess.Get(targetUrl, postData, false);
            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td class="ellipsis" data-toggle="tooltip">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.WorkDay}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.WoErpFullNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.MtlItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.MtlItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.BarcodeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.ProcessAlias}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.MachineDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.StarUser}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${isNull@(itemName)(item.LastStopFinish)}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.StartDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${isNull@(itemName)(item.FinishDate)}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${isNull@(itemName)(item.FinishUser)}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.StationQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.BarcodeStatus}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${isNull@(itemName)(item.CauseNo)}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.CycleTime}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.WaitTime}</td>
                                        <td class="ellipsis" data-toggle="tooltip">${item.isNewFinish}</td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="20" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }
            @*$("#page@(itemName)").show();*@
            $("#tblData@(itemName) tbody").html(innerHtml);
           TableComponentInit();
        Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        
        function moStatus@(itemName)(status) {

            let s = "";

            switch (status) {
                case "N":
                    s = "新製令未開工";
                case "A":
                    s = "加工中";
                case "F":
                    s = "完工";
                    break;
                default:
                    break;

            }
            return s;
        }

        function isNull@(itemName)(status) {

            let s = "";

            if (status == null) {

                s = ""
            } else {
                s = status
            }
            return s;
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
                userNo@(itemName) = data.returnData.UserNo;

            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("ExcelGetWoDataa", "MesReport")";
            let postData = {
               "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
                "ProcessId": $("#cboWoModeQ@(itemName)").val(),
                "WoErpFullNo": $("#txtWoErpNoQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val(),
                "BarcodeNo": $("#txtBarcodeNoQ@(itemName)").val(),
                "Status": $("input[name='cbxBarcodeStatusQ@(itemName)']:checked").toArray().map(item => item.value).join(","),
                "isNewFinish": $("input[name='cbxTransferStatusQ@(itemName)']:checked").toArray().map(item => item.value).join(","),
                "OrderBy": "",
                "PageIndex": -1,
                "PageSize": -1,
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }

</script>
                                                )
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";



        $(document).ready(function () {


            let currentDate = new Date();
            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);

            //單别
            ComboBoxs.WithText("#cboRtErpPrefixQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "RtErpPrefix" }, "", "NA", "", "RtErpPrefixName", "RtErpPrefix");
            //对象简称
            ComboBoxs.Default("#cboCustomerNoQ@(itemName)", "@Url.Action("GetCustomer", "ScmBasicInformation")", { "Status": "A", "TransferStatus": "A" }, "", "NA", "", "CustomerWithNo", "CustomerNo");
            //负责人員
            ComboBoxs.Default("#cboSalesmenNoQ@(itemName)", "@Url.Action("GetUserByAuthority", "BasicInformation")", { "FunctionCode": "SaleOrderManagement", "DetailCode": "add", "Status": "A" }, "", "NA", "", "UserWithNo", "UserNo");
            //會計分類名稱
            ComboBoxs.Default("#cboAccountingCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "1" }, "", "NA", "", "TypeName", "TypeNo");
            //倉管分類名稱
            ComboBoxs.Default("#cboWarehouseCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "2" }, "", "NA", "", "TypeName", "TypeNo");
            //業務分類名稱
            ComboBoxs.Default("#cboBusinessCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "3" }, "", "NA", "", "TypeName", "TypeNo");
            //生管分類名稱
            ComboBoxs.Default("#cboManagementCategoryNoQ@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MtlItemType", "Condition": "4" }, "", "NA", "", "TypeName", "TypeNo");

            $("#cboRtErpPrefixQ@(itemName), #cboCustomerNoQ@(itemName), #cboSalesmenNoQ@(itemName), #cboAccountingCategoryNoQ@(itemName), #cboBusinessCategoryNoQ@(itemName), #cboBusinessCategoryNoQ@(itemName), #cboManagementCategoryNoQ@(itemName) ").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            //搜尋動作
            Query@(itemName)();



        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetSalesReturnsAllowancesCostDetails", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "StartDate": ($("#cboStartDateQ@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""),
                "EndDate": ($("#cboStartDateQ@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "RtErpPrefix": $("#cboRtErpPrefixQ@(itemName)").val(),
                "RtErpNo": $("#txtRtErpNoQ@(itemName)").val(),
                "CustomerNo": $("#cboCustomerNoQ@(itemName)").val(),
                "SalesmenNo": $("#cboSalesmenNoQ@(itemName)").val(),
                "MtlItemNo": $("#txtSearchKeyQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">單據日期</span>${item.DocDate}</td>
                                        <td><span class="stack-title">銷退日</span>${item.SRDate}</td>
                                        <td><span class="stack-title">類型</span>${item.SRAType}</td>
                                        <td><span class="stack-title">單據名稱</span>${item.DocName}</td>
                                        <td><span class="stack-title">單號</span>${item.DocNum}</td>
                                        <td><span class="stack-title">單頭備註</span>${item.HeaderRemarks}</td>
                                        <td><span class="stack-title">確認碼</span>${item.ConfirmationCode}</td>
                                        <td><span class="stack-title">確認者編號</span>${item.ConfirmerID}</td>
                                        <td><span class="stack-title">確認者</span>${item.ConfirmerName}</td>
                                        <td><span class="stack-title">結帳碼</span>${item.CaseClosureCode}</td>
                                        <td><span class="stack-title">客戶編碼</span>${item.CustomerID}</td>
                                        <td><span class="stack-title">客戶簡稱</span>${item.CustomerAbbr}</td>
                                        <td><span class="stack-title">部門編號</span>${item.DepID}</td>
                                        <td><span class="stack-title">負責部門</span>${item.DepName}</td>
                                        <td><span class="stack-title">業務編號</span>${item.BusinessID}</td>
                                        <td><span class="stack-title">負責業務</span>${item.BusinessName}</td>
                                        <td><span class="stack-title">品項序號</span>${item.LineNum}</td>
                                        <td><span class="stack-title">品號</span>${item.ItemID}</td>
                                        <td><span class="stack-title">品名</span>${item.ItemName}</td>
                                        <td><span class="stack-title">規格</span>${item.ItemSpec}</td>
                                        <td><span class="stack-title">會計分類編號</span>${item.AccountingCategoryNo}</td>
                                        <td><span class="stack-title">會計分類名稱</span>${item.AccountingCategoryName}</td>
                                        <td><span class="stack-title">倉管分類編號</span>${item.WarehouseCategoryNo}</td>
                                        <td><span class="stack-title">倉管分類名稱</span>${item.WarehouseCategoryName}</td>
                                        <td><span class="stack-title">業務分類編號</span>${item.BusinessCategoryNo}</td>
                                        <td><span class="stack-title">業務分類名稱</span>${item.BusinessCategoryName}</td>
                                        <td><span class="stack-title">生管分類編號</span>${item.ManagementCategoryNo}</td>
                                        <td><span class="stack-title">生管分類名稱</span>${item.ManagementCategoryName}</td>
                                        <td><span class="stack-title">退入庫別</span>${item.RIWarehouse}</td>
                                        <td><span class="stack-title">數量類型</span>${item.GSType}</td>
                                        <td><span class="stack-title">贈/備品量</span>${item.GSQty}</td>
                                        <td><span class="stack-title">贈/備品包裝量</span>${item.GSPackQty}</td>
                                        <td><span class="stack-title">計價數量</span>${item.BillingQty}</td>
                                        <td><span class="stack-title">計價單位</span>${item.PricingUnit}</td>
                                        <td><span class="stack-title">數量</span>${item.Qty}</td>
                                        <td><span class="stack-title">單位</span>${item.Unite}</td>
                                        <td><span class="stack-title">單價</span>${item.Price}</td>
                                        <td><span class="stack-title">金額</span>${item.Amount}</td>
                                        <td><span class="stack-title">單位成本</span>${item.UnitCost}</td>
                                        <td><span class="stack-title">材料成本</span>${item.MaterialCost}</td>
                                        <td><span class="stack-title">人工成本</span>${item.LaborCost}</td>
                                        <td><span class="stack-title">製費成本</span>${item.ManufacturingCost}</td>
                                        <td><span class="stack-title">加工成本</span>${item.ProcessingCost}</td>
                                        <td><span class="stack-title">本幣未稅金額</span>${item.UntaxedLocalAmt}</td>
                                        <td><span class="stack-title">銷貨成本</span>${item.SalesCost}</td>
                                        <td><span class="stack-title">本幣未稅毛利</span>${item.LocalUntaxedGP}</td>
                                        <td><span class="stack-title">品項備註</span>${item.ItemRemarks}</td>
                                        <td><span class="stack-title">單據創建日</span>${item.DocCreatDate}</td>
                                        <td><span class="stack-title">單據創建者編號</span>${item.DocCreatUserID}</td>
                                        <td><span class="stack-title">單據創建者</span>${item.DocCreatUserName}</td>
                                        <td><span class="stack-title">單據修改日</span>${item.DocUpDate}</td>
                                        <td><span class="stack-title">單據修改者編號</span>${item.DocUpUserID}</td>
                                        <td><span class="stack-title">單據修改者</span>${item.DocUpUserName}</td>
                                      </tr>`;

                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="17" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }


        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("ExcelSalesReturnsAllowancesCostDetails", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": -1 ,
                "PageSize": -1 ,
                "StartDate": ($("#cboStartDateQ@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""),
                "EndDate": ($("#cboStartDateQ@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "RtErpPrefix": $("#cboRtErpPrefixQ@(itemName)").val(),
                "RtErpNo": $("#txtRtErpNoQ@(itemName)").val(),
                "CustomerNo": $("#cboCustomerNoQ@(itemName)").val(),
                "SalesmenNo": $("#cboSalesmenNoQ@(itemName)").val(),
                "MtlItemNo": $("#txtSearchKeyQ@(itemName)").val(),
                "AccountingCategoryNo": $("#cboAccountingCategoryNoQ@(itemName)").val(),
                "WarehouseCategoryNo": $("#cboWarehouseCategoryNoQ@(itemName)").val(),
                "BusinessCategoryNo": $("#cboBusinessCategoryNoQ@(itemName)").val(),
                "ManagementCategoryNo": $("#cboManagementCategoryNoQ@(itemName)").val()
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }
        

    </script>

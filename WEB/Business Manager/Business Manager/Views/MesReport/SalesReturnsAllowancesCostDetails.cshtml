@using Business_Manager.Helpers
@{
    string itemName = "SalesReturnsAllowancesCostDetails";
    string itemNameText = "晶彩銷退/折讓成本明細";
    string authority = ViewBag.authority;


    ViewBag.Title = itemNameText;
}

@Html.Resource("css",

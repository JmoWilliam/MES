@using Business_Manager.Helpers
@{
    string itemName = "OrderStockReport";
    string itemNameText = "訂單進度&庫存數量統計報表";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .form-group .select2-selection__rendered {
             line-height: 29px !important;
         }

         .form-group .select2-container .select2-selection--single {
             height: 39px !important;
         }

         .form-group .select2-selection__arrow {
             height: 34px !important;
         }

         .table-deposit {
             margin: 0;
             padding: 0;
             max-height: 30vh;
             margin-bottom: .75rem;
             display: none;
         }

             .table-deposit th {
                 background-color: #d7ecfa !important;
             }

             .table-deposit th, .table-deposit td {
                 padding: 5px 0;
                 text-align: center;
             }

         .active-icon {
             background-color: #d7ecfa;
             color: black;
         }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>
<!--搜尋內容-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 450px;overflow-y: auto;">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtLensModelQ@(itemName)">鏡頭機種</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtLensModelQ@(itemName)" name="txtLensModelQ@(itemName)" placeholder="請輸入鏡頭機種" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtLensModelNameQ@(itemName)">鏡頭品名</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtLensModelNameQ@(itemName)" name="txtLensModelNameQ@(itemName)" placeholder="請輸入鏡頭品名" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">未出貨數</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUnshippedQtyQ@(itemName)">
                                    <option value="" selected>全部</option>
                                    <option value=">0">大於0</option>
                                    <option value="=0">等於0</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
                <button type="button" class="btn btn-success  auth-excel" onclick="Excel@(itemName)()" style="margin: auto;"><i class="fas fa-file-excel"></i>匯出</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn file-excel" href="javascript:Excel@(itemName)();"><i class="fas fa-file-excel"></i>匯出</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack tiny-table" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width: 60px;">#</th>
                                        <th scope="col" style="width: 150px;">鏡頭品號</th>
                                        <th scope="col" style="width: 150px;">鏡頭品名</th>
                                        <th scope="col" style="width: 100px;">訂單總數</th>
                                        <th scope="col" style="width: 100px;">已出貨數</th>
                                        <th scope="col" style="width: 100px;">未出貨數</th>
                                        <th scope="col" style="width: 150px;">主件庫存數</th>
                                        <th style="padding: 0; min-width: 800px;">
                                            <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 200px;">元件料號</th>
                                                        <th style="width: 150px;">元件庫存數</th>
                                                        <th style="width: 150px;">製令未領數</th>
                                                        <th style="width: 150px;">在製(已領未完工)</th>
                                                        <th style="width: 150px;">已採未進貨</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="model@(itemName)" style="max-width: 1366px;">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <a class="close" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <iframe id="OrderStockReport@(itemName)" src="#"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            //搜尋動作
            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetOrderStockReport", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "LensModel": $("#txtLensModelQ@(itemName)").val(),
                "LensModelName": $("#txtLensModelNameQ@(itemName)").val(),
                "Unshipped": $("#cboUnshippedQtyQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td>
                                            <a href="javascript:PopSaleInfo@(itemName)('${item.LensModel}');">
                                                <span class="anchor-text">${item.LensModel}</span>
                                            </a>
                                        </td>
                                        <td><span class="stack-title"></span>${item.LensModelName}</td>
                                        <td><span class="stack-title"></span>${item.OrderCount}</td>
                                        <td><span class="stack-title"></span>${item.ShippedQty}</td>
                                        <td><span class="stack-title"></span>${item.UnshippedQty}</td>
                                        <td><span class="stack-title"></span>${item.MainItemStock}</td>
                                        <td style="padding: 0;">
                                          <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                            <tbody>
                                              ${DetailData@(itemName)(item.ComponentData)}
                                            </tbody>
                                          </table>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="12" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function PopSaleInfo@(itemName)(MtlItemNo) {

            let targetUrl = `@Url.Action("IFrameOrderStockReport", "MesReport")?MtlItemNo=${MtlItemNo}`;

            Swal.fire({
                html: `<iframe id="OrderStockReport@(itemName)" src="${targetUrl}" frameborder="0" scrolling="no"></iframe>`,
                showCloseButton: true,
                showConfirmButton: false,
                allowOutsideClick: false,
                allowEscapeKey: false,
                width: 1640,
                background: '#eef1f5'
            });
        }



        function DetailData@(itemName)(source) {
            let html = '';
            if (source) {
                let json = JSON.parse(source);

                for (let x = 0; x < json.data.length; x++) {
                    html += `<tr>
                               <td style="width: 200px;">${json.data[x].ComponentMtlItemNo}</td>
                               <td style="width: 150px;">${json.data[x].ComponentItemStock}</td>
                               <td style="width: 150px;">${json.data[x].UnissuedQty}</td>
                               <td style="width: 150px;">${json.data[x].RequisitionQty}</td>
                               <td style="width: 150px;">${json.data[x].ReceivedNotStocked}</td>
                            </tr>`;
                }
            }
            return html;
        }

        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("OrderStockReportExcel", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": -1,
                "PageSize": -1,
                "LensModel": $("#txtLensModelQ@(itemName)").val(),
                "Unshipped": $("#cboUnshippedQtyQ@(itemName)").val()

            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }
</script>
)

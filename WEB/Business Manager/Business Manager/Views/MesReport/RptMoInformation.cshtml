@using Business_Manager.Helpers
@{
    string itemName = "RptMoInformation";
    string itemNameText = "生產進度異常查詢";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;

    string CompanyNo = Request["CompanyNo"] ?? "";
}

@Html.Resource("css",
    @<style>
         .form-group .select2-selection__rendered {
             line-height: 29px !important;
         }

         .form-group .select2-container .select2-selection--single {
             height: 39px !important;
         }

         .form-group .select2-selection__arrow {
             height: 34px !important;
         }

         .table-deposit {
             margin: 0;
             padding: 0;
             max-height: 30vh;
             margin-bottom: .75rem;
             display: none;
         }

             .table-deposit th {
                 background-color: #d7ecfa !important;
             }

             .table-deposit th, .table-deposit td {
                 padding: 5px 0;
                 text-align: center;
             }

         .active-icon {
             background-color: #d7ecfa;
             color: black;
         }
    </style>
                                                )
<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                @*<button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>*@
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtWoErpFullNoQ@(itemName)">製令單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtWoErpFullNoQ@(itemName)" name="txtWoErpFullNoQ@(itemName)" placeholder="請輸入製令單號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtSearchKeyQ@(itemName)">品號/品名</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)" placeholder="請輸入品號/品名" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboModeIdQ@(itemName)">生產模式</label>
                            <div class="col-12">
                                <select class="form-control" id="cboModeIdQ@(itemName)" name="cboModeIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtCustomerQ@(itemName)">加工客戶</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtCustomerQ@(itemName)" name="txtCustomerQ@(itemName)" placeholder="請輸入加工客戶" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">預計開工/完工日期 <input type="checkbox" id="cbxUseDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="PopView@(itemName)" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="PopViewTitle" class="modal-title">預計完工日
                    <span class="sub-title">目前製令 <span class="sub-text" id="desWipNo@(itemName)"></span></span>
                    <span class="sub-title">預計開工日 <span class="sub-text" id="desExpectedStart@(itemName)"></span></span>
                </h5>
                <button class="close" type="button" onclick="ClosePopView@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container popform" autocomplete="off" id="syncForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtExpectedEnd@(itemName)">日期</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtExpectedEnd@(itemName)" name="txtExpectedEnd@(itemName)" onkeypress="BandeInput(event)" onkeydown="BandCtrlV(event)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button  type="button" class="btn btn-success" onclick="UpdateExpectedEnd@(itemName)()" style="margin: auto;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-success auth-notifier" href="javascript:PopNotifier@(itemName)();"><i class="fas fa-sync"></i>重新同步並推播</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 145px;">製令</th>
                                        <th scope="col" style="min-width: 145px;">生產模式</th>
                                        <th scope="col" style="min-width: 145px;">加工客戶</th>
                                        <th scope="col" style="min-width: 175px;">品名</th>
                                        <th scope="col" style="min-width: 110px;">預計開工</th>
                                        <th scope="col" style="min-width: 110px;">預計完工</th>
                                        <th scope="col" style="min-width: 150px;">預計最快完工</th>
                                        <th scope="col" style="min-width: 100px;">剩餘天數</th>
                                        <th scope="col" style="min-width: 100px;">剩餘加工時間</th>
                                        <th scope="col" style="min-width: 130px;">最近一次加工時間</th>
                                        <th scope="col" style="min-width: 175px;">警告訊息</th>
                                        <th scope="col" style="min-width: 175px;">加工狀態</th>
                                        <th scope="col" style="min-width: 145px;">品號</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNotifier@(itemName)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">重新篩選資料並推播</h5>
                <button class="close" type="button" onclick="CloseNotifier@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="notifierForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtActualStart@(itemName)">開始日期 <input type="checkbox" id="cbxSyncDate@(itemName)" checked /></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtActualStart@(itemName)" name="txtActualStart@(itemName)" placeholder="請輸入開始日期" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-success" onclick="Notifier@(itemName)()"><i class="fas fa-sync"></i>啟動</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let userId@(itemName);
        let companyId@(itemName);
        let companyNo@(itemName);
        let WipNo@(itemName);
        let ExpectedStart@(itemName);
        $(document).ready(function () {
            GetUserInfo@(itemName)();

            let currentDate = new Date();
            Suites.DatePicker("txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.DatePicker("txtStartDateQ@(itemName)", currentDate);

            ComboBoxs.Default("#cboModeIdQ@(itemName)", "@Url.Action("GetProdMode", "MesBasicInformation")", {}, "", "NA", "", "txtProdModeWithText", "ModeId");
            if (!isMobile) {
                $("#cboModeIdQ@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }

            Query@(itemName)();

            $("#txtWoErpFullNoQ@(itemName), txtSearchKeyQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    Query@(itemName)();
                    return false;
                }
            });
        });

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
                companyNo@(itemName) = data.returnData.CompanyNo;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetRptMoInformation", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val(),
                "ModeId": $("#cboModeIdQ@(itemName)").val(),
                "CustomerShortName": $("#txtCustomerQ@(itemName)").val(),
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val(),
                "ExpectedStart":($("#cbxUseDate@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""),
                "ExpectedEnd": ($("#cbxUseDate@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "CompanyNo": '@CompanyNo'
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.TotalCount) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.GrErpFullNo}" style="max-width: 165px;">
                                          <a href="@Url.Action("ProductionInProcess", "MesReport")?WoErpFullNo=${item.WipNo}&CompanyNo=${item.CompanyNo}" target="_blank">
                                            ${item.WipNo}
                                          </a>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ModeDesc}" style="max-width: 200px;">${item.ModeDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerShortName}" style="max-width: 200px;">${item.CustomerShortName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemName}" style="max-width: 200px;">${item.MtlItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ExpectedStart}" style="max-width: 200px;">${item.ExpectedStart}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ExpectedEnd}" style="max-width: 200px;">${item.ExpectedEnd}
                                            <a class="auth-update-date" href="javascript:PopView@(itemName)('${item.WipNo}','${item.ExpectedEnd}','${item.ExpectedStart}');"><i class="fas fa-clock"></i>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DateOfLastUpdate}" style="max-width: 200px;">${item.DateOfLastUpdate}</td>
                                        ${JudgeRemainingDay@(itemName)(`${item.RemainingDay}`)}
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RemainingHours}/小時" style="max-width: 110px;">${item.RemainingHours}/小時</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MfgOfLastUpdate}" style="max-width: 200px;">${item.MfgOfLastUpdate}</td>
                                        ${JudgeMfgStatus@(itemName)(`${item.mfg_status}`)}
                                        ${JudgeStatus1@(itemName)(`${item.status1}`)}
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemNo}" style="max-width: 200px;">${item.MtlItemNo}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="14" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            function JudgeMfgStatus@(itemName)(mfg_status) {
                let innerHtml = '';
                if (mfg_status == "已超過2小時未加工") {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${mfg_status}" style="max-width: 200px;"><i class="fas fa-clock" style="color: red;"></i> ${mfg_status}</td>`;
                }
                else {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${mfg_status}" style="max-width: 200px;"><i class="fas fa-clock" style="color: blue;"></i> ${mfg_status}</td>`;
                }
                return innerHtml;
            }

            function JudgeStatus1@(itemName)(status1) {
                let innerHtml = '';
                if (status1 == "已超過預計完工日") {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${status1}" style="max-width: 200px;"><i class="fas fa-calendar-alt" style="color: red;"></i> ${status1}</td>`;
                }
                else if (status1 == "距離交貨日不足一日") {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${status1}" style="max-width: 200px;"><i class="fas fa-calendar-alt" style="color: blue;"></i> ${status1}</td>`;
                }
                else {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${status1}" style="max-width: 200px;"><i class="fas fa-calendar-alt" style="color: green;"></i> ${status1}</td>`;
                }
                return innerHtml;
            }

            function JudgeRemainingDay@(itemName)(remainingDay) {
                let innerHtml = '';
                if (parseInt(remainingDay) > 0) {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${remainingDay}" style="max-width: 110px; color: green;">${remainingDay}</td>`;
                }
                else {
                    innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${remainingDay}" style="max-width: 110px; color: red;">${remainingDay}</td>`;
                }

                return innerHtml;
            }
        }

        function PopNotifier@(itemName)() {
            $("#modalNotifier@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            let currentDate = new Date();
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.DatePicker("txtActualStart@(itemName)", currentDate);
        }

        function CloseNotifier@(itemName)() {
            ResetForm("#notifierForm@(itemName)");

            $("#modalNotifier@(itemName)").modal("hide");

            Query@(itemName)();
        }

        function Notifier@(itemName)() {
            swal.fire({
                titleText: "確認執行資料同步嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("RptMoInformationNotifier", "MesReport")";
                    let postData = {
                        "ActualStart": $("#txtActualStart@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    alert("同步完成!!", "success", 5000);
                    CloseNotifier@(itemName)();
                }
            });
        }

        function PopView@(itemName)(WipNo, ExpectedEnd, ExpectedStart) {
            WipNo@(itemName) = WipNo
            ExpectedStart@(itemName) = ExpectedStart
            $("#PopView@(itemName)").modal("show");
            $("#desWipNo@(itemName)").text(WipNo)
            $("#desExpectedStart@(itemName)").text(ExpectedStart)
            Suites.DatePicker("txtExpectedEnd@(itemName)", ExpectedEnd);
        }
        function ClosePopView@(itemName)() {
            $("#PopView@(itemName)").modal("hide");
            $("#txtExpectedEnd@(itemName)").val("");
            $("#desWipNo@(itemName)").text("")
            $("#desExpectedStart@(itemName)").text("")
            WipNo = "";
            ExpectedStart = "";
        }

        function UpdateExpectedEnd@(itemName)() {
            let ExpectedEnd@(itemName) = $("#txtExpectedEnd@(itemName)").val()
            if (WipNo@(itemName) == "") {
                alert("製令不可以為空", "alert", 0);
                return
            }
            if (ExpectedEnd@(itemName) == "") {
                alert("預計完工日不可以為空", "alert", 0);
                return
            }
            let startDate = new Date(ExpectedStart@(itemName));
            let endDate = new Date(ExpectedEnd@(itemName));
            if (startDate > endDate) {
                alert(`預計完工日不可以小於預計開工日,當前預計開工日為【${ExpectedEnd@(itemName)}】`, "alert", 0);
                return
            }
            swal.fire({
                titleText: "請確認是否要執行修改預計完工日?",
                text: "此動作同時會修改ERP製令資料!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateExpectedEnd", "MesReport")";
                    let postData = {
                        "WipNo": WipNo@(itemName),
                        "ExpectedEnd": ExpectedEnd@(itemName),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data.status == "success") {
                        alert("更新成功!!", "success", 5000);
                        ClosePopView@(itemName)();
                        Query@(itemName)()
                    }
                    else{

                    }
                }
            });
        }

        function BandeInput(e) {
            e.preventDefault();
        }
        function BandCtrlV(e) {
            if ((e.ctrlKey || e.metaKey) && e.keyCode == 86) {
                e.preventDefault();
            }
        }
    </script>
 )
@using Business_Manager.Helpers
@{
    string itemName = "MachineEventHistoryQuery";
    string itemNameText = "機台事件歷程查詢";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
                            )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboWorkShopQ@(itemName)">車間</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboWorkShopQ@(itemName)" name="cboWorkShopQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboMachineQ@(itemName)">機台</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboMachineQ@(itemName)" name="cboMachineQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtMachineEventNameQ@(itemName)">事件名稱</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtMachineEventNameQ@(itemName)" name="txtMachineEventNameQ@(itemName)" placeholder="請輸入事件名稱"
                                       data-msg-required="請輸入設備識別碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">機台事件起止日期 <input type="checkbox" id="cbxUseDate@(itemName)" checked /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtFinishDateQ@(itemName)" name="txtFinishDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
                <button type="button" class="btn btn-success" onclick="Excel@(itemName)()" style="margin: auto;"><i class="fas fa-file-excel"></i>匯出</button>
            </div>
        </div>
    </div>
</div>

<div class="row list-data" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                </div>
                <fieldset>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-custom">
                                <table class="table table-bordered table-striped table-sticky table-stack tbl-data" id="tblData@(itemName)">
                                    <thead>
                                        <tr>
                                            <th scope="col" style="min-width: 75px;">#</th>
                                            <th scope="col" style="min-width: 150px;">機台名稱</th>
                                            <th scope="col" style="min-width: 150px;">機台描述</th>
                                            <th scope="col" style="min-width: 150px;">車間</th>
                                            <th scope="col" style="min-width: 150px;">事件名稱</th>
                                            <th scope="col" style="min-width: 150px;">開始時間</th>
                                            <th scope="col" style="min-width: 150px;">結束時間</th>
                                            <th scope="col" style="min-width: 150px;">費時</th>
                                            <th scope="col" style="min-width: 150px;">建立人員</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="pagination" id="page@(itemName)"></div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function (ShopId) {
            ComboBoxs.Default("#cboWorkShopQ@(itemName)", "@Url.Action("GetWorkShop", "MesBasicInformation")", {}, "", "NA", "", "ShopName", "ShopId");
            $("#cboWorkShopQ@(itemName)").change(function () {
                var ShopId = $("#cboWorkShopQ@(itemName)").val();
                ComboBoxs.Default("#cboMachineQ@(itemName)", "@Url.Action("GetMachine", "MesBasicInformation")", { "ShopId": ShopId }, "", "NA", "", "MachineDescFull", "MachineId");
            });
            ComboBoxs.Default("#cboMachineQ@(itemName)", "@Url.Action("GetMachine", "MesBasicInformation")", { "ShopId": ShopId }, "", "NA", "", "MachineDescFull", "MachineId");

            let currentDate = new Date();
            Suites.DateDropper("#txtStartDateQ@(itemName), #txtFinishDateQ@(itemName)");
            Suites.SetDateDropper("#txtFinishDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);

            Query@(itemName)();

             if (!isMobile) {
                 $("#cboWorkShopQ@(itemName),#cboMachineQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
            $("#cboWorkShopQ@(itemName)").val("");
            $("#cboMachineQ@(itemName)").val("");
            $("#txtMachineEventNameQ@(itemName)").val("");
            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {

            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetMachineEventHistory", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ShopId": $("#cboWorkShopQ@(itemName)").val(),
                "MachineId": $("#cboMachineQ@(itemName)").val(),
                "MachineEventName": $("#txtMachineEventNameQ@(itemName)").val(),
                "StartDate": ($("#cbxUseDate@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""),
                "FinishDate": ($("#cbxUseDate@(itemName)").is(":checked") ? $("#txtFinishDateQ@(itemName)").val() : "")
            };

            let data = DataAccess.Get(targetUrl, postData, false);
            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                       　let DuringTime = new Date(item.DuringTime);
                        
                        function formatDate(date) {
                            let year = date.getFullYear();
                            let month = String(date.getMonth() + 1).padStart(2, '0');
                            let day = String(date.getDate()).padStart(2, '0');
                            let hours = String(date.getHours()).padStart(2, '0');
                            let minutes = String(date.getMinutes()).padStart(2, '0');
                            let seconds = String(date.getSeconds()).padStart(2, '0');
                            return `${hours}:${minutes}:${seconds}`;
                        }
                          innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineName}" style="max-width: 150px;"><span class="stack-title">機台名稱</span>${item.MachineName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineDesc}" style="max-width: 150px;"><span class="stack-title">機台描述</span>${item.MachineDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ShopName}" style="max-width: 150px;"><span class="stack-title">車間</span>${item.ShopName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineEventName}" style="max-width: 150px;"><span class="stack-title">事件名稱</span>${item.MachineEventName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.StartDate}" style="max-width: 150px;"><span class="stack-title">開始時間</span>${item.StartDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FinishDate}" style="max-width: 150px;"><span class="stack-title">結束時間</span>${item.FinishDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${formatDate(DuringTime)}" style="max-width: 150px;"><span class="stack-title">開始時間</span>${formatDate(DuringTime)}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserName}" style="max-width: 150px;"><span class="stack-title">建立人員</span>${item.UserName}</td>
                                        </tr>`;


                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }

            } else {
                alert(data.msg, "alert", 0);
            }

            $(".list-data #tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
        
        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("ExcelMachineEventHistory", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex":  -1,
                "PageSize": -1,
                "MachineName": $("#cboMachineQ@(itemName)").val(),
                "ShopName": $("#cboWorkShopQ@(itemName)").val(),
                "StartDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""), //日期:如果被勾選，就給予值，否則無值
                "FinishDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtFinishDateQ@(itemName)").val() : "")
                
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")                
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }
    </script>
                )


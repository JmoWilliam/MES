@using Business_Manager.Helpers
@{
    string itemName = "ToolTransactions";
    string itemNameText = "工具異動資料查詢";
    string authority = ViewBag.authority;
    //ToolManagment 連結到這個頁面的參數
    string ToolNo = Request["ToolNo"] ?? "";

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
        .btn-secondary {
            color: #6c757d;
             background-color: #fff; 
            border-color: #6c757d;
        }
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>
<!--搜尋內容-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 450px;overflow-y: auto;">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolNoQ@(itemName)">工具編號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolNoQ@(itemName)" name="txtToolNoQ@(itemName)" placeholder="請輸入工具編號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolModelNoQ@(itemName)">工具型號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolModelNoQ@(itemName)" name="txtToolModelNoQ@(itemName)" placeholder="請輸入工具型號" />
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboToolClassQ@(itemName)">類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboToolClassQ@(itemName)" name="cboToolClassQ@(itemName)">
                                    <option value="">-- 請選擇類別 --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboToolCategoryQ@(itemName)">工具種類<span class="text-danger"></span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboToolCategoryQ@(itemName)" name="cboToolCategoryQ@(itemName)">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboTransactionTypeQ@(itemName)">異動類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboTransactionTypeQ@(itemName)" name="cboTransactionTypeQ@(itemName)">
                                    <option value="">-- 請選擇異動類別 --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboToolInventoryQ@(itemName)">倉庫</label>
                            <div class="col-12">
                                <select class="form-control" id="cboToolInventoryQ@(itemName)" name="cboToolInventoryQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboToolLocatorQ@(itemName)">儲位</label>
                            <div class="col-12">
                                <select class="form-control" id="cboToolLocatorQ@(itemName)" name="cboToolLocatorQ@(itemName)"></select>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動日期 <input type="checkbox" id="cbxCreateDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>


                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
                <button type="button" class="btn btn-success  auth-excel" onclick="Excel@(itemName)()" style="margin: auto;"><i class="fas fa-file-excel"></i>匯出</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-secondary">
                                <input type="radio" name="timeStatus@(itemName)" value="history" checked />
                               歷史查詢
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="timeStatus@(itemName)" value="now" />
                                現況
                            </label>
                           
                        </div>
                    </div>
                </div>

                
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 60px;">#</th>
                                        <th scope="col" style="min-width: 90px;">工具編號</th>
                                        <th scope="col" style="min-width: 50px;">工具型號</th>
                                        <th scope="col" style="min-width: 75px;">類別</th>
                                        <th scope="col" style="min-width: 160px;">種類名</th>
                                        <th scope="col" style="min-width: 95px;">異動類別</th>
                                        <th scope="col" style="min-width: 125px;">異動日期</th>
                                        <th scope="col" style="min-width: 125px;">異動原因</th>
                                        <th scope="col" style="min-width: 50px;">倉庫</th>
                                        <th scope="col" style="min-width: 55px;">儲位</th>
                                        <th scope="col" style="min-width: 50px;">新增人員</th>
                                        <th scope="col" style="min-width: 55px;">加工數</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            //初始化
            let currentDate = new Date();


            //ToolManagment 連結到這個頁面
            let ToolNo = "@ToolNo";
            
            if (ToolNo) {
                $("#txtToolNoQ@(itemName)").val(ToolNo);
               
            }
            
            //時間
            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);
            //下拉搜尋
            ComboBoxs.Default("#cboToolClassQ@(itemName)", "@Url.Action("GetToolClass", "Tool")", { "Status": "A" }, "", "ALL", "", "ToolClassName", "ToolClassId");
            ComboBoxs.Default("#cboToolCategoryQ@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "Status": "A" }, "", "ALL", "", "ToolCategoryName", "ToolCategoryId");
            ComboBoxs.Default("#cboTransactionTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "ToolTransactions.TransactionType" }, "", "CHOOSE", "全部", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboToolInventoryQ@(itemName)", "@Url.Action("GetToolInventory", "Tool")", { "Status": "A" }, "", "ALL", "", "ToolInventoryName", "ToolInventoryId");
            ComboBoxs.Default("#cboToolLocatorQ@(itemName)", "@Url.Action("GetToolLocator", "Tool")", { "Status": "A" }, "", "ALL", "", "ToolLocatorName", "ToolLocatorId");

            //下拉輸入搜尋
            $("#cboToolCategoryQ@(itemName), #cboToolInventoryQ@(itemName), #cboToolLocatorQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            //類別>種類
            $("#cboToolClassQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolCategoryQ@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "ToolClassId": $("#cboToolClassQ@(itemName)").val(), "Status": "A" }, "", "CHOOSE", "全部", "ToolCategoryName", "ToolCategoryId");
            });


            //倉庫>儲位
            $("#cboToolInventoryQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolLocatorQ@(itemName)", "@Url.Action("GetToolLocator", "Tool")", { "ToolInventoryId": $("#cboToolInventoryQ@(itemName)").val(), "Status": "A" }, "", "CHOOSE", "全部", "ToolLocatorName", "ToolLocatorId");
            });


            //搜尋動作
            Query@(itemName)();

            //點擊狀態切換的時候，進行查詢的動作
            $("input[name=timeStatus@(itemName)]").change(function () {
                 Query@(itemName)();
            });
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetToolTransaction", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ToolNo": $("#txtToolNoQ@(itemName)").val(),
                "ToolModelNo": $("#txtToolModelNoQ@(itemName)").val(),
                "ToolClassId": $("#cboToolClassQ@(itemName)").val(),
                "ToolCategoryId": $("#cboToolCategoryQ@(itemName)").val(),
                "TransactionType": $("#cboTransactionTypeQ@(itemName)").val(),
                "ToolInventoryId": $("#cboToolInventoryQ@(itemName)").val(),
                "ToolLocatorId": $("#cboToolLocatorQ@(itemName)").val(),
                "StartDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""), //日期:如果被勾選，就給予值，否則無值
                "EndDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "TimeStatus": $("input[name='timeStatus@(itemName)']:checked").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">工具編號</span>${item.ToolNo}</td>
                                        <td><span class="stack-title">工具型號</span>${item.ToolModelNo}</td>
                                        <td><span class="stack-title">類別</span>${item.ToolClassName}</td>
                                        <td><span class="stack-title">種類名</span>${item.ToolCategoryName}</td>
                                        <td><span class="stack-title">異動類別</span>${item.TransactionTypeName}</td>
                                        <td><span class="stack-title">異動日期</span>${item.CreateDate}</td>
                                        <td><span class="stack-title">異動原因</span>${item.TransactionReason}</td>
                                        <td><span class="stack-title">倉庫</span>${item.ToolInventoryName}</td>
                                        <td><span class="stack-title">儲位</span>${item.ToolLocatorName}</td>
                                        <td><span class="stack-title">新增人員</span>${item.UserName}</td>
                                        <td><span class="stack-title">加工數</span>${item.ProcessingQty}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }


        function Excel@(itemName)() {
            let targetUrl = "@Url.Action("ExcelToolTransaction", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex":  -1,
                "PageSize": -1,
                "ToolNo": $("#txtToolNoQ@(itemName)").val(),
                "ToolModelNo": $("#txtToolModelNoQ@(itemName)").val(),
                "ToolClassId": $("#cboToolClassQ@(itemName)").val(),
                "ToolCategoryId": $("#cboToolCategoryQ@(itemName)").val(),
                "TransactionType": $("#cboTransactionTypeQ@(itemName)").val(),
                "ToolInventoryId": $("#cboToolInventoryQ@(itemName)").val(),
                "ToolLocatorId": $("#cboToolLocatorQ@(itemName)").val(),
                "StartDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""), //日期:如果被勾選，就給予值，否則無值
                "EndDate": ($("#cbxCreateDate@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "TimeStatus": "now"
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                alert("匯出成功!!!!", "success")                
                FileAccess.AjaxDownload(targetUrl, postData, false);
            }
        }

    </script>
)
</div>


<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-header">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                        <button type="button" class="btn btn-success  auth-excel" onclick="SelectOrder()" style="margin: auto;"><i class="fas fa-search"></i>彙總資料</button>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6">
                        <div id="totalAmout"></div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">單據</th>
                                        <th scope="col" style="min-width: 150px;">供應商</th>
                                        <th scope="col" style="min-width: 150px;">品號</th>
                                        <th scope="col" style="min-width: 150px;">品名</th>
                                        <th scope="col" style="min-width: 120px;">差距金額</th>
                                        <th scope="col" style="min-width: 120px;">單價比較</th>
                                        <th scope="col" style="min-width: 120px;">價格比較</th>
                                        <th scope="col" style="min-width: 120px;">採購數量</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 100
        };

        let objForm@(itemName) = "#queryForm@(itemName)";

        let moProcessList = [];

        $(document).ready(function () {
            $(window).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#tblData@(itemName)").hide();

            if ("@Iframe" == "T") {
                $(objForm@(itemName) + " input").attr("disabled", true);
                $(objForm@(itemName) + " select").attr("disabled", true);
            }

            let currentDate = new Date();
            Suites.DatePicker("txtChooseEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.DatePicker("txtChooseStartDateQ@(itemName)", currentDate);

            ComboBoxs.Default("#cboPoErpPrefixQ1@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "PoErpPrefix" }, "", "CHOOSE", "請選擇採購單別", "PoFullName", "PoErpPrefix"); //採購單別
            ComboBoxs.Default("#cboSupplierNoQ@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "NA", "", "SupplierWithNo", "SupplierNo");
            ComboBoxs.Default("#cboSupplierNoQ1@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "CHOOSE", "請選擇供應商", "SupplierWithNo", "SupplierNo");

            //Query@(itemName)()
            
            $("#cboPoErpPrefixQ1@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
            $("#cboSupplierNoQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
            $("#cboSupplierNoQ1@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
            
            $("#cboSupplierNoQ1@(itemName), #cboPoErpPrefixQ1@(itemName)").change(function () {
                let PoPrefix = $("#cboPoErpPrefixQ1@(itemName)").val()
                if (PoPrefix == "3302" || PoPrefix == "3308") {
                    alert("單別3302和3308資料合併計算")
                }
                GetSourceOrder('Y')
            });
            
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;

            InitData@(itemName)(objPage@(itemName));
            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            $("#tblData@(itemName)").show();

            let innerHtml = '';
            let totalAmout = 0;

            let pageCount = 0;
            let targetUrl = "@Url.Action("GetPurchasePriceTrend", "MesReport")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "MtlItemName": $("#txtMtlItemNameQ@(itemName)").val(),
                "ChooseStartDate": ($("#cbxChooseStartDateQ@(itemName)").is(":checked") ? $("#txtChooseStartDateQ@(itemName)").val() : ""),
                "ChooseEndDate": ($("#cbxChooseStartDateQ@(itemName)").is(":checked") ? $("#txtChooseEndDateQ@(itemName)").val() : ""),
                "PriceDown": ($("#cbxPriceDownQ@(itemName)").is(":checked") ? $("#cbxPriceDownQ@(itemName)").val() : ""),
                "PriceUp": ($("#cbxPriceUpQ@(itemName)").is(":checked") ? $("#cbxPriceUpQ@(itemName)").val() : ""),
                "PriceKeep": ($("#cbxPriceKeepQ@(itemName)").is(":checked") ? $("#cbxPriceKeepQ@(itemName)").val() : ""),
                "SupplierNo": $("#cboSupplierNoQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);
            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        var colorStyle = "";
                        if (item.nowCost > item.lastCost) {
                            colorStyle = "green"
                        }
                        else {
                            colorStyle = "red"
                        }
                        totalAmout += parseInt(item.diffCost)
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.OderFull}</td>
                                        <td>${item.Supplier}</td>
                                        <td>${item.MtlItemNo}</td>
                                        <td>${item.MtlItemName}</td>
                                        <td><span style="color:${colorStyle}">${item.diffCost}<span></td>
                                        <td>現在單價價格:${item.price}<br>
                                            去年單價價格:${item.lastPrice}<br>
                                        </td>
                                        <td>現在價格:${item.nowCost}<br>
                                            去年價格:${item.lastCost}<br>
                                        </td>
                                        <td>${item.Qty}</td>
                                      <tr></tr>`;

                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="12" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        //前置單據視窗開啟
        function SelectOrder() {
            $("#PopViewOrder@(itemName)").modal("show");

            GetSourceOrder("First")
        }

        let RestData = ""

        function Reset() {
            $("#PopViewOrder@(itemName)").modal("show");
            ComboBoxs.Default("#cboSupplierNoQ1@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "NA", "", "SupplierWithNo", "SupplierNo");
            ComboBoxs.Default("#cboPoErpPrefixQ1@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "PoErpPrefix" }, "", "CHOOSE", "請選擇採購單別", "PoFullName", "PoErpPrefix"); //採購單別

            GetSourceOrder()
        }



        //前置單據視窗-取得暫出單資料
        function GetSourceOrder(OpenStatus) {
            if (RestData.length > 0 && OpenStatus !== "Y") {
                $("#tblPopOrder@(itemName) tbody").html(RestData);
                return
            }

            let innerHtml = "";
            let targetUrl = "@Url.Action("GetPurchasePriceTrendSummary", "MesReport")";
            let postData = {
                "PoPrefix": $("#cboPoErpPrefixQ1@(itemName)").val(),
                "SupplierNo": $("#cboSupplierNoQ1@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {

                if (data.result.length >0) {

                    $.each(data.result, function (i, item) {
                        var colorStyle = "";
                        var sign = parseFloat(item.diffCostSum)
                        if (isNaN(sign)) {
                            //sign = '輸入不是有效數字';
                        } else if (sign> 0) {
                            colorStyle = "green"
                        } else if (sign < 0) {
                            colorStyle = "red"
                        }
                        //if (item.diffCostPer > 0) {
                        //    colorStyle = "green"
                        //}
                        //else if (item.diffCostPer < 0)  {
                        //    colorStyle = "red"
                        //}
                        innerHtml += `<tr>
                                        <td>${i+1}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.YearMonth}" style="max-width: 165px;">
                                          ${item.YearMonth}
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.diffCostSum}" style="max-width: 165px;color:${colorStyle}">
                                          ${item.diffCostSum}
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.diffCostPer}" style="max-width: 165px;color:${colorStyle}">
                                          ${item.diffCostPer}
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="4" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }
            if (OpenStatus == "First") {
                RestData = innerHtml
            }
            $("#tblPopOrder@(itemName) tbody").html(innerHtml);
        }

        //前置單據視窗關閉
        function ClosePopView() {
            $("#PopViewOrder@(itemName)").modal("hide");
        }



        function Excel@(itemName)() {

            let targetUrl = "@Url.Action("ExcelPurchasePriceTrend", "MesReport")";
            let postData = {
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "MtlItemName": $("#txtMtlItemNameQ@(itemName)").val(),
                "ChooseStartDate": ($("#cbxChooseStartDateQ@(itemName)").is(":checked") ? $("#txtChooseStartDateQ@(itemName)").val() : ""),
                "ChooseEndDate": ($("#cbxChooseStartDateQ@(itemName)").is(":checked") ? $("#txtChooseEndDateQ@(itemName)").val() : ""),
                "SupplierNo": $("#cboSupplierNoQ@(itemName)").val(),
                "PriceDown": ($("#cbxPriceDownQ@(itemName)").is(":checked") ? $("#cbxPriceDownQ@(itemName)").val() : ""),
                "PriceUp": ($("#cbxPriceUpQ@(itemName)").is(":checked") ? $("#cbxPriceUpQ@(itemName)").val() : ""),
                "PriceKeep": ($("#cbxPriceKeepQ@(itemName)").is(":checked") ? $("#cbxPriceKeepQ@(itemName)").val() : ""),
            };

            FileAccess.AjaxDownload(targetUrl, postData, false);

        }

    </script>
                                )

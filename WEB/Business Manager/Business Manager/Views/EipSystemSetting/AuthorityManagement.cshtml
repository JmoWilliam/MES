@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            Query@(itemName)();

            $("#listData@(itemName) a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });

            $('.advanced-block a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                InitParameter@(itemName)($(this));
            });
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetRole", "EipSystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "RoleName": $("#txtRoleNameQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RoleName}" style="max-width: 150px;">
                                          <span class="stack-title">角色名稱</span>
                                          ${(item.AdminStatus == `Y` ? `<span style="color: gold;"><i class="fas fa-crown"></i></span>` : ``)}
                                          ${item.RoleName}
                                        </td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="cbxStatus@(itemName)" data-role-id="${item.RoleId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.RoleId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-authority-setting" href="javascript:Setting@(itemName)(${item.RoleId});"><i class="fas fa-id-card-alt"></i><span>權限設定</span></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="4" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='cbxStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='cbxStatus@(itemName)'][data-role-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(roleId) {
            $("#RoleId").val(roleId ? roleId : 0);

            Switch("#editData@(itemName)", "#listData@(itemName)");

            if (roleId > 0) {
                let targetUrl = "@Url.Action("GetRole", "EipSystemSetting")";
                let postData = {
                    "RoleId": roleId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtRoleName@(itemName)").val(item.RoleName);
                        $("#cbxAdminStatus@(itemName)").prop("checked", item.AdminStatus == "Y" ? true : false);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let RoleId = parseInt($("#RoleId").val());

                if (RoleId <= 0) {
                    let targetUrl = "@Url.Action("AddRole", "EipSystemSetting")";
                    let postData = {
                        "RoleName": $("#txtRoleName@(itemName)").val(),
                        "AdminStatus": $("#cbxAdminStatus@(itemName):checked").length > 0 ? "Y" : "N"
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateRole", "EipSystemSetting")";
                    let postData = {
                        "RoleId": RoleId,
                        "RoleName": $("#txtRoleName@(itemName)").val(),
                        "AdminStatus": $("#cbxAdminStatus@(itemName):checked").length > 0 ? "Y" : "N"
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Switch("#listData@(itemName)", ".advanced-block");
            $(".unit-block").hide();

            if ($("#listData@(itemName) .nav-tabs > .nav-item > .nav-link").first().hasClass("active")) {
                Query@(itemName)();
            } else {
                $("#listData@(itemName) .nav-tabs > .nav-item").first().find("a").trigger("click");
            }
        }

        function StatusSwitch@(itemName)() {
            var roleId = $(this).data("role-id");

            let targetUrl = "@Url.Action("UpdateRoleStatus", "EipSystemSetting")";
            let postData = {
                "RoleId": roleId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }

        function Setting@(itemName)(RoleId) {
            let innerHtml = '';

            if (RoleId > 0) {
                $("#RoleId").val(RoleId);

                Switch(".advanced-block", "#listData@(itemName)");
                $(".unit-block").show();

                let targetUrl = "@Url.Action("GetRole", "EipSystemSetting")";
                let postData = {};

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        innerHtml += '<a class="dropdown-item" href="javascript:Setting@(itemName)(' + item.RoleId + ');">' + item.RoleName + '</a>';

                        if (item.RoleId == RoleId) $("#roleName@(itemName)").html(item.RoleName);
                    });

                    if ($(".advanced-block .nav-tabs > .nav-item > .nav-link").first().hasClass("active")) {
                        InitParameter@(itemName)($(".advanced-block .nav-tabs > .nav-item").first().find("a"));
                    } else {
                        $(".advanced-block .nav-tabs > .nav-item").first().find("a").trigger("click");
                    }
                } else {
                    alert(data.msg, "alert", 0);
                }
            } else {
                alert("請先選擇角色", "alert");
            }

            $("#roleList@(itemName)").html(innerHtml);
        }

        function InitParameter@(itemName)(selector) {
            let initFnString = "Query";
            let content = selector.attr("href").split('#tab')[1].split('@(itemName)')[0];

            switch (content) {
                case "RoleList":
                    initFnString += "AuthorityManagement";
                    break;
                case "UserList":
                    initFnString += "AuthorityUserManagement";
                    break;
                case "Role":
                    initFnString += "AuthorityRoleFunctionDetail";
                    break;
                case "User":
                    initFnString += "RoleUser";
                    break;
                //case "MemberCustCorpList":
                //    initFnString += "MemberCustManagement";
                //    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        } 
    </script>
)
@using Business_Manager.Helpers
@{
    string itemName = "FunctionDetail";
    string itemNameText = "客戶系統-詳細功能設定";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtFnDetailCodeQ@(itemName)">功能詳細代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtFnDetailCodeQ@(itemName)" name="txtFnDetailCodeQ@(itemName)" placeholder="請輸入功能詳細代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtFnDetailNameQ@(itemName)">功能詳細名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtFnDetailNameQ@(itemName)" name="txtFnDetailNameQ@(itemName)" placeholder="請輸入功能詳細名稱" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-detail" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 125px;">#</th>
                                        <th scope="col" style="min-width: 100px;">功能詳細代碼</th>
                                        <th scope="col" style="min-width: 200px;">功能詳細名稱</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="FnDetailId" name="FnDetailId" value="-1" />
                        <div class="form-group row mb-2">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtFnDetailCode@(itemName)">功能詳細代碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboFnDetailCode@(itemName)" name="cboFnDetailCode@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12 col-md-3 col-lg-3"></div>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtFnDetailCode@(itemName)" name="txtFnDetailCode@(itemName)" placeholder="請輸入功能詳細代碼"
                                       data-msg-required="請輸入功能詳細代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtFnDetailName@(itemName)">功能詳細名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtFnDetailName@(itemName)" name="txtFnDetailName@(itemName)" placeholder="請輸入功能詳細名稱"
                                       data-msg-required="請輸入功能詳細名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize":999
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Expand@(itemName)() {
            if (parseInt($("#FunctionId").val()) > 0) {
                $(".advanced-block").slideDown("slow");

                Return@(itemName)();
            } else {
                alert("請先儲存功能", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetFunctionDetail", "EipSystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "FunctionId": $("#FunctionId").val(),
                "FnDetailCode": $("#txtFnDetailCodeQ@(itemName)").val(),
                "FnDetailName": $("#txtFnDetailNameQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr id="${item.FnDetailId}">
                                        <td class="text-center active-content">
                                          <a class="active-link sort-handle" href="javascript:void(0);"><i class="fas fa-arrows-alt"></i><span>排序</span></a>
                                        </td>
                                        <td><span class="stack-title">功能詳細代碼</span>${item.FnDetailCode}</td>
                                        <td><span class="stack-title">功能詳細名稱</span>${item.FnDetailName}</td>
                                        <td class="text-center auth-detail">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-detail-id="${item.FnDetailId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-detail"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-detail" href="javascript:Edit@(itemName)(${item.FnDetailId});"><i class="fas fa-edit"></i></a>                           
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-detail-id]").change(StatusSwitch@(itemName));

            $("#tblData@(itemName) tbody").sortable({
                cancel: ".disabled-sort",
                handle: ".sort-handle",
                update: function (event, ui) {

                    let targetUrl = "@Url.Action("UpdateFunctionDetailSort", "EipSystemSetting")";
                    let postData = {
                        "FunctionId": $("#FunctionId").val(),
                        "FunctionDetailList": $(this).sortable("toArray", { attribute: 'id' }).join()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Edit@(itemName)(FnDetailId) {
            $("#FnDetailId").val(FnDetailId ? FnDetailId : 0);

            Switch("#editData@(itemName)", "#listData@(itemName)");

            ComboBoxs.WithText("#cboFnDetailCode@(itemName)", "@Url.Action("GetFunctionDetailCode", "EipSystemSetting")", {}, "", "HIDDEN", "快速選擇", "FnDetailName", "FnDetailCode");

            if (FnDetailId > 0) {
                let targetUrl = "@Url.Action("GetFunctionDetail", "EipSystemSetting")";
                let postData = {
                    "FnDetailId": FnDetailId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtFnDetailCode@(itemName)").val(item.FnDetailCode);
                        $("#txtFnDetailName@(itemName)").val(item.FnDetailName);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }   

            if (!isMobile) {
                $("#cboFnDetailCode@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#cboFnDetailCode@(itemName)").off("change").on("change", function () {
                $("#txtFnDetailCode@(itemName)").val($("#cboFnDetailCode@(itemName) option:selected").val()).focus();
                $("#txtFnDetailName@(itemName)").val($("#cboFnDetailCode@(itemName) option:selected").data("text")).focus();
                ResetElement("#cboFnDetailCode@(itemName)");
            });
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let FnDetailId = parseInt($("#FnDetailId").val());

                if (FnDetailId <= 0) {
                    let targetUrl = "@Url.Action("AddFunctionDetail", "EipSystemSetting")";
                    let postData = {
                        "FunctionId": $("#FunctionId").val(),
                        "FnDetailCode": $("#txtFnDetailCode@(itemName)").val(),
                        "FnDetailName": $("#txtFnDetailName@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateFunctionDetail", "EipSystemSetting")";
                    let postData = {
                        "FnDetailId": FnDetailId,
                        "FunctionId": $("#FunctionId").val(),
                        "FnDetailCode": $("#txtFnDetailCode@(itemName)").val(),
                        "FnDetailName": $("#txtFnDetailName@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(FnDetailId) {
        swal.fire({
            titleText: "確認要刪除嗎?",
            text: "此動作無法復原，請確認是否要執行!",
            icon: "warning",
            allowOutsideClick: false,
            allowEscapeKey: false,
            showCancelButton: true,
            confirmButtonColor: '#d33',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                let targetUrl = "@Url.Action("DeleteFunctionDetail", "EipSystemSetting")";
                let postData = {
                    "FnDetailId": FnDetailId
                };
                let result = DataAccess.Delete(targetUrl, postData, false, true);
                if (result) {
                   Return@(itemName)();
                }
            }
        });
    }


        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var FnDetailId = $(this).data("detail-id");

            let targetUrl = "@Url.Action("UpdateFunctionDetailStatus", "EipSystemSetting")";
            let postData = {
                "FnDetailId": FnDetailId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }

    </script>
)
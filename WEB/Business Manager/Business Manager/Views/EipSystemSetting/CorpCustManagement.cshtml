@Html.Partial("ViewCsCustomer")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let companyId@(itemName);

        $(document).ready(function () {
            GetUserInfo@(itemName)();

            Query@(itemName)();

            $("#listData@(itemName) a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });

            $('.advanced-block a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                InitParameter@(itemName)($(this));
            });

            ComboBoxs.Default("#cboCompanyIdQ@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", {}, "", "ALL", "", "CompanyWithNo", "CompanyId");
            ComboBoxs.Default("#cboCsCustIdQ@(itemName)", "@Url.Action("GetCsCustomer", "EipSystemSetting")", { "Status": "A" }, "", "ALL", "", "CNameAndEName", "CsCustId");

            $("#cboCsCustIdQ@(itemName), #cboCompanyIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        });

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetCorpCust", "EipSystemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "CompanyId": $("#cboCompanyIdQ@(itemName)").val(), //companyId@(itemName)
                "CsCustId": $("#cboCsCustIdQ@(itemName) :selected").val(),
                "Status": $("input[name='cbxStatusQ@(itemName)']:checked").toArray().map(item => item.value).join()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CNameAndEName}" style="max-width: 200px;"><span class="stack-title">客戶名稱</span>
                                            ${item.CNameAndEName}
                                        </td>
                                        <td class="text-left" data-toggle="tooltip" style="max-width: 200px;"><span class="stack-title">所屬客戶公司別</span>
                                            ${CompanyList@(itemName)(item.CsCustId, item.Companys)}
                                        </td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="cbxStatus@(itemName)" data-cscust-id="${item.CsCustId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.CsCustId});"><i class="fas fa-edit"></i></a>
                                            <a class="active-link auth-update" href="javascript:Delete@(itemName)(${item.CsCustId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='cbxStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='cbxStatus@(itemName)'][data-cscust-id]").change(StatusSwitch@(itemName));

            function CompanyList@(itemName)(cscustId, source) {
                let html = '';

                if (!!source) {
                    //let json = JSON.parse(source);
                    $.each(source, function (i, item) {
                        if (item.CompanyId == companyId@(itemName)) {
                            html += `<a class="btn btn-outline-secondary CustomerWithCorp-item" title="${item.CompanyName} ${item.CNameAndEName}" href="javascript:DeleteDetail@(itemName)(${cscustId}, ${item.CustomerId});">
                                      ${item.LogoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${item.LogoIcon}" />`}${item.CompanyName} ${item.CNameAndEName}
                                    </a>`;
                        }
                        else {
                            html += `<div>${item.LogoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${item.LogoIcon}" />`} ${item.CompanyName} ${item.CNameAndEName}</div>`
                        }
                    });
                }

                return html;
            }
        }

        function Edit@(itemName)(cscustId) {
            $("#CsCustId").val(cscustId ? cscustId : 0);

            Switch("#editData@(itemName)", "#listData@(itemName)");


            ComboBoxs.Default("#cboCustomers@(itemName)", "@Url.Action("GetCustomer", "EipSystemSetting")", { "Status": "A", "CompanyId": companyId@(itemName) }, "", "CHOOSE", "", "CustWithCorp", "CustomerId");
            @*ComboBoxs.Default("#cboCsCustomers@(itemName)", "@Url.Action("GetCsCustomer", "EipSystemSetting")", { "Status": "A" }, "", "CHOOSE", "", "CNameAndEName", "CsCustId");*@

            if (cscustId > 0) {
                let targetUrl = "@Url.Action("GetCorpCust", "EipSystemSetting")";
                let postData = {
                    "CsCustId": cscustId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    if (!!data.result) {
                        $.each(data.result, function (i, item) {
                            $("#txtCustomerName@(itemName)").val(item.CustomerName);
                            $("#txtCustomerEnglishName@(itemName)").val(item.CustomerEnglishName);

                            $("#cboCustomers@(itemName)").val(item.CustomerIds);
                        });
                    }
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            $("#cboCustomers@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            let popConfig = {
                targetSelector: "#cboCsCustomers@(itemName)",
                popFunction: "PopViewCsCustomer",
                objectCsCustId: "#cboCsCustomers@(itemName)",
                type: "checkbox"
            };
            InitPopView(popConfig);
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let cscustId = parseInt($("#CsCustId").val());

                if (cscustId <= 0) {
                    let targetUrl = "@Url.Action("AddCsCustomerDetail", "EipSystemSetting")";
                    let postData = {
                        "CompanyId": companyId@(itemName),
                        "CustomerName": $("#txtCustomerName@(itemName)").val(),
                        "CustomerEnglishName": $("#txtCustomerEnglishName@(itemName)").val(),
                        "Customers": $("#cboCustomers@(itemName)").val().join(",")
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
                else {
                    let targetUrl = "@Url.Action("UpdateCsCustomerDetail", "EipSystemSetting")";
                    let postData = {
                        "CompanyId": companyId@(itemName),
                        "CsCustId": cscustId,
                        "CustomerName": $("#txtCustomerName@(itemName)").val(),
                        "CustomerEnglishName": $("#txtCustomerEnglishName@(itemName)").val(),
                        "Customers": $("#cboCustomers@(itemName)").val().join(","),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(cscustId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteCsCustomer", "EipSystemSetting")";
                    let postData = {
                        "CsCustId": cscustId,
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function DeleteDetail@(itemName)(cscustId, customerId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteCsCustomerDetail", "EipSystemSetting")";
                    let postData = {
                        "CsCustId": cscustId,
                        "CustomerId": customerId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");

            if ($("#listData@(itemName) .nav-tabs > .nav-item > .nav-link").first().hasClass("active")) {
                Query@(itemName)();
            } else {
                $("#listData@(itemName) .nav-tabs > .nav-item").first().find("a").trigger("click");
            }
        }

        function StatusSwitch@(itemName)() {
            var cscustId = $(this).data("cscust-id");

            let targetUrl = "@Url.Action("UpdateCsCustomerStatus", "EipSystemSetting")";
            let postData = {
                "CsCustId": cscustId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }


        function InitParameter@(itemName)(selector) {
            let initFnString = "Query";
            let content = selector.attr("href").split('#tab')[1].split('@(itemName)')[0];

            switch (content) {
                case "CorpCustList":
                    initFnString += "AuthorityManagement";
                    break;
                case "MemberCustCorpList":
                    initFnString += "MemberCustManagement";
                    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        }
</script>
        )
@using Business_Manager.Helpers
@{
    string itemName = "ViewPurchaseRequisition";
    string itemNameText = "查看請購單資料";
}

@Html.Resource("css",
    @<style>
         .source-user {
             font-size: 1rem;
             color: #4d80c4;
         }

         .source-contact {
             font-size: 1rem;
             color: #27b390;
         }

             .source-user i, .source-contact i {
                 margin-right: 5px;
             }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtPrNoQ@(itemName)" name="txtPrNoQ@(itemName)"
                                               placeholder="請輸入MES單號" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtPrErpFullNoQ@(itemName)" name="txtPrErpFullNoQ@(itemName)"
                                               placeholder="請輸入ERP單別單號" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)"
                                               placeholder="請輸入請購品號" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 250px;">MES請購單號</th>
                                        <th scope="col" style="min-width: 250px;">ERP請購單號</th>
                                        <th scope="col" style="min-width: 175px;">BPM請購單號</th>
                                        <th scope="col" style="min-width: 175px;">版次</th>
                                        <th scope="col" style="min-width: 175px;">請購人員</th>
                                        <th scope="col" style="min-width: 175px;">請購部門</th>
                                        <th scope="col" style="min-width: 175px;">請購日期</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let targetSelector@(itemName);
        let prId@(itemName);
        let prNo@(itemName);
        let departmentId@(itemName);
        let bpmNo@(itemName);
        let prErpFullNo@(itemName);
        let edition@(itemName);
        let totalQty@(itemName);
        let amount@(itemName);
        let userId@(itemName);
        let prDate@(itemName);
        let docDate@(itemName);
        let companyId@(itemName);

        function Pop@(itemName)(config) {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId
                companyId@(itemName) = data.returnData.CompanyId
            } else {
                alert(data.msg, "alert", 0);
            }

            targetSelector@(itemName) = config.targetSelector;
            prId@(itemName) = config.objectPrId;
            prNo@(itemName) = config.objectPrNo;
            departmentId@(itemName) = config.objectDepartmentId;
            bpmNo@(itemName) = config.objectBpmNo;
            prErpFullNo@(itemName) = config.objectPrErpFullNo;
            edition@(itemName) = config.objectEdition;
            totalQty@(itemName) = config.objectTotalQty;
            amount@(itemName) = config.objectAmount;
            userId@(itemName) = config.objectUserId;
            prDate@(itemName) = config.objectPrDate;
            docDate@(itemName) = config.objectDocDate;

            if (!isMobile) {
                $("#cboDepartmentIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "" + userDepartmentId + "", "CHOOSE", "", "DepartmentWithNo", "DepartmentId");

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#txtPrNoQ@(itemName), #txtPrErpFullNoQ@(itemName), #txtMtlItemNoQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetPurchaseRequisition", "PurchaseRequisition")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "PrNo": $("#txtPrNoQ@(itemName)").val(),
                "PrErpFullNo": $("#txtPrErpFullNoQ@(itemName)").val(),
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val(),
                "PrStatus": "Y"
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.PrNo}</td>
                                        <td>${item.PrErpPrefix}-${item.PrErpNo}</td>
                                        <td>${item.BpmNo}</td>
                                        <td>${item.Edition}</td>
                                        <td><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        <td>${item.DepartmentNo}-${item.DepartmentName}</td>
                                        <td>${item.PrDate}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-pr-id="${item.PrId}" value="${item.PrId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" id="txtPrNo@(itemName)" data-pr-id="${item.PrId}" value="${item.PrNo}"/>
                                          <input type="hidden" id="txtDepartmentId@(itemName)" data-pr-id="${item.PrId}" value="${item.DepartmentId}"/>
                                          <input type="hidden" id="txtBpmNo@(itemName)" data-pr-id="${item.PrId}" value="${item.BpmNo}"/>
                                          <input type="hidden" id="txtPrErpFullNo@(itemName)" data-pr-id="${item.PrId}" value="${item.PrErpPrefix}-${item.PrErpNo}"/>
                                          <input type="hidden" id="txtEdition@(itemName)" data-pr-id="${item.PrId}" value="${item.Edition}"/>
                                          <input type="hidden" id="txtTotalQty@(itemName)" data-pr-id="${item.PrId}" value="${item.TotalQty}"/>
                                          <input type="hidden" id="txtAmount@(itemName)" data-pr-id="${item.PrId}" value="${item.Amount}"/>
                                          <input type="hidden" id="txtUserId@(itemName)" data-pr-id="${item.PrId}" value="${item.UserId}"/>
                                          <input type="hidden" id="txtDocDate@(itemName)" data-pr-id="${item.PrId}" value="${item.DocDate}"/>
                                          <input type="hidden" id="txtPrDate@(itemName)" data-pr-id="${item.PrId}" value="${item.PrDate}"/>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-pr-id]:checked") {
                    let prId = $(this).data("pr-id");

                    if (prId) {
                        let prNo = $(`input[id="txtPrNo@(itemName)"][data-pr-id="${prId}"]`).val();
                        let departmentId = $(`input[id="txtDepartmentId@(itemName)"][data-pr-id="${prId}"]`).val();
                        let bpmNo = $(`input[id="txtBpmNo@(itemName)"][data-pr-id="${prId}"]`).val();
                        let prErpFullNo = $(`input[id="txtPrErpFullNo@(itemName)"][data-pr-id="${prId}"]`).val();
                        let edition = $(`input[id="txtEdition@(itemName)"][data-pr-id="${prId}"]`).val();
                        let totalQty = $(`input[id="txtTotalQty@(itemName)"][data-pr-id="${prId}"]`).val();
                        let amount = $(`input[id="txtAmount@(itemName)"][data-pr-id="${prId}"]`).val();
                        let userId = $(`input[id="txtUserId@(itemName)"][data-pr-id="${prId}"]`).val();
                        let prDate = $(`input[id="txtPrDate@(itemName)"][data-pr-id="${prId}"]`).val();
                        let docDate = $(`input[id="txtDocDate@(itemName)"][data-pr-id="${prId}"]`).val();

                        if (prId@(itemName)) ElementSetValue(prId@(itemName), prId, "change");
                        if (prNo@(itemName)) ElementSetValue(prNo@(itemName), prNo, "change");
                        if (departmentId@(itemName)) ElementSetValue(departmentId@(itemName), departmentId, "change");
                        if (bpmNo@(itemName)) ElementSetValue(bpmNo@(itemName), bpmNo, "change");
                        if (prErpFullNo@(itemName)) ElementSetValue(prErpFullNo@(itemName), prErpFullNo, "change");
                        if (edition@(itemName)) ElementSetValue(edition@(itemName), edition, "change");
                        if (totalQty@(itemName)) ElementSetValue(totalQty@(itemName), totalQty, "change");
                        if (amount@(itemName)) ElementSetValue(amount@(itemName), amount, "change");
                        if (userId@(itemName)) ElementSetValue(userId@(itemName), userId, "change");
                        if (prDate@(itemName)) ElementSetValue(prDate@(itemName), prDate, "change");
                        if (docDate@(itemName)) ElementSetValue(docDate@(itemName), docDate, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
                )
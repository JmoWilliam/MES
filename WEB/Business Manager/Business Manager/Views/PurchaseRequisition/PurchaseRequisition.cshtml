                        $("#txtPrNo@(itemName)").val(prNo);
                        $("#cboPrErpPrefix@(itemName)").prop("disabled", true);
                        ExpandPrDetail(prId);
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdatePurchaseRequisition", "PurchaseRequisition")";
                    let postData = {

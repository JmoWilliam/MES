@using Business_Manager.Helpers
@{
    string itemName = "PurchaseRequisition";
    string itemNameText = "請購單資料管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .help-block {
             display: none;
             margin: 5px 0 0;
             border: 3px dashed #b1b1b1;
             border-radius: 5px;
             padding: 5px 10px;
         }

         dt {
             float: left;
             clear: left;
             width: 110px;
         }

             dt::after {
                 content: "：";
             }

         dd {
             margin: 0 0 0 80px;
             padding: 0;
             color: #36a2f5;
             font-weight: bold;
         }
    </style>
                        )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">MES請購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrNoQ@(itemName)" name="txtPrNoQ@(itemName)"
                                       placeholder="請輸入MES請購單號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">ERP請購單別單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrErpFullNoQ@(itemName)" name="txtPrErpFullNoQ@(itemName)"
                                       placeholder="請輸入ERP請購單別單號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購品號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)"
                                       placeholder="請輸入品號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">採購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPoErpFullNoQ@(itemName)" name="txtPoErpFullNoQ@(itemName)"
                                       placeholder="請輸入採購單號">
                            </div>
                        </div>
                        @*<div class="form-group row">
                                <label class="col-12 col-form-label">版次</label>
                                <div class="col-12">
                                    <input type="text" class="form-control" id="txtEditionQ@(itemName)" name="txtEditionQ@(itemName)"
                                           placeholder="請輸入版次">
                                </div>
                            </div>*@
                        <div class="form-group row">
                            <label class="col-12 col-form-label" style="display: flex; align-items: center; gap: 7px;">請購日期 <input id="useDate@(itemName)" type="checkbox" checked /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtPrDateStartDateQ@(itemName)" name="txtPrDateStartDateQ@(itemName)"
                                       placeholder="請輸入請購日期"
                                       data-msg-required="請輸入請購日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtPrDateEndDateQ@(itemName)" name="txtPrDateStartDateQ@(itemName)"
                                       placeholder="請輸入請購日期"
                                       data-msg-required="請輸入請購日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購單狀態</label>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    新單據
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)N" name="cbxPrStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉BPM中
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)L" name="cbxPrStatusQ@(itemName)" value="L" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    BPM簽核流程
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)P" name="cbxPrStatusQ@(itemName)" value="P" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉BPM失敗
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)R" name="cbxPrStatusQ@(itemName)" value="R" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉ERP失敗
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)F" name="cbxPrStatusQ@(itemName)" value="F" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    MES作廢
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)S" name="cbxPrStatusQ@(itemName)" value="S" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    ERP作廢
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)V" name="cbxPrStatusQ@(itemName)" value="V" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    單據核准
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)Y" name="cbxPrStatusQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    單據修改
                                    <input type="checkbox" id="cbxPrStatusQ@(itemName)E" name="cbxPrStatusQ@(itemName)" value="E" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="max-width: 200px;">MES請購單號</th>
                                        <th scope="col" style="max-width: 200px;">ERP請購單號</th>
                                        <th scope="col" style="max-width: 200px; min-width: 100px;">BPM單號</th>
                                        <th scope="col" style="max-width: 150px;">版次</th>
                                        <th scope="col" style="max-width: 150px;">請購人員</th>
                                        <th scope="col" style="max-width: 200px;">請購部門</th>
                                        <th scope="col" style="max-width: 150px;">單據日期</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">是否拋轉BPM</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">是否拋轉ERP</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">備註</th>
                                        <th scope="col" style="max-width: 150px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 550px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--新增/編輯-->
<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="PrId" name="PrId" value="-1" />

                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtPrNo@(itemName)">MES請購單號<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtPrNo@(itemName)" name="txtPrNo@(itemName)"
                                               value=""
                                               readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboPrErpPrefix@(itemName)">ERP請購單別<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboPrErpPrefix@(itemName)" name="cboPrErpPrefix@(itemName)" required></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtPrErpNo@(itemName)">ERP請購單號<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtPrErpNo@(itemName)" name="txtPrErpNo@(itemName)"
                                               value=""
                                               readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboUserId@(itemName)">請購人員<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboUserId@(itemName)"
                                                data-msg-required="請選擇請購人員" data-rule-required="true" disabled></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboDepartmentId@(itemName)">請購部門<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboDepartmentId@(itemName)"
                                                data-msg-required="請選擇所屬部門" data-rule-required="true"></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtDocDate@(itemName)">單據開立日期<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtDocDate@(itemName)" name="txtDocDate@(itemName)"
                                               placeholder="請輸入單據開立日期"
                                               data-msg-required="請輸入單據開立日期" data-rule-required="true"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtPrDate@(itemName)">請購日期<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtPrDate@(itemName)" name="txtPrDate@(itemName)"
                                               placeholder="請輸入請購日期"
                                               data-msg-required="請輸入請購日期" data-rule-required="true"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboPriority@(itemName)">優先度<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboPriority@(itemName)" name="cboPriority@(itemName)" required></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row bom-type" style="display: none;">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboBomType@(itemName)">請購物料類型<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboBomType@(itemName)" name="cboBomType@(itemName)" required>
                                            <option value="Y" selected>生產或是BOM表內</option>
                                            <option value="N">其他</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtPrFile@(itemName)">附件檔案</label>
                                    <div class="col-12">
                                        <input type="file" id="filePrFile@(itemName)" name="filePrFile@(itemName)" multiple />
                                        <input type="hidden" id="txtPrFile@(itemName)" name="txtPrFile@(itemName)" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtPrRemark@(itemName)">備註</label>
                                    <div class="col-12">
                                        <textarea class="form-control" id="txtPrRemark@(itemName)" name="txtPrRemark@(itemName)" rows="2"
                                                  placeholder="請輸入備註"
                                                  data-msg-required="請輸入備註"
                                                  data-msg-maxlength="必須少於 255 個字元" maxlength="255"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<!--其他分頁-->
<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link  active" data-toggle="tab" href="#tabPrDetail">
                        <i class="fas fa-sliders-h"></i> 設定請購單詳細資料
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabPrDetail">
            @Html.Partial("PrDetail")
        </div>
    </div>
</div>

<!--請購附檔-->
<div class="modal fade" id="uploadFileModal@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">請購附檔管理</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 ">
                        <div class="form-group row">
                            <input type="hidden" id="txtIndexPrId" />
                            <label class="form-label col-12" for="txtIndexPrFile@(itemName)">附件檔案</label>
                            <div class="col-12">
                                <input type="file" id="fileIndexPrFile@(itemName)" name="fileIndexPrFile@(itemName)" multiple />
                                <input type="hidden" id="txtIndexPrFile@(itemName)" name="txtIndexPrFile@(itemName)" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="UploadFile@(itemName)()"><i class="fas fa-file-upload"></i>上傳</button>
            </div>
        </div>
    </div>
</div>

<!--BPM簽核進度-->
<div class="modal fade" id="modalBpmProgress">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">BPM簽核進度查詢</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">請購單基本資訊</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <dl>
                                                <dt>MES請購單號</dt>
                                                <dd id="bpmPrNo"></dd>
                                            </dl>
                                        </div>
                                        <div class="col-md-6">
                                            <dl>
                                                <dt>ERP請購單號</dt>
                                                <dd id="bpmPrErpNo"></dd>
                                            </dl>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <dl>
                                                <dt>BPM單號</dt>
                                                <dd id="bpmNo"></dd>
                                            </dl>
                                        </div>
                                        <div class="col-md-6">
                                            <dl>
                                                <dt>請購日期</dt>
                                                <dd id="bpmPrDate"></dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">簽核流程</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped" id="tblBpmProgress">
                                            <thead>
                                                <tr>
                                                    <th scope="col">簽核步驟</th>
                                                    <th scope="col">簽核人員</th>
                                                    <th scope="col">簽核狀態</th>
                                                    <th scope="col">簽核時間</th>
                                                    <th scope="col">簽核意見</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- 簽核進度資料會動態載入 -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let userDepartmentId = -1;

        let userId@(itemName) = -1;
        let companyId@(itemName) = -1;


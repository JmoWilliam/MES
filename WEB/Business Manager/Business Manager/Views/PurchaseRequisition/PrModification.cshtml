            }

        }

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetUser", "BasicInformation")";

            let postData = {
                "UserId": userId@(itemName)
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        userDepartmentId = item.DepartmentId;
                    });
                }
            }
        }

        function Void@(itemName)(prmId) {
            swal.fire({
                titleText: "請購單作廢",
                text: "作廢後無法取消作廢，請確認後再執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdatePrmVoid", "PurchaseRequisition")";
                    let postData = {
                        "PrmId": prmId
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

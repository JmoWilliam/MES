        function GetPrSeq@(itemName)() {
            let targetUrl = "@Url.Action("GetPrSeq", "PurchaseRequisition")";
            let postData = {
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        let nowYear = new Date().getFullYear().toString();
                        let nowMonth = (new Date().getMonth() + 1).toString().padStart(2, "0");
                        let nowDay = new Date().getDate().toString().padStart(2, "0");
                        let PrNo = "PR" + nowYear + nowMonth + nowDay + (parseInt(item.Count + 1)).toString().padStart(3, '0');
                        $("#txtPrNo@(itemName)").val(PrNo);
                    });

@Html.Partial("ViewPurchaseRequisition")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let userDepartmentId = -1;
        let userId@(itemName) = -1;
        let companyId@(itemName) = -1;

        $(document).ready(function () {
            GetLoginByKey@(itemName)();
            Suites.DateDropper("#txtPrDateStartDateQ@(itemName), #txtPrDateEndDateQ@(itemName), #txtModiDateStartDateQ@(itemName), #txtModiDateEndDateQ@(itemName)");
            let currentDate = new Date();
            Suites.SetDateDropper("#txtPrDateEndDateQ@(itemName)", currentDate);
            Suites.SetDateDropper("#txtModiDateEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 90);
            Suites.SetDateDropper("#txtPrDateStartDateQ@(itemName)", currentDate);
            Suites.SetDateDropper("#txtModiDateStartDateQ@(itemName)", currentDate);

            Query@(itemName)();

            GetUserInfo@(itemName)();

            if (!isMobile) {
                $("#cboUserId@(itemName), #cboDepartmentId@(itemName), #cboUserIdQ@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "", "ALL", "", "UserWithNo", "UserId");
        });

        function GetLoginByKey@(itemName)(){
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetPrModification", "PurchaseRequisition")";

            let statusList = [];
            $.each($("input[name='cbxPrmStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "PrmStatus": statusList.join(","),
                "ModiDateStartDate": $("#txtModiDateStartDate@(itemName)").val(),
                "ModiDateEndDate": $("#txtModiDateEndDate@(itemName)").val(),
                "PrDateStartDate": $("#txtPrDateStartDateQ@(itemName)").val(),
                "PrDateEndDate": $("#txtPrDateEndDateQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val(),
                "PrNo": $("#txtPrNoQ@(itemName)").val(),
                "PrErpFullNo": $("#txtPrErpFullNoQ@(itemName)").val(),
                "Edition": $("#txtEditionQ@(itemName)").val(),
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PrNo}" style="max-width: 200px;">${item.PrNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PrErpPrefix}-${item.PrErpNo}(${item.Edition})" style="max-width: 200px; min-width: 135px;">${item.PrErpPrefix}-${item.PrErpNo}<code>(${item.Edition})</code></td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BpmNo != null ? item.BpmNo : ``}" style="max-width: 200px; min-width: 100px;">${item.BpmNo != null ? item.BpmNo : ``}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo}${item.UserName}" style="min-width: 150px;"><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>

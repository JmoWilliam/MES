                    function JudgeBpmTransferStatus@(itemName)(bpmTransferStatus, prmId, prmStatus, userId) {
                        let innerHtml = '';
                        if ((prmStatus == "N" || prmStatus == "E") && (userId == userId@(itemName).toString())) {
                            innerHtml += `<a class="active-link auth-data-transfer" href="javascript:TransferBpm@(itemName)('${prmId}');"><i class="far fa-exchange-alt"> 拋轉BPM</i></a>
                                          <a class="active-link auth-void" href="javascript:Void@(itemName)('${prmId}');"><i class="fas fa-ban"> 作廢</i></a>`;
                        }
                        else {
                            innerHtml += `<a class="active-link auth-data-transfer active-disable" href="javascript:void(0);"><i class="far fa-exchange-alt"> 拋轉BPM</i></a>
                                          <a class="active-link auth-void active-disable" href="javascript:void(0);"><i class="fas fa-ban"> 作廢</i></a>`;
                        }
                        return innerHtml;
                    }

                    function JdugePrmStatus@(itemName)(prmStatus, statusName) {
                        let innerHtml = '';
                        if (prmStatus == "P") {
                            //BPM簽核流程
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: #3c66df; font-weight: 600;" class="far fa-money-check-edit"></i> ${statusName}</td>`;
                        }
                        else if (prmStatus == "Y") {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: green; font-weight: 600;" class="fad fa-badge-check"></i> ${statusName}</td>`;
                        }
                        else if (prmStatus == "N") {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: brown;" class="fad fa-flag-checkered"></i> ${statusName}</td>`;
                        }
                        else if (prmStatus == "E") {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: cornflowerblue;" class="fas fa-user-edit"></i> ${statusName}</td>`;
                        }
                        else if (prmStatus == "S") {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;"><i style="color: #a449d3;" class="fas fa-exclamation-triangle"></i> ${statusName}</td>`;
                        }
                        else {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${statusName}" style="max-width: 150px;">${statusName}</td>`;
                        }
                        return innerHtml;
                    }

                    function JudgeUserId@(itemName)(prmId, userId) {
                        let innerHtml = '';
                        if (userId == userId@(itemName).toString()) {
                            innerHtml += `<a class="active-link auth-delete" href="javascript:Delete@(itemName)('${prmId}');"><i class="fas fa-trash-alt"></i></a>`;
                        }
                        else {
                            innerHtml += `<a class="active-link auth-delete active-disable" href="javascript:void(0);"><i class="fas fa-trash-alt"></i></a>`;
                        }
                        return innerHtml;
                    }
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="12" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(prmId, prId) {
            $("#PrmId").val(prmId ? prmId : 0);
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            $("#txtPrId@(itemName)").val("");
            $("#txtPrId@(itemName)").siblings(".help-block").hide();

            $("#txtPrmFile@(itemName)").val("");

            Suites.DateDropper("#txtDocDate@(itemName)");
            let currentDate = new Date();
            Suites.SetDateDropper("#txtDocDate@(itemName)", currentDate);

            ComboBoxs.Default("#cboDepartmentId@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "" + userDepartmentId + "", "CHOOSE", "", "DepartmentWithNo", "DepartmentId");
            ComboBoxs.Default("#cboUserId@(itemName)", "@Url.Action("GetUserByAuthority", "BasicInformation")", { "FunctionCode": "PurchaseRequisition", "DetailCode": "add", "Status": "A" }, userId@(itemName), "CHOOSE", "", "UserWithNo", "UserId");

            ComboBoxs.Default("#cboPriority@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "PR.Priority" }, "2", "NA", "", "TypeName", "TypeNo");

            if (prmId > 0) {
                ExpandPrmDetail(prmId, prId);
                let targetUrl = "@Url.Action("GetPrModification", "PurchaseRequisition")";
                let postData = {
                    "PrmId": prmId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtPrId@(itemName)").val(item.PrId);
                        $("#txtPrId@(itemName)").siblings(".help-block").show();
                        $("#desPrNo@(itemName)").html(item.PrNo);
                        $("#desBpmNo@(itemName)").html(item.BpmNo);
                        $("#desPrErpFullNo@(itemName)").html(item.PrErpPrefix + "-" + item.PrErpNo);
                        $("#desEdition@(itemName)").html(item.OriEdition);
                        $("#desTotalQty@(itemName)").html(item.OriTotalQty);
                        $("#desAmount@(itemName)").html(item.OriAmount);
                        $("#cboUserId@(itemName)").val(item.UserId);
                        $("#cboDepartmentId@(itemName)").val(item.DepartmentId);
                        $("#txtDocDate@(itemName)").val(item.DocDate);
                        $("#txtPrDate@(itemName)").val(item.PrDate);
                        $("#txtModiReason@(itemName)").val(item.ModiReason);
                        $("#txtPrmRemark@(itemName)").val(item.PrmRemark);
                        $("#cboPriority@(itemName)").val(item.Priority);

                        let prmFileList = [];
                        if (item.PrmFile != null) {
                            let prmFileJson = JSON.parse(item.PrmFile);
                            $.each(prmFileJson.data, function (j, item2) {
                                prmFileList.push(item2.FileId);
                            });
                        }
                        $("#txtPrmFile@(itemName)").val(item.PrmFile != null ? prmFileList.toString() : "");
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            let uploadConfig = {
                fileSelector: "#filePrmFile@(itemName)",
                targetSelector: "#txtPrmFile@(itemName)",
                required: false,
                uploadPath: "/PurchaseRequisition/PrModification",
                maxFileCount: 999,
                defaultFile: $("#txtPrmFile@(itemName)").val()
            };
            Suites.FileUpload(uploadConfig);

            let popConfig = {
                targetSelector: "#txtPrId@(itemName)",
                popFunction: "PopViewPurchaseRequisition",
                objectPrId: "#txtPrId@(itemName)",
                objectPrNo: "#desPrNo@(itemName)",
                objectDepartmentId: "#cboDepartmentId@(itemName)",
                //objectUserId: "#cboUserId@(itemName)",
                objectBpmNo: "#desBpmNo@(itemName)",
                objectPrErpFullNo: "#desPrErpFullNo@(itemName)",
                objectEdition: "#desEdition@(itemName)",
                objectTotalQty: "#desTotalQty@(itemName)",
                objectAmount: "#desAmount@(itemName)",
                objectPrDate: "#txtPrDate@(itemName)",
                objectDocDate: "#txtDocDate@(itemName)",
            };
            InitPopView(popConfig);
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let PrmId = parseInt($("#PrmId").val());
                if (PrmId <= 0) {
                    let targetUrl = "@Url.Action("AddPrModification", "PurchaseRequisition")";
                    let postData = {
                        "PrId": $("#txtPrId@(itemName)").val(),
                        "UserId": $("#cboUserId@(itemName)").val(),
                        "DepartmentId": $("#cboDepartmentId@(itemName)").val(),
                        "DocDate": $("#txtDocDate@(itemName)").val(),
                        "ModiReason": $("#txtModiReason@(itemName)").val(),
                        "PrmRemark": $("#txtPrmRemark@(itemName)").val(),
                        "PrmFile": $("#txtPrmFile@(itemName)").val(),
                        "Priority": $("#cboPriority@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        let prmId;
                        let prId = $("#txtPrId@(itemName)").val();
                        $.each(data.result, function (i, item) {
                            prmId = item.PrmId;
                        });
                        $("#PrmId").val(prmId);
                        ExpandPrmDetail(prmId, prId);
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdatePrModification", "PurchaseRequisition")";
                    let postData = {
                        "PrmId": PrmId,
                        "PrId": $("#txtPrId@(itemName)").val(),
                        "UserId": $("#cboUserId@(itemName)").val(),
                        "DepartmentId": $("#cboDepartmentId@(itemName)").val(),
                        "DocDate": $("#txtDocDate@(itemName)").val(),
                        "ModiReason": $("#txtModiReason@(itemName)").val(),
                        "PrmRemark": $("#txtPrmRemark@(itemName)").val(),
                        "PrmFile": $("#txtPrmFile@(itemName)").val(),
                        "Priority": $("#cboPriority@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        ReturnPrmDetail();
                    }
                }
            }
        }

        function Delete@(itemName)(PrmId) {
            swal.fire({

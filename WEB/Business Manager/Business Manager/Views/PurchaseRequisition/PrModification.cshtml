@using Business_Manager.Helpers
@{
    string itemName = "PrModification";
    string itemNameText = "請購變更單資料管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .help-block {
             display: none;
             margin: 5px 0 0;
             border: 3px dashed #b1b1b1;
             border-radius: 5px;
             padding: 5px 10px;
         }

         dt {
             float: left;
             clear: left;
             width: 110px;
         }

             dt::after {
                 content: "：";
             }

         dd {
             margin: 0 0 0 80px;
             padding: 0;
             color: #36a2f5;
             font-weight: bold;
         }
    </style>
                                )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">MES請購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrNoQ@(itemName)" name="txtPrNoQ@(itemName)"
                                       placeholder="請輸入MES請購單號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">ERP請購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPrErpFullNoQ@(itemName)" name="txtPrErpFullNoQ@(itemName)"
                                       placeholder="請輸入ERP請購單號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">版次</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtEditionQ@(itemName)" name="txtEditionQ@(itemName)"
                                       placeholder="請輸入版次">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購品號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)"
                                       placeholder="請輸入請購品號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">變更日期</label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtModiDateStartDateQ@(itemName)" name="txtModiDateStartDateQ@(itemName)"
                                       placeholder="請輸入變更日期"
                                       data-msg-required="請輸入變更日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtModiDateEndDateQ@(itemName)" name="txtModiDateEndDateQ@(itemName)"
                                       placeholder="請輸入變更日期"
                                       data-msg-required="請輸入變更日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購日期</label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtPrDateStartDateQ@(itemName)" name="txtPrDateStartDateQ@(itemName)"
                                       placeholder="請輸入請購日期"
                                       data-msg-required="請輸入請購日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtPrDateEndDateQ@(itemName)" name="txtPrDateStartDateQ@(itemName)"
                                       placeholder="請輸入請購日期"
                                       data-msg-required="請輸入請購日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">請購變更單狀態</label>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    新單據
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)N" name="cbxPrmStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉BPM中
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)L" name="cbxPrmStatusQ@(itemName)" value="L" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    BPM簽核流程
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)P" name="cbxPrmStatusQ@(itemName)" value="P" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉BPM失敗
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)R" name="cbxPrmStatusQ@(itemName)" value="R" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    拋轉ERP失敗
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)F" name="cbxPrmStatusQ@(itemName)" value="F" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    MES作廢
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)S" name="cbxPrmStatusQ@(itemName)" value="S" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    ERP作廢
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)V" name="cbxPrmStatusQ@(itemName)" value="V" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    單據核准
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)Y" name="cbxPrmStatusQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-4">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    單據修改
                                    <input type="checkbox" id="cbxPrmStatusQ@(itemName)E" name="cbxPrmStatusQ@(itemName)" value="E" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="max-width: 200px;">MES請購單號</th>
                                        <th scope="col" style="max-width: 200px; min-width: 100px;">ERP請購單號(版次)</th>
                                        <th scope="col" style="max-width: 200px; min-width: 100px;">BPM單號</th>
                                        <th scope="col" style="max-width: 150px;">請購人員</th>
                                        <th scope="col" style="max-width: 200px;">請購部門</th>
                                        <th scope="col" style="max-width: 150px;">變更日期</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">是否拋轉BPM</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">是否拋轉ERP</th>
                                        <th scope="col" style="max-width: 150px; min-width: 100px;">備註</th>
                                        <th scope="col" style="max-width: 150px;">狀態</th>
                                        <th class="text-center" scope="col" style="max-width: 250px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


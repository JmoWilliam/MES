@using Business_Manager.Helpers
@{
    string itemName = "ViewTrayUnBind";
    string itemNameText = "托盤解除綁定";
}

@Html.Resource("css",
    @<style>
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                </h5>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-lg-12">
                        <form autocomplete="off" id="editForm@(itemName)">
                            <div class="card card-body">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group row">
                                            <div class="col-12" style="display:flex;align-items: center;">
                                                <label for="txtTrayNo@(itemName)">Tray盤</label>
                                                <input type="text" id="txtTrayNo@(itemName)" class="form-control" style="width:30%;margin-left:20px;" name="txtTrayNo@(itemName)" placeholder="請輸入托盤編號" />
                                                <button type="button" class="btn btn-success" style="margin-left:20px;" onclick="TrayUnBind@(itemName)('Once')"><i class="fas fa-undo-alt"></i>解綁</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group row">
                                            <div class="col-12" style="display:flex;align-items: center;">
                                                <label for="txtTrayNo@(itemName)">Keyence設備</label>
                                                <div class="col-auto">
                                                    <select class="form-control" id="cboKeyenceIdQ@(itemName)" name="cboKeyenceIdQ@(itemName)"
                                                            data-msg-required="請選擇Keyence設備"></select>
                                                </div>
                                                <button type="button" class="btn btn-secondary" style="margin-left:20px;" onclick="LotScanner@(itemName)()"><i class="far fa-print-search"></i>批量掃描</button>
                                                <button type="button" class="btn btn-info" style="margin-left:20px;" onclick="TrayUnBind@(itemName)('Batch')"><i class="far fa-handshake-slash"></i>批量解綁</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-custom" id="TrayList">
                                <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                    <thead>
                                        <tr>
                                            <th class="text-center" scope="col" style="min-width: 125px;">全選 <input type="checkbox" name="all" onclick="check_all(this,'cbxBarcode@(itemName)')" style="margin:3px" /></th>
                                            <th scope="col" style="min-width: 75px;">#</th>
                                            <th scope="col" style="min-width: 200px;">托盤編號</th>
                                            @*<th scope="col" style="min-width: 200px;">綁定條碼</th>*@
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="pagination" id="page@(itemName)"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>

<!-- Keyence Modal -->

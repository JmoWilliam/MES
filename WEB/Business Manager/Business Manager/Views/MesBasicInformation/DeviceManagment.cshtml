@using Business_Manager.Helpers
@{
    string itemName = "DeviceManagment";
    string itemNameText = "裝置資料管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtDeviceNameQ@(itemName)">設備名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtDeviceNameQ@(itemName)" name="txtDeviceNameQ@(itemName)" placeholder="請輸入設備名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtDeviceIdentifierCodeQ@(itemName)">設備識別碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtDeviceIdentifierCodeQ@(itemName)" name="txtDeviceIdentifierCodeQ@(itemName)" placeholder="請輸入設備識別碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboDeviceTypeQ@(itemName)">設備類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboDeviceTypeQ@(itemName)" name="cboDeviceTypeQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboDeviceAuthorityQ@(itemName)">設備權限</label>
                            <div class="col-12">
                                <select class="form-control" id="cboDeviceAuthorityQ@(itemName)" name="cboDeviceAuthorityQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 150px;">設備類別</th>
                                        <th scope="col" style="min-width: 200px;">設備名稱</th>
                                        <th scope="col" style="min-width: 200px;">設備描述</th>
                                        <th scope="col" style="min-width: 200px;">設備識別碼</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">設備權限</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="DeviceId" name="DeviceId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboDeviceType@(itemName)">設備類別 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboDeviceType@(itemName)" name="cboDeviceType@(itemName)"
                                        data-msg-required="請選擇設備類別" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtDeviceName@(itemName)">設備名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtDeviceName@(itemName)" name="txtDeviceName@(itemName)" placeholder="請輸入設備名稱"
                                       data-msg-required="請輸入設備名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtDeviceDesc@(itemName)">設備描述 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtDeviceDesc@(itemName)" name="txtDeviceDesc@(itemName)" placeholder="請輸入設備描述"
                                       data-msg-required="請輸入設備描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtDeviceIdentifierCode@(itemName)">設備識別碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtDeviceIdentifierCode@(itemName)" name="txtDeviceIdentifierCode@(itemName)" placeholder="請輸入設備識別碼"
                                       data-msg-required="請輸入設備識別碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboDeviceAuthority@(itemName)">設備權限 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboDeviceAuthority@(itemName)" name="cboDeviceAuthority@(itemName)"
                                        data-msg-required="請選擇設備權限" data-rule-required="true"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabDeviceMachine">
                        <i class="fas fa-computer-classic"></i> 裝置機台綁定
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabDeviceMachine">
            @Html.Partial("DeviceMachine")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {            

            ComboBoxs.Default("#cboDeviceTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Device.DeviceType" }, "", "NA", "", "TypeName", "TypeNo"); 
            ComboBoxs.Default("#cboDeviceAuthorityQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Device.DeviceAuthority" }, "", "NA", "", "TypeName", "TypeNo");

            Query@(itemName)();


            if (!isMobile) {
                $("#cboDeviceTypeQ@(itemName), #cboDeviceAuthorityQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetDevice", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "DeviceType": $("#cboDeviceTypeQ@(itemName)").val(),
                "DeviceName": $("#txtDeviceNameQ@(itemName)").val(),
                "DeviceIdentifierCode": $("#txtDeviceIdentifierCodeQ@(itemName)").val().trim(),
                "DeviceAuthority": $("#cboDeviceAuthorityQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="style="max-width: 150px;">${TypeName(`Device.DeviceType`, item.DeviceType)}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DeviceName}" style="max-width: 200px;">${item.DeviceName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DeviceDesc}" style="max-width: 200px;">${item.DeviceDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DeviceIdentifierCode}" style="max-width: 200px;">${item.DeviceIdentifierCode}</td>
                                        <td class="text-center">${TypeName(`Device.DeviceAuthority`, item.DeviceAuthority)}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-device-id="${item.DeviceId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.DeviceId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-device-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(DeviceId) {
            $("#DeviceId").val(DeviceId ? DeviceId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboDeviceType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Device.DeviceType" }, "", "NA", "", "TypeName", "TypeNo"); 
            ComboBoxs.Default("#cboDeviceAuthority@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Device.DeviceAuthority" }, "", "NA", "", "TypeName", "TypeNo");            
            
            if (DeviceId > 0) {
                let targetUrl = "@Url.Action("GetDevice", "MesBasicInformation")";
                let postData = {
                    "DeviceId": DeviceId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboDeviceType@(itemName)").val(item.DeviceType);
                        $("#txtDeviceName@(itemName)").val(item.DeviceName);
                        $("#txtDeviceDesc@(itemName)").val(item.DeviceDesc);
                        $("#txtDeviceIdentifierCode@(itemName)").val(item.DeviceIdentifierCode);
                        $("#cboDeviceAuthority@(itemName)").val(item.DeviceAuthority);
                    });

                    ExpandDeviceMachine();
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
            if (!isMobile) {
            $("#cboDeviceType@(itemName), #cboDeviceAuthority@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let DeviceId = parseInt($("#DeviceId").val());

                if (DeviceId <= 0) {
                    let targetUrl = "@Url.Action("AddDevice", "MesBasicInformation")";
                    let postData = {
                        "DeviceType": $("#cboDeviceType@(itemName)").val(),
                        "DeviceName": $("#txtDeviceName@(itemName)").val(),
                        "DeviceDesc": $("#txtDeviceDesc@(itemName)").val(),
                        "DeviceIdentifierCode": $("#txtDeviceIdentifierCode@(itemName)").val(),
                        "DeviceAuthority": $("#cboDeviceAuthority@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#DeviceId").val(item.DeviceId);
                        });
                        ExpandDeviceMachine();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateDevice", "MesBasicInformation")";
                    let postData = {
                        "DeviceId": DeviceId,
                        "DeviceType": $("#cboDeviceType@(itemName)").val(),
                        "DeviceName": $("#txtDeviceName@(itemName)").val(),
                        "DeviceDesc": $("#txtDeviceDesc@(itemName)").val(),
                        "DeviceIdentifierCode": $("#txtDeviceIdentifierCode@(itemName)").val(),
                        "DeviceAuthority": $("#cboDeviceAuthority@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(DeviceId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteDevice", "MesBasicInformation")";
                    let postData = {
                        "DeviceId": DeviceId,
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var DeviceId = $(this).data("device-id");

            let targetUrl = "@Url.Action("UpdateDeviceIdStatus", "MesBasicInformation")";
            let postData = {
                "DeviceId": DeviceId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
    </script>
)
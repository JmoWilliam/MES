@using Business_Manager.Helpers
@{
    string itemName = "ProdModeManagment";
    string itemNameText = "生產模式管理";
    string authority = ViewBag.authority;
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtModeNoQ@(itemName)">模式代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtModeNoQ@(itemName)" name="txtModeNoQ@(itemName)" placeholder="請輸入模式代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtModeNameQ@(itemName)">模式名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtModeNameQ@(itemName)" name="txtModeNameQ@(itemName)" placeholder="請輸入模式名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">過站是否要條碼控制</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxBarcodeCtrlQ@(itemName)Y" name="cbxBarcodeCtrlQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    否
                                    <input type="checkbox" id="cbxBarcodeCtrlQ@(itemName)N" name="cbxBarcodeCtrlQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">報廢品是否入報廢倉</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxScrapRegisterQ@(itemName)Y" name="cbxScrapRegisterQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    否
                                    <input type="checkbox" id="cbxScrapRegisterQ@(itemName)N" name="cbxScrapRegisterQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 100px;">模式代碼</th>
                                        <th scope="col" style="min-width: 200px;">模式名稱</th>
                                        <th scope="col" style="min-width: 200px;">模式描述</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="ModeId" name="ModeId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtModeNo@(itemName)">模式代碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtModeNo@(itemName)" name="txtModeNo@(itemName)" placeholder="請輸入模式代碼"
                                       data-msg-required="請輸入模式代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtModeName@(itemName)">模式名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtModeName@(itemName)" name="txtModeName@(itemName)" placeholder="請輸入模式名稱"
                                       data-msg-required="請輸入模式名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtModeDesc@(itemName)">模式描述 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtModeDesc@(itemName)" name="txtModeDesc@(itemName)" placeholder="請輸入模式描述"
                                       data-msg-required="請輸入模式描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboSource@(itemName)">條碼來源</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <select class="form-control" id="cboSource@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxBarcodeCtrl@(itemName)">過站是否要條碼控制</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxBarcodeCtrl@(itemName)" name="cbxBarcodeCtrl@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxScrapRegister@(itemName)">報廢品是否入報廢倉</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxScrapRegister@(itemName)" name="cbxScrapRegister@(itemName)" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxPVTQCFlag@(itemName)">量產前是否需要做全吋檢</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxPVTQCFlag@(itemName)" name="cbxPVTQCFlag@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxNgToBarcode@(itemName)">過站是否需刷取NG條碼</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxNgToBarcode@(itemName)" name="cbxNgToBarcode@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxTrayBarcode@(itemName)">是否為Tray盤模式</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxTrayBarcode@(itemName)" name="cbxTrayBarcode@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxLotStatus@(itemName)">是否為批量生產</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxLotStatus@(itemName)" name="cbxLotStatus@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxOutputBarcodeFlag@(itemName)">製程中是否產新條碼</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxOutputBarcodeFlag@(itemName)" name="cbxOutputBarcodeFlag@(itemName)" />
                            </div>
                        </div> 
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxMrType@(itemName)">是否可以領取上個月的料</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxMrType@(itemName)" name="cbxMrType@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cbxOQcCheckType@(itemName)">未完成出貨檢是否可以入庫</label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;align-items: center;">
                                <input type="checkbox" id="cbxOQcCheckType@(itemName)" name="cbxOQcCheckType@(itemName)" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabProdModeShiftManagment">
                        <i class="fas fa-file-spreadsheet"></i> 生產模式班次資料
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabProdModeShiftManagment">
            @Html.Partial("ProdModeShiftManagment")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let checkBarcodeCtrlList = [];
            $.each($("input[name='cbxBarcodeCtrlQ@(itemName)']:checked"), function () {
                checkBarcodeCtrlList.push($(this).val());
            });

            let checkScrapRegisterList = [];
            $.each($("input[name='cbxScrapRegisterQ@(itemName)']:checked"), function () {
                checkScrapRegisterList.push($(this).val());
            });

            console.log(checkScrapRegisterList)

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetProdMode", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ModeNo": $("#txtModeNoQ@(itemName)").val().trim(),
                "ModeName": $("#txtModeNameQ@(itemName)").val().trim(),
                "Status": statusList.join(","),
                "BarcodeCtrl": checkBarcodeCtrlList.join(","),
                "ScrapRegister": checkScrapRegisterList.join(",")

            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.ModeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ModeName}" style="max-width: 200px;">${item.ModeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ModeDesc}" style="max-width: 200px;">${item.ModeDesc}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-prodmode-id="${item.ModeId}" ${ item.Status == `A` ? `checked` : `` } />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.ModeId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-prodmode-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(ModeId) {
            $("#ModeId").val(ModeId ? ModeId : 0);
            $("#txtModeNo@(itemName)").attr("readonly", false);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");
            $("#cbxBarcodeCtrl@(itemName)").attr("checked", false);
            $("#cbxScrapRegister@(itemName)").attr("checked", false);
            $("#cboSource@(itemName)").attr("checked", false);
            $("#cbxPVTQCFlag@(itemName)").attr("checked", false);
            $("#cbxNgToBarcode@(itemName)").attr("checked", false);
            $("#cbxTrayBarcode@(itemName)").attr("checked", false);
            $("#cbxLotStatus@(itemName)").attr("checked", false);
            $("#cbxOutputBarcodeFlag@(itemName)").attr("checked", false);
            $("#cbxMrType@(itemName)").attr("checked", false);
            $("#cbxOQcCheckType@(itemName)").attr("checked", false);
            ComboBoxs.WithText("#cboSource@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MoSetting.Source" }, "", "NA", "", "TypeName", "TypeNo");

            if (ModeId > 0) {
                $("#txtModeNo@(itemName)").attr("readonly", true);

                let targetUrl = "@Url.Action("GetProdMode", "MesBasicInformation")";
                let postData = {
                    "ModeId": ModeId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtModeNo@(itemName)").val(item.ModeNo);
                        $("#txtModeName@(itemName)").val(item.ModeName);
                        $("#txtModeDesc@(itemName)").val(item.ModeDesc);
                        $("#cboSource@(itemName)").val(item.Source);
                        if (item.BarcodeCtrl == "Y") {
                            $("#cbxBarcodeCtrl@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxBarcodeCtrl@(itemName)").attr("checked", false);
                        };
                        if (item.ScrapRegister == "Y") {
                            $("#cbxScrapRegister@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxScrapRegister@(itemName)").attr("checked", false);
                        };
                        if (item.PVTQCFlag == "Y") {
                            $("#cbxPVTQCFlag@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxPVTQCFlag@(itemName)").attr("checked", false);
                        };
                        if (item.NgToBarcode == "Y") {
                            $("#cbxNgToBarcode@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxNgToBarcode@(itemName)").attr("checked", false);
                        };
                        if (item.TrayBarcode == "Y") {
                            $("#cbxTrayBarcode@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxTrayBarcode@(itemName)").attr("checked", false);
                        };
                        if (item.LotStatus == "Y") {
                            $("#cbxLotStatus@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxLotStatus@(itemName)").attr("checked", false);
                        };
                        if (item.OutputBarcodeFlag == "Y") {
                            $("#cbxOutputBarcodeFlag@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxOutputBarcodeFlag@(itemName)").attr("checked", false);
                        };
                        if (item.MrType == "Y") {
                            $("#cbxMrType@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxMrType@(itemName)").attr("checked", false);
                        };
                        if (item.OQcCheckType == "Y") {
                            $("#cbxOQcCheckType@(itemName)").attr("checked", true);
                        } else {
                            $("#cbxOQcCheckType@(itemName)").attr("checked", false);
                        };
                    });
                    ExpandProdModeShiftManagment();

                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboSource@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ModeId = parseInt($("#ModeId").val());

                if (ModeId <= 0) {
                    let targetUrl = "@Url.Action("AddProdMode", "MesBasicInformation")";
                    let postData = {
                        "ModeNo": $("#txtModeNo@(itemName)").val(),
                        "ModeName": $("#txtModeName@(itemName)").val(),
                        "ModeDesc": $("#txtModeDesc@(itemName)").val(),
                        "BarcodeCtrl": ($("#cbxBarcodeCtrl@(itemName)").is(":checked") ? "Y" : "N"),
                        "ScrapRegister": ($("#cbxScrapRegister@(itemName)").is(":checked") ? "Y" : "N"),
                        "Source": $("#cboSource@(itemName)").val(),
                        "PVTQCFlag": ($("#cbxPVTQCFlag@(itemName)").is(":checked") ? "Y" : "N"),
                        "NgToBarcode": ($("#cbxNgToBarcode@(itemName)").is(":checked") ? "Y" : "N"),
                        "TrayBarcode": ($("#cbxTrayBarcode@(itemName)").is(":checked") ? "Y" : "N"),
                        "LotStatus": ($("#cbxLotStatus@(itemName)").is(":checked") ? "Y" : "N"),
                        "OutputBarcodeFlag": ($("#cbxOutputBarcodeFlag@(itemName)").is(":checked") ? "Y" : "N"),
                        "MrType": ($("#cbxMrType@(itemName)").is(":checked") ? "Y" : "N"),
                        "OQcCheckType": ($("#cbxOQcCheckType@(itemName)").is(":checked") ? "Y" : "N")
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#ModeId").val(item.ModeId);
                        });
                        ExpandProdModeShiftManagment();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateProdMode", "MesBasicInformation")";
                    let postData = {
                        "ModeId": ModeId,
                        "ModeName": $("#txtModeName@(itemName)").val(),
                        "ModeDesc": $("#txtModeDesc@(itemName)").val(),
                        "BarcodeCtrl": ($("#cbxBarcodeCtrl@(itemName)").is(":checked") ? "Y" : "N"),
                        "ScrapRegister": ($("#cbxScrapRegister@(itemName)").is(":checked") ? "Y" : "N"),
                        "Source": $("#cboSource@(itemName)").val(),

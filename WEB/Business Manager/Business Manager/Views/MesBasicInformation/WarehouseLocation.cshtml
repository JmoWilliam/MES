@using Business_Manager.Helpers
@{
    string itemName = "WarehouseLocation";
    string itemNameText = "庫房儲位";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtLocationNoQ@(itemName)">儲位代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtLocationNoQ@(itemName)" name="txtLocationNoQ@(itemName)" placeholder="請輸入儲位代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtLocationNameQ@(itemName)">儲位名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtLocationNameQ@(itemName)" name="txtLocationNameQ@(itemName)" placeholder="請輸入儲位名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-location" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 150px;">儲位代碼</th>
                                        <th scope="col" style="min-width: 200px;">儲位名稱</th>
                                        <th scope="col" style="min-width: 200px;">儲位描述</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="LocationId" name="LocationId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtLocationNo@(itemName)">儲位代碼 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtLocationNo@(itemName)" name="txtLocationNo@(itemName)" placeholder="請輸入儲位代碼"
                                       data-msg-required="請輸入儲位代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 10 個字元" maxlength="10" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtLocationName@(itemName)">儲位名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtLocationName@(itemName)" name="txtLocationName@(itemName)" placeholder="請輸入儲位名稱"
                                       data-msg-required="請輸入儲位名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtLocationDesc@(itemName)">儲位描述 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtLocationDesc@(itemName)" name="txtLocationDesc@(itemName)" placeholder="請輸入儲位描述"
                                       data-msg-required="請輸入儲位描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

      
        function Expand@(itemName)() {
            if (parseInt($("#WarehouseId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                Return@(itemName)();
            } else {
                alert("裝置資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetWarehouseLocation", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "WarehouseId": $("#WarehouseId").val(),
                "LocationId": $("#LocationId").val(),
                "LocationNo": $("#txtLocationNoQ@(itemName)").val().trim(),
                "LocationName": $("#txtLocationNameQ@(itemName)").val().trim(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.LocationNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.LocationName}" style="max-width: 200px;">${item.LocationName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.LocationDesc}" style="max-width: 200px;">${item.LocationDesc}</td>
                                        <td class="text-center auth-location">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-location-id="${item.LocationId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-location">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-location" href="javascript:Edit@(itemName)(${item.LocationId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-location" href="javascript:Delete@(itemName)(${item.LocationId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-location-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(LocationId) {
            $("#LocationId").val(LocationId ? LocationId : 0);
            $("#txtLocationNo@(itemName)").attr("readonly", false);


            Switch("#editData@(itemName)", "#listData@(itemName)");

            if (LocationId > 0) {
                $("#txtLocationNo@(itemName)").attr("readonly", true);

                let targetUrl = "@Url.Action("GetWarehouseLocation", "MesBasicInformation")";
                let postData = {
                    "LocationId": LocationId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#WarehouseId").val(item.WarehouseId),
                        $("#LocationId").val(item.LocationId),
                        $("#txtLocationNo@(itemName)").val(item.LocationNo),
                        $("#txtLocationName@(itemName)").val(item.LocationName),
                        $("#txtLocationDesc@(itemName)").val(item.LocationDesc)
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let LocationId = parseInt($("#LocationId").val());

                if (LocationId <= 0) {
                    let targetUrl = "@Url.Action("AddWarehouseLocation", "MesBasicInformation")";
                    let postData = {
                        "WarehouseId": $("#WarehouseId").val(),
                        "LocationNo": $("#txtLocationNo@(itemName)").val(),
                        "LocationName": $("#txtLocationName@(itemName)").val(),
                        "LocationDesc": $("#txtLocationDesc@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateWarehouseLocation", "MesBasicInformation")";
                    let postData = {
                        "WarehouseId": $("#WarehouseId").val(),
                        "LocationId": $("#LocationId").val(),
                        "LocationNo": $("#txtLocationNo@(itemName)").val(),
                        "LocationName": $("#txtLocationName@(itemName)").val(),
                        "LocationDesc": $("#txtLocationDesc@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        $("#LocationId").val("")
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(LocationId) {
            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteWarehouseLocation", "MesBasicInformation")";
                    let postData = {
                        "WarehouseId": $("#WarehouseId").val(),
                        "LocationId": LocationId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var LocationId = $(this).data("location-id");

            let targetUrl = "@Url.Action("UpdateWarehouseLocationStatus", "MesBasicInformation")";
            let postData = {
                "LocationId": LocationId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
    </script>
)
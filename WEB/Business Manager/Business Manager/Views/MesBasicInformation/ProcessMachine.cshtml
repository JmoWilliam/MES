@using Business_Manager.Helpers
@{
    string itemName = "ProcessMachine";
    string itemNameText = "製程機台管理";
}

@Html.Resource("css",
    @<style>
    </style>
        )

<input type="hidden" id="MachineIdView" name="MachineIdView" value="-1" />

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboMachineIdQ@(itemName)">所屬機台 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboMachineIdQ@(itemName)" name="cboMachineIdQ@(itemName)"
                                        data-msg-required="請選擇機台" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">是否支援Keyence設備</label>
                            <div class="col-12">
                                <select class="form-control" id="cboKeyenceFlagQ@(itemName)" name="cboKeyenceFlagQ@(itemName)"
                                        data-msg-required="請選擇是否支援Keyence設備" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-machine" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">車間</th>
                                        <th scope="col" style="min-width: 200px;">所屬機台</th>
                                        <th scope="col" style="min-width: 200px;">機台描述</th>
                                        <th class="text-center" scope="col" style="min-width: 200px;">是否支援Keyence設備</th>
                                        <th class="text-center" scope="col" style="min-width: 200px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="MachineId" name="MachineId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboMachineId@(itemName)">所屬機台 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboMachineId@(itemName)" name="cboMachineId@(itemName)"
                                        data-msg-required="請選擇機台" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboKeyenceFlag@(itemName)">是否支援Keyence批量過站</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboKeyenceFlag@(itemName)" name="cboKeyenceFlag@(itemName)">
                                    <option value="Y">是</option>
                                    <option value="N" selected>否</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row keyence-ip">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboKeyenceId@(itemName)">Keyence機台 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboKeyenceId@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtToolCount@(itemName)">製程機台所綁定工具上限數 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="number" class="form-control" id="txtToolCount@(itemName)" name="txtToolCount@(itemName)" placeholder="請輸入製程機台所綁定工具上限數"
                                       data-msg-required="請輸入製程機台所綁定工具上限數" data-rule-required="true" value="1" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            console.log($("#ParameterId").val())

            if (!isMobile) {
                $("#cboMachineIdQ@(itemName), #cboKeyenceId@(itemName)").select2({
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboKeyenceId@(itemName)", "@Url.Action("GetKeyence", "MesBasicInformation")", { "Status": "A" }, "", "NA", "", "KeyenceDesc", "KeyenceId");

            $("#cboKeyenceFlag@(itemName)").change(function () {
                let KeyenceFlag = $("#cboKeyenceFlag@(itemName)").val();
                if (KeyenceFlag == "Y") {
                    $(".keyence-ip").show();
                    $("#cboKeyenceId@(itemName)").prop("required", true);
                }
                else {
                    $(".keyence-ip").hide();
                    $("#cboKeyenceId@(itemName)").prop("required", false);
                }
            });
        });

        function Expand@(itemName)() {
            if (parseInt($("#ParameterId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                Return@(itemName)();
            ComboBoxs.Default("#cboMachineIdQ@(itemName)", "@Url.Action("GetProcessMachine", "MesBasicInformation")", { "ParameterId": $("#ParameterId").val() }, "", "ALL", "", "MachineDesc", "MachineId");

            } else {
                alert("裝置資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            //objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetProcessMachine", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ParameterId": $("#ParameterId").val(),
                "MachineId": $("#cboMachineIdQ@(itemName)").val(),
                "KeyenceFlag": $("#cboKeyenceFlagQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ShopName}" style="max-width: 200px;">${item.ShopName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineName}" style="max-width: 200px;">${item.MachineName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MachineDesc}" style="max-width: 200px;">${item.MachineDesc}</td>
                                        <td class="text-center auth-status-switch">
                                              <input type="checkbox" name="cbxKeyenceFlag@(itemName)" data-parameter-id="${item.ParameterId}" data-machine-id="${item.MachineId}" ${item.KeyenceFlag == `Y` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Boolean`, item.KeyenceFlag)}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-parameter-id="${item.ParameterId}" data-machine-id="${item.MachineId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-machine" href="javascript:Edit@(itemName)(${item.ParameterId}, ${item.MachineId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-machine" href="javascript:Delete@(itemName)(${item.ParameterId}, ${item.MachineId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='cbxKeyenceFlag@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='cbxKeyenceFlag@(itemName)'][data-parameter-id][data-machine-id]").change(KeyenceFlagSwitch@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-parameter-id][data-machine-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(ParameterId, MachineId) {
            $("#MachineId").val(MachineId ? MachineId : 0);

            $(".keyence-ip").hide();
            $("#txtKeyenceIP@(itemName)").prop("required", false);

            Switch("#editData@(itemName)", "#listData@(itemName)");

            ComboBoxs.Default("#cboKeyenceId@(itemName)", "@Url.Action("GetKeyence", "MesBasicInformation")", { "Status": "A" }, "", "NA", "", "KeyenceDesc", "KeyenceId");

            ComboBoxs.Default("#cboMachineId@(itemName)", "@Url.Action("GetMachine", "MesBasicInformation")", {}, "", "NA", "", "MachineDescFull", "MachineId");

            $("#cboMachineId@(itemName)").attr("disabled", false);

            if (ParameterId > 0 && MachineId > 0) {
                $("#cboMachineId@(itemName)").attr("disabled", true);

                let targetUrl = "@Url.Action("GetProcessMachine", "MesBasicInformation")";
                let postData = {
                    "ParameterId": ParameterId,
                    "MachineId": MachineId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboMachineId@(itemName)").val(item.MachineId);
                        $("#MachineId").val(item.MachineId);
                        $("#txtToolCount@(itemName)").val(item.ToolCount);
                        $("#cboKeyenceFlag@(itemName)").val(item.KeyenceFlag);
                        $("#cboKeyenceId@(itemName)").val(item.KeyenceId);

                        if (item.KeyenceFlag == "Y") {
                            $(".keyence-ip").show();
                            $("#cboKeyenceId@(itemName)").prop("required", true);
                        }
                        else {
                            $(".keyence-ip").hide();
                            $("#cboKeyenceId@(itemName)").prop("required", false);
                        }
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboMachineId@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ParameterId = parseInt($("#ParameterId").val());
                let MachineId = parseInt($("#MachineId").val());

                if (ParameterId > 0 && MachineId > 0) {
                    let targetUrl = "@Url.Action("UpdateProcessMachine", "MesBasicInformation")";
                    let postData = {
                        "ParameterId": $("#ParameterId").val(),
                        "MachineId": $("#cboMachineId@(itemName)").val(),
                        "ToolCount": $("#txtToolCount@(itemName)").val(),
                        "KeyenceFlag": $("#cboKeyenceFlag@(itemName)").val(),
                        "KeyenceId": $("#cboKeyenceId@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
                else {
                    let targetUrl = "@Url.Action("AddProcessMachine", "MesBasicInformation")";
                    let postData = {
                        "ParameterId": $("#ParameterId").val(),
                        "MachineId": $("#cboMachineId@(itemName)").val(),
                        "ToolCount": $("#txtToolCount@(itemName)").val(),
                        "KeyenceFlag": $("#cboKeyenceFlag@(itemName)").val(),
                        "KeyenceId": $("#cboKeyenceId@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(ParameterId, MachineId) {
            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteProcessMachine", "MesBasicInformation")";
                    let postData = {
                        "ParameterId": ParameterId,
                        "MachineId": MachineId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function KeyenceFlagSwitch@(itemName)() {
            var ParameterId = $(this).data("parameter-id");
            var MachineId = $(this).data("machine-id");

            let targetUrl = "@Url.Action("UpdateKeyenceFlag", "MesBasicInformation")";
            let postData = {
                "ParameterId": ParameterId,
                "MachineId": MachineId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
        function StatusSwitch@(itemName)() {
            var ParameterId = $(this).data("parameter-id");
            var MachineId = $(this).data("machine-id");

            let targetUrl = "@Url.Action("UpdateParameterMachineStatus", "MesBasicInformation")";
            let postData = {
                "ParameterId": ParameterId,
                "MachineId": MachineId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
    </script>
        )
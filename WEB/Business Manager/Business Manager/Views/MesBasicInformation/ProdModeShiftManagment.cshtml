@using Business_Manager.Helpers
@{
    string itemName = "ProdModeShiftManagment";
    string itemNameText = "生產模式班次資料";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboShiftIdQ@(itemName)">所屬班次</label>
                            <div class="col-12">
                                <select class="form-control" id="cboShiftIdQ@(itemName)" name="cboShiftIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">生效日 <input type="checkbox" id="cbxEffectiveDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEffectiveStartDateQ@(itemName)" name="txtEffectiveStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEffectiveEndDateQ@(itemName)" name="txtEffectiveEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">失效日 <input type="checkbox" id="cbxExpirationDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtExpirationStartDateQ@(itemName)" name="txtExpirationStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtExpirationEndDateQ@(itemName)" name="txtExpirationEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-prod-mode-shift" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 125px;">班次名稱</th>
                                        <th scope="col" style="min-width: 125px;">生效日</th>
                                        <th scope="col" style="min-width: 125px;">失效日</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 265px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="ModeShiftId" name="ModeShiftId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboShiftId@(itemName)">所屬班次 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboShiftId@(itemName)" name="cboShiftId@(itemName)"
                                        data-msg-required="請選擇所屬班次" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtEffectiveDate@(itemName)">生效日 <span class="text-danger">*</span></label>
                            <div class="input-group col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control datedropper" id="txtEffectiveDate@(itemName)" name="txtEffectiveDate@(itemName)" placeholder="請輸入生效日"
                                       data-msg-extraRegex="請輸入生效日" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                        data-rule-required="true"/>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-danger" onclick="$('#txtEffectiveDate@(itemName)').val('')" title="清除">
                                        <i class="fas fa-eraser mt-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtExpirationDate@(itemName)">失效日 </label>
                            <div class="input-group col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control datedropper" id="txtExpirationDate@(itemName)" name="txtExpirationDate@(itemName)" placeholder="請輸入失效日"
                                        data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                        />
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-danger" onclick="$('#txtExpirationDate@(itemName)').val('')" title="清除">
                                        <i class="fas fa-eraser mt-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboShiftIdQ@(itemName)", "@Url.Action("GetShift", "BasicInformation")", {}, "", "ALL", "", "ShiftName", "ShiftId");

            Suites.DateDropper("#txtEffectiveStartDateQ@(itemName), #txtEffectiveEndDateQ@(itemName), #txtExpirationStartDateQ@(itemName), #txtExpirationEndDateQ@(itemName)");

            let currentDate = new Date();
            Suites.SetDateDropper("#txtEffectiveStartDateQ@(itemName)", currentDate);
            Suites.SetDateDropper("#txtEffectiveEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() + 7);
            Suites.SetDateDropper("#txtExpirationStartDateQ@(itemName)", currentDate);
            Suites.SetDateDropper("#txtExpirationEndDateQ@(itemName)", currentDate);

            if (!isMobile) {
                $("#cboShiftIdQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Expand@(itemName)() {
            if (parseInt($("#ModeId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                Return@(itemName)();
            } else {
                alert("班次資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetProdModeShift", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ModeId": $("#ModeId").val(), 
                "ShiftId": $("#cboShiftIdQ@(itemName)").val(),
                "EffectiveStartDate": ($("#cbxEffectiveDate@(itemName)").is(":checked") ? $("#txtEffectiveStartDateQ@(itemName)").val() : ""),
                "EffectiveEndDate": ($("#cbxEffectiveDate@(itemName)").is(":checked") ? $("#txtEffectiveEndDateQ@(itemName)").val() : ""),
                "ExpirationStartDate": ($("#cbxExpirationDate@(itemName)").is(":checked") ? $("#txtExpirationStartDateQ@(itemName)").val() : ""),
                "ExpirationEndDate": ($("#cbxExpirationDate@(itemName)").is(":checked") ? $("#txtExpirationEndDateQ@(itemName)").val() : ""),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.ShiftName}</td>
                                        <td>${item.EffectiveDate}</td>
                                        <td>${item.ExpirationDate != null ? item.ExpirationDate :`無`}</td>
                                        <td class="text-center auth-prod-mode-shift">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-modeshift-id="${item.ModeShiftId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-prod-mode-shift">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-prod-mode-shift" href="javascript:Edit@(itemName)(${item.ModeShiftId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-prod-mode-shift" href="javascript:Delete@(itemName)(${item.ModeShiftId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-modeshift-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(ModeShiftId) {
            $("#ModeShiftId").val(ModeShiftId ? ModeShiftId : 0);
            ComboBoxs.Default("#cboShiftId@(itemName)", "@Url.Action("GetShift", "BasicInformation")", {}, "", "NA", "", "ShiftName", "ShiftId");

            Switch("#editData@(itemName)", "#listData@(itemName)");

            if (ModeShiftId > 0) {
                let targetUrl = "@Url.Action("GetProdModeShift", "MesBasicInformation")";
                let postData = {
                    "ModeShiftId": ModeShiftId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboShiftId@(itemName)").val(item.ShiftId);
                        $("#txtEffectiveDate@(itemName)").val(item.EffectiveDate);
                        $("#txtExpirationDate@(itemName)").val(item.ExpirationDate);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboShiftId@(itemName)").select2({
                    width: "100%"
                });
            }

            Suites.DateDropper("#txtEffectiveDate@(itemName), #txtExpirationDate@(itemName)");
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ModeShiftId = parseInt($("#ModeShiftId").val());

                if (ModeShiftId <= 0) {
                    let targetUrl = "@Url.Action("AddProdModeShift", "MesBasicInformation")";
                    let postData = {
                        "ModeId": $("#ModeId").val(),
                        "ShiftId": $("#cboShiftId@(itemName)").val(),
                        "EffectiveDate": $("#txtEffectiveDate@(itemName)").val(),
                        "ExpirationDate": $("#txtExpirationDate@(itemName)").val(),
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateProdModeShift", "MesBasicInformation")";
                    let postData = {
                        "ModeShiftId": ModeShiftId,
                        "ShiftId": $("#cboShiftId@(itemName)").val(),
                        "EffectiveDate": $("#txtEffectiveDate@(itemName)").val(),
                        "ExpirationDate": $("#txtExpirationDate@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(ModeShiftId) {
            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteProdModeShift", "MesBasicInformation")";
                    let postData = {
                        "ModeShiftId": ModeShiftId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var ModeShiftId = $(this).data("modeshift-id");

            let targetUrl = "@Url.Action("UpdateProdModeShiftStatus", "MesBasicInformation")";
            let postData = {
                "ModeShiftId": ModeShiftId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
    </script>
)
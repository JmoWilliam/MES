@using Business_Manager.Helpers
@{
    string itemName = "ViewMachineLog";
    string itemNameText = "機台日誌";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前機台 <span class="sub-text" id="desMachine@(itemName)"></span></span>
                </h5>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                               readonly />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                               readonly />
                                    </div>
                                    <div class="col-auto" style="width: 20%;">
                                        <select class="form-control" id="cboOperatingStatusQ@(itemName)" name="cboOperatingStatusQ@(itemName)"></select>
                                    </div>
                                    <div class="col-auto" style="width: 20%;">
                                        <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>查詢</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">開始時間</th>
                                        <th scope="col" style="min-width: 200px;">結束時間</th>
                                        <th scope="col" style="min-width: 200px;">作業時間</th>
                                        <th scope="col" style="min-width: 100px;">運轉狀態</th>
                                        <th scope="col" style="min-width: 100px;">操作員</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary list-mode" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        function Pop@(itemName)(MachineId, MachineName) {
            $("#MachineId").val(MachineId)
            $("#desMachine@(itemName)").text(MachineName)

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            ComboBoxs.Default("#cboOperatingStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "MachineLog.OperatingStatus" }, "", "CHOOSE", "請選擇機台狀態", "StatusDesc", "StatusNo");            
            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "CHOOSE", "請選擇人員", "UserWithNo", "UserId");

            if (!isMobile) {
                $("#cboOperatingStatusQ@(itemName) ,#cboUserIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");

            let currentDate = new Date();
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() + 7);
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);

            Query@(itemName)();
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMachineLog", "MesBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MachineId": $("#MachineId").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
                "OperatingStatus": $("#cboOperatingStatusQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.BeginTime}</td>
                                        <td>${item.EndTime}</td>
                                        <td>${item.OperationTime}</td>
                                        <td>${StatusName(`MachineLog.OperatingStatus`, item.OperatingStatus)}</td>
                                        <td>${item.Operator}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
        
        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
)
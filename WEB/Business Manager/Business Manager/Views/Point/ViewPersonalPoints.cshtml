@using Business_Manager.Helpers
@{
    string itemName = "ViewPersonalPoints";
    string itemNameText = "個人積分管理";
}

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <input type="hidden" id="UserId" name="UserId" value="-1" />
                    點數紀錄
                    <span class="sub-title">目前人員: <span class="sub-text" id="desUserFullNo@(itemName)"></span></span>
                </h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <select class="form-control" id="cboAnnualIdQ@(itemName)" name="cboAnnualIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <select class="form-control" id="cboPointTypeQ@(itemName)" name="cboPointTypeQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto text-right text-md-left text-lg-left">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 100px;">年份</th>
                                        <th scope="col" style="min-width: 150px;">類別</th>
                                        <th scope="col" style="min-width: 150px;">來源</th>
                                        <th scope="col" style="min-width: 100px;">點數</th>
                                        <th scope="col" style="min-width: 200px;">備註</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Pop@(itemName)(UserId, UserFullNo) {
            $("#UserId").val(UserId);
            $("#desUserFullNo@(itemName)").html(UserFullNo);

            ComboBoxs.Default("#cboAnnualIdQ@(itemName)", "@Url.Action("GetAnnual", "EbpBasicInformation")", {}, "", "ALL", "", "Annual", "AnnualId");
            ComboBoxs.Default("#cboPointTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Point.PointType" }, "", "CHOOSE", "全部", "TypeName", "TypeNo");

            Query@(itemName)();

            $("#cboAnnualIdQ@(itemName), #cboPointTypeQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }
        
        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetPersonalPoints", "Point")";
            let postData = {
                "UserId": $("#UserId").val(),
                "AnnualId": $("#cboAnnualIdQ@(itemName)").val(),
                "PointType": $("#cboPointTypeQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td><span class="stack-title">年份</span>${item.Annual}</td>
                                        <td><span class="stack-title">類別</span>${item.TypeName}</td>
                                        <td><span class="stack-title">來源</span>${item.ActivityId > 0 ? `${item.ActivityName}` : item.ClubId > 0 ? `${item.ClubName}` : item.RedeemPrizeId > 0 ? `${item.PrizeName}` : ``}</td>
                                        <td><span class="stack-title">點數</span>${item.PointQty} 點</td>
                                        <td><span class="stack-title">備註</span>${item.Remark}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
    </script>
)
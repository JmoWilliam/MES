@using Business_Manager.Helpers
@{
    string itemName = "PersonalPoints";
    string itemNameText = "人員積分管理";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
        .btn-group {
            padding-top: 2px;
        }

        .btn-outline-primary {
            padding-top: 9px;
            padding-left: 13px;
            padding-right: 7px;
        }
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboDepartmentIdQ@(itemName)">部門</label>
                            <div class="col-12">
                                <select class="form-control" id="cboDepartmentIdQ@(itemName)" name="cboDepartmentIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboUserIdQ@(itemName)">人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3 justify-content-between">
                    <div class="col-auto col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-auto col-sm-6 col-md-6 text-right">
                        <a class="btn btn-danger auth-add" href="javascript:Pop@(itemName)();"><i class="fas fa-user-edit"></i> 點數異動</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 150px;">部門</th>
                                        <th scope="col" style="min-width: 175px;">人員</th>
                                        <th scope="col" style="min-width: 150px;">點數</th>
                                        <th class="text-center" scope="col" style="min-width: 75px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modaledit@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">點數異動</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="PointId" name="PointId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label" for="cboAnnualId@(itemName)">年份 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-10 col-lg-10">
                                <select class="form-control" id="cboAnnualId@(itemName)" name="cboAnnualId@(itemName)"
                                        data-msg-required="請選擇人員" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label" for="cboUserId@(itemName)">人員 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-10 col-lg-10">
                                <select class="form-control" id="cboUserId@(itemName)" name="cboUserId@(itemName)"
                                        data-msg-required="請選擇人員" data-rule-required="true" multiple></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label">類別 <span class="text-danger">*</span></label>
                            <div class="btn-group col-12 col-md-3 col-lg-3 col-form-label" data-toggle="buttons">
                                <label class="btn btn-outline-info">
                                    <input type="radio" id="rdoPointType@(itemName)R" name="PointType" value="Redeem"> 兌換
                                </label>
                                <label class="btn btn-outline-info">
                                    <input type="radio" id="rdoPointType@(itemName)O" name="PointType" value="Other"> 其他
                                </label>
                            </div>
                        </div>
                        <div class="form-group row redeem" style="display: none">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label">獎勵 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-10 col-lg-10">
                                <select class="form-control" id="cboRedeemPrizeId@(itemName)" name="cboRedeemPrizeId@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label" for="txtPointQty@(itemName)">點數 <span class="text-danger">*</span></label>
                            <div class="btn-group col-12 col-md-2 col-lg-2 col-form-label" data-toggle="buttons">
                                <label class="btn btn-outline-primary">
                                    <input type="radio" id="rdoPointQty@(itemName)P" name="PlusMinus" value="" />
                                    <i class="fas fa-plus"></i>
                                </label>
                                <label class="btn btn-outline-primary">
                                    <input type="radio" id="rdoPointQty@(itemName)M" name="PlusMinus" value="-" />
                                    <i class="fas fa-minus"></i>
                                </label>
                            </div>
                            <div class="col-12 col-md-8 col-lg-8">
                                <input type="number" class="form-control" id="txtPointQty@(itemName)" name="txtPointQty@(itemName)"
                                       data-msg-required="請輸入點數數量" data-rule-required="true" placeholder="請輸入點數數量" value="0" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-2 col-lg-2 col-form-label" for="txtRemark@(itemName)">備註 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-10 col-lg-10">
                                <textarea class="form-control" id="txtRemark@(itemName)" name="txtRemark@(itemName)" rows="2" placeholder="請輸入備註"
                                          data-msg-maxlength="必須少於 500 個字元" maxlength="500" 
                                          data-msg-required="請輸入備註" data-rule-required="true"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i> 儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("ViewPersonalPoints")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "Status": "A" }, "", "ALL", "", "DepartmentWithNo", "DepartmentId");
            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "ALL", "", "UserWithNo", "UserId");

            Query@(itemName)();

            $("#cboDepartmentIdQ@(itemName), #cboUserIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });
        });

        $("#cboRedeemPrizeId@(itemName)").off("change").on("change", function () {
            let targetUrl = "@Url.Action("GetRedeemPrize", "Point")";
            let postData = {
                "RedeemPrizeId": $("#cboRedeemPrizeId@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                $.each(data.result, function (i, item) {
                    $("#txtPointQty@(itemName)").val(item.RedeemPoint);
                });
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#txtRemark@(itemName)").val($("#cboRedeemPrizeId@(itemName) option:selected").text()).trigger('change');
        });

        $("input[name='PointType']").change(function () {
                switch ($("input[name='PointType']:checked").val()) {
                    case "Redeem":
                        $("#rdoPointQty@(itemName)M").prop("checked", true).trigger("click");
                        $(".redeem").show();
                        break;
                    case "Other":
                        $("#rdoPointQty@(itemName)P").prop("checked", true).trigger("click");
                        $(".redeem").hide();
                        $("#txtRemark@(itemName)").val('');
                        $("#txtPointQty@(itemName)").val(0);
                        break;
                }
            });

        function Pop@(itemName)() {
            $("#rdoPointType@(itemName)R").prop("checked", true).trigger("click");
            $("#rdoPointQty@(itemName)M").prop("checked", true).trigger("click");
            $(".redeem").show();

            ComboBoxs.Default("#cboAnnualId@(itemName)", "@Url.Action("GetAnnual", "EbpBasicInformation")", { "Status": "A" }, "", "CHOOSE-NUMBER", "", "Annual", "AnnualId");
            ComboBoxs.Default("#cboUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "NA", "", "UserWithNo", "UserId");
            ComboBoxs.Default("#cboActivityId@(itemName)", "@Url.Action("GetActivity", "Activity")", { "Status": "A" }, "", "NA", "", "ActivityName", "ActivityId");
            ComboBoxs.Default("#cboClubId@(itemName)", "@Url.Action("GetClub", "Club")", { "Status": "A" }, "", "NA", "", "ClubName", "ClubId");
            ComboBoxs.Default("#cboRedeemPrizeId@(itemName)", "@Url.Action("GetRedeemPrize", "Point")", { "AnnualId": $("#cboAnnualId@(itemName)").val(), "Status": "A" }, "", "NA", "", "PrizeName", "RedeemPrizeId");

            $("#cboAnnualId@(itemName)").change(function () {
                ComboBoxs.Default("#cboRedeemPrizeId@(itemName)", "@Url.Action("GetRedeemPrize", "Point")", { "AnnualId": $("#cboAnnualId@(itemName)").val(), "Status": "A" }, "", "NA", "", "PrizeName", "RedeemPrizeId");
            });

            $("#cboAnnualId@(itemName), #cboUserId@(itemName), #cboPointType@(itemName), #cboActivityId@(itemName), #cboClubId@(itemName), #cboRedeemPrizeId@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#modaledit@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetUserPoint", "Point")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "DepartmentId": $("#cboDepartmentIdQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td><span class="stack-title">#</span>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DepartmentNo} ${item.DepartmentName}" style="max-width: 200px;">
                                            <span class="stack-title">部門</span>${item.DepartmentNo} ${item.DepartmentName}
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo} ${item.UserName}" style="max-width: 125px;">
                                            <span class="stack-title">人員</span>
                                            ${item.Gender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>`
                                            : item.Gender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>`
                                            : ``}${item.UserNo} ${item.UserName}
                                        </td>
                                        <td><span class="stack-title">點數</span>${item.PointQty} 點</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link auth-read" href="javascript:PopViewPersonalPoints('${item.UserId}', '${item.UserFullNo}');"><i class="fas fa-crown"></i> 點數紀錄</a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let targetUrl = "@Url.Action("AddPoint", "Point")";
                let postData = {
                    "AnnualId": $("#cboAnnualId@(itemName)").val(),
                    "UserId": $("#cboUserId@(itemName) option:selected").toArray().map(item => item.value).join(),
                    "PointType": $("input[name='PointType']:checked").val(),
                    "RedeemPrizeId": $("#cboRedeemPrizeId@(itemName)").val(),
                    "PointQty": parseInt($("input[name='PlusMinus']:checked").val() + $("#txtPointQty@(itemName)").val()),
                    "Remark": $("#txtRemark@(itemName)").val()
                };

                let result = DataAccess.Add(targetUrl, postData, false, true);

                if (result) {
                    Return@(itemName)();
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modaledit@(itemName)").modal("hide");
            Query@(itemName)();
        }
    </script>
)

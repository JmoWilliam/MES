        function ValidateFloat(e) {
            if (!/^\d+[.]?\d*$/.test(e.value)) {
                $(e).val(/^\d+[.]?\d*/.exec($(e).val()));
            }
            return false;
        }

        function AddComma(number) {
            let comma = /\B(?<!\.\d*)(?=(\d{3})+(?!\d))/g;
            return number != null ? number.toString().replace(comma, ',') : '';
        }

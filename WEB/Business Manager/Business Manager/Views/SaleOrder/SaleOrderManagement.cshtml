@using Business_Manager.Helpers
@{
    string itemName = "SaleOrderManagement";
    string itemNameText = "訂單資料管理";
    string itemModify = "SoModify";
    string authority = ViewBag.authority;
    string componentName = "ViewSoDetailTemp";
    string popComponentName = "ViewPurchaseOrder";
    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .form-group .select2-selection__rendered {
             line-height: 29px !important;
         }

         .form-group .select2-container .select2-selection--single {
             height: 39px !important;
         }

         .form-group .select2-selection__arrow {
             height: 34px !important;
         }

         .table-deposit {
             margin: 0;
             padding: 0;
             max-height: 30vh;
             margin-bottom: .75rem;
             display: none;
         }

             .table-deposit th {
                 background-color: #d7ecfa !important;
             }

             .table-deposit th, .table-deposit td {
                 padding: 5px 0;
                 text-align: center;
             }

         .active-icon {
             background-color: #d7ecfa;
             color: black;
         }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
)

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboSoErpPrefixQ@(itemName)">單別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboSoErpPrefixQ@(itemName)" name="cboSoErpPrefixQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtSoErpNoQ@(itemName)">單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtSoErpNoQ@(itemName)" name="txtSoErpNoQ@(itemName)" placeholder="請輸入單號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboCustomerIdQ@(itemName)">客戶名稱</label>
                            <div class="col-12">
                                <select class="form-control" id="cboCustomerIdQ@(itemName)" name="cboCustomerIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboSalesmenIdQ@(itemName)">業務人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboSalesmenIdQ@(itemName)" name="cboSalesmenIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtSearchKeyQ@(itemName)">品號/品名</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)" placeholder="請輸入品號/品名" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    未確認
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)N" name="cbxConfirmStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    作廢
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)V" name="cbxConfirmStatusQ@(itemName)" value="V" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    已確認
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)Y" name="cbxConfirmStatusQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6 mt-2">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    未結案
                                    <input type="checkbox" id="cbxClosureStatusQ@(itemName)N" name="cbxClosureStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6 mt-2">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    已結案
                                    <input type="checkbox" id="cbxClosureStatusQ@(itemName)Y" name="cbxClosureStatusQ@(itemName)" value="Y,y" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">單據日期 <input type="checkbox" id="cbxUseDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-success auth-sync" href="javascript:PopSoSync@(itemName)();"><i class="fas fa-sync"></i>ERP資料同步</a>
                        <a class="btn file-excel auth-excel" href="javascript:Excel@(itemName)();"><i class="fas fa-file-excel"></i>Excel</a>
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky tiny-table" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 165px;">單號</th>
                                        <th scope="col" style="min-width: 100px;">單據日期</th>
                                        <th scope="col" style="min-width: 150px;">客戶</th>
                                        <th scope="col" style="min-width: 150px;">業務</th>
                                        <th scope="col" style="min-width: 150px;">BPM拋轉狀態</th>
                                        <th scope="col" style="min-width: 140px;">確認者</th>
                                        <th class="text-center" scope="col" style="min-width: 75px;">操作</th>
                                        <th style="padding: 0; min-width: 1550px;">
                                            <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 75px;">審查文件</th>
                                                        <th style="width: 50px;">流水號</th>
                                                        <th style="min-width: 180px;">品號</th>
                                                        <th style="min-width: 175px;">品名</th>
                                                        <th style="width: 100px;">訂單數量</th>
                                                        <th style="width: 100px;">類型</th>
                                                        <th style="width: 100px;">贈品數量</th>
                                                        <th style="width: 100px;">備品數量</th>
                                                        <th style="width: 100px;">幣別</th>
                                                        <th style="width: 100px;">單價</th>
                                                        <th style="width: 100px;">金額</th>
                                                        <th style="width: 100px;">預計出貨日</th>
                                                        <th style="width: 200px;">備註</th>
                                                        <th style="width: 100px;">狀態</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="SoId" name="SoId" value="-1" />
                        <input type="hidden" id="ViewMode" name="ViewMode" value="" />

                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">訂單 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <select class="form-control" id="cboSoErpPrefix@(itemName)" name="cboSoErpPrefix@(itemName)"
                                            data-msg-required="請選擇訂單單別" data-rule-required="true"></select>
                                    <input type="text" class="form-control" id="txtSoErpNo@(itemName)" name="txtSoErpNo@(itemName)" placeholder="訂單單號"
                                           readonly />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtDocDate@(itemName)">單據日期 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtDocDate@(itemName)" name="txtDocDate@(itemName)" placeholder="請輸入單據日期"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       data-msg-required="請輸入單據日期" data-rule-required="true"
                                       readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboCustomerId@(itemName)">客戶 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <select class="form-control" id="cboCustomerId@(itemName)" name="cboCustomerId@(itemName)"
                                        data-msg-required="請選擇客戶" data-rule-required="true"></select>
                                <input type="hidden" id="txtCompanyId@(itemName)" name="txtCompanyId@(itemName)" value="-1" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtCustomerPurchaseOrder@(itemName)">客戶採購單</label>
                            <div class="col-12 col-md-9 col-lg-9 po-control">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtCustomerPurchaseOrder@(itemName)" name="txtCustomerPurchaseOrder@(itemName)" placeholder="請輸入客戶採購單"
                                           data-msg-maxlength="必須少於 20 個字元" maxlength="20" />
                                    <div class="input-group-append auth-cust-po">
                                        <button type="button" class="btn btn-success cust-po-item" id="pop-@(componentName)" name="pop-@(componentName)"><i class="fal fa-search"></i></button>
                                        <button type="button" class="btn btn-outline-danger cust-po-item" id="clearCustPo@(itemName)" name="clearCustPo@(itemName)"><i class="fas fa-eraser"></i></button>
                                    </div>
                                </div>
                                <div class="cust-po-item">
                                    <label class="col-form-label auth-cust-po" for="chkPopSelectType@(itemName)">項目選擇模式</label>
                                    <input type="checkbox" name="chkPopSelectType@(itemName)" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">部門 / 業務 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <select class="form-control" id="cboDepartmentId@(itemName)" name="cboDepartmentId@(itemName)"
                                            data-msg-required="請選擇部門" data-rule-required="true"></select>
                                    <select class="form-control" id="cboSalesmenId@(itemName)" name="cboSalesmenId@(itemName)"
                                            data-msg-required="請選擇業務" data-rule-required="true"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboCurrency@(itemName)">幣別<span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9" style="display: flex;">
                                <select class="form-control" id="cboCurrency@(itemName)" name="cboCurrency@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtSoRemark@(itemName)">備註</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtSoRemark@(itemName)" name="txtSoRemark@(itemName)"
                                          cols="2" data-msg-maxlength="必須少於 255 個字元" maxlength="255"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success read-hide@(itemName)" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link" data-toggle="tab" href="#tabSaleOrderDetail">
                        <i class="fas fa-list"></i> 訂單單身
                    </a>
                </li>
                <li class="flag-item default-item auth-cust-po">
                    <a class="flag-link cust-po-item" data-toggle="tab" href="#tabViewSoDetailTemp">
                        <i class="fas fa-list"></i> 採購單匯入
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane" id="tabSaleOrderDetail">
            @Html.Partial("SaleOrderDetail")
        </div>
        <div class="tab-pane" id="tabViewSoDetailTemp">
            @Html.Partial("ViewSoDetailTemp")
        </div>
    </div>
</div>

<input type="hidden" id="txtDocId@(itemName)" name="txtDocId@(itemName)" value="-1" />
<input type="hidden" id="txtAmount@(itemName)" name="txtAmount@(itemName)" value="0" />

<div class="modal fade" id="modalWord@(itemName)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">訂單單據下載</h5>
                <button class="close" type="button" onclick="CloseWord@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="wordForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">單據金額</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    不包含
                                    <input type="checkbox" id="cbxNonPrice@(itemName)" name="cbxNonPrice@(itemName)" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn file-word" onclick="Word@(itemName)()"><i class="fas fa-file-word"></i>Word</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalModify@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    訂單資料變更
                    <span class="sub-title">訂單 <span class="sub-text" id="desSoErpFullNo@(itemName)"></span></span>
                </h5>
                <button class="close" type="button" onclick="CloseModify@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="modifyForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">客戶採購單</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtCustomerPurchaseOrder@(itemModify)" name="txtCustomerPurchaseOrder@(itemModify)" placeholder="請輸入客戶採購單" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">單頭備註</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtSoRemark@(itemModify)" name="txtSoRemark@(itemModify)"
                                          cols="2" data-msg-maxlength="必須少於 255 個字元" maxlength="255"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">訂金分批</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxDepositPartial@(itemModify)" name="cbxDepositPartial@(itemModify)" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-custom table-deposit">
                                    <table class="table" id="tblDepositRate@(itemModify)">
                                        <thead>
                                            <tr>
                                                <th scope="col" style="width: 15%;">序號</th>
                                                <th scope="col" style="width: 27%;">訂金比率</th>
                                                <th scope="col" style="width: 25%;">訂金金額</th>
                                                <th scope="col" style="width: 20%;">預計收款日</th>
                                                <th scope="col" style="width: 13%;">
                                                    操作
                                                    <a class="active-icon" href="javascript:DepositAdd@(itemName)();"><i class="fas fa-plus"></i></a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot id="editDeposit@(itemModify)" style="display: none;">
                                            <tr>
                                                <td></td>
                                                <td class="p-0">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control text-center" id="txtRatio@(itemModify)" name="txtRatio@(itemModify)" />
                                                        <span class="input-group-addon"><i class="fas fa-percent"></i></span>
                                                    </div>
                                                </td>
                                                <td class="p-0">
                                                    <input type="text" class="form-control text-center" id="txtAmount@(itemModify)" name="txtAmount@(itemModify)" />
                                                </td>
                                                <td class="p-0">
                                                    <input type="text" class="form-control text-center" id="txtPaymentDate@(itemModify)" name="txtPaymentDate@(itemModify)" />
                                                </td>
                                                <td class="text-center active-content">
                                                    <a class="active-icon" href="javascript:DepositSave@(itemName)();"><i class="fas fa-save"></i></a>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <hr />
                <div class="table-custom">
                    <table class="table table-bordered table-striped table-sticky tiny-table" id="tblSoDetailData@(itemName)">
                        <thead>
                            <tr>
                                <th class="text-center checkbox-mode" scope="col" style="min-width: 75px;">
                                    <label class="control control-solid control-solid-info control--checkbox" style="margin-bottom: 0px;">
                                        全選 <input type="checkbox" id="cbxSelectAll@(itemName)" />
                                        <span class="control__indicator"></span>
                                    </label>
                                </th>
                                <th scope="col" style="min-width: 50px;">流水號</th>
                                <th scope="col" style="min-width: 150px;">品號</th>
                                <th scope="col" style="min-width: 175px;">品名</th>
                                <th scope="col" style="min-width: 100px;">數量</th>
                                <th scope="col" style="min-width: 200px;">備註</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

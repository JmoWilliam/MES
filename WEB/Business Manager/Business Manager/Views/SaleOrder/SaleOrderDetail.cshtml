                        "SoQty": $("#txtSoQty@(itemName)").val(),
                        "UnitPrice": $("#txtUnitPrice@(itemName)").val(),
                        "Amount": $("#txtAmount@(itemName)").val(),
                        "ProductType": $("#cboProductType@(itemName)").val(),
                        "FreebieOrSpareQty": $("#txtFreebieOrSpareQty@(itemName)").val(),
                        "PromiseDate": $("#txtPromiseDate@(itemName)").val(),
                        "Project": $("#cboProject@(itemName)").val(),
                        "SoDetailRemark": $("#txtSoDetailRemark@(itemName)").val(),
                        "QuotationErp": $("#cboQuotationErp@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateSoDetail", "SaleOrder")";
                    let postData = {
                        "SoId": $("#SoId").val(),
                        "SoDetailId": SoDetailId,
                        "SoDetailTempId": $("#cboPurchaseOrder@(itemName) :selected").val(),
                        "SoSequence": $("#txtSoSequence@(itemName)").val(),
                        "MtlItemId": $("#txtMtlItemId@(itemName)").val(),
                        "SoMtlItemName": $("#txtSoMtlItemName@(itemName)").val(),
                        "InventoryId": $("#cboInventoryId@(itemName)").val(),
                        "SoQty": $("#txtSoQty@(itemName)").val(),
                        "UnitPrice": $("#txtUnitPrice@(itemName)").val(),
                        "Amount": $("#txtAmount@(itemName)").val(),
                        "ProductType": $("#cboProductType@(itemName)").val(),
                        "FreebieOrSpareQty": $("#txtFreebieOrSpareQty@(itemName)").val(),
                        "PromiseDate": $("#txtPromiseDate@(itemName)").val(),
                        "Project": $("#cboProject@(itemName)").val(),
                        "SoDetailRemark": $("#txtSoDetailRemark@(itemName)").val(),
                        "QuotationErp": $("#cboQuotationErp@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(SoDetailId) {
            swal.fire({
                titleText: "確認要刪除嗎?",

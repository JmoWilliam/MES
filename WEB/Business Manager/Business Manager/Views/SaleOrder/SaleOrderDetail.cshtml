        function Save@(itemName)() {
            if (parseInt($("#SoId").val()) < 0) {
                alert("請先儲存訂單單頭", "alert");
                return false;
            }

            if ($(objForm@(itemName)).valid()) {
                let SoDetailId = parseInt($("#SoDetailId").val());

                if (SoDetailId <= 0) {
                    let targetUrl = "@Url.Action("AddSoDetail", "SaleOrder")";
                    let postData = {
                        "SoId": $("#SoId").val(),
                        "SoDetailTempId": $("#cboPurchaseOrder@(itemName) :selected").val(),
                        "SoSequence": $("#txtSoSequence@(itemName)").val(),
                        "MtlItemId": $("#txtMtlItemId@(itemName)").val(),
                        "SoMtlItemName": $("#txtSoMtlItemName@(itemName)").val(),

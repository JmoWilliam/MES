        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function Calculate@(itemName)() {
            let targetUrl = "@Url.Action("GetTotal", "SaleOrder")";
            let postData = {
                "SoId": $("#SoId").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                $.each(data.result, function (i, item) {
                    $("#desTotalQty@(itemName)").html(item.TotalQty.toLocaleString('en'));
                    $("#desAmount@(itemName)").html(item.Amount.toLocaleString('en'));
                    $("#desTaxAmount@(itemName)").html(item.TaxAmount.toLocaleString('en'));
                    $("#desTotalAmount@(itemName)").html(item.TotalAmount.toLocaleString('en'));
                    totalAmount@(itemName) = parseFloat(item.Amount) + parseFloat(item.TaxAmount);
                });

                if (data.result.length <= 0) {
                    $("#desTotalQty@(itemName)").html("0");
                    $("#desAmount@(itemName)").html("0");
                    $("#desTaxAmount@(itemName)").html("0");
                    $("#desTotalAmount@(itemName)").html("0");
                    totalAmount@(itemName) = 0;
                }
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function TakeNumber@(itemName)() {
            let targetUrl = "@Url.Action("GetSoSequence", "SaleOrder")";
            let postData = {
                "SoId": $("#SoId").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                $.each(data.result, function (i, item) {
                    var seq = parseInt(item.SoSequence);

                    if (seq == 0) {
                        seq = 1;
                    } else {
                        seq = seq + 1;
                    }
                    var serial = "0000" + seq;

                    $("#txtSoSequence@(itemName)").val(serial.substr(serial.length - 4));
                });

                if (data.result.length <= 0) {
                    $("#txtSoSequence@(itemName)").val("0001");
                }
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function ClearPurchaseOrder@(itemName)() {
            ResetForm(objForm@(itemName));
            TakeNumber@(itemName)();
            $(`${objForm@(itemName)} select`).prop("selectedIndex", 0).trigger("change")
            $(".cust-po-item input, .cust-po-item select, .cust-po-item button").removeAttr("disabled");

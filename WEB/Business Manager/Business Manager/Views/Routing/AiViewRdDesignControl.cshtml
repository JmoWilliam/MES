                                          <input  style="color: #808080; cursor: not-allowed;" disabled type="checkbox" name="chkStatus@(itemName)" data-control-id="${item.ControlId}" ${item.ReleasedStatus == `Y` ? `checked` : ''} />
                                        </td>
                                        <td style="color: #808080; cursor: not-allowed;" class="text-center un-auth auth-released-status">${StatusName(`Boolean`, `${item.ReleasedStatus}`)}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DesignDate}" style="max-width: 175px;">${item.DesignDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}" style="max-width: 175px;">${item.CreateDate}</td>
                                        <td><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        ${JudgeCad3DFileAbsolutePath(`${item.Cad3DFileAbsolutePath}`, `${item.Cad3DFile}`)}
                                        ${JudgeCad2DFileAbsolutePath(`${item.Cad2DFileAbsolutePath}`, `${item.Cad2DFile}`, `${item.ControlId}`,`${item.MtlItemId}`)}
                                        ${JudgePdf2DFileAbsolutePath(`${item.Pdf2DFileAbsolutePath}`, `${item.Pdf2DFile}`)}

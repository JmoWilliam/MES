        function Pop@(itemName)(DesignId, CustomerMtlItmeNo) {
            $("#DesignId").val(DesignId);
            $("#desCustomerMtlItmeNo@(itemName)").html(CustomerMtlItmeNo);

            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");


@using Business_Manager.Helpers
@{
    string itemName = "ViewRoutingItemForQcitemExcel";
    string itemNameText = "查看途程品號製程資料";
    string authority = ViewBag.authority;
}
<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="queryForm@(itemName)">
                    <div class="col-12">
                        <div class="col-12">
                            
                        </div>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 200px;">製程</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 200px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
                    <button type="button" class="btn btn-success save-mode" onclick="Save@(itemName)()"><i class="fas fa-check"></i>確定</button>*@
            </div>
        </div>
    </div>
</div>
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let itemNo@(itemName);
        let cell@(itemName);
        let qcNameCell@(itemName);
        let processIdCell@(itemName);
        let spreadsheet@(itemName);

        let routingItemId@(itemName);

        function Pop@(itemName)(cell, itemNo, spreadsheet, routingItemId, processIdCell) {

            itemNo@(itemName) = itemNo;
            cell@(itemName) = cell;
            spreadsheet@(itemName) = spreadsheet;
            processIdCell@(itemName) = processIdCell;

            routingItemId@(itemName) = routingItemId;

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });


            Query@(itemName)();
        }

        $(document).ready(function () {
            if (!isMobile) {
               
            }

            
        });


        function Query@(itemName)() {
            @*objPage@(itemName).pageIndex = 0;*@
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)() {
            let innerHtml = '';

            let targetUrl = "@Url.Action("GetRoutingItemProcess", "Routing")";
            let postData = {
                "OrderBy": "",
                "RoutingItemId": routingItemId@(itemName)
            };
            let data = DataAccess.Get(targetUrl, postData, false);
            if (data.status == "success") {

                if (data.result.length > 0 > 0) {
                    $.each(data.result, function (i, item) {
                        innerHtml += `<tr>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessAlias}" style="max-width: 200px;">${item.ProcessAlias}</td>
                                        
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-qc-id="${item.ItemProcessId}" value="${item.ItemProcessId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" name="txtProcessAlias@(itemName)" data-qc-id="${item.ItemProcessId}" value="${item.ProcessAlias}" />
                                         
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }

            } else {
                alert(data.msg, "alert", 0);
            }
            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            @*Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));*@

            $("input[type='radio']").click(function () {
                if ("[data-qc-id]:checked") {
                    let qcItemId = $(this).data("qc-id");
                    let processAlias = $(`input[name='txtProcessAlias@(itemName)'][data-qc-id='${qcItemId}']`).val();

                    spreadsheet@(itemName).unlock(`${processIdCell@(itemName)}:${processIdCell@(itemName)}`);
                    spreadsheet@(itemName).setValue(cell@(itemName), processAlias);
                    spreadsheet@(itemName).setValue(processIdCell@(itemName), qcItemId);
                    spreadsheet@(itemName).lock(`${processIdCell@(itemName)}:${processIdCell@(itemName)}`);

                    
                    $(this).prop("checked", false);
                }
                $("#modal@(itemName)").modal('hide');

            });
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal('hide');
        }
    </script>
                                )

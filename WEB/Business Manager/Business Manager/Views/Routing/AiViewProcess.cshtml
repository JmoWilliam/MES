           // NOTE by Mark, 09/05, to close
        //function SaveAiViewProcess() {
        function AiClose@(itemName)() {
            Close@(itemName)();
        }

        // NOTE by Mark, 08/31, 模仁相關製程選好後的 確定
        //function SaveAiViewProcess() {
        function Save@(itemName)() {
            let processJson =
            {
                processInfo: []
            };
            processJson = collectProcessInfo(); //NOTE by Mark, 08/31, F12 working when AiRoutingManagement.cshtml is open
            //console.log("processJson of AiViewProcessDfm --- by collectProcessInfo");
            //console.log(processJson);

            // Extract SortNumber from each object in processInfo and find the maximum
            let maxSortNumber = Math.max(...processJson.processInfo.map(obj => obj.SortNumber));
            //console.log("maxSortNumber");
            //console.log(maxSortNumber);
            //Swal.fire(
            //    'maxSortNumber is',
            //    maxSortNumber.toString(),
            //    'success'
            //)
            

            if ($("input[type='checkbox'][data-process-no][data-process-name]:checked").length > 0) {
                $.each($("input[type='checkbox'][data-process-no][data-process-name]:checked"), function (i) {
                    let processId = $(this).val();
                    let processNo = $(this).data("process-no");
                    let processName = $(this).data("process-name");
                    //let createCount = $("input[id='txtCreateCount@(itemName)'][data-process-id='" + processId + "']").val();
                    maxSortNumber++;
                    let inputData =
                    {
                        "DisplayStatus": true,
                        "NecessityStatus": true,
                        "PackageFlag": "N",

                        "SortNumber": maxSortNumber,
                        "ProcessId": processId,
                        "ProcessNo": processNo,
                        "ProcessAlias": processName,

                        "ProcessCheckStatus": "N",
                        "ProcessCheckType": "0",
                        //"CreateCount": createCount
                    }
                    processJson.processInfo.push(inputData);
                  
                    //tempNumber@(itemName)++;// not for this case
                });
                @*console.log('AiViewProcess.cshtml Save@(itemName)  ')
                console.log('processJson ')
                console.log(processJson)*@

                var temp = generateInnerHtmlByProcessJson(processJson);
                $("#tblDataViewProcessDfm tbody").html(temp);
            }

            Resetprocess@(itemName)()// rearrange html 後面的那個
            Close@(itemName)();// 關閉目前看到,就顯示出上面那行重整過的
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }

        function Resetprocess@(itemName)() {
            let innerHtml = '';
            $.each(processJson.processInfo, function (i, item) {
                innerHtml += `<div class="tag-group">
                                <span>${item.ProcessName}</span>
                                <a href="javascript:DeleteTagRoutingProcess('${item.TempNumber}');">
                                    <i style="color:slategrey" class="fas fa-times"></i>
                                </a>
                              </div>`;
            });
            $(".process-info").html(innerHtml);
        }
    </script>

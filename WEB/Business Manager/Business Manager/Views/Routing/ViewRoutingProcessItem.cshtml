@using Business_Manager.Helpers
@{
    string itemName = "ViewRoutingProcessItem";
    string itemNameText = "查看途程製程屬性檔";
}

@Html.Resource("css",
    @<style>
         /*.modal-body {
             max-height: 75vh;
             overflow-y: auto;
         }*/
    </style>
                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前製程: <span class="sub-text" id="desProcessAlias@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtTypeNameQ@(itemName)" name="txtTypeNameQ@(itemName)"
                                               placeholder="請輸入屬性名稱" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                        <button type="button" class="btn btn-info auth-add" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">項目代碼</th>
                                        <th scope="col" style="min-width: 200px;">項目名稱</th>
                                        <th scope="col" style="min-width: 250px;">項目說明</th>
                                        <th class="text-center" scope="col" style="min-width: 250px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
                <div class="row" id="editData@(itemName)" style="display: none;">
                    <div class="col-12">
                        <form class="container" autocomplete="off" id="editForm@(itemName)">
                            <input type="hidden" id="RoutingProcessItemId" value="-1" />
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="cboItemNo@(itemName)">屬性資料<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboItemNo@(itemName)" name="cboItemNo@(itemName)" required></select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="cboChkUnique@(itemName)">是否檢核重複值<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboChkUnique@(itemName)" name="cboChkUnique@(itemName)" required>
                                            <option value="Y">是</option>
                                            <option value="N">否</option>
                                        </select>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary list-mode" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success edit-mode" onclick="Save@(itemName)()" style="display: none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let routingProcessId@(itemName);

        function Pop@(itemName)(RoutingProcessId, ProcessAlias) {
            routingProcessId@(itemName) = RoutingProcessId;
            $("#desProcessAlias@(itemName)").html(ProcessAlias);

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetRoutingProcessItem", "Routing")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "RoutingProcessId": routingProcessId@(itemName),
                "TypeName": $("#txtTypeNameQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TypeNo}" style="min-width: 200px;">${item.TypeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TypeName}" style="min-width: 200px;">${item.TypeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TypeDesc}" style="min-width: 200px;">${item.TypeDesc}</td>
                                        <td class="text-center active-content" scope="col" style="min-width: 250px;">
                                            <!--修改-->
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.RoutingProcessItemId}');">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <!--刪除-->
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.RoutingProcessItemId}');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(RoutingProcessItemId) {
            $("#RoutingProcessItemId").val(RoutingProcessItemId ? RoutingProcessItemId : 0);
            Switch("#editData@(itemName), .edit-mode", "#listData@(itemName), .list-mode");

            ComboBoxs.Default("#cboItemNo@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "RoutingProcessItem.ItemNo" }, "", "NA", "", "TypeName", "TypeNo");

            if (!isMobile) {
                $("#cboItemNo@(itemName)").select2({
                    width: "100%"
                });
            }

            if (RoutingProcessItemId > 0) {
                let targetUrl = "@Url.Action("GetRoutingProcessItem", "Routing")";
                let postData = {
                    "RoutingProcessItemId": RoutingProcessItemId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    ComboBoxs.Default("#cboItemNo@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "RoutingProcessItem.ItemNo" }, "", "NA", "", "TypeName", "TypeNo");
                    $.each(data.result, function (i, item) {
                        $("#cboItemNo@(itemName)").val(item.TypeNo);
                        $("#cboChkUnique@(itemName)").val(item.ChkUnique);
                    });
                }
                else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let RoutingProcessItemId = parseInt($("#RoutingProcessItemId").val());
                if (RoutingProcessItemId <= 0) {
                    let targetUrl = "@Url.Action("AddRoutingProcessItem", "Routing")";
                    let postData = {
                        "RoutingProcessId": routingProcessId@(itemName),
                        "ItemNo": $("#cboItemNo@(itemName)").val(),
                        "ChkUnique": $("#cboChkUnique@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
                else {
                    let targetUrl = "@Url.Action("UpdateRoutingProcessItem", "Routing")";
                    let postData = {
                        "RoutingProcessItemId": RoutingProcessItemId,
                        "RoutingProcessId": routingProcessId@(itemName),
                        "ItemNo": $("#cboItemNo@(itemName)").val(),
                        "ChkUnique": $("#cboChkUnique@(itemName)").val()
                    };

                    var result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(RoutingProcessItemId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteRoutingProcessItem", "Routing")";
                    let postData = {
                        "RoutingProcessItemId": RoutingProcessItemId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
                        )
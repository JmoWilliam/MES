@using Business_Manager.Helpers
@{
    string itemName = "ViewRdDesignForBatchExcel";
    string itemNameText = "查看研發設計圖資料(批量模式)";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前品號: <span class="sub-text" id="desMtlItmeNo@(itemName)"></span></span>
                </h5>
            </div>
            <div class="modal-body">
                <div class="row mb-3" id="query@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtEditionQ@(itemName)" name="txtEditionQ@(itemName)"
                                               placeholder="請輸入研發版次" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]d|3[01]))" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]d|3[01]))" />
                                    </div>
                                    <div class="col-auto">
                                        <button id="queryButton@(itemName)" type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i> 搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">研發版次<code>(系統版次)</code></th>
                                        <th scope="col" style="min-width: 200px;">變更原因</th>
                                        <th scope="col" style="min-width: 175px;">變更日期</th>
                                        <th scope="col" style="min-width: 175px;">變更人員</th>
                                        <th scope="col" style="min-width: 250px;">2D研發設計圖</th>
                                        <th scope="col" style="min-width: 250px;">JMO檔</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Close@(itemName)()"><i class="fas fa-times"></i> 關閉</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let mtlItemNo@(itemName);

        function Pop@(itemName)(mtlItemNo) {
            mtlItemNo@(itemName) = mtlItemNo;

            if (!mtlItemNo) {
                alert("請先帶出品號資料後再設定研發設計圖!")
                return false;
            }

            $("#desMtlItmeNo@(itemName)").html(mtlItemNo);

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false
            });

            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");

            let currentDate = new Date();

            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 90);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetRdDesignControl", "Routing")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "Edition": $("#txtEditionQ@(itemName)").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
                "MtlItemNo": mtlItemNo@(itemName),
                "ReleasedStatus": "Y"
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.Edition}<code>(${item.Version})</code></td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Cause}" style="max-width: 200px;">${item.Cause}</td>
                                        <td>${item.CreateDate}</td>
                                        <td><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        ${JudgeCad2DFileAbsolutePath@(itemName)(`${item.Cad2DFileAbsolutePath}`, `${item.Cad2DFile}`, `${item.ControlId}`)}
                                        ${JudgeJmoFileAbsolutePath@(itemName)(`${item.JmoFileAbsolutePath}`, `${item.JmoFile}`, `${item.ControlId}`)}
                                        <td class="text-center col-sticky">
                                            <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-control-id="${item.ControlId}" data-customer-mtl-item-no="${item.CustomerMtlItemNo}"  value="${item.ControlId}" />
                                            <span class="control__indicator"></span>
                                            </label>
                                            <input type="hidden" name="txtControlId@(itemName)" data-control-id="${item.ControlId}" value="${item.ControlId}" />
                                            <input type="hidden" name="txtEdition@(itemName)" data-control-id="${item.ControlId}" value="${item.Edition}" />
                                            <input type="hidden" name="txtVersion@(itemName)" data-control-id="${item.ControlId}" value="${item.Version}" />
                                            <input type="hidden" name="txtCad3DFileAbsolutePath@(itemName)" data-control-id="${item.ControlId}" value="${item.Cad3DFileAbsolutePath}" />
                                            <input type="hidden" name="txtCad2DFileAbsolutePath@(itemName)" data-control-id="${item.ControlId}" value="${item.Cad2DFileAbsolutePath}" />
                                            <input type="hidden" name="txtPdf2DFileAbsolutePath@(itemName)" data-control-id="${item.ControlId}" value="${item.Pdf2DFileAbsolutePath}" />
                                            <input type="hidden" name="txtJmoFileAbsolutePath@(itemName)" data-control-id="${item.ControlId}" value="${item.JmoFileAbsolutePath}" />
                                        </td>
                                      </tr>`;

                        function JudgeCad2DFileAbsolutePath@(itemName)(cad2DFileAbsolutePath, cad2DFile, controlId) {
                            let innerHtml = '';
                            if (cad2DFileAbsolutePath != "null") {
                                let fileFullNameList = cad2DFileAbsolutePath.split('\\');
                                let fileFullName = fileFullNameList[fileFullNameList.length - 1];
                                fileFullName = ChangeASCII@(itemName)(fileFullName);
                                innerHtml += `<td class="active-content ellipsis" data-toggle="tooltip" title="${fileFullName}" style="max-width: 250px;">
                                                <a class="active-link mr-1" href="/Drawing/GetCadFile?FilePath=${cad2DFileAbsolutePath}"><i class="fas fa-download"></i></a>
                                                ${fileFullName}
                                                </td>`;
                            }
                            else if (cad2DFile != "null") {
                                innerHtml += GetCad2DFile(cad2DFile, controlId);
                            }
                            else {
                                innerHtml += `<td></td>`;
                            }
                            return innerHtml;
                        }

                        function JudgeJmoFileAbsolutePath@(itemName)(jmoFileAbsolutePath, jmoFile, controlId) {
                            let innerHtml = '';
                            if (jmoFileAbsolutePath != "null") {
                                let fileFullNameList = jmoFileAbsolutePath.split('\\');
                                let fileFullName = fileFullNameList[fileFullNameList.length - 1];
                                innerHtml += `<td class="active-content ellipsis" data-toggle="tooltip" title="${fileFullName}" style="max-width: 250px;">
                                                <a class="active-link mr-1" href="/Drawing/GetCadFile?FilePath=${jmoFileAbsolutePath}"><i class="fas fa-download"></i></a>
                                                ${fileFullName}
                                                </td>`;
                            }
                            else if (parseInt(jmoFile) > 0) {
                                innerHtml += GetJmoFile(jmoFile, controlId);
                            }
                            else {
                                innerHtml += `<td></td>`;
                            }
                            return innerHtml;
                        }

                        function GetCad2DFile(cad2DFile, controlId) {
                            let Cad2DFile = JSON.parse(cad2DFile);
                            let innerHtml = '';
                            if (Cad2DFile != null) {
                                $.each(Cad2DFile.data, function (k, item2) {
                                    innerHtml += `<td class="active-content ellipsis" data-toggle="tooltip" title="${item2.FileInfo}" style="max-width: 250px;">
                                                    <a class="active-link mr-1" href="/Drawing/GetPdmFile?fileId=${item2.FileId}"><i class="fas fa-download"></i></a>
                                                    ${item2.FileInfo}
                                                    </td>
                                                    <input type="hidden" name="txtCad2DFileId@(itemName)" data-control-id="${controlId}" value="${item2.FileId}" />
                                                    <input type="hidden" name="txtCad2DFileInfo@(itemName)" data-control-id="${controlId}" value="${item2.FileInfo}" />`;
                                });
                            }
                            else {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="" style="max-width: 250;"></td>`;
                            }
                            return innerHtml;
                        }

                        function GetJmoFile(jmoFile, controlId) {
                            let JmoFile = JSON.parse(jmoFile);
                            let innerHtml = '';
                            if (JmoFile != null) {
                                $.each(JmoFile.data, function (n, item3) {
                                    innerHtml += `<td class="active-content ellipsis" data-toggle="tooltip" title="${item3.FileInfo}" style="max-width: 250px;">
                                                    <a class="active-link mr-1" href="/Drawing/GetPdmFile?fileId=${item3.FileId}"><i class="fas fa-download"></i></a>
                                                    ${item3.FileInfo}
                                                    </td>
                                                    <input type="hidden" name="txtJmoFileId@(itemName)" data-control-id="${controlId}" value="${item3.FileId}" />
                                                    <input type="hidden" name="txtJmoFileInfo@(itemName)" data-control-id="${controlId}" value="${item3.FileInfo}" />`;
                                });
                            }
                            else {
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="" style="max-width: 250;"></td>`;
                            }
                            return innerHtml;
                        }
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;無任何資料或此品號尚未綁定任何發行設計圖。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-control-id]:checked") {
                    let controlId = $(this).data("control-id");
                    let customerMtlItemNo = $(this).data("customer-mtl-item-no");
                    let rdDesign = `${controlId}:${customerMtlItemNo}`;
                    if (controlId) {
                        ReloadRdDesign(mtlItemNo@(itemName), rdDesign)
                    }
                }

                Close@(itemName)();
            });
        }

        function ChangeASCII@(itemName)(fileName) {
            if (fileName.indexOf("%2B") != -1) fileName = fileName.replace("%2B", "+");
            if (fileName.indexOf("%2F") != -1) fileName = fileName.replace("%2F", "/");
            if (fileName.indexOf("%3F") != -1) fileName = fileName.replace("%3F", "?");
            if (fileName.indexOf("%23") != -1) fileName = fileName.replace("%23", "#");
            if (fileName.indexOf("%26") != -1) fileName = fileName.replace("%26", "&");
            if (fileName.indexOf("%3D") != -1) fileName = fileName.replace("%3D", "=");

            return fileName;
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
        )
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-2 col-form-label" for="cboPurchaseUomId">採購單位</label>
                                    <div class="col-12 col-md-9 col-lg-4">
                                        <select class="form-control" id="cboPurchaseUomId@(itemName)" name="cboPurchaseUomId@(itemName)"></select>
                                    </div>
                                    <label class="col-12 col-md-3 col-lg-2 col-form-label" for="cboSaleUomId@(itemName)">銷售單位</label>
                                    <div class="col-12 col-md-9 col-lg-4">
                                        <select class="form-control" id="cboSaleUomId@(itemName)" name="cboSaleUomId@(itemName)"></select>
                                    </div>
                                </div>
                            </div>
                        </div>                       
                        <div class="form-group row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="col-12 col-md-3 col-lg-2 col-form-label" for="chkMtlModify@(itemName)">修改品名/規格</label>

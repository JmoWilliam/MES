@using Business_Manager.Helpers
@{
    string itemName = "ViewMaterialManagement";
    string itemNameText = "查看物料種類";
}

@Html.Resource("css",
    @<style>
    </style>
                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                </h5>
                <a class="close" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <input type="hidden" id="DfmItemCategoryId" name="DfmItemCategoryId" value="-1" />
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 150px;">物料代碼</th>
                                        <th scope="col" style="min-width: 150px;">物料名稱</th>
                                        <th scope="col" style="min-width: 150px;">物料描述</th>
                                        <th scope="col" style="min-width: 150px;">物料金額</th>
                                        <th class="text-center checkbox-mode" scope="col" style="min-width: 110px;">
                                            <label class="col-12 col-form-label">
                                                全選 <input type="checkbox" id="cbxSelectAll@(itemName)" />
                                            </label>
                                        </th>
                                        <th class="text-center radio-mode" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success checkbox-mode" onclick="Save@(itemName)()"><i class="fas fa-check"></i>確定</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };
        let objForm@(itemName) = "#queryForm@(itemName)";
        let dfmMaterialId@(itemName);
        let dfmItemCategoryId@(itemName);
        let modeId@(itemName) = -1;
        let tempNumber@(itemName) = 1;
        let dfmItemJson =
        {
            dfmmaterialInfo: []
        };
       
        function Pop@(itemName)(DfmItemCategoryId) {
            dfmItemCategoryId@(itemName) = DfmItemCategoryId; 
            
            Query@(itemName)();
            
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false
            });

            $("#cbxSelectAll@(itemName)").prop("checked", false);
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }
        
        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetDfmMaterial", "PdmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmMaterialNo}" style="max-width: 175px;"><span class="stack-title">物料代碼</span>${item.DfmMaterialNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmMaterialName}" style="max-width: 175px;"><span class="stack-title">物料名稱</span>${item.DfmMaterialName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmMaterialDesc}" style="max-width: 175px;"><span class="stack-title">物料描述</span>${item.DfmMaterialDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmMaterialMoney}" style="max-width: 175px;"><span class="stack-title">物料金額</span>${item.DfmMaterialMoney}</td>
                                        <td class="text-center">
                                            <label class="control control-solid control-solid-info control--checkbox">
                                                <input type="checkbox" name="dfmMaterial"  data-dfmMaterial-no="${item.DfmMaterialNo}" data-dfmMaterial-name="${item.DfmMaterialName}" data-dfmMaterial-money="${item.DfmMaterialMoney}" value="${item.DfmMaterialId}" />
                                                <span class="control__indicator"></span>
                                            </label>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $(".radio-mode").hide();
            $(".checkbox-mode").show();

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                if ($("#cbxSelectAll@(itemName)").is(":checked")) {
                    $("input[type='checkbox'][name='dfmMaterial']").not(":disabled").prop("checked", true);
                } else {                      
                    $("input[type='checkbox'][name='dfmMaterial']").not(":disabled").prop("checked", false);
                }
            });
        }

        function Save@(itemName)() {
            dfmItemJson.dfmmaterialInfo = [];
            if ($("input[type='checkbox'][name='dfmMaterial']:checked").length > 0) {

                $.each($("input[type='checkbox'][name='dfmMaterial']:checked"), function (i) {
                    let dfmMaterialId = $(this).val();

                    let inputData =
                    {
                        "DfmMaterialId": dfmMaterialId,
                    }
                    dfmItemJson.dfmmaterialInfo.push(inputData);
                    tempNumber@(itemName)++;
                });
            }
            console.log(dfmItemJson)
            if (dfmItemJson.dfmmaterialInfo.length > 0) {
                let targetUrl = "@Url.Action("AddDfmCategoryMaterial", "PdmBasicInformation")";
                let postData = {
                    "DfmItemCategoryId": dfmItemCategoryId@(itemName),
                    "ProcessData": JSON.stringify(dfmItemJson)
                    };

                let result = DataAccess.Add(targetUrl, postData, false, true);

                if (result) {
                    Return@(itemName)();
                    InitDataDfmCategoryMaterial(objPage@(itemName));
                }
            }
            else {
                alert("至少需要選擇一個站別!");
            }
            Resetprocess@(itemName)()
            Close@(itemName)();
        }

            
        function Return@(itemName)() {
            Switch("#listData@(itemName)", "#editData@(itemName)");
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }
        

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }

        function Resetprocess@(itemName)() {
            let innerHtml = '';
            $.each(dfmItemJson.dfmmaterialInfo, function (i, item) {
                innerHtml += `<div class="tag-group">
                                <span>${item.DfmMaterialName}</span>
                                <a href="javascript:DeleteTagDfmCategoryMaterial('${item.TempNumber}');">
                                    <i style="color:slategrey" class="fas fa-times"></i>
                                </a>
                              </div>`;
            });
            $(".dfmmaterial-info").html(innerHtml);
        }

    </script>
                )
@using Business_Manager.Helpers
@{
    string itemName = "UomCalculate";
    string itemNameText = "單位換算資料";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="row">
    <div class="col-12">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtConvertUomNoQ@(itemName)">換算單位代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtConvertUomNoQ@(itemName)" name="txtConvertUomNoQ@(itemName)" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtConvertUomNameQ@(itemName)">換算單位名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtConvertUomNameQ@(itemName)" name="txtConvertUomNameQ@(itemName)" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                        <i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-calculate" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 125px;">#</th>
                                        <th scope="col" style="min-width: 100px;">換算單位代碼</th>
                                        <th scope="col" style="min-width: 200px;">換算單位名稱</th>
                                        <th scope="col" style="min-width: 200px;">值</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="UomCalculateId" name="UomCalculateId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboConvertUomId@(itemName)">換算單位 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboConvertUomId@(itemName)" name="cboConvertUomId@(itemName)"
                                        data-msg-required="請選擇換算單位" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtValue@(itemName)">值 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="number" class="form-control" id="txtValue@(itemName)" name="txtValue@(itemName)"
                                       data-msg-required="請輸入單位代碼" data-rule-required="true" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Expand@(itemName)() {
            if (parseInt($("#UomId").val()) > 0) {
                $(".advanced-block").slideDown("slow");

                Return@(itemName)();
            } else {
                alert("請先儲存單位", "alert");
            }
        }

        function Query@(itemName)() {

            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetUomCalculate", "PdmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "UomId": $("#UomId").val(),
                "ConvertUomNo": $("#txtConvertUomNoQ@(itemName)").val(),
                "ConvertUomName": $("#txtConvertUomNameQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += '<tr id="' + item.UomCalculateId + '">\
                                        <td>' + _row + '</td>\
                                        <td>' + item.UomNo + '</td>\
                                        <td>' + item.UomName + '</td>\
                                        <td>' + item.Value + '</td>\
                                        <td class="text-center auth-detail">\
                                          <input type="checkbox" name="chkStatus@(itemName)" data-uomcalculate-id="' + item.UomCalculateId + '" ' + (item.Status == 'A' ? 'checked' : '') + ' />\
                                        </td>\
                                        <td class="text-center un-auth auth-detail">' + StatusName("Status", item.Status) + '</td>\
                                        <td class="text-center active-content">\
                                          <a class="active-link auth-detail" href="javascript:Edit@(itemName)(' + item.UomCalculateId + ');"><i class="fas fa-edit"></i></a>\
                                        </td>\
                                      </tr>';
                    });
                } else {
                    innerHtml += '<tr>\
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">\
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。\
                                    </td>\
                                  </tr>';
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-uomcalculate-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(UomCalculateId) {
            $("#UomCalculateId").val(UomCalculateId ? UomCalculateId : 0);

            Switch("#editData@(itemName)", "#listData@(itemName)");

            ComboBoxs.Default("#cboConvertUomId@(itemName)", "@Url.Action("GetUnitOfMeasure", "PdmBasicInformation")", { "RejectUomId": $("#UomId").val(), "UomType": $("#cboUomTypeUnitOfMeasure").val() }, "", "NA", "", "UomWithNo", "UomId");

            if (UomCalculateId > 0) {
                let targetUrl = "@Url.Action("GetUomCalculate", "PdmBasicInformation")";
                let postData = {
                    "UomCalculateId": UomCalculateId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboConvertUomId@(itemName)").val(item.ConvertUomId);
                        $("#txtValue@(itemName)").val(item.Value);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboConvertUomId@(itemName)").select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let UomCalculateId = parseInt($("#UomCalculateId").val());

                if (UomCalculateId <= 0) {
                    let targetUrl = "@Url.Action("AddUomCalculate", "PdmBasicInformation")";
                    let postData = {
                        "UomId": $("#UomId").val(),
                        "ConvertUomId": $("#cboConvertUomId@(itemName)").val(),
                        "Value": $("#txtValue@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateUomCalculate", "PdmBasicInformation")";
                    let postData = {
                        "UomCalculateId": UomCalculateId,
                        "UomId": $("#UomId").val(),
                        "ConvertUomId": $("#cboConvertUomId@(itemName)").val(),
                        "Value": $("#txtValue@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var UomCalculateId = $(this).data("uomcalculate-id");

            let targetUrl = "@Url.Action("UpdateUomCalculateStatus", "PdmBasicInformation")";
            let postData = {
                "UomCalculateId": UomCalculateId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }

    </script>
)
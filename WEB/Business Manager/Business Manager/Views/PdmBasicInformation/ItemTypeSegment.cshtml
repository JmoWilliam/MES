            var SortList = []
            var success ="Y"
            $.each($("input[name='SortNumber']"), function () {
                
                var ItemTypeSegmentId = $(this).data("itemtypesegment-id")
                var ItemTypeSegmentSort = $(this).val()
                SortList.push($(this).val())

                    success = "N"
                    return
                }
                ItemTypeSegmentIdList.push(`${ItemTypeSegmentId}❤${ItemTypeSegmentSort}`);
            });
            for (var i = 1; i <= ItemTypeSegmentIdList.length; i++) {
                console.log(i)
                if (SortList.indexOf(i.toString()) == -1) {
                    alert("順序編輯有問題請重新確認!!!!")
                    success="N"
                    return
                }
            }
            if (success == "Y") {

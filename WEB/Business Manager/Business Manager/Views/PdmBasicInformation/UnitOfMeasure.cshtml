@using Business_Manager.Helpers
@{
    string itemName = "UnitOfMeasure";
    string itemNameText = "單位基本資料";
    string authority = ViewBag.authority;
}

@Html.Resource("css",
    @<style>
    </style>
                )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboUomTypeQ@(itemName)">單位類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboUomTypeQ@(itemName)" name="cboUomTypeQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtUomNoQ@(itemName)">單位代碼</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtUomNoQ@(itemName)" name="txtUomNoQ@(itemName)" placeholder="請輸入單位代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtUomNameQ@(itemName)">單位名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtUomNameQ@(itemName)" name="txtUomNameQ@(itemName)" placeholder="請輸入單位名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 125px;">#</th>
                                        <th scope="col" style="min-width: 200px;">單位類別</th>
                                        <th scope="col" style="min-width: 100px;">單位代碼</th>
                                        <th scope="col" style="min-width: 200px;">單位名稱</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="UomId" name="UomId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboUomType@(itemName)">單位類別 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboUomType@(itemName)" name="cboUomType@(itemName)"
                                        data-msg-required="請選擇單位類別" data-rule-required="true"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtUomNo@(itemName)">單位代碼 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtUomNo@(itemName)" name="txtUomNo@(itemName)"
                                       data-msg-required="請輸入單位代碼" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" 
                                       placeholder="請輸入單位代碼" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtUomName@(itemName)">單位名稱 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtUomName@(itemName)" name="txtUomName@(itemName)"
                                       data-msg-required="請輸入單位名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100"
                                       placeholder="請輸入單位名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtUomDesc@(itemName)">單位描述 </label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtUomDesc@(itemName)" name="txtUomDesc@(itemName)"
                                       data-msg-required="請輸入單位描述" data-rule-required="false"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100"
                                       placeholder="請輸入單位描述" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    @Html.Partial("UomCalculate")
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboUomTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "UnitOfMeasure.UomType" }, "", "CHOOSE", "全部", "TypeName", "TypeNo");

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetUnitOfMeasure", "PdmBasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "UomType": $("#cboUomTypeQ@(itemName)").val(),
                "UomNo": $("#txtUomNoQ@(itemName)").val(),
                "UomName": $("#txtUomNameQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += '<tr id="' + item.UomId + '">\
                                        <td>' + _row + '</td>\
                                        <td>' + TypeName("UnitOfMeasure.UomType", item.UomType) + '</td>\
                                        <td>' + item.UomNo + '</td>\
                                        <td>' + item.UomName + '</td>\
                                        <td class="text-center auth-status-switch">\
                                          <input type="checkbox" name="chkStatus@(itemName)" data-uom-id="' + item.UomId + '" ' + (item.Status == 'A' ? 'checked' : '') + ' />\
                                        </td>\
                                        <td class="text-center un-auth auth-status-switch">' + StatusName("Status", item.Status) + '</td>\
                                        <td class="text-center active-content">\
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(' + item.UomId + ');"><i class="fas fa-edit"></i></a>\
                                        </td>\
                                      </tr>';
                    });
                } else {
                    innerHtml += '<tr>\
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">\
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。\
                                    </td>\
                                  </tr>';
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-uom-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(UomId) {
            $("#UomId").val(UomId ? UomId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboUomType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "UnitOfMeasure.UomType" }, "", "NA", "", "TypeName", "TypeNo");

            if (UomId > 0) {
                let targetUrl = "@Url.Action("GetUnitOfMeasure", "PdmBasicInformation")";
                let postData = {
                    "UomId": UomId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboUomType@(itemName)").val(item.UomType);
                        $("#txtUomNo@(itemName)").val(item.UomNo);
                        $("#txtUomName@(itemName)").val(item.UomName);
                        $("#txtUomDesc@(itemName)").val(item.UomDesc);
                    });

                    ExpandUomCalculate();
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let UomId = parseInt($("#UomId").val());

                if (UomId <= 0) {
                    let targetUrl = "@Url.Action("AddUnitOfMeasure", "PdmBasicInformation")";
                    let postData = {
                        "UomType": $("#cboUomType@(itemName)").val(),
                        "UomNo": $("#txtUomNo@(itemName)").val(),
                        "UomName": $("#txtUomName@(itemName)").val(),
                        "UomDesc": $("#txtUomDesc@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#UomId").val(item.UomId);
                        });

                        ExpandUomCalculate();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateUnitOfMeasure", "PdmBasicInformation")";
                    let postData = {
                        "UomId": UomId,
                        "UomType": $("#cboUomType@(itemName)").val(),
                        "UomNo": $("#txtUomNo@(itemName)").val(),
                        "UomName": $("#txtUomName@(itemName)").val(),
                        "UomDesc": $("#txtUomDesc@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block");
            Query@(itemName)();

            $(".advanced-block").hide();
        }

        function StatusSwitch@(itemName)() {
            var UomId = $(this).data("uom-id");

            let targetUrl = "@Url.Action("UpdateUnitOfMeasureStatus", "PdmBasicInformation")";
            let postData = {
                "UomId": UomId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }
    </script>
        )
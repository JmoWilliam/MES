@using Business_Manager.Helpers
@{
    string itemName = "PurchaseOrderManagement";
    string itemNameText = "採購單資料管理";
    string itemModify = "PoModify";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .form-group .select2-selection__rendered {
             line-height: 29px !important;
         }

         .form-group .select2-container .select2-selection--single {
             height: 39px !important;
         }

         .form-group .select2-selection__arrow {
             height: 34px !important;
         }

         .table-deposit {
             margin: 0;
             padding: 0;
             max-height: 30vh;
             margin-bottom: .75rem;
             display: none;
         }

             .table-deposit th {
                 background-color: #d7ecfa !important;
             }

             .table-deposit th, .table-deposit td {
                 padding: 5px 0;
                 text-align: center;
             }

         .active-icon {
             background-color: #d7ecfa;
             color: black;
         }
    </style>
                )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtPoErpFullNoQ@(itemName)">ERP採購單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtPoErpFullNoQ@(itemName)" name="txtPoErpFullNoQ@(itemName)" placeholder="請輸入ERP進貨單號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboSupplierIdQ@(itemName)">供應商</label>
                            <div class="col-12">
                                <select class="form-control" id="cboSupplierIdQ@(itemName)" name="cboSupplierIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboConfirmUserIdQ@(itemName)">核單人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboConfirmUserIdQ@(itemName)" name="cboConfirmUserIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtSearchKeyQ@(itemName)">品號/品名</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)" placeholder="請輸入品號/品名" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    未確認
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)N" name="cbxConfirmStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    作廢
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)V" name="cbxConfirmStatusQ@(itemName)" value="V" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    已確認
                                    <input type="checkbox" id="cbxConfirmStatusQ@(itemName)Y" name="cbxConfirmStatusQ@(itemName)" value="Y" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6 mt-2">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    未結案
                                    <input type="checkbox" id="cbxClosureStatusQ@(itemName)N" name="cbxClosureStatusQ@(itemName)" value="N" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-4 col-md-4 col-6 mt-2">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    已結案
                                    <input type="checkbox" id="cbxClosureStatusQ@(itemName)Y" name="cbxClosureStatusQ@(itemName)" value="Y,y" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">單據日期 <input type="checkbox" id="cbxUseDate@(itemName)" /></label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                       readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-success auth-sync" href="javascript:PopSoSync@(itemName)();"><i class="fas fa-sync"></i>ERP資料同步</a>
                        <a class="btn file-excel auth-excel" href="javascript:Excel@(itemName)();"><i class="fas fa-file-excel"></i>Excel</a>
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky tiny-table" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 165px;">單號</th>
                                        <th scope="col" style="min-width: 110px;">單據日期</th>
                                        <th scope="col" style="min-width: 175px;">供應商</th>
                                        <th scope="col" style="min-width: 150px;">核准人員</th>
                                        <th scope="col" style="min-width: 175px;">備註</th>
                                        <th class="text-center" scope="col" style="min-width: 75px;">操作</th>
                                        <th style="padding: 0; min-width: 1375px;">
                                            <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                                <thead>
                                                    <tr>
                                                        <th style="min-width: 50px;">序號</th>
                                                        <th style="min-width: 150px;">品號</th>
                                                        <th style="min-width: 175px;">品名</th>
                                                        <th style="min-width: 175px;">規格</th>
                                                        <th style="min-width: 100px;">採購數量</th>
                                                        <th style="min-width: 100px;">採購單位</th>
                                                        <th style="min-width: 100px;">交貨庫別</th>
                                                        <th style="min-width: 175px;">請購單號</th>
                                                        <th style="min-width: 100px;">預交日期</th>
                                                        <th style="min-width: 100px;">驗收數量</th>
                                                        <th style="min-width: 100px;">計價數量</th>
                                                        <th style="min-width: 200px;">備註</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="GrId" name="GrId" value="-1" />
                        <input type="hidden" id="ViewMode" name="ViewMode" value="" />
                        <div class="row">
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboGrErpPrefix@(itemName)">進貨單別<span class="text-danger">*</span></label>
                                    <div class="col-12 osp-date">
                                        <select class="form-control" id="cboGrErpPrefix@(itemName)" name="cboGrErpPrefix@(itemName)" required></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtGrErpNo@(itemName)">進貨單號</label>
                                    <div class="col-12 osp-date">
                                        <input type="text" class="form-control" id="txtGrErpNo@(itemName)" name="txtGrErpNo@(itemName)"
                                               value=""
                                               placeholder="由系統自動產生"
                                               readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboSupplierId@(itemName)">供應商<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboSupplierId@(itemName)" name="cboSupplierId@(itemName)" required></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtDocDate@(itemName)">單據日期<span class="text-danger">*</span></label>
                                    <div class="col-12 osp-date">
                                        <input type="text" class="form-control" id="txtDocDate@(itemName)" name="txtDocDate@(itemName)" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtReceiptDate@(itemName)">進貨日期<span class="text-danger">*</span></label>
                                    <div class="col-12 osp-date">
                                        <input type="text" class="form-control" id="txtReceiptDate@(itemName)" name="txtReceiptDate@(itemName)" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="display: none;">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboDeductType@(itemName)">扣抵區分<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboDeductType@(itemName)" name="cboDeductType@(itemName)" required disabled></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="display: none;">
                            <div class="col-lg-4 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtInvoiceDate@(itemName)">發票日期</label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtInvoiceDate@(itemName)" name="txtInvoiceDate@(itemName)" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtInvoiceNo@(itemName)">發票號碼</label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtInvoiceNo@(itemName)" name="txtInvoiceNo@(itemName)"
                                               value=""
                                               placeholder="由系統自動產生" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtApplyYYMM@(itemName)">申報年月</label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtApplyYYMM@(itemName)" name="txtApplyYYMM@(itemName)"
                                               placeholder="請輸入申報年月"
                                               data-msg-required="請輸入申報年月" data-rule-required="true"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtRemark@(itemName)">備註</label>
                                    <div class="col-12">
                                        <textarea class="form-control" id="txtRemark@(itemName)" name="txtRemark@(itemName)" rows="2"
                                                  placeholder="請輸入備註"
                                                  data-msg-required="請輸入備註"
                                                  data-msg-maxlength="必須少於 50 個字元" maxlength="50"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right read-hide">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link" data-toggle="tab" href="#tabGrDetail">
                        <i class="fas fa-list"></i> 進貨單身
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane" id="tabGrDetail">
            @Html.Partial("GrDetail")
        </div>
    </div>
</div>

<input type="hidden" id="txtDocId@(itemName)" name="txtDocId@(itemName)" value="-1" />
<input type="hidden" id="txtAmount@(itemName)" name="txtAmount@(itemName)" value="0" />

<div class="modal fade" id="modalWord@(itemName)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">訂單單據下載</h5>
                <button class="close" type="button" onclick="CloseWord@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="wordForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">單據金額</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    不包含
                                    <input type="checkbox" id="cbxNonPrice@(itemName)" name="cbxNonPrice@(itemName)" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn file-word" onclick="Word@(itemName)()"><i class="fas fa-file-word"></i>Word</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalModify@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    訂單資料變更
                    <span class="sub-title">訂單 <span class="sub-text" id="desSoErpFullNo@(itemName)"></span></span>
                </h5>
                <button class="close" type="button" onclick="CloseModify@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="modifyForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">客戶採購單</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtCustomerPurchaseOrder@(itemModify)" name="txtCustomerPurchaseOrder@(itemModify)" placeholder="請輸入客戶採購單" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">單頭備註</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtSoRemark@(itemModify)" name="txtSoRemark@(itemModify)"
                                          cols="2" data-msg-maxlength="必須少於 255 個字元" maxlength="255"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label">訂金分批</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    是
                                    <input type="checkbox" id="cbxDepositPartial@(itemModify)" name="cbxDepositPartial@(itemModify)" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-custom table-deposit">
                                    <table class="table" id="tblDepositRate@(itemModify)">
                                        <thead>
                                            <tr>
                                                <th scope="col" style="width: 15%;">序號</th>
                                                <th scope="col" style="width: 27%;">訂金比率</th>
                                                <th scope="col" style="width: 25%;">訂金金額</th>
                                                <th scope="col" style="width: 20%;">預計收款日</th>
                                                <th scope="col" style="width: 13%;">
                                                    操作
                                                    <a class="active-icon" href="javascript:DepositAdd@(itemName)();"><i class="fas fa-plus"></i></a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot id="editDeposit@(itemModify)" style="display: none;">
                                            <tr>
                                                <td></td>
                                                <td class="p-0">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control text-center" id="txtRatio@(itemModify)" name="txtRatio@(itemModify)" />
                                                        <span class="input-group-addon"><i class="fas fa-percent"></i></span>
                                                    </div>
                                                </td>
                                                <td class="p-0">
                                                    <input type="text" class="form-control text-center" id="txtAmount@(itemModify)" name="txtAmount@(itemModify)" />
                                                </td>
                                                <td class="p-0">
                                                    <input type="text" class="form-control text-center" id="txtPaymentDate@(itemModify)" name="txtPaymentDate@(itemModify)" />
                                                </td>
                                                <td class="text-center active-content">
                                                    <a class="active-icon" href="javascript:DepositSave@(itemName)();"><i class="fas fa-save"></i></a>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <hr />
                <div class="table-custom">
                    <table class="table table-bordered table-striped table-sticky tiny-table" id="tblSoDetailData@(itemName)">
                        <thead>
                            <tr>
                                <th class="text-center checkbox-mode" scope="col" style="min-width: 75px;">
                                    <label class="control control-solid control-solid-info control--checkbox" style="margin-bottom: 0px;">
                                        全選 <input type="checkbox" id="cbxSelectAll@(itemName)" />
                                        <span class="control__indicator"></span>
                                    </label>
                                </th>
                                <th scope="col" style="min-width: 50px;">流水號</th>
                                <th scope="col" style="min-width: 150px;">品號</th>
                                <th scope="col" style="min-width: 175px;">品名</th>
                                <th scope="col" style="min-width: 100px;">數量</th>
                                <th scope="col" style="min-width: 200px;">備註</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-success" onclick="Modify@(itemName)()"><i class="fas fas fa-file-edit"></i>變更</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalSync@(itemName)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)同步</h5>
                <button class="close" type="button" onclick="CloseSync@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container custom-form-container" autocomplete="off" id="syncForm@(itemName)">

@using Business_Manager.Helpers
@{
    string itemName = "ViewSinglePoDetail";
    string itemNameText = "查看採購單資料(單選)";
}

@Html.Resource("css",
    @<style>
         .source-user {
             font-size: 1rem;
             color: #4d80c4;
         }

         .source-contact {
             font-size: 1rem;
             color: #27b390;
         }

             .source-user i, .source-contact i {
                 margin-right: 5px;
             }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
                        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <a class="close" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtPoErpFullNoQ@(itemName)" name="txtPoErpFullNoQ@(itemName)"
                                               placeholder="請輸入採購單號" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)"
                                               placeholder="請輸入品號/品名/規格" />
                                    </div>
                                    <div class="col-auto">
                                        <select class="form-control" id="cboSupplierIdQ@(itemName)" name="cboSupplierIdQ@(itemName)" disabled></select>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 145px;">採購單號</th>
                                        <th scope="col" style="min-width: 135px;">品號</th>
                                        <th scope="col" style="min-width: 145px;">品名</th>
                                        <th scope="col" style="min-width: 135px;">規格</th>
                                        <th scope="col" style="min-width: 110px;">採購數量</th>
                                        <th scope="col" style="min-width: 110px;">已交數量</th>
                                        <th scope="col" style="min-width: 110px;">預交日</th>
                                        <th scope="col" style="min-width: 110px;">付款條件</th>
                                        <th scope="col" style="min-width: 110px;">幣別</th>
                                        <th scope="col" style="min-width: 110px;">匯率</th>
                                        <th scope="col" style="min-width: 110px;">檢驗狀態</th>
                                        <th scope="col" style="min-width: 135px;">採購人員</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let targetSelector@(itemName);
        let poDetailId@(itemName);
        let supplierId@(itemName);

        let poErpFullNo@(itemName);
        let poQuantity@(itemName);
        let siQty@(itemName);
        let mtlItemNo@(itemName);
        let poMtlItemName@(itemName);
        let poMtlItemSpec@(itemName);

        let inventoryId@(itemName);
        let receiptQty@(itemName);
        let acceptQty@(itemName);
        let availableQty@(itemName);
        let availableUomId@(itemName);
        let remark@(itemName);

        let origUnitPrice@(itemName);
        let origAmount@(itemName);

        let qcStatus@(itemName);

        let lotManagement@(itemName);

        let paymentTermNo@(itemName);
        let currencyCode@(itemName);
        let exchange@(itemName);

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            poDetailId@(itemName) = config.objectPoDetailId;
            supplierId@(itemName) = config.objectSupplierId;

            poErpFullNo@(itemName) = config.objectPoErpFullNo;
            poQuantity@(itemName) = config.objectPoQuantity;
            siQty@(itemName) = config.objectSiQty;
            mtlItemNo@(itemName) = config.objectMtlItemNo;
            poMtlItemName@(itemName) = config.objectPoMtlItemName;
            poMtlItemSpec@(itemName) = config.objectPoMtlItemSpec;

            inventoryId@(itemName) = config.objectInventoryId;
            receiptQty@(itemName) = config.objectReceiptQty;
            acceptQty@(itemName) = config.objectAcceptQty;
            availableQty@(itemName) = config.objectAvailableQty;
            availableUomId@(itemName) = config.objectAvailableUomId;
            remark@(itemName) = config.objectRemark;

            origUnitPrice@(itemName) = config.objectOrigUnitPrice;
            origAmount@(itemName) = config.objectOrigAmount;

            qcStatus@(itemName) = config.objectQcStatus;

            lotManagement@(itemName) = config.objectLotManagement;

            paymentTermNo@(itemName) = config.objectPaymentTermNo;
            currencyCode@(itemName) = config.objectCurrencyCode;
            exchange@(itemName) = config.objectExchange;

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#cboSupplierIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            ComboBoxs.Default("#cboSupplierIdQ@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, supplierId@(itemName), "NA", "", "SupplierWithNo", "SupplierId");

            $("#txtPoErpFullNoQ@(itemName), #txtSearchKeyQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    Query@(itemName)();
                    return false;
                }
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            Query@(itemName)();

            $("#cboSupplierIdQ@(itemName)").change(function () {
                Query@(itemName)();
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetPoDetail", "PurchaseOrder")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "PoErpFullNo": $("#txtPoErpFullNoQ@(itemName)").val(),
                "SupplierId": $("#cboSupplierIdQ@(itemName)").val(),
                "ClosureStatus": "N",
                "ConfirmStatus": "Y",
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PoErpPrefix}-${item.PoErpNo}(${item.PoSeq})" style="min-width: 150px;">${item.PoErpPrefix}-${item.PoErpNo}<code>(${item.PoSeq})</code></td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemNo}" style="min-width: 150px;">${item.MtlItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PoMtlItemName}" style="min-width: 150px;">${item.PoMtlItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PoMtlItemSpec}" style="min-width: 135px;">${item.PoMtlItemSpec}</td>
                                        <td>${item.Quantity.toLocaleString(`en`)}</td>
                                        <td>${item.SiQty.toLocaleString(`en`)}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PromiseDate}" style="min-width: 135px;">${item.PromiseDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PaymentTerm}" style="min-width: 135px;">${item.PaymentTermNo} ${item.PaymentTerm}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CurrencyCode}" style="min-width: 135px;">${item.CurrencyCode}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Exchange}" style="min-width: 135px;">${item.Exchange}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcStatusName}" style="min-width: 135px;">${item.QcStatusName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PoUserNo} ${item.PoUserName}" style="min-width: 135px;"><i class="fas fa-user"></i>&nbsp;<code>${item.PoUserNo}</code>&nbsp;${item.PoUserName}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoDetailId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" id="txtPoErpPrefix@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoErpPrefix}-${item.PoErpNo}(${item.PoSeq})"/>
                                          <input type="hidden" id="txtPoQuantity@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.Quantity}"/>
                                          <input type="hidden" id="txtSiQty@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.SiQty}"/>
                                          <input type="hidden" id="txtMtlItemNo@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.MtlItemNo}"/>
                                          <input type="hidden" id="txtPoMtlItemName@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoMtlItemName}"/>
                                          <input type="hidden" id="txtPoMtlItemSpec@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoMtlItemSpec}"/>
                                          <input type="hidden" id="txtInventoryId@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.InventoryId}"/>
                                          <input type="hidden" id="txtReceiptQty@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.Quantity - item.SiQty}"/>
                                          <input type="hidden" id="txtAcceptQty@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.Quantity - item.SiQty}"/>
                                          <input type="hidden" id="txtAvailableQty@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoPriceQty - item.SiPriceQty}"/>
                                          <input type="hidden" id="txtAvailableUomId@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoPriceUomId}"/>
                                          <input type="hidden" id="txtRemark@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.Remark}"/>
                                          <input type="hidden" id="txtOrigUnitPrice@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PoUnitPrice}"/>
                                          <input type="hidden" id="txtOrigAmount@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${(item.PoPriceQty - item.SiPriceQty) * item.PoUnitPrice}"/>
                                          <input type="hidden" id="txtQcStatus@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.QcStatus}"/>
                                          <input type="hidden" id="txtLotManagement@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.LotManagement}"/>
                                          <input type="hidden" id="txtPaymentTermNo@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.PaymentTermNo}"/>
                                          <input type="hidden" id="txtCurrencyCode@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.CurrencyCode}"/>
                                          <input type="hidden" id="txtExchange@(itemName)" data-po-detail-id="${item.PoDetailId}" data-po-id="${item.PoId}" value="${item.Exchange}"/>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="14" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-po-detail-id][data-po-id]:checked") {
                    let poDetailId = $(this).data("po-detail-id");
                    let poId = $(this).data("po-id");
                    if (poDetailId) {
                        let poErpFullNo = $(`input[id="txtPoErpPrefix@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let poQuantity = $(`input[id="txtPoQuantity@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let siQty = $(`input[id="txtSiQty@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let mtlItemNo = $(`input[id="txtMtlItemNo@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let poMtlItemName = $(`input[id="txtPoMtlItemName@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let poMtlItemSpec = $(`input[id="txtPoMtlItemSpec@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let inventoryId = $(`input[id="txtInventoryId@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let receiptQty = $(`input[id="txtReceiptQty@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let acceptQty = $(`input[id="txtAcceptQty@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let availableQty = $(`input[id="txtAvailableQty@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let availableUomId = $(`input[id="txtAvailableUomId@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let remark = $(`input[id="txtRemark@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let origUnitPrice = $(`input[id="txtOrigUnitPrice@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let origAmount = $(`input[id="txtOrigAmount@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let qcStatus = $(`input[id="txtQcStatus@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        let lotManagement = $(`input[id="txtLotManagement@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();

                        let paymentTermNo = $(`input[id="txtPaymentTermNo@(itemName)"][data-po-detail-id="${poDetailId}"][data-po-id="${poId}"]`).val();
                        if (paymentTermNo@(itemName).toString() != paymentTermNo.toString()) {
                            alert("進貨單付款條件【" + paymentTermNo@(itemName) + "】與採購單付款條件【" + paymentTermNo + "】不同!!");
                            return false;
                        }

                        let currencyCode = $(`input[id="txtCurrencyCode@(itemName)"][data-po-id="${poId}"]`).val();
                        if (currencyCode@(itemName).toString() != currencyCode.toString()) {
                            alert("進貨單幣別【" + currencyCode@(itemName) + "】與採購單幣別【" + currencyCode + "】不同!!");
                            return false;
                        }

                        @*let exchange = $(`input[id="txtExchange@(itemName)"][data-po-id="${poId}"]`).val();
                        if (parseFloat(exchange@(itemName)) != parseFloat(exchange)) {
                            alert("進貨單匯率【" + exchange@(itemName) + "】與採購單匯率【" + exchange + "】不同!!");
                            return false;
                        }*@

                        if (poDetailId@(itemName)) ElementSetValue(poDetailId@(itemName), poDetailId, "change");
                        if (poErpFullNo@(itemName)) ElementSetValue(poErpFullNo@(itemName), poErpFullNo, "change");
                        if (poQuantity@(itemName)) ElementSetValue(poQuantity@(itemName), poQuantity, "change");
                        if (siQty@(itemName)) ElementSetValue(siQty@(itemName), siQty, "change");
                        if (mtlItemNo@(itemName)) ElementSetValue(mtlItemNo@(itemName), mtlItemNo, "change");
                        if (poMtlItemName@(itemName)) ElementSetValue(poMtlItemName@(itemName), poMtlItemName, "change");
                        if (poMtlItemSpec@(itemName)) ElementSetValue(poMtlItemSpec@(itemName), poMtlItemSpec, "change");
                        if (inventoryId@(itemName)) ElementSetValue(inventoryId@(itemName), inventoryId, "change");
                        if (receiptQty@(itemName)) ElementSetValue(receiptQty@(itemName), receiptQty, "change");
                        if (acceptQty@(itemName)) ElementSetValue(acceptQty@(itemName), acceptQty, "change");
                        if (availableQty@(itemName)) ElementSetValue(availableQty@(itemName), availableQty, "change");
                        if (availableUomId@(itemName)) ElementSetValue(availableUomId@(itemName), availableUomId, "change");
                        if (remark@(itemName)) ElementSetValue(remark@(itemName), remark, "change");
                        if (origUnitPrice@(itemName)) ElementSetValue(origUnitPrice@(itemName), origUnitPrice, "change");
                        if (origAmount@(itemName)) ElementSetValue(origAmount@(itemName), origAmount, "change");
                        if (qcStatus@(itemName)) ElementSetValue(qcStatus@(itemName), qcStatus, "change");
                        if (lotManagement@(itemName)) ElementSetValue(lotManagement@(itemName), lotManagement, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
                        )
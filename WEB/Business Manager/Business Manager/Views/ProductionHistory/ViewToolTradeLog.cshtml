@using Business_Manager.Helpers
@{
    string itemName = "ViewToolTradeLog";
    string itemNameText = "該工具交易紀錄";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前工具 <span class="sub-text" id="desToolNo@(itemName)"></span></span>
                </h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                                />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                               data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))"
                                                />
                                    </div>
                                    <div class="col-auto" style="width: 20%;">
                                        <select class="form-control" id="cboTransactionTypeQ@(itemName)" name="cboTransactionType@(itemName)"></select>
                                    </div>
                                    <div class="col-auto" style="width: 20%;">
                                        <select class="form-control" id="cboUserIdQ@(itemName)" name="cboUserIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>查詢</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 100px;">交易類別</th>
                                        <th scope="col" style="min-width: 100px;">車間</th>
                                        <th scope="col" style="min-width: 100px;">倉庫</th>
                                        <th scope="col" style="min-width: 100px;">儲位</th>
                                        <th scope="col" style="min-width: 300px;">交易原因</th>
                                        <th scope="col" style="min-width: 200px;">交易時間</th>
                                        <th scope="col" style="min-width: 100px;">操作員</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary list-mode" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        function Pop@(itemName)(ToolId, ToolNo) {
            $("#ToolId").val(ToolId)
            $("#desToolNo@(itemName)").text(ToolNo)

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            ComboBoxs.Default("#cboTransactionTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "ToolTransactions.TransactionType", }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "CHOOSE", "請選擇人員", "UserWithNo", "UserId");

            if (!isMobile) {
                $("#cboTransactionTypeQ@(itemName), #cboUserIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            

            Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");

            let currentDate = new Date();
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate); 
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate); 

            Query@(itemName)();
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetToolTransactions", "Tool")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ToolId": $("#ToolId").val(),
                "TransactionType": $("#cboTransactionTypeQ@(itemName)").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
                "UserId": $("#cboUserIdQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td style="max-width: 100px;">${TypeName(`ToolTransactions.TransactionType`, item.TransactionType)}</td>
                                        <td style="max-width: 100px;">${item.ShopName}</td>
                                        <td style="max-width: 100px;">${item.ToolInventoryName}</td>
                                        <td style="max-width: 100px;">${item.ToolLocatorName}</td>
                                        <td style="max-width: 300px;">${item.TransactionReason}</td>
                                        <td style="max-width: 100px;">${item.CreateDate}</td>
                                        <td style="max-width: 100px;">${item.UserName}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
        
        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
)
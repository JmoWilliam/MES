@using Business_Manager.Helpers
@{
    string itemName = "ViewMachineSchedule";
    string itemNameText = "機台加工排程列表";
}

@Html.Resource("css",
    @<style>
         .modal-body {
             max-height: 50vh;
             overflow-y: auto;
         }
    </style>
                )
<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tbl@(itemName)">
                                <thead>
                                    <tr>                                       
                                        <th scope="col" style="min-width: 115px;">品號</th>
                                        <th scope="col" style="min-width: 115px;">品名</th>
                                        <th scope="col" style="min-width: 115px;">製令</th>
                                        <th scope="col" style="min-width: 115px;">製程</th>
                                        <th scope="col" style="min-width: 115px;">排程開工日</th>
                                        <th scope="col" style="min-width: 115px;">排程完工日</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
@Html.Resource("js",
    @<script>        
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };
        function Pop@(itemName)(machineId) {            
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });    
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName), machineId);
        }

        function InitData@(itemName)(objPage, machineId) {
            $("#tblData@(itemName)").show();
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMachineSchedule", "ProductionHistory")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MachineId": machineId
            };
            let data = DataAccess.Get(targetUrl, postData, false);           
            if (data.status == "success") {
                $.each(data.result, function (i, item) {
                    innerHtml += `<tr >
                                <td >${item.MtlItemNo}</td>
                                <td >${item.MtlItemName}</td>
                                <td >${item.WipNo}</td>
                                <td >${item.ProcessAlias}</td>
                                <td >${item.ApsSpecifyStartTime}</td>
                                <td >${item.ApsSpecifyEndTime}</td>
                              </tr>`;
                });
            } else {
                innerHtml += `<tr>
                            <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                    <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                </td>
                              </tr>`;
            }
            $("#tbl@(itemName) tbody").html(innerHtml);
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
)
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };

        let objForm@(itemName) = "#editForm@(itemName)";

        let moId@(itemName);
        let moProcessId@(itemName);
        let lotQty@(itemName);
        let barcodePrefix@(itemName);
        let barcodePostfix@(itemName);
        let sequenceLen@(itemName);
        let machineId@(itemName);

        function Pop@(itemName)(moId, moProcessId, woErpFullNo, processAlias, machineId) {
            moId@(itemName) = moId;
            moProcessId@(itemName) = moProcessId;
            machineId@(itemName) = machineId;
            $("#desWoErpFullNo@(itemName)").html(woErpFullNo);
            $("#desProcessAlias@(itemName)").html(processAlias);
            $("#txtBarcodeNoQ@(itemName)").val("");
            $("#txtPrintCountQ@(itemName)").val("0");
            $("#cboBarcodeStatusQ@(itemName)").val("0");

            $("#aSetAttribute@(itemName)").prop("href", "javascript: PopViewBarcodeProcessAttribute('" + moProcessId + "', '" + woErpFullNo + "')", 'CreateNewBarcode');

            Query@(itemName)();
            GetMoProcessQty@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                if ($("#cbxSelectAll@(itemName)").is(":checked")) {
                    $("input[type='checkbox'][data-barcode-no]").not(":disabled").prop("checked", true);
                } else {
                    $("input[type='checkbox'][data-barcode-no]").not(":disabled").prop("checked", false);
                }
            });

            if (!isMobile) {
                $("#cboLabelPrintMachine@(itemName)").select2({
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboLabelPrintMachine@(itemName)", "@Url.Action("GetLabelPrintMachine", "ProductionHistory")", {}, "cab MACH1/200-04", "NA", "", "LabelPrintName", "LabelPrintNo");

            $("#txtBarcodeNoQ@(itemName), #txtPrintCountQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#cboBarcodeStatusQ@(itemName)").change(function () {
                Query@(itemName)();
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetBarcode", "ProductionHistory")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MoId": moId@(itemName),
                "BarcodeNo": $("#txtBarcodeNoQ@(itemName)").val(),
                "PrintCount": $("#txtPrintCountQ@(itemName)").val(),
                "BarcodeStatus": $("#cboBarcodeStatusQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td class="text-center" style="min-width: 135px;">
                                            <label class="control control-solid control-solid-info control--checkbox">
                                                ${_row} <input type="checkbox" data-barcode-no="${item.BarcodeNo}" value="${item.BarcodeNo}" ${item.CurrentProdStatus == `S` ? `disabled` : ``} />
                                                <span class="control__indicator"></span>
                                            </label>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}" style="min-width: 115px;">
                                            ${item.BarcodeNo}<br>
                                            ${JudgeItemValue@(itemName)(item.ItemValue)}
                                        </td>
                                        <td id="tdBarcodeQty${item.BarcodeId}" class="ellipsis" data-toggle="tooltip" title="${item.BarcodeQty}" style="min-width: 115px;">${item.BarcodeQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CurrentProdStatusNo} ${item.CurrentProdStatusName}" style="min-width: 115px;">${item.CurrentProdStatusNo} ${item.CurrentProdStatusName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeStatusName}" style="min-width: 115px;">${item.BarcodeStatusName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.PrintCount}" style="min-width: 115px;">${item.PrintCount}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo}${item.UserName}" style="min-width: 115px;"><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}" style="min-width: 115px;">${item.CreateDate}</td>
                                        <td class="text-center active-content col-sticky" style="min-width: 135px;">
                                            <a class="active-link" href="javascript:Edit@(itemName)('${item.BarcodeId}', '${item.BarcodeQty}');"><i class="fas fa-edit"></i></a>
                                            <a class="active-link" href="javascript:Delete@(itemName)('${item.BarcodeId}');"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;

                        function JudgeItemValue@(itemName)(itemValue) {
                            let innerHtml = '';
                            if (itemValue != "null" && itemValue != null) {
                                let itemValueJson = JSON.parse(itemValue);
                                let dateCode = "";
                                $.each(itemValueJson["data"], function (k, item2) {
                                    innerHtml += `<code>${item2.ItemValue}</code><br>`;

                                    if (k == 0) {
                                        dateCode = item2.DateCode;
                                    }

                                    if (k == itemValueJson["data"].length - 1) {
                                        innerHtml += `<code>${dateCode}</code><br>`;
                                    }
                                });
                            }

                            return innerHtml;
                        }
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function GetMoProcessQty@(itemName)() {
            let targetUrl = "@Url.Action("GetMoProcessQty", "ProductionHistory")";
            let postData = {
                "MoProcessId": moProcessId@(itemName)
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length;

                if (pageCount > 0) {
                    $.each(data.result, function (i, item) {
                        $("#desPassBarcodeQty@(itemName)").html(item.PassBindQty + " / " + item.TotalPassQty);
                        $("#desScrapBarcodeQty@(itemName)").html(item.ScrapBindQty + " / " + item.TotalScrapQty);
                        lotQty@(itemName) = item.LotQty;
                        barcodePrefix@(itemName) = item.BarcodePrefix;
                        barcodePostfix@(itemName) = item.BarcodePostfix;
                        sequenceLen@(itemName) = item.SequenceLen;
                    });
                }
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function PopModalAddBarcode@(itemName)() {
            let PassBarcodeQty = $("#desPassBarcodeQty@(itemName)").text();
            let ScrapBarcodeQty = $("#desScrapBarcodeQty@(itemName)").text();
            $("#desAddBarcodePassBarcodeQty@(itemName)").html(PassBarcodeQty);
            $("#desAddBarcodeScrapBarcodeQty@(itemName)").html(ScrapBarcodeQty);
            $("#desLotQty@(itemName)").html(lotQty@(itemName));
            $("#txtBarcodePrefix@(itemName)").val(barcodePrefix@(itemName));
            $("#txtBarcodePostfix@(itemName)").val(barcodePostfix@(itemName));
            $("#txtSequenceLen@(itemName)").val(sequenceLen@(itemName));
            $("#modalAddBarcode@(itemName)").modal("show");
        }

        function AddBarcode@(itemName)() {
            let NotBindQty = $("#desNotBindQty@(itemName)").html();
            if (parseInt(NotBindQty) <= 0) {
                alert("已無剩餘數量可以進行條碼產生!!")
                return false;
            }

            let targetUrl = "@Url.Action("AddBindBarcode", "ProductionHistory")";
            let postData = {
                "MoProcessId": moProcessId@(itemName),
                "BarcodePrefix": $("#txtBarcodePrefix@(itemName)").val(),
                "BarcodePostfix": $("#txtBarcodePostfix@(itemName)").val(),
                "SequenceLen": $("#txtSequenceLen@(itemName)").val(),
                "MachineId": machineId@(itemName)
            };

            let result = DataAccess.Add(targetUrl, postData, false, false);
            if (result) {
                Return@(itemName)();
                Close@(itemName)("#modalAddBarcode@(itemName)");
            }
        }

        function Edit@(itemName)(BarcodeId, BarcodeQty) {
            let innerHtml = '';
            innerHtml = `<input type="number" class="form-control" id="txtBarcodeQty${BarcodeId}" value="${BarcodeQty}" />`;
            $(`#tdBarcodeQty${BarcodeId}`).html(innerHtml);

            $(`#txtBarcodeQty${BarcodeId}`).focus();

            $(`#tdBarcodeQty${BarcodeId}`).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    BarcodeQty = $(`#txtBarcodeQty${BarcodeId}`).val();
                    UpdateBarcodeQty@(itemName)(BarcodeId, BarcodeQty)
                    return false;
                }
            });
        }

        function UpdateBarcodeQty@(itemName)(BarcodeId, BarcodeQty) {
            let targetUrl = "@Url.Action("UpdateBarcodeQty", "ProductionHistory")";
            let postData = {
                "BarcodeId": BarcodeId,
                "BarcodeQty": BarcodeQty
            };

            let result = DataAccess.Update(targetUrl, postData, false, false);
            if (result) {
                Return@(itemName)();
            }
        }

        function Delete@(itemName)(BarcodeId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteBarcode", "ProductionHistory")";
                    let postData = {
                        "BarcodeId": BarcodeId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, false);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            });
        }

        function PopModalPrint@(itemName)(printType) {
            $("#aPrint@(itemName)").prop("href", "javascript: Print@(itemName)('" + printType + "');");
            $("#modalPrint@(itemName)").modal("show");
        }

        function Print@(itemName)(printType) {
            let barcodeNoList = [];
            if (printType == "NotAll") {
                $.each($("input[type='checkbox'][data-barcode-no]:checked"), function (i) {
                    let barcodeNo = $(this).data("barcode-no");
                    barcodeNoList.push(barcodeNo);
                });

                if (barcodeNoList.length <= 0) {
                    alert("至少需要勾選一個條碼!!");
                    return false;
                }
            }
            else {
                $.each($("input[type='checkbox'][data-barcode-no]"), function (i) {
                    let barcodeNo = $(this).data("barcode-no");
                    barcodeNoList.push(barcodeNo);
                });
            }

            let targetUrl = "@Url.Action("PrintBindBarcodeNo", "PrintLabel")";
            let postData = {
                "BarcodeNoList": barcodeNoList.toString(),
                "PrintMachine": $("#cboLabelPrintMachine@(itemName)").val()
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                console.log(result);
                $("#modalPrint@(itemName)").modal("hide");
            }
        }

        function Return@(itemName)() {
            //ResetForm(objForm@(itemName));
            //Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            $("#txtBarcodeNo@(itemName)").val("");
            Query@(itemName)();
            GetMoProcessQty@(itemName)();
        }

        function Close@(itemName)(modalName) {
            $(modalName).modal("hide");
        }
    </script>
                                                                        )
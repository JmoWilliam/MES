                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-check"></i>確定</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let qcItemIds = [];

        let qcItemJson = [];

        function Pop@(itemName)() {
            //qcItemIds = [];

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            })

            $("#txtSearchKeyQ@(itemName)").val("");
            $(`#txtSearchKeyQ@(itemName)`).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            ComboBoxs.Default("#cboQcGroupQ@(itemName)", "@Url.Action("GetQcGroup", "QcItemSetting")", {}, "", "ALL", "", "QcGroupName", "QcGroupId");

            $("#cboQcGroupQ@(itemName)").off("change").on("change", function () {
                if (this.value < 0) $("#cboQcClassQ@(itemName)").html('');
                else ComboBoxs.Default("#cboQcClassQ@(itemName)", "@Url.Action("GetQcClass", "QcItemSetting")", { "QcGroupId": this.value }, "", "ALL", "", "QcClassName", "QcClassId");
            });

            $("#cboQcGroupQ@(itemName), #cboQcClassQ@(itemName)").select2({
                width: "100%"
            });

            $("#cbxSelectAll@(itemName)").prop("checked", false);

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                const isChecked = $(this).is(":checked");
                const $checkboxes = $("input[type='checkbox'][data-type='qcitem'][data-qc-item-id]").not(":disabled");

                $checkboxes.prop("checked", isChecked);

                $checkboxes.each(function () {
                    const qcItemId = $(this).data("qc-item-id");
                    if (isChecked) {
                        if (!qcItemIds.includes(qcItemId)) {
                            qcItemIds.push(qcItemId);
                        }
                    } else {
                        qcItemIds = qcItemIds.filter(id => id !== qcItemId);
                    }
                });
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            $("#cbxSelectAll@(itemName)").prop("checked", false);

            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetQcItem", "QcItemSetting")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "QcClassId": $("#cboQcClassQ@(itemName)").val(),
                "QcGroupId": $("#cboQcGroupQ@(itemName)").val(),
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcGroupName}">${item.QcGroupName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcClassName}">${item.QcClassName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcItemNo}">${item.QcItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcItemName1}">${item.QcItemName1}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.QcItemDesc}">${item.QcItemDesc}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--checkbox">
                                              <input type="checkbox" data-type="qcitem" data-qc-item-id="${item.QcItemId}" value="${item.QcItemId}" ${qcItemIds.indexOf(item.QcItemId) != -1 ? `checked` : ``} />
                                              <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" id="txtQcItemNo@(itemName)" data-qc-item-id="${item.QcItemId}" value="${item.QcItemNo}"/>
                                          <input type="hidden" id="txtQcGroupName@(itemName)" data-qc-item-id="${item.QcItemId}" value="${item.QcGroupName}"/>
                                          <input type="hidden" id="txtQcClassName@(itemName)" data-qc-item-id="${item.QcItemId}" value="${item.QcClassName}"/>
                                          <input type="hidden" id="txtQcItemName@(itemName)" data-qc-item-id="${item.QcItemId}" value="${item.QcItemName1}"/>
                                          <input type="hidden" id="txtQcItemDesc@(itemName)" data-qc-item-id="${item.QcItemId}" value="${item.QcItemDesc}"/>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[data-qc-item-id]").change(function () {
                let qcItemId = $(this).data("qc-item-id")
                let checked = $(this).prop("checked");

                if (checked) {
                    qcItemIds.push(qcItemId);
                }
                else {
                    qcItemIds = qcItemIds.filter(id => id !== qcItemId);
                }
            });
        }

        function Save@(itemName)() {
            let updatedQcItemJson = [];
            $.each(qcItemIds, function (i, qcItemId) {
                let existingItem = qcItemJson.find(item => item.QcItemId === qcItemId);

                if (existingItem) {
                    updatedQcItemJson.push(existingItem);
                }
                else {
                    let qcItemNo = $(`input[id="txtQcItemNo@(itemName)"][data-qc-item-id="${qcItemId}"][data-qc-item-id="${qcItemId}"]`).val();
                    let qcGroupName = $(`input[id="txtQcGroupName@(itemName)"][data-qc-item-id="${qcItemId}"]`).val();
                    let qcClassName = $(`input[id="txtQcClassName@(itemName)"][data-qc-item-id="${qcItemId}"]`).val();
                    let qcItemName = $(`input[id="txtQcItemName@(itemName)"][data-qc-item-id="${qcItemId}"]`).val();
                    let qcItemDesc = $(`input[id="txtQcItemDesc@(itemName)"][data-qc-item-id="${qcItemId}"]`).val();

                    let inputJson = {
                        "QcItemId": qcItemId,
                        "QcItemNo": qcItemNo,
                        "QcItemName": qcGroupName,
                        "QcItemDesc": qcItemDesc,
                        "QcGroupName": qcGroupName,
                        "QcClassName": qcClassName,
                        "QcMachineName": "",
                        "QcMachineNumber": "",
                        "DesignValue": 0,
                        "UpperTolerance": 0,
                        "LowerTolerance": 0,
                    }
                    updatedQcItemJson.push(inputJson);
                }
            });

            qcItemJson = updatedQcItemJson;

            ReloadQcItemSetting();

            $("#modal@(itemName)").modal("hide");
        }

        //#region 切換顯示「有效、全部」品號
        let Effective@(itemName) = true;
        function StatusSwitch@(itemName)(value) {
            //var mtlItemId = $(this).data("mtlitem-id");

            Effective@(itemName) = value;
            Query@(itemName)();
        }
        //#endregion

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }

        function SetEffectiveText(status) {
            return status == 1 ? `有效` : `無效`;
        }

        function SetStatusText(status) {
            return status == 'N' ? '否' : `是`;
        }

        function trimStr(e, input) {
            $(e).val(ToCDB(input).replace(/\s+/g, ''));
        }

        function ToCDB(str) {
            var output = "";
            for (var i = 0; i < str.length; i++) {
                if (str.charCodeAt(i) == 12288) {
                    output += String.fromCharCode(str.charCodeAt(i) - 12256);
                    continue;
                }
                if (str.charCodeAt(i) > 65280 && str.charCodeAt(i) < 65375) {
                    output += String.fromCharCode(str.charCodeAt(i) - 65248);
                }
                else {
                    output += String.fromCharCode(str.charCodeAt(i));
                }
            }
            return output
        }

        function GetCurrentDate@(itemName)() {
            // 建立一個新的 Date 物件
            let currentDate = new Date();

            // 獲取年、月、日
            let year = currentDate.getFullYear();
            let month = ('0' + (currentDate.getMonth() + 1)).slice(-2); // 月份從 0 開始，所以要加1；再用 slice(-2) 取得兩位數，不足補0
            let day = ('0' + currentDate.getDate()).slice(-2); // 取得日期，同樣補0

            // 格式化成 YYYY-MM-DD 的形式
            let formattedDate = year + '-' + month + '-' + day;

            return formattedDate
        }
    </script>
                        )
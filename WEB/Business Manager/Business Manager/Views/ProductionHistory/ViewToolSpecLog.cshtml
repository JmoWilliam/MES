@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let ToolLocatorID = "";

        function Pop@(itemName)(ToolLocatorId, ToolNo) {
            ToolLocatorID = ToolLocatorId
            //$("#desToolNo@(itemName)").text(ToolNo)

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            @*ComboBoxs.Default("#cboTransactionTypeQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "ToolTransactions.TransactionType", }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "CHOOSE", "請選擇人員", "UserWithNo", "UserId");*@

            if (!isMobile) {
                @*$("#cboTransactionTypeQ@(itemName), #cboUserIdQ@(itemName)").select2({
                    width: "100%"
                });*@
            }

            @*Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");

            let currentDate = new Date();
            Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() + 7);
            Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);*@

            Query@(itemName)();
        }

        function Query@(itemName)() {
           // objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetLocatorTool", "Tool")";
            let postData = {
                "ToolLocatorId": ToolLocatorID,
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? data.result.length : 0;

                if (data.result.length  > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";  
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td style="max-width: 100px;">${item.ToolNo}</td>
                                        <td style="max-width: 100px;">${item.ToolModelNo}</td>
                                        <td style="max-width: 100px;">${item.ToolModelName}</td>
                                        <td style="max-width: 100px;">${item.ProcessingQty}</td>
                                        <td style="max-width: 100px;">${item.ToolCategoryName}</td>
                                        <td style="max-width: 100px;">${item.ToolClassName}</td>
                                        <td style="max-width: 100px;">${item.ToolGroupName}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            //Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
        
        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
)
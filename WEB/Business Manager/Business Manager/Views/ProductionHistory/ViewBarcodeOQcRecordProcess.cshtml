@using Business_Manager.Helpers
@{
    string itemName = "ViewBarcodeOQcRecordProcess";
    string itemNameText = "檢視出貨檢歷程資料";
}

@Html.Resource("css",
    @<style>
         .modal-body {
             max-height: 50vh;
             overflow-y: auto;
         }
    </style>
                                                        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">製令: <span class="sub-text" id="desWoErpFullNo@(itemName)"></span></span>
                    <span class="sub-title">量測條碼: <span class="sub-text" id="desBarcodeNo@(itemName)"></span></span>
                    <span class="sub-title">量測項目: <span class="sub-text" id="desQcItemFullNo@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 50px;">#</th>
                                        <th scope="col" style="min-width: 110px;">上傳日期</th>
                                        <th scope="col" style="min-width: 100px;">量測數據</th>
                                        <th scope="col" style="min-width: 100px;">判定結果</th>
                                        <th scope="col" style="min-width: 100px;">量測人員</th>
                                        <th scope="col" style="min-width: 100px;">編程人員</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
@<script>
    let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 3
        };
    let objForm@(itemName) = "#queryForm@(itemName)";

    let moId@(itemName);
    let barcodeNo@(itemName);
    let qcNoticeItemSpecId@(itemName);
    let makeCount@(itemName);
    let cavity@(itemName);

    function Pop@(itemName)(moId, barcodeNo, qcNoticeItemSpecId, makeCount, qcItemName, cavity, qcTypeString) {
        moId@(itemName) = moId;
        barcodeNo@(itemName) = barcodeNo;
        qcNoticeItemSpecId@(itemName) = qcNoticeItemSpecId;
        makeCount@(itemName) = makeCount;
        cavity@(itemName) = cavity;

        $(".modal-title").html("檢視" + qcTypeString + "歷程資料");

        $("#desWoErpFullNo@(itemName)").html($("#txtWoErpNoMesOQC").text());
        $("#desBarcodeNo@(itemName)").html(barcodeNo);
        $("#desQcItemFullNo@(itemName)").html(qcItemName + "-" + makeCount);

        if (!isMobile) {
            $("#cboProdModeQ@(itemName)").select2({
                width: "100%"
            });
        }

        Query@(itemName)();

        $("#modal@(itemName)").modal({
            backdrop: "static",
            keyboard: false,
            show: true
        });
    }

    function Query@(itemName)() {
        objPage@(itemName).pageIndex = 0;
        InitData@(itemName)(objPage@(itemName));
    }

    function InitData@(itemName)(objPage) {
        let innerHtml = '';
        let pageCount = 0;

        let targetUrl = "@Url.Action("GetQcRecordProcess", "ProductionHistory")";
        let postData = {
            "OrderBy": "",
            "PageIndex": (objPage.pageIndex + 1),
            "PageSize": objPage.pageSize,
            "MoId": moId@(itemName),
            "BarcodeNo": barcodeNo@(itemName),
            "qcNoticeItemSpecId": qcNoticeItemSpecId@(itemName),
            "MakeCount": makeCount@(itemName),
        };
        let data = DataAccess.Get(targetUrl, postData, false);

        if (data.status == "success") {
            pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

            if (pageCount > 0) {
                objPage = PageCaculate(pageCount, objPage);

                $.each(data.result, function (i, item) {
                    let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                    innerHtml += `<tr>
                                    <td>${_row}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}" style="min-width: 110px;">${item.CreateDate}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.MeasureValue}" style="min-width: 100px;">${item.MeasureValue}</td>
                                    ${JudgeOQCResult(`${item.QcResult}`)}
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.MeasureUserNo}${item.MeasureUserName}" style="min-width: 100px;"><i class="fas fa-user"></i>&nbsp;<code>${item.MeasureUserNo}</code>&nbsp;${item.MeasureUserName}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.CncUserNo}${item.CncUserName}" style="min-width: 100px;"><i class="fas fa-user"></i>&nbsp;<code>${item.CncUserNo}</code>&nbsp;${item.CncUserName}</td>
                                  </tr>`;
                });

                function JudgeOQCResult(qcResult) {
                    let innerHtml = '';
                    if (qcResult == "P") {
                        innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="通過" style="min-width: 100px; color:blue;">通過</td>`;
                    }
                    else if (qcResult == "F") {
                        innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="不通過" style="min-width: 100px; color:red;">不通過</td>`;
                    }
                    return innerHtml;
                }
            } else {
                innerHtml += `<tr>
                                <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                    <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                </td>
                              </tr>`;
            }
        } else {
            alert(data.msg, "alert", 0);
        }

        $("#tblData@(itemName) tbody").html(innerHtml);
        TableComponentInit();
        Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
    }

    function Close@(itemName)() {
        $("#modal@(itemName)").modal('hide');
    }
</script>
            )
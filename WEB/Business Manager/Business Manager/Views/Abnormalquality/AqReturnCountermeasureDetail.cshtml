@Html.Partial("ViewAqCountermeasureDetailBatch")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let userId@(itemName);
        let companyId@(itemName);
        let QcTypeDetail = "";
        let GrMtlItemNo = "";
        let GrLotNumber = "";

        $(document).ready(function () {
            ComboBoxs.Default("#cboAqBarcodeStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "AqBarcode.AqBarcodeStatus" }, "", "NA", "", "StatusName", "StatusNo");
            if (!isMobile) {
                $("#cboAqBarcodeStatusQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Expand@(itemName)() {
            if (parseInt($("#AbnormalqualityId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                QcTypeDetail = $("#cboQcTypeAqCountermeasureManagment").val()
                if (QcTypeDetail == "IQC") {
                    GrMtlItemNo = $("#GrdetailMtlItemNo").val()
                    GrLotNumber = $("#GrdetailLotNumber").val()
                }
                Return@(itemName)();
            } else {
                alert("品異單對策資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetAqDetail", "Abnormalquality")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "AbnormalqualityId": $("#AbnormalqualityId").val(),
                "AqBarcodeId": $("#AqBarcodeId").val(),
                "AqBarcodeStatus": $("#cboAqBarcodeStatusQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${QcTypeDetail != `IQC` ? `條碼` : `品號</br>批號`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}" style="max-width: 200px;">${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.AqBarcodeStatus}" style="max-width: 200px;">${StatusName(`AqBarcode.AqBarcodeStatus`, item.AqBarcodeStatus)}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.JudgeConfirm}" style="max-width: 200px;">${item.JudgeConfirm == `Y` ? `是` : `否`}</td>
                                        <td class="text-center">${item.RepairCauseUserGender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>` : item.RepairCauseUserGender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>` : ``}${item.RepairCauseUserNo != null ? item.RepairCauseUserNo : `<span style="color:red">目前沒有人做對策</span>`} ${item.RepairCauseUserName != null ? item.RepairCauseUserName : ``}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-detail" href="javascript:PopViewAqBarcodeNo(${item.AqBarcodeId},'${item.BarcodeNo}');"><i class="fas fa-eye"></i></a>
                                          <a class="active-link auth-detail" href="javascript:Edit@(itemName)(${item.AqBarcodeId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(AqBarcodeId) {
            GetUserInfo@(itemName)()
            

            $("#AqBarcodeId").val(AqBarcodeId ? AqBarcodeId : 0);

            $("#txtMoNo@(itemName)").attr("readonly", true);
            $("#txtMtlItemNo@(itemName)").attr("readonly", true);
            $("#txtProcessAlias@(itemName)").attr("readonly", true);
            $("#txtBarcodeNo@(itemName)").attr("readonly", true);
            $("#cboAqBarcodeStatus@(itemName)").attr("disabled", true);
            $("#txtNgQty@(itemName)").attr("readonly", true);
            $("#cboQcStatus@(itemName)").attr("disabled", true);
            $("#cboQcUserId@(itemName)").attr("disabled", true);
            $("#txtRemark@(itemName)").attr("readonly", true);
            $("#cboProgrammerUserId@(itemName)").attr("disabled", true);
            $("#cboConformUserId@(itemName)").attr("disabled", true);
            $("#cboDefectCauseId@(itemName)").attr("disabled", true);
            $("#txtDefectCauseDesc@(itemName)").attr("readonly", true);
            $("#cboResponsibleDeptId@(itemName)").attr("disabled", false);
            $("#cboResponsibleUserId@(itemName)").attr("disabled", false);
            $("#cboSubResponsibleDeptId@(itemName)").attr("disabled", true);
            $("#cboSubResponsibleUserId@(itemName)").attr("disabled", true);

            //基本資料
            ComboBoxs.Default("#cboAqBarcodeStatus@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "AqBarcode.AqBarcodeStatus" }, "", "NA", "", "StatusName", "StatusNo");

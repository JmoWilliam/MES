        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let AqBarcodeId = parseInt($("#AqBarcodeId").val());

                let AqQcItemList = [];
                $.each($(".AqQcItemId"), function () {
                    var AqQcItemId = $(this).data("aqqcitem-id")
                    AqQcItemList.push(AqQcItemId);
                });

                let RepairCauseList = [];
                
                AqQcItemList.forEach(function (item) {
                    var AqQcItemId = item
                    var QcItemId = $(`#txtQcItemId@(itemName)${AqQcItemId}`).data("qcitem-id")
                    var DefectCauseId = $(`#txtDefectCauseId@(itemName)${AqQcItemId}`).data("defectcause-id")
                    //var DefectCauseId = $(`#txtDefectCauseId@(itemName)${AqQcItemId}`).val()
                    var DefectCauseDesc = $(`#txtDefectCauseDesc@(itemName)${AqQcItemId}`).val()
                    var RepairCauseId = $(`#txtRepairCauseId@(itemName)${AqQcItemId}`).val()
                    var RepairCauseDesc = $(`#txtRepairCauseDesc@(itemName)${AqQcItemId}`).val()

                    var str = AqQcItemId + "%/%" + QcItemId + "%/%" + DefectCauseId + "%/%" + DefectCauseDesc + "%/%" + RepairCauseId + "%/%" + RepairCauseDesc

                    RepairCauseList.push(str);
                })
               

                let targetUrl = "@Url.Action("UpdateAqCountermeasureDetail", "Abnormalquality")";
                let postData = {
                    "AbnormalqualityId": $("#AbnormalqualityId").val(),
                    "AqBarcodeId": AqBarcodeId,
                    "RepairCauseId": $("#cboRepairCauseId@(itemName)").val(),
                    "RepairCauseDesc": $("#txtRepairCauseDesc@(itemName)").val(),
                    "RepairCauseUserId": $("#cboRepairCauseUserId@(itemName)").val(),
                    "RepairCauseList": RepairCauseList.join(','),
                    "ResponsibleDeptId": $("#cboResponsibleDeptId@(itemName)").val(),
                    "ResponsibleUserId": $("#cboResponsibleUserId@(itemName)").val()

                };

                let result = DataAccess.Update(targetUrl, postData, false, true);

                if (result) {
                    Return@(itemName)();
                }
            }
        }

        function GetRepairCause(AqQcItemId) {

            var method = "";
            let postData = "";
            if (typeof AqQcItemId != "undefined") {
                var CauseNo = $(`#txtRepairCauseId@(itemName)${AqQcItemId}`).val();
                method = "A";
            }
            else{
                var CauseId = $(`#cboRepairCauseId@(itemName)`).val();
                method = "B";
            }
            let targetUrl = "@Url.Action("GetRepairCause", "QmsBasicInformation")";
            if (method == "A") {
                postData = {
                    "CauseNo": CauseNo
                };
            }
            else if (method == "B") {
                postData = {
                    "CauseId": CauseId
                };
            }

            let data = DataAccess.Get(targetUrl, postData, false);
            console.log(data)

            if (data) {
                if (data.status == "success") {
                    if (data.result.length > 0) {
                        $.each(data.result, function (i, item) {
                            if (typeof AqQcItemId != "undefined") {
                                $(`#txtRepairCauseDesc@(itemName)${AqQcItemId}`).val(item.CauseDesc)
                                $(`#txtRepairCauseId@(itemName)${AqQcItemId}`).data("repaircause-id", item.CauseId)
                            }
                            else {
                                $(`#txtRepairCauseDesc@(itemName)`).val(item.CauseDesc)
                                $(`#txtRepairCauseId@(itemName)`).data("repaircause-id", item.CauseId)
                            }
                            
                        })
                    }
                    else {
                        $(`#txtRepairCauseId@(itemName)${AqQcItemId}`).val("")
                        $(`#txtRepairCauseDesc@(itemName)${AqQcItemId}`).val("")
                        $(`#txtRepairCauseId@(itemName)${AqQcItemId}`).data("repaircause-id", -1)
                        alert("對策代碼不存在")
                    }
                }
            }
        }


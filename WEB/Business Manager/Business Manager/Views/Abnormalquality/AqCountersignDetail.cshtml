@Html.Partial("ViewAqCountersignDetailBatch")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let QcTypeDetail = "";
        let GrMtlItemNo = "";
        let GrLotNumber = "";

        $(document).ready(function () {
            ComboBoxs.Default("#cboAqBarcodeStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "AqBarcode.AqBarcodeStatus" }, "", "NA", "", "StatusName", "StatusNo");
            if (!isMobile) {
                $("#cboAqBarcodeStatusQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Expand@(itemName)() {
            if (parseInt($("#AbnormalqualityId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                QcTypeDetail = $("#cboQcTypeAqCountersignManagment").val()
                if (QcTypeDetail == "IQC") {
                    GrMtlItemNo = $("#GrdetailMtlItemNo").val()
                    GrLotNumber = $("#GrdetailLotNumber").val()
                }
                Return@(itemName)();
            } else {
                alert("品異單對策資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetAqDetail", "Abnormalquality")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "AbnormalqualityId": $("#AbnormalqualityId").val(),
                "AqBarcodeId": $("#AqBarcodeId").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${QcTypeDetail != `IQC` ? `條碼` : `品號</br>批號`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}" style="max-width: 200px;">${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.AqBarcodeStatus}" style="max-width: 200px;">${StatusName(`AqBarcode.AqBarcodeStatus`, item.AqBarcodeStatus)}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.JudgeConfirm}" style="max-width: 200px;">${item.JudgeConfirm == `Y` ? `是` : `否`}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-detail" href="javascript:PopViewAqBarcodeNo(${item.AqBarcodeId},'${item.BarcodeNo}');"><i class="fas fa-eye"></i></a>
                                          ${item.CountersignUserId == null ? `<a class="active-link auth-detail" href="javascript:Countersign@(itemName)(${item.AqBarcodeId});"><i class="fas fa-check-circle"></i></a>` : `<a class="active-link auth-detail active-disable" href="javascript:void(0);"><i class="fas fa-check-circle"></i></a>`}
                                          ${item.CountersignUserId != null ? `<a class="active-link auth-detail" href="javascript:CountersignRe@(itemName)(${item.AqBarcodeId});">撤銷</a>` : `<a class="active-link auth-detail active-disable" href="javascript:void(0);">撤銷</a>`}
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Countersign@(itemName)(AqBarcodeId) {
            swal.fire({
                title: "該異常條碼判定是否做會簽?",
                text: "請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateAqCountersignDetail", "Abnormalquality")";
                    let postData = {
                        "AbnormalqualityId": $("#AbnormalqualityId").val(),
                        "AqBarcodeId": AqBarcodeId
                    };

                    let data = DataAccess.Get(targetUrl, postData, false);

                    if (data.status == "success") {
                        if (data.result[0] == "Y") {
                            ComboBoxs.Default("#cboAbnormalqualityStatusAqCountersignManagment", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "Abnormalquality.AbnormalqualityStatus" }, "", "NA", "", "StatusName", "StatusNo");
                            $("#cboAbnormalqualityStatusAqCountersignManagment").val("P")
                            alert("品異單據完成結單", "success", 1);

                        }
                        Query@(itemName)();
                        alert("會簽成功", "success", 1);

                    }
                    else {
                        alert(data.msg, "alert", 0);
                    }
                }
            });
        }

        function CountersignRe@(itemName)(AqBarcodeId) {
            swal.fire({
                title: "該異常條碼判定是否撤銷會簽?",
                text: "請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateAqCountersignDetailRe", "Abnormalquality")";
                    let postData = {
                        "AbnormalqualityId": $("#AbnormalqualityId").val(),
                        "AqBarcodeId": AqBarcodeId
                    };

                    let data = DataAccess.Get(targetUrl, postData, false);

                    if (data) {

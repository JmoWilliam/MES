@using Business_Manager.Helpers
@{
    string itemName = "AqViewDetail";
    string itemNameText = "品質異常檢視詳細資料";
}

@Html.Resource("css",
    @<style>
         .centerObject {
             vertical-align: middle !important;
             text-align: center;
         }
    </style>
                                )
<input type="hidden" id="AqBarcodeId" name="AqBarcodeId" value="-1" />

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboAqBarcodeStatusQ@(itemName)">異常條碼狀態 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboAqBarcodeStatusQ@(itemName)" name="cboAqBarcodeStatusQ@(itemName)"
                                        data-msg-required="請選擇異常條碼狀態" data-rule-required="true"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 100px;">類型</th>
                                        <th scope="col" style="min-width: 200px;">項目</th>
                                        <th class="text-center" scope="col" style="min-width: 200px;">進度狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 200px;">是否做判定</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";
        let QcTypeDetail = "";
        let GrMtlItemNo = "";
        let GrLotNumber = "";

        $(document).ready(function () {
            ComboBoxs.Default("#cboAqBarcodeStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "AqBarcode.AqBarcodeStatus" }, "", "NA", "", "StatusName", "StatusNo");
            if (!isMobile) {
                $("#cboAqBarcodeStatusQ@(itemName)").select2({
                    width: "100%"
                });
            }
        });

        function Expand@(itemName)() {
            if (parseInt($("#AbnormalqualityId").val()) > 0) {
                $(".advanced-block").slideDown("slow");
                QcTypeDetail = $("#cboQcTypeAqViewManagment").val()
                if (QcTypeDetail == "IQC") {
                    GrMtlItemNo = $("#GrdetailMtlItemNo").val()
                    GrLotNumber = $("#GrdetailLotNumber").val()
                }
                Return@(itemName)();
            } else {
                alert("品異單檢視資料錯誤", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetAqDetail", "Abnormalquality")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "AbnormalqualityId": $("#AbnormalqualityId").val(),
                "AqBarcodeId": $("#AqBarcodeId").val(),
                "AqBarcodeStatus": $("#cboAqBarcodeStatusQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${QcTypeDetail != `IQC` ? `條碼` : `品號</br>批號`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}" style="max-width: 200px;">${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.AqBarcodeStatus}" style="max-width: 200px;">${StatusName(`AqBarcode.AqBarcodeStatus`, item.AqBarcodeStatus)}</td>
                                        <td class="text-center ellipsis" data-toggle="tooltip" title="${item.JudgeConfirm}" style="max-width: 200px;">${item.JudgeConfirm == `Y` ? `是` : `否`}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-read" href="javascript:PopViewAqBarcodeNo(${item.AqBarcodeId},'${item.BarcodeNo}');"><i class="fas fa-eye"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="4" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Return@(itemName)() {
            $("#AqBarcodeId").val("")
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName)");
            Query@(itemName)();
        }
    </script>
                        )
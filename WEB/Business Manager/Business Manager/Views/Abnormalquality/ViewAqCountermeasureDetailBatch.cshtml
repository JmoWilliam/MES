@using Business_Manager.Helpers
@{
    string itemName = "ViewAqCountermeasureDetailBatch";
    string itemNameText = "批量對策管理";
}

@Html.Resource("css",
    @<style>
        .inputHide {
            border: unset;
            appearance: none;
            background-color: unset !important;
            text-align: center;
        }
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                </h5>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-lg-12">
                        <form autocomplete="off" id="editForm@(itemName)">
                            <div class="card card-body">
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label" for="cboRepairCauseId@(itemName)">對策代碼 <span class="text-danger">*</span></label>
                                            <div class="col-12">
                                                <select class="form-control" id="cboRepairCauseId@(itemName)" name="cboRepairCauseId@(itemName)"
                                                        data-msg-required="請選擇對策代碼" data-rule-required="true"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label" for="txtRepairCauseDesc@(itemName)">對策敘述 <span class="text-danger">*</span></label>
                                            <div class="col-12">
                                                <input type="text" class="form-control" id="txtRepairCauseDesc@(itemName)" name="txtRepairCauseDesc@(itemName)" placeholder="請輸入對策敘述"
                                                       data-msg-required="請輸入對策敘述" data-rule-required="true"
                                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label" for="cboRepairCauseUserId@(itemName)">編寫對策者 <span class="text-danger">*</span></label>
                                            <div class="col-12">
                                                <select class="form-control" id="cboRepairCauseUserId@(itemName)" name="cboRepairCauseUserId@(itemName)"
                                                        data-msg-required="請選擇編寫對策者" data-rule-required="true"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-header" style="padding:1rem 0; border-bottom:0px">
                                <h3 class="modal-title">
                                    異常條碼管理
                                </h3>
                            </div>
                            <div class="table-custom">
                                <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                    <thead>
                                        <tr>
                                            <th class="text-center" scope="col" style="min-width: 125px;">全選 <input type="checkbox" name="all" onclick="check_all(this,'cbxBarcode@(itemName)')" style="margin:3px" /></th>
                                            <th scope="col" style="min-width: 75px;">#</th>
                                            <th scope="col" style="min-width: 100px;">類型</th>
                                            <th scope="col" style="min-width: 200px;">項目</th>
                                            <th scope="col" style="min-width: 200px;">進度狀態</th>
                                            <th scope="col" style="min-width: 200px;">編寫對策者</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>


@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        $(document).ready(function () {
            $("#cboRepairCauseId@(itemName)").change(function () {
                GetRepairCause@(itemName)()
            })
        })

        let userId@(itemName);
        let companyId@(itemName);

        function Pop@(itemName)() {
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            Query@(itemName)();
            GetUserInfo@(itemName)()
            $(window).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';

            let targetUrl = "@Url.Action("GetAqDetail", "Abnormalquality")";
            let postData = {
                "AbnormalqualityId": $("#AbnormalqualityId").val(),
                "AqBarcodeId": $("#AqBarcodeId").val(),
                "AqBarcodeStatus":"1,2,4"
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            ComboBoxs.Default("#cboRepairCauseId@(itemName)", "@Url.Action("GetRepairCause", "QmsBasicInformation")", {}, "", "NA", "", "RepairCauseWithText", "CauseId"); //對策代碼
            ComboBoxs.Default("#cboRepairCauseUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", {"CompanyId": companyId@(itemName), "Status": "A"}, "", "NA", "", "UserWithNo", "UserId"); //責任主管


            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    $.each(data.result, function (i, item) {
                        $("#MoId").val(item.MoId);

                        innerHtml += `<tr>
                                            <td class="text-center active-content">
                                                <input type="checkbox" id="cbxBarcode@(itemName)${item.AqBarcodeId}" name="cbxBarcode@(itemName)" value="${item.AqBarcodeId}" />
                                            </td>
                                            <td>${i + 1}</td>
                                            <td>${QcTypeDetail != `IQC` ? `條碼` : `品號</br>批號`}</td>
                                            <td class="ellipsis" data-toggle="tooltip" title="${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}" style="max-width: 200px;">${QcTypeDetail != `IQC` ? item.BarcodeNo : `${GrMtlItemNo}</br>${GrLotNumber}`}</td>
                                            <td class="text-center ellipsis" data-toggle="tooltip" title="${item.AqBarcodeStatus}" style="max-width: 200px;">${StatusName(`AqBarcode.AqBarcodeStatus`, item.AqBarcodeStatus)}</td>
                                            <td>${item.RepairCauseUserGender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>` : item.RepairCauseUserGender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>` : ``}${item.RepairCauseUserName}</td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                        <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                          <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料
                                        </td>
                                      </tr>`;
                }

            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();

            if (!isMobile) {
                $(`#cboRepairCauseId@(itemName),#cboRepairCauseUserId@(itemName)`).select2({
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {

            if ($(objForm@(itemName)).valid()) {

                let BarcodeListY = [];
                let BarcodeListN = [];

                $.each($("input[name='cbxBarcode@(itemName)']"), function () {
                    if ($(this).is(":checked")) {
                        BarcodeListY.push($(this).val());
                    }
                    else {
                        if (!$(this).is(":disabled")) {
                            BarcodeListN.push($(this).val());
                        }
                    }
                });

                if (BarcodeListY.length <= 0) {
                    alert("條碼清單不能為空，請選擇條碼");
                    return;
                }

                let targetUrl = "@Url.Action("UpdateAqCountermeasureDetailBatch", "Abnormalquality")";
                let postData = {
                    "AbnormalqualityId": $("#AbnormalqualityId").val(),
                    "AqBarcodeIdList": BarcodeListY.join(","),
                    "RepairCauseId": $("#cboRepairCauseId@(itemName)").val(),
                    "RepairCauseDesc": $("#txtRepairCauseDesc@(itemName)").val(),
                    "RepairCauseUserId": $("#cboRepairCauseUserId@(itemName)").val()
                };

                let data = DataAccess.Get(targetUrl, postData, false);
                if (data.status == "success") {
                    Return@(itemName)();
                }
                else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function check_all(obj, cName) {
            var checkboxs = document.getElementsByName(cName);
            for (var i = 0; i < checkboxs.length; i++) { checkboxs[i].checked = obj.checked; }
        }

        function GetRepairCause@(itemName)() {

            let targetUrl = "@Url.Action("GetRepairCause", "QmsBasicInformation")";
            let postData = {
                "CauseId": $(`#cboRepairCauseId@(itemName)`).val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data) {
                if (data.status == "success") {
                    if (data.result.length > 0) {
                        $.each(data.result, function (i, item) {
                           $(`#txtRepairCauseDesc@(itemName)`).val(item.CauseDesc)
                        })
                    }
                }
            }
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
            QueryAqReturnCountermeasureDetail();
            Close@(itemName)()
        }
        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
</script>
                        )
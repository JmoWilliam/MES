@using Business_Manager.Helpers
@{
    string itemName = "Awards";
    string itemNameText = "活動獎項";
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="card card-shadow">
    <div class="card-body">
        <div class="row" id="listData@(itemName)">
            <div class="col-12">
                <form autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-row align-items-center mb-2">
                            <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                <input type="text" class="form-control" id="txtAwardsNameQ@(itemName)" name="txtAwardsNameQ@(itemName)"
                                       placeholder="請輸入獎項名稱" />
                            </div>
                            <div class="col-12 col-md-auto col-lg-auto text-right text-md-left text-lg-left">
                                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                <button type="button" class="btn btn-info proj-auth-user-add" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <div class="table-custom">
                    <table class="table table-bordered table-striped table-sticky table-stack" id="tblData@(itemName)">
                        <thead>
                            <tr>
                                <th scope="col" style="min-width: 125px;">#</th>
                                <th scope="col" style="min-width: 200px;">獎項名稱</th>
                                <th scope="col" style="min-width: 350px;">獎項備註</th>
                                <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                <th class="text-center" scope="col" style="min-width: 300px;">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="pagination" id="page@(itemName)"></div>
            </div>
        </div>
        <div class="row" id="editData@(itemName)" style="display: none;">
            <div class="col-12">
                <form class="container custom-form-container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="AwardsId" name="AwardsId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAwardsName@(itemName)">獎項名稱 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtAwardsName@(itemName)" name="txtAwardsName@(itemName)" placeholder="請輸入獎項名稱"
                                       data-msg-required="請輸入獎項名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 100 個字元" maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAwardsPrice@(itemName)">獎項金額 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="number" class="form-control" id="txtAwardsPrice@(itemName)" name="txtAwardsPrice@(itemName)" placeholder="請輸入獎項金額"
                                       data-msg-required="請輸入獎項金額" data-rule-required="true" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAwardsQuantity@(itemName)">獎項數量 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="number" class="form-control" id="txtAwardsQuantity@(itemName)" name="txtAwardsQuantity@(itemName)" placeholder="請輸入獎項數量"
                                       data-msg-required="請輸入獎項數量" data-rule-required="true" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAwardsUnit@(itemName)">獎項數量單位 <span class="text-danger">*</span></label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtAwardsUnit@(itemName)" name="txtAwardsUnit@(itemName)" placeholder="請輸入獎項名稱"
                                       data-msg-required="請輸入獎項數量單位" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-md-3 col-lg-3 col-form-label" for="txtAwardsRemark@(itemName)">獎項備註</label>
                            <div class="col-12 col-md-9 col-lg-9">
                                <textarea class="form-control" id="txtAwardsRemark@(itemName)" name="txtAwardsRemark@(itemName)"
                                          rows="2" placeholder="請輸入獎項備註"
                                          data-msg-maxlength="必須少於 500 個字元" maxlength="500"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer text-center text-lg-right edit-mode" style="display: none;">
        <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
        <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Expand@(itemName)() {
            if (parseInt($("#ActivityId").val()) > 0) {
                Return@(itemName)();

                $("#queryForm@(itemName)").keydown(function (event) {
                    if (event.keyCode == 13) {
                        event.preventDefault();
                        return false;
                    }
                });
            } else {
                alert("請先儲存活動資料", "alert");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetAwards", "Activity")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ActivityId": $("#ActivityId").val(),
                "AwardsName": $("#txtAwardsNameQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr id="${item.AwardsId}">
                                        <td class="text-center active-content">
                                          <span class="stack-title">#</span>
                                          <a class="active-link sort-handle" href="javascript:void(0);"><i class="fas fa-arrows-alt"></i><span>排序</span></a>
                                        </td>
                                        <td><span class="stack-title">獎項名稱</span>${item.AwardsName} ${item.AwardsPrice > 0 ? `$` + item.AwardsPrice.toLocaleString(`en`) : ``} ${item.AwardsQuantity > 0 ? item.AwardsQuantity : ``}${item.AwardsUnit}</td>
                                        <td><span class="stack-title">獎項備註</span>${item.AwardsRemark}</td>
                                        <td class="text-center auth-status-switch">
                                          <span class="stack-title">狀態</span>
                                          <input type="checkbox" name="chkStatus@(itemName)" data-awards-id="${item.AwardsId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <span class="stack-title">操作</span>
                                          <a class="active-link" href="javascript:Edit@(itemName)(${item.AwardsId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.AwardsId});"><i class="fas fa-trash-alt"></i></a>
                                          <a class="active-link" href="javascript:PopViewAwardsUser(${item.AwardsId});"><i class="fas fa-users"></i><span>獎項人員</span></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-awards-id]").change(StatusSwitch@(itemName));

            $("#tblData@(itemName) tbody").sortable({
                cancel: ".disabled-sort",
                handle: ".sort-handle",
                update: function (event, ui) {

                    let targetUrl = "@Url.Action("UpdateAwardsSort", "Activity")";
                    let postData = {
                        "ActivityId": $("#ActivityId").val(),
                        "AwardsList": $(this).sortable("toArray", { attribute: 'id' }).join()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Edit@(itemName)(AwardsId) {
            $("#AwardsId").val(AwardsId ? AwardsId : 0);

            Switch("#editData@(itemName), .edit-mode", "#listData@(itemName), .list-mode");

            if (AwardsId > 0) {
                let targetUrl = "@Url.Action("GetAwards", "Activity")";
                let postData = {
                    "AwardsId": AwardsId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtAwardsName@(itemName)").val(item.AwardsName);
                        $("#txtAwardsPrice@(itemName)").val(item.AwardsPrice);
                        $("#txtAwardsQuantity@(itemName)").val(item.AwardsQuantity);
                        $("#txtAwardsUnit@(itemName)").val(item.AwardsUnit);
                        $("#txtAwardsRemark@(itemName)").val(item.AwardsRemark);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let AwardsId = parseInt($("#AwardsId").val());

                if (AwardsId <= 0) {
                    let targetUrl = "@Url.Action("AddAwards", "Activity")";
                    let postData = {
                        "ActivityId": $("#ActivityId").val(),
                        "AwardsName": $("#txtAwardsName@(itemName)").val(),
                        "AwardsPrice": $("#txtAwardsPrice@(itemName)").val(),
                        "AwardsQuantity": $("#txtAwardsQuantity@(itemName)").val(),
                        "AwardsUnit": $("#txtAwardsUnit@(itemName)").val(),
                        "AwardsRemark": $("#txtAwardsRemark@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateAwards", "Activity")";
                    let postData = {
                        "AwardsId": AwardsId,
                        "AwardsName": $("#txtAwardsName@(itemName)").val(),
                        "AwardsPrice": $("#txtAwardsPrice@(itemName)").val(),
                        "AwardsQuantity": $("#txtAwardsQuantity@(itemName)").val(),
                        "AwardsUnit": $("#txtAwardsUnit@(itemName)").val(),
                        "AwardsRemark": $("#txtAwardsRemark@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(AwardsId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteAwards", "Activity")";
                    let postData = {
                        "AwardsId": AwardsId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var awardsId = $(this).data("awards-id");

            let targetUrl = "@Url.Action("UpdateAwardsStatus", "Activity")";
            let postData = {
                "AwardsId": awardsId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
                Query@(itemName)();
            }
        }
    </script>
)
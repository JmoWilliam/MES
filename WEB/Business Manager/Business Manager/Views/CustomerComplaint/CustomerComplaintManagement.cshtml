        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let CcId = parseInt($("#CcId").val());
                if (CcId <= 0) {
                    let targetUrl = "@Url.Action("AddACustomerComplaint", "CustomerComplaint")";
                    let postData = {
                        "DocDate": $("#txtDocDate@(itemName)").val(),
                        "FilingDate": $("#txtFilingDate@(itemName)").val(),
                        "MtlItemId": $("#txtMtlItemId@(itemName)").val(),
                        "CustomerId": $("#cboCustomerId@(itemName)").val(),
                        "UserName": $("#txtUserName@(itemName)").val(),
                        "UserEMail": $("#txtUserEMail@(itemName)").val(),
                        "IssueDescription": $("#txtIssueDescription@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#CcId").val(item.CcId);
                            $("#txtCcNo@(itemName)").val(item.CcNo);
                        });
                        Edit@(itemName)($("#CcId").val())
                        ExpandCcdStageData();
                    }
                }
                else {
                    let targetUrl = "@Url.Action("UpdateCustomerComplaint", "CustomerComplaint")";
                    let postData = {
                        "CcId": CcId,
                        "DocDate": $("#txtDocDate@(itemName)").val(),
                        "FilingDate": $("#txtFilingDate@(itemName)").val(),
                        "MtlItemId": $("#txtMtlItemId@(itemName)").val(),
                        "CustomerId": $("#cboCustomerId@(itemName)").val(),
                        "UserName": $("#txtUserName@(itemName)").val(),
                        "UserEMail": $("#txtUserEMail@(itemName)").val(),
                        "IssueDescription": $("#txtIssueDescription@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        ExpandCcdStageData();
                    }
                }
            }
        }


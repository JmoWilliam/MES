@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let objForm@(itemName) = "#editForm@(itemName)";
        let userId@(itemName);
        let companyId@(itemName);
        let userNo@(itemName);

        $(document).ready(function () {

            let currentDate = new Date();
            //Suites.DateDropper("#txtStartDateQ@(itemName),#txtEndDateQ@(itemName)");
            Suites.DatePicker("txtEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.DatePicker("txtStartDateQ@(itemName)", currentDate);

           $(".advanced-block a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });



            GetUserInfo@(itemName)()

            ComboBoxs.Default("#cboCustomerIdQ@(itemName)", "@Url.Action("GetCustomer", "ScmBasicInformation")", { "Status": "A", "TransferStatus": "A"}, "", "ALL", "", "CustomerWithNo", "CustomerId");
            ComboBoxs.Default("#cboCurrentStatusQ@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "CustomerComplaint.CurrentStatus" }, "", "NA", "", "StatusName", "StatusNo");

            if (!isMobile) {
                $("#cboCustomerIdQ@(itemName), #cboCurrentStatusQ@(itemName), #cboChangeCustomer@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }

            Query@(itemName)();

        });

        function InitParameter@(itemName)(selector) {
            let initFnString = "Expand";
            let content = selector.attr("href").split('#tab')[1];

            switch (content) {
                case "CcdStageData":
                    initFnString += "CcdStageData";
                    break;
                case "PDFShowSetting":
                    initFnString += "PDFShowSetting";
                    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
            $("#modalQuery@(itemName)").modal("hide");
            $("#changeCustomer@(itemName)").modal("hide");
            $("#txtOriginalCcNo@(itemName)").val("")
            $("#txtNewCcNo@(itemName)").val("")

        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetCustomerComplaint", "CustomerComplaint")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "CcNo": $("#txtCcNoQ@(itemName)").val().trim(),
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val().trim(),
                "CustomerId": $("#cboCustomerIdQ@(itemName)").val(),
                "CurrentStatus": $("#cboCurrentStatus@(itemName)").val(),
                "StartDate": ($("#cbxDocDateQ@(itemName)").is(":checked") ? $("#txtStartDateQ@(itemName)").val() : ""),
                "EndDate": ($("#cbxDocDateQ@(itemName)").is(":checked") ? $("#txtEndDateQ@(itemName)").val() : ""),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CcNo}" style="max-width: 200px;">${item.CcNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerNo} ${item.CustomerShortName}" style="max-width: 200px;">${item.CustomerNo} ${item.CustomerShortName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DocDate}" style="max-width: 200px;">${item.DocDate}</td>
                                        <td class="text-center">${item.ConfirmStatus == `V` ? `<sapn style='color:red'>(該單據已作廢,其資料已替換新單據【${item.ChangeCustomerCcNo}】)</span<` : `${StatusName(`CustomerComplaint.CurrentStatus`, item.CurrentStatus)}`}</td>

                                        <td class="text-center active-content">
                                          <a class="active-link auth-read" href="javascript:PopViewCCDataShow(${item.CcId});"><i class="fas fa-eye"></i></a>
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.CcId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.CcId});"><i class="fas fa-trash-alt"></i></a>
                                          <a class="active-link auth-print" href="javascript:Print@(itemName)(${item.CcId});"><i class="fas fa-print"></i></a>
                                          <a class="active-link auth-change-customer" href="javascript:PopChangeCustomer@(itemName)(${item.CcId},'${item.CcNo}');"><i class="fad fa-exchange"></i>更換客戶</a>
                                        </td>
                                      </tr>
                                      `;
                    });

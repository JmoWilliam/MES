        function Edit@(itemName)(TdId) {
            if (UserNo == null) {
                alert("當前無任務發布者,不可使用功能")
                return
            }
            $("#TdId").val(TdId ? TdId : 0);

            if ($().select2) {
                $("#cboAttendUser@(itemName)").select2({
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboAttendUser@(itemName)", "@Url.Action("GetUser", "TaskManager")", { "Status": "A" }, "", "NA", "", "UserWithNo", "UserId"); //確認者
            updateRepeatValues();

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            let currentDate = new Date();
            Suites.DatePicker("txtStartDate@(itemName)", currentDate);
            Suites.DatePicker("txtExpectedDate@(itemName)", "");

            // 初始化日期選擇器
            Suites.DatePicker("repeatEndDate@(itemName)", "");

            // 綁定重複類型變更事件
            $("#repeatType@(itemName)").change(function() {
                const type = $(this).val();
        
                // 隱藏所有相關設定
                $(".repeat-end, .repeat-weekly, .repeat-interval").hide();
                // 設定 repeatEndType 預設值
                $("#repeatEndType@(itemName)").val("NEVER").trigger("change");
                switch (type) {
                    case "DAILY":
                    case "WEEKLY":
                    case "INTERVAL":
                        $(".repeat-end").show();
                        if (type === "WEEKLY") {
                            $(".repeat-weekly").show();
                        } else if (type === "INTERVAL") {
                            $(".repeat-interval").show();
                        }
                        break;
                }

        
                updateRepeatValues();
            });

            // 綁定結束類型變更事件
            $("#repeatEndType@(itemName)").change(function() {
                const type = $(this).val();
        
                // 隱藏所有結束值設定
                $(".repeat-end-count, .repeat-end-until").hide();
        
                // 顯示對應的設定
                if (type === "COUNT") {
                    $(".repeat-end-count").show();
                } else if (type === "UNTIL") {
                    $(".repeat-end-until").show();
                    $("#repeatEndDate@(itemName)").val()
                }
        
                updateRepeatValues();
            });

            // 綁定所有相關輸入的變更事件
            $("#repeatWeekDay@(itemName), #repeatInterval@(itemName), #repeatEndCount@(itemName), #repeatEndDate@(itemName)").change(updateRepeatValues);

            // 更新隱藏欄位的值
            function updateRepeatValues() {
                const repeatType = $("#repeatType@(itemName)").val();
                let repeatValue = null;
                let endType = "NEVER";
                let endValue = null;

                if (repeatType !== "NONE") {
                    endType = $("#repeatEndType@(itemName)").val();
            
                    if (repeatType === "WEEKLY") {
                        repeatValue = $("#repeatWeekDay@(itemName)").val();
                    } else if (repeatType === "INTERVAL") {
                        repeatValue = $("#repeatInterval@(itemName)").val();
                    }

                    if (endType === "COUNT") {
                        endValue = $("#repeatEndCount@(itemName)").val();
                    } else if (endType === "UNTIL") {
                        endValue = $("#repeatEndDate@(itemName)").val();
                    }
                }

                $("#RepeatType").val(repeatType);
                $("#RepeatValue").val(repeatValue);
                $("#RepeatEndType").val(endType);
                $("#RepeatEndValue").val(endValue);
            }

            if (TdId > 0) {
                let targetUrl = "@Url.Action("GetTaskDistribution", "TaskManager")";
                let postData = {
                    "UserNo": UserNo,
                    "TdId": TdId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtTaskName@(itemName)").val(item.TaskName);
                        $("#txtTaskContent@(itemName)").val(item.TaskContent);
                        $("#cboAttendUser@(itemName)").val(item.AttendUser.split(','));
                        $("#txtExpectedDate@(itemName)").val(item.ExpectedDate);
                        $("#txtReturnFrequency@(itemName)").val(item.ReturnFrequency);
                        $("#txtFileList@(itemName)").val(item.FileList);
                        $("#txtImgList@(itemName)").val(item.ImgList);

                        $(".customer").hide();
                        $(".production-model").hide();
                        $(".department").hide();

                        // 設置重複設定值
                        if (item.RepeatType) {
                            $("#repeatType@(itemName)").val(item.RepeatType).trigger('change');
                
                            if (item.RepeatType === "WEEKLY") {
                                $("#repeatWeekDay@(itemName)").val(item.RepeatValue);
                            } else if (item.RepeatType === "INTERVAL") {
                                $("#repeatInterval@(itemName)").val(item.RepeatValue);
                            }

                            if (item.RepeatEndType) {
                                $("#repeatEndType@(itemName)").val(item.RepeatEndType).trigger('change');
                    
                                if (item.RepeatEndType === "COUNT") {
                                    $("#repeatEndCount@(itemName)").val(item.RepeatEndValue);
                                } else if (item.RepeatEndType === "UNTIL") {
                                    $("#repeatEndDate@(itemName)").val(item.RepeatEndValue);
                                }
                            }
                        }
                    });

                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            @*let uploadConfig = {
                fileSelector: "#FileList@(itemName)",
                targetSelector: "#txtFileList@(itemName)",
                required: false,
                uploadPath: "/TaskManager/TaskDistribution",
                maxFileCount: 10
            };
            Suites.FileUpload(uploadConfig);

            let uploadConfig1 = {
                fileSelector: "#ImgList@(itemName)",
                targetSelector: "#txtImgList@(itemName)",
                required: false,
                uploadPath: "/TaskManager/TaskDistribution",
                maxFileCount: 10
            };
            Suites.FileUpload(uploadConfig1);*@
        }


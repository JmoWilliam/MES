                $(`#taskCard${TdId}`).children(".report-area").remove();

                $(`#taskCard${TdId}`).append(innerHtml);
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let TdId = parseInt($("#TdId").val());
                let expectedDateStr = ""
                
                let RepeatEndType = $("#RepeatEndType").val()
                let RepeatEndValue = $("#RepeatEndValue").val()
                if (RepeatEndType == "UNTIL") {
                    let expectedDate = new Date(RepeatEndValue);
                    let today = new Date();
                    if (expectedDate < today) {
                        alert("結束日不可以小與今日")
                        return
                    }
                    else {
                        expectedDateStr = RepeatEndValue
                    }
                }

                if (TdId <= 0) {
                    let targetUrl = "@Url.Action("AddTaskDistribution", "TaskManager")";
                    let postData = {
                        "UserNo": UserNo,
                        "TaskName": $("#txtTaskName@(itemName)").val(),
                        "TaskContent": $("#txtTaskContent@(itemName)").val(),
                        "AttendUser": $("#cboAttendUser@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "ExpectedDate": expectedDateStr,
                        "ReturnFrequency": $("#txtReturnFrequency@(itemName)").val(),
                        "RepeatType": $("#RepeatType").val(),
                        "RepeatValue": $("#RepeatValue").val(),
                        "RepeatEndType": RepeatEndType,
                        "RepeatEndValue": RepeatEndValue,
                        "FileList": $("#txtFileList@(itemName)").val(),
                        "ImgList": $("#txtImgList@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                       Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateTaskDistribution", "TaskManager")";
                    let postData = {
                        "UserNo": UserNo,
                        "TdId": TdId,
                        "TaskName": $("#txtTaskName@(itemName)").val(),
                        "TaskContent": $("#txtTaskContent@(itemName)").val(),
                        "AttendUser": $("#cboAttendUser@(itemName) option:selected").toArray().map(item => item.value).join(),
                        "ExpectedDate": expectedDateStr,
                        "ReturnFrequency": $("#txtReturnFrequency@(itemName)").val(),
                        "RepeatType": $("#RepeatType").val(),
                        "RepeatValue": $("#RepeatValue").val(),
                        "RepeatEndType": RepeatEndType,
                        "RepeatEndValue": RepeatEndValue,
                        "FileList": $("#txtFileList@(itemName)").val(),
                        "ImgList": $("#txtImgList@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }


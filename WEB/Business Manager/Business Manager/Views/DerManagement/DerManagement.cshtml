@using Business_Manager.Helpers
@{
    string itemName = "DerManagement";
    string itemNameText = "部門費用率資料管理";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
                        )

<input type="hidden" id="pageAuthority" value="@authority" />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboDepartmentIdQ@(itemName)">部門</label>
                            <div class="col-12">
                                <select class="form-control" id="cboDepartmentIdQ@(itemName)" name="cboDepartmentIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboCreateUserQ@(itemName)">建立單據人員</label>
                            <div class="col-12">
                                <select class="form-control" id="cboCreateUserQ@(itemName)" name="cboCreateUserQ@(itemName)"></select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--列表-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="max-width: 200px;">部門</th>
                                        <th scope="col" style="max-width: 200px;">人工費用率</th>
                                        <th scope="col" style="max-width: 200px;">製造費用率</th>
                                        <th scope="col" style="max-width: 200px;">建單者</th>
                                        <th class="text-center" scope="col" style="max-width: 250px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--新增/編輯-->
<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="DepartmentRateId" name="DepartmentRateId" value="-1" />
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboDepartmentId@(itemName)">部門<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboDepartmentId@(itemName)" name="cboDepartmentId@(itemName)" required></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtResourceRate@(itemName)">人工費用率<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="number" class="form-control" id="txtResourceRate@(itemName)" name="txtResourceRate@(itemName)" placeholder="請輸入人工費用率" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 ">
                                <div class="form-group row">
                                    <label class="form-label col-12" for="txtOverheadRate@(itemName)">製造費用率<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="number" class="form-control" id="txtOverheadRate@(itemName)" name="txtOverheadRate@(itemName)" placeholder="請輸入製造費用率" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            Query@(itemName)();

            if (!isMobile) {
                $("#cboDepartmentIdQ@(itemName)").select2({
                    width: "100%"
                });
                $("#cboCreateUserQ@(itemName)").select2({
                    width: "100%"
                });
            }

            //部門(搜尋)
            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": "@Session["CompanyId"]" }, "", "NA", "", "DepartmentWithNo", "DepartmentId");

            //建立單據者(搜尋)
            ComboBoxs.Default("#cboCreateUserQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "Status": "A" }, "", "NA", "", "UserWithNo", "UserId");
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            if (!objPage) objPage = objPage@(itemName);
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetDepartmentRate", "DerManagement")";

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "DepartmentId": $("#cboDepartmentIdQ@(itemName)").val(),
                "UserId": $("#cboCreateUserQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DepartmentFullNo}" style="max-width: 200px;">${item.DepartmentFullNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ResourceRate}" style="max-width: 200px;">${item.ResourceRate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OverheadRate}" style="max-width: 200px;">${item.OverheadRate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CreateUserNo}${item.CreateUserName}" style="min-width: 150px;"><i class="fas fa-user"></i>&nbsp;<code>${item.CreateUserNo}</code>&nbsp;${item.CreateUserName}</td>
                                        <td class="text-center active-content" style="min-width: 250px;">
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.DepartmentRateId}');"><i class="fas fa-edit"></i></a>
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.DepartmentRateId}');"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(departmentRateId) {
            $("#DepartmentRateId").val(departmentRateId ? departmentRateId : 0);
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            if (!isMobile) {
                $("#cboDepartmentId@(itemName)").select2({
                    width: "100%"
                });
            }

            //部門
            ComboBoxs.Default("#cboDepartmentId@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": "@Session["CompanyId"]" }, "", "NA", "", "DepartmentWithNo", "DepartmentId");

            if (departmentRateId > 0) {
                let targetUrl = "@Url.Action("GetDepartmentRate", "DerManagement")";
                let postData = {
                    "DepartmentRateId": departmentRateId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#cboDepartmentId@(itemName)").val(item.DepartmentId);
                        $("#txtResourceRate@(itemName)").val(item.ResourceRate);
                        $("#txtOverheadRate@(itemName)").val(item.OverheadRate);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let departmentRateId = parseInt($("#DepartmentRateId").val());

                if (departmentRateId <= 0) {
                    let targetUrl = "@Url.Action("AddDepartmentRate", "DerManagement")";
                    let postData = {
                        "DepartmentId": $("#cboDepartmentId@(itemName)").val(),
                        "ResourceRate": $("#txtResourceRate@(itemName)").val(),
                        "OverheadRate": $("#txtOverheadRate@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateDepartmentRate", "DerManagement")";
                    let postData = {
                        "DepartmentRateId": departmentRateId,
                        "DepartmentId": $("#cboDepartmentId@(itemName)").val(),
                        "ResourceRate": $("#txtResourceRate@(itemName)").val(),
                        "OverheadRate": $("#txtOverheadRate@(itemName)").val()
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(departmentRateId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認後再執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteDepartmentRate", "DerManagement")";
                    let postData = {
                        "DepartmentRateId": departmentRateId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            ResetForm(objForm@(itemName));
            InitData@(itemName)();
        }
    </script>
)

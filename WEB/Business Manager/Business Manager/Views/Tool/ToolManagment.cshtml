                    if (result) {

                        ExpandToolSpecLog();

                        //Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(ToolId) {
            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteTool", "Tool")";
                    let postData = {
                        "ToolId": ToolId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Print@(itemName)(ToolId) {
            if (ToolId > 0) {
                let targetUrl = "@Url.Action("CartonBarcodeprint", "PrintLabel")";
                let postData = {
                    "CartonBarcode": ToolId
                };

                let result = DataAccess.Get(targetUrl, postData, false);

                if (result) {
                    Query@(itemName)();
                }
            }
            else {
                alert("資料錯誤缺少工具ID,無法列印");
                return
            }
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block , .advanced-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var toolId = $(this).data("tool-id");

            let targetUrl = "@Url.Action("UpdateToolStatus", "Tool")";
            let postData = {
                "ToolId": toolId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }

        function GetToolMap() {
            let targetUrl = "@Url.Action("GetToolModel", "Tool")";
            let postData = {
                "ToolModelId": $("#cboToolModel@(itemName)").val(),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                $.each(data.result, function (i, item) {
                        ComboBoxs.Default("#cboToolGroup@(itemName)", "@Url.Action("GetToolGroup", "Tool")", "", "", "NA", "", "ToolGroupName", "ToolGroupId");
                        ComboBoxs.Default("#cboToolClass@(itemName)", "@Url.Action("GetToolClass", "Tool")", { "ToolGroupId": item.ToolGroupId, "Status": "A" }, "", "NA", "", "ToolClassName", "ToolClassId");
                        ComboBoxs.Default("#cboToolCategory@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "ToolClassId": item.ToolClassId, "Status": "A" }, "", "NA", "", "ToolCategoryName", "ToolCategoryId");
                        ComboBoxs.Default("#cboToolModel@(itemName)", "@Url.Action("GetToolModel", "Tool")", { "ToolCategoryId": item.ToolCategoryId, "Status": "A" }, "", "NA", "", "ToolModelName", "ToolModelId");

                        $("#cboToolGroup@(itemName)").val(item.ToolGroupId);
                        $("#cboToolClass@(itemName)").val(item.ToolClassId);
                        $("#cboToolCategory@(itemName)").val(item.ToolCategoryId);
                        $("#cboToolModel@(itemName)").val(item.ToolModelId);
                });
            } else {
                alert(data.msg, "alert", 0);
            }
        }

       
    </script>

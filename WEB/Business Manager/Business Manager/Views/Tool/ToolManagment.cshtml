@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            $("#txtUsageCount@(itemName)").attr("readonly", true);


            ComboBoxs.Default("#cboToolGroupQ@(itemName)", "@Url.Action("GetToolGroup", "Tool")", "", "", "NA", "", "ToolGroupName", "ToolGroupId");
            ComboBoxs.Default("#cboToolClassQ@(itemName)", "@Url.Action("GetToolClass", "Tool")", "", "", "NA", "", "ToolClassName", "ToolClassId");
            ComboBoxs.Default("#cboToolCategoryQ@(itemName)", "@Url.Action("GetToolCategory", "Tool")", "", "", "NA", "", "ToolCategoryName", "ToolCategoryId");
            ComboBoxs.Default("#cboToolModelQ@(itemName)", "@Url.Action("GetToolModel", "Tool")", "", "", "NA", "", "ToolModelName", "ToolModelId");
            ComboBoxs.Default("#cboSupplierQ@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", "", "", "NA", "", "SupplierName", "SupplierId");

            $("#cboToolGroupQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolClassQ@(itemName)", "@Url.Action("GetToolClass", "Tool")", { "ToolGroupId": $("#cboToolGroupQ@(itemName)").val(), "Status": "A"}, "", "NA", "", "ToolClassName", "ToolClassId");
            });

            $("#cboToolClassQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolCategoryQ@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "ToolClassId": $("#cboToolClassQ@(itemName)").val(), "Status": "A" }, "", "NA", "", "ToolCategoryName", "ToolCategoryId");
            });

            $("#cboToolCategoryQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolModelQ@(itemName)", "@Url.Action("GetToolModel", "Tool")", { "ToolCategoryId": $("#cboToolCategoryQ@(itemName)").val(), "Status": "A" }, "", "NA", "", "ToolModelName", "ToolModelId");
            });

            $("#cboToolGroup@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolCategory@(itemName)", "@Url.Action("GetToolCategory", "Tool")", "", "", "NA", "", "ToolCategoryName", "ToolCategoryId");
                ComboBoxs.Default("#cboToolModel@(itemName)", "@Url.Action("GetToolModel", "Tool")", "", "", "NA", "", "ToolModelName", "ToolModelId");

                ComboBoxs.Default("#cboToolClass@(itemName)", "@Url.Action("GetToolClass", "Tool")", { "ToolGroupId": $("#cboToolGroup@(itemName)").val(), "Status": "A"}, "", "NA", "", "ToolClassName", "ToolClassId");
            });

            $("#cboToolClass@(itemName)").change(function () {
                ComboBoxs.Default("#cboToolCategory@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "ToolClassId": $("#cboToolClass@(itemName)").val(), "Status": "A" }, "", "NA", "", "ToolCategoryName", "ToolCategoryId");
            });

            $("#cboToolCategory@(itemName)").change(function () {
                if ($("#ToolId").val() <= 0) {
                    ComboBoxs.Default("#cboToolModel@(itemName)", "@Url.Action("GetToolModel", "Tool")", { "ToolCategoryId": $("#cboToolCategory@(itemName)").val(), "Status": "A" }, "", "NA", "", "ToolModelName", "ToolModelId");
                }
            });

            

            $("#cboToolModel@(itemName)").change(function () {
                GetToolMap()
            });

            //下拉選單樣式
            if (!isMobile) {
                $(`#cboToolGroupQ@(itemName), #cboToolClassQ@(itemName), #cboToolCategoryQ@(itemName), #cboToolModelQ@(itemName), #cboSupplierQ@(itemName)`).select2
                ({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }


            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;


            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetTool", "Tool")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ToolNo": $("#txtToolNoQ@(itemName)").val().trim(),
                "ToolGroupId": $("#cboToolGroupQ@(itemName)").val(),
                "ToolClassId": $("#cboToolClassQ@(itemName)").val(),
                "ToolCategoryId": $("#cboToolCategoryQ@(itemName)").val(),
                "ToolModelId": $("#cboToolModelQ@(itemName)").val(),
                "SupplierId": $("#cboSupplierQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ToolGroupName}" style="max-width: 150px;">${item.ToolGroupName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ToolClassName}" style="max-width: 150px;">${item.ToolClassName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RevToolCategoryId != null ? item.RevToolCategoryName : item.ToolCategoryName}" style="max-width: 150px;">${item.RevToolCategoryId != null ? item.RevToolCategoryName : item.ToolCategoryName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ToolModelName}" style="max-width: 150px;">${item.ToolModelName}</td>
                                         <td class="text-primary">
                                            <a href="@Url.Action("ToolTransactions", "MesReport")?ToolNo=${item.ToolNo}" target="_blank">
                                            ${item.ToolNo}
                                            </a>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UsageCount}" style="max-width: 150px;">${item.UsageCount}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SupplierName}" style="max-width: 150px;">${item.SupplierName != null ? item.SupplierName : `未設定`}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-tool-id="${item.ToolId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.ToolId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.ToolId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-tool-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(ToolId) {
            $("#ToolId").val(ToolId ? ToolId : 0);
            $("#txtToolNo@(itemName)").attr("readonly", true);
            $("#cboToolGroup@(itemName)").attr("disabled", false);
            $("#cboToolClass@(itemName)").attr("disabled", false);
            //$("#cboToolCategory@(itemName)").attr("disabled", false);
            $("#cboToolModel@(itemName)").attr("disabled", false);


            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboToolGroup@(itemName)", "@Url.Action("GetToolGroup", "Tool")", "", "", "NA", "", "ToolGroupName", "ToolGroupId");
            ComboBoxs.Default("#cboToolClass@(itemName)", "@Url.Action("GetToolClass", "Tool")", "", "", "NA", "", "ToolClassName", "ToolClassId");
            ComboBoxs.Default("#cboToolCategory@(itemName)", "@Url.Action("GetToolCategory", "Tool")", "", "", "NA", "", "ToolCategoryName", "ToolCategoryId");
            ComboBoxs.Default("#cboToolModel@(itemName)", "@Url.Action("GetToolModel", "Tool")", "", "", "NA", "", "ToolModelName", "ToolModelId");
            ComboBoxs.Default("#cboSupplier@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", "", "", "NA", "", "SupplierName", "SupplierId");

            

            if (ToolId > 0) {

                let targetUrl = "@Url.Action("GetTool", "Tool")";
                let postData = {
                    "ToolId": ToolId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {

                        if (item.Status == "A") {
                            $("#cboToolGroup@(itemName)").attr("disabled", true);
                            $("#cboToolClass@(itemName)").attr("disabled", true);
                            //$("#cboToolCategory@(itemName)").attr("disabled", true);
                            $("#cboToolModel@(itemName)").attr("disabled", true);
                            $("#txtToolNo@(itemName)").attr("readonly", true);
                        }

                        ComboBoxs.Default("#cboToolClass@(itemName)", "@Url.Action("GetToolClass", "Tool")", { "ToolGroupId": item.ToolGroupId, "Status": "A" }, "", "NA", "", "ToolClassName", "ToolClassId");
                        ComboBoxs.Default("#cboToolCategory@(itemName)", "@Url.Action("GetToolCategory", "Tool")", { "ToolClassId": item.ToolClassId, "Status": "A" }, "", "NA", "", "ToolCategoryName", "ToolCategoryId");
                        ComboBoxs.Default("#cboToolModel@(itemName)", "@Url.Action("GetToolModel", "Tool")", { "ToolCategoryId": item.ToolCategoryId, "Status": "A" }, "", "NA", "", "ToolModelName", "ToolModelId");

                        $("#cboToolGroup@(itemName)").val(item.ToolGroupId);
                        $("#cboToolClass@(itemName)").val(item.ToolClassId);
                        if (item.RevToolCategoryId != null) {
                            $("#cboToolCategory@(itemName)").val(item.RevToolCategoryId);
                        }
                        else {
                            $("#cboToolCategory@(itemName)").val(item.ToolCategoryId);
                        }
                        $("#cboToolModel@(itemName)").val(item.ToolModelId);
                        $("#txtToolNo@(itemName)").val(item.ToolNo);
                    });
                    ExpandToolSpecLog();

                } else {
                    alert(data.msg, "alert", 0);
                }
            }
            else {
                let targetUrl = "@Url.Action("GetToolNoMaxsor", "Tool")";
                let postData = {
                    "ToolId": -1
                };
                let data1 = DataAccess.Get(targetUrl, postData, false);
                if (data1.status == "success") {
                    if (data1.result.length <= 0) {
                        $("#txtToolNo@(itemName)").val("T00001"); //顯示框 目前最大編號+1 = 要新增的編號
                        $("#txtToolMaxNo@(itemName)").val("T00001"); //隱藏框 目前最大編號 (儲存時 是使用目前最大編號去判斷)
                    }
                    else {
                        $.each(data1.result, function (i, item) {
                        if (i == 0) {
                                $("#txtToolNo@(itemName)").val(item.MaxToolNo); //顯示框 目前最大編號+1 = 要新增的編號
                                $("#txtToolMaxNo@(itemName)").val(item.ToolNo); //隱藏框 目前最大編號 (儲存時 是使用目前最大編號去判斷)
                                return false;
                            }
                        });
                    }
                    
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            //下拉選單樣式
            if (!isMobile) {
                $(`#cboToolGroup@(itemName), #cboToolClass@(itemName), #cboToolCategory@(itemName), #cboToolModel@(itemName), #cboSupplier@(itemName)`).select2
                ({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ToolId = parseInt($("#ToolId").val());

                if (ToolId <= 0) {
                    let targetUrl = "@Url.Action("AddTool", "Tool")";
                    let postData = {
                        "ToolModelId": $("#cboToolModel@(itemName)").val(),
                        "ToolNo": $("#txtToolMaxNo@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {

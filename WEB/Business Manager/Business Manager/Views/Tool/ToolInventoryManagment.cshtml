@using Business_Manager.Helpers
@{
    string itemName = "ToolInventoryManagment";
    string itemNameText = "工具倉庫資料管理";
    string authority = ViewBag.authority;
}

@Html.Resource("css",
    @<style>
    </style>
        )

<input type="hidden" id="pageAuthority" value="@authority"     />

<div class="row">
    <div class="col-12 title-block">
        <h1 class="pt-2 pb-3">@(itemNameText)</h1>
        <div class="unit-block">
            <div class="button-block mb-1">
                <button type="button" class="btn btn-secondary" onclick="Return@(itemName)()"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolInventoryNoQ@(itemName)">工具倉庫編號2</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolInventoryNoQ@(itemName)" name="txtToolInventoryNoQ@(itemName)" placeholder="請輸入工具倉庫編號" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolInventoryNameQ@(itemName)">工具倉庫名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolInventoryNameQ@(itemName)" name="txtToolInventoryNameQ@(itemName)" placeholder="請輸入工具倉庫名稱" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboShopQ@(itemName)">車間</label>
                            <div class="col-12">
                                <select class="form-control" id="cboShopQ@(itemName)" name="cboShopQ@(itemName)">
                                    <option value="">-- 請選擇車間 --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">狀態</label>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    啟用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)A" name="cbxStatusQ@(itemName)" value="A" checked />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <label class="control control-solid control-solid-info control--checkbox">
                                    停用
                                    <input type="checkbox" id="cbxStatusQ@(itemName)S" name="cbxStatusQ@(itemName)" value="S" />
                                    <span class="control__indicator"></span>
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)" href="javascript:void(0);">
                            <i class="fal fa-search"></i>搜尋
                        </a>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 text-right">
                        <a class="btn btn-info auth-add" href="javascript:Edit@(itemName)();"><i class="fas fa-plus"></i>新增</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 125px;">工具倉庫編號</th>
                                        <th scope="col" style="min-width: 150px;">工具倉庫名稱</th>
                                        <th scope="col" style="min-width: 150px;">車間</th>
                                        <th class="text-center" scope="col" style="min-width: 125px;">狀態</th>
                                        <th class="text-center" scope="col" style="min-width: 265px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="editData@(itemName)" style="display: none;">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <form class="container" autocomplete="off" id="editForm@(itemName)">
                    <fieldset>
                        <input type="hidden" id="ToolInventoryId" name="ToolInventoryId" value="-1" />
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="cboShop@(itemName)">車間 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <select class="form-control" id="cboShop@(itemName)" name="cboShop@(itemName)">
                                    <option value="">-- 請選擇車間 --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolInventoryNo@(itemName)">工具倉庫編號 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolInventoryNo@(itemName)" name="txtToolInventoryNo@(itemName)" placeholder="請輸入工具倉庫編號"
                                       data-msg-required="請輸入工具倉庫編號" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolInventoryName@(itemName)">工具倉庫名稱 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolInventoryName@(itemName)" name="txtToolInventoryName@(itemName)" placeholder="請輸入工具倉庫名稱"
                                       data-msg-required="請輸入工具倉庫名稱" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label" for="txtToolInventoryDesc@(itemName)">工具倉庫描述 <span class="text-danger">*</span></label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtToolInventoryDesc@(itemName)" name="txtToolInventoryDesc@(itemName)" placeholder="請輸入工具倉庫描述"
                                       data-msg-required="請輸入工具倉庫描述" data-rule-required="true"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="card-footer text-center text-lg-right">
                <button type="button" class="btn btn-success" onclick="Save@(itemName)()"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

<div class="advanced-block">
    <div class="row">
        <div class="col-12">
            <ul class="nav flag-tabs nav-fill" role="tablist">
                <li class="flag-item">
                    <a class="flag-link active" data-toggle="tab" href="#tabToolLocator">
                        <i class="fas fa-garage-car"></i> 工具儲位
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="tabToolLocator">
            @Html.Partial("ToolLocator")
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            ComboBoxs.Default("#cboShopQ@(itemName)", "@Url.Action("GetWorkShop", "MesBasicInformation")", "", "", "NA", "", "ShopName", "ShopId");


            Query@(itemName)();

            if (!isMobile) {
                $("#cboShopQ@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            
            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetToolInventory", "Tool")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "ToolInventoryNo": $("#txtToolInventoryNoQ@(itemName)").val().trim(),
                "ToolInventoryName": $("#txtToolInventoryNameQ@(itemName)").val().trim(),
                "ShopId": $("#cboShopQ@(itemName)").val(),
                "Status": statusList.join(",")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ToolInventoryNo}" style="max-width: 150px;">${item.ToolInventoryNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ToolInventoryName}" style="max-width: 150px;">${item.ToolInventoryName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ShopName}" style="max-width: 150px;">${item.ShopName}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-toolinventory-id="${item.ToolInventoryId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.ToolInventoryId});"><i class="fas fa-edit"></i></a>
                                          <a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.ToolInventoryId});"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-toolinventory-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(ToolInventoryId) {
            $("#ToolInventoryId").val(ToolInventoryId ? ToolInventoryId : 0);
            $("#txtToolInventoryNo@(itemName)").attr("readonly", false);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboShop@(itemName)", "@Url.Action("GetWorkShop", "MesBasicInformation")", "", "", "NA", "", "ShopName", "ShopId");

            if (ToolInventoryId > 0) {
                $("#txtToolInventoryNo@(itemName)").attr("readonly", true);

                let targetUrl = "@Url.Action("GetToolInventory", "Tool")";
                let postData = {
                    "ToolInventoryId": ToolInventoryId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtToolInventoryNo@(itemName)").val(item.ToolInventoryNo);
                        $("#txtToolInventoryName@(itemName)").val(item.ToolInventoryName);
                        $("#txtToolInventoryDesc@(itemName)").val(item.ToolInventoryDesc);
                        $("#cboShop@(itemName)").val(item.ShopId);
                    });

                    ExpandToolLocator()
                } else {
                    alert(data.msg, "alert", 0);
                }
            }

            if (!isMobile) {
                $("#cboShop@(itemName)").select2({
                    dropdownAutoWidth: true,
                    width: "100%"
                });
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let ToolInventoryId = parseInt($("#ToolInventoryId").val());

                if (ToolInventoryId <= 0) {
                    let targetUrl = "@Url.Action("AddToolInventory", "Tool")";
                    let postData = {
                        "ToolInventoryNo": $("#txtToolInventoryNo@(itemName)").val(),
                        "ToolInventoryName": $("#txtToolInventoryName@(itemName)").val(),
                        "ToolInventoryDesc": $("#txtToolInventoryDesc@(itemName)").val(),
                        "ShopId": $("#cboShop@(itemName)").val(),
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            $("#ToolInventoryId").val(item.ToolInventoryId)
                            $("#txtToolInventoryNo@(itemName)").attr("readonly", true);
                        });
                        ExpandToolLocator()
                    }
                } else {
                    let targetUrl = "@Url.Action("UpdateToolInventory", "Tool")";
                    let postData = {
                        "ToolInventoryId": ToolInventoryId,
                        "ToolInventoryName": $("#txtToolInventoryName@(itemName)").val(),
                        "ToolInventoryDesc": $("#txtToolInventoryDesc@(itemName)").val(),
                        "ShopId": $("#cboShop@(itemName)").val(),
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        ExpandToolLocator()
                    }
                }
            }
        }

        function Delete@(itemName)(ToolInventoryId) {
            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteToolInventory", "Tool")";
                    let postData = {
                        "ToolInventoryId": ToolInventoryId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            Query@(itemName)();
        }

        function StatusSwitch@(itemName)() {
            var toolInventoryId = $(this).data("toolinventory-id");

            let targetUrl = "@Url.Action("UpdateToolInventoryStatus", "Tool")";
            let postData = {
                "ToolInventoryId": toolInventoryId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
        }
    </script>
        )
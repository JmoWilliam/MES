@using Business_Manager.Helpers
@{
    string itemName = "ViewLetteringInfo";
    string itemNameText = "刻字碼資訊";

    string DoDetailId = Request["DoDetailId"] ?? "";

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">出貨時間 <span class="sub-text" id="desDoDate@(itemName)"></span></span>
                    <span class="sub-title">出貨客戶 <span class="sub-text" id="desDcShortName@(itemName)"></span></span>
                    <span class="sub-title">品名 <span class="sub-text" id="desMtlItemName@(itemName)"></span></span>
                </h5>
                <button class="close" type="button" onclick="Close@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 100px;">#</th>
                                        <th scope="col" style="min-width: 250px;">條碼</th>
                                        <th scope="col" style="min-width: 250px;">刻字碼</th>
                                        <th scope="col" style="min-width: 250px;">Tray條碼</th>
                                        <th scope="col" style="min-width: 250px;">批號</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let doDetailId@(itemName);
        let itemType@(itemName);
        
        function Pop@(itemName)(ItemType, doDetailId, DoDate, DcShortName, MtlItemName) {
            itemType@(itemName) = ItemType;
            doDetailId@(itemName) = doDetailId;

            $("#desDoDate@(itemName)").html(DoDate);
            $("#desDcShortName@(itemName)").html(DcShortName);
            $("#desMtlItemName@(itemName)").html(MtlItemName);

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            InitData@(itemName)();
        }

        function InitData@(itemName)() {
            let innerHtml = '';

            let targetUrl = "@Url.Action("GetDeliveryLetteringInfo", "Delivery")";
            let postData = {
                "ItemType": itemType@(itemName),
                "DoDetailId": doDetailId@(itemName)
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                
                $.each(data.result, function (i, item) {
                    if (itemType@(itemName) == "1") {
                        if (item.RegularItemDetail) {
                            let json = JSON.parse(item.RegularItemDetail); //需先轉成json

                            for (let x = 0; x < json.data.length; x++) {
                                innerHtml += `<tr>
                                           <td>${x + 1}.</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].ItemBarcode}" style="max-width: 250px;">${json.data[x].ItemBarcode}</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].LetteringNo}" style="max-width: 250px;">${json.data[x].LetteringNo}</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].LotNumber}" style="max-width: 250px;">${json.data[x].LotNumber}</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].TrayNo}" style="max-width: 250px;">${json.data[x].TrayNo}</td>

                                         </tr>`;
                            }
                        }
                        else {
                            innerHtml += `<tr>
                                            <td class="text-center" colspan="3" style="background-color: #fff3cd;">
                                              <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                            </td>
                                          </tr>`;
                        }
                    }
                    else if (itemType@(itemName) == "2") {
                        console.log(item.FreebieItemDetail);
                        if (item.FreebieItemDetail) {
                            let json = JSON.parse(item.FreebieItemDetail); //需先轉成json

                            for (let x = 0; x < json.data.length; x++) {
                                innerHtml += `<tr>
                                           <td>${x + 1}.</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].ItemBarcode}" style="max-width: 250px;">${json.data[x].ItemBarcode}</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].LetteringNo}" style="max-width: 250px;">${json.data[x].LetteringNo}</td>
                                         </tr>`;
                            }
                        }
                        else {
                            innerHtml += `<tr>
                                            <td class="text-center" colspan="3" style="background-color: #fff3cd;">
                                              <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                            </td>
                                          </tr>`;
                        }
                    }
                    else if (itemType@(itemName) == "3") {
                        if (item.SpareItemDetail) {
                            let json = JSON.parse(item.SpareItemDetail); //需先轉成json

                            for (let x = 0; x < json.data.length; x++) {
                                innerHtml += `<tr>
                                           <td>${x + 1}.</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].ItemBarcode}" style="max-width: 250px;">${json.data[x].ItemBarcode}</td>
                                           <td class="ellipsis" data-toggle="tooltip" title="${json.data[x].LetteringNo}" style="max-width: 250px;">${json.data[x].LetteringNo}</td>
                                         </tr>`;
                            }
                        }
                        else {
                            innerHtml += `<tr>
                                            <td class="text-center" colspan="3" style="background-color: #fff3cd;">
                                              <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                            </td>
                                          </tr>`;
                        }
                    }
                });
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal('hide');
        }
    </script>
)
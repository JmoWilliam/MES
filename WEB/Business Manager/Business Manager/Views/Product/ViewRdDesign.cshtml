@using Business_Manager.Helpers
@{
    string itemName = "ViewRdDesign";
    string itemNameText = "研發設計圖資料";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">
                    <h5>@(itemNameText)</h5>
                    <p class="sub-title">目前品號: <span class="sub-text" id="desMtlItmeNo@(itemName)"></span></p>
                </div>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtCustomerMtlItemNoQ@(itemName)" name="txtCustomerMtlItemNoQ@(itemName)"
                                               placeholder="請輸入客戶品號" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 250px;">客戶品號(客戶)</th>
                                        <th scope="col" style="min-width: 250px;">客戶品號(研發)</th>
                                        <th scope="col" style="min-width: 150px;">客戶版次/系統版次</th>
                                        <th scope="col" style="min-width: 200px;">客戶圖號</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let designId@(itemName);
        let customerMtlItemNo@(itemName);
        let customerDwgNo@(itemName);
        let edition@(itemName);
        let version@(itemName);
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            designId@(itemName) = config.objectDesignId;
            customerMtlItemNo@(itemName) = config.objectCustomerMtlItemNo;
            customerDwgNo@(itemName) = config.objectCustomerDwgNo;
            edition@(itemName) = config.objectEdition;
            version@(itemName) = config.objectVersion;

            $("#desMtlItmeNo@(itemName)").html($("#txtMtlItemNoMtlItem").val());

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetRdDesign", "Product")";
                let postData = {
                    "OrderBy": "",
                    "PageIndex": (objPage.pageIndex + 1),
                    "PageSize": objPage.pageSize,
                    "CustomerMtlItemNo": $("#txtCustomerMtlItemNoQ@(itemName)").val(),
                    "MtlItemIsNull": "Y"
                };
                let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerMtlItemNo}" style="max-width: 200px;">${item.CustomerMtlItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RdCustomerMtlItemNo}" style="max-width: 200px;">${item.RdCustomerMtlItemNo}</td>
                                            <td>${item.CustCadEdition} / ${item.CustCadVersion}</td>
                                            <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerDwgNo}" style="max-width: 200px;">${item.CustomerDwgNo}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-design-id="${item.DesignId}" value="${item.DesignId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" name="txtCustomerMtlItemNo@(itemName)" data-design-id="${item.DesignId}" value="${item.CustomerMtlItemNo}" />
                                          <input type="hidden" name="txtCustomerDwgNo@(itemName)" data-design-id="${item.DesignId}" value="${item.CustomerDwgNo}" />
                                          <input type="hidden" name="txtEdition@(itemName)" data-design-id="${item.DesignId}" value="${item.CustCadEdition}" />
                                          <input type="hidden" name="txtVersion@(itemName)" data-design-id="${item.DesignId}" value="${item.CustCadVersion}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-design-id]:checked") {
                    let designId = $(this).data("design-id");

                    if (designId) {
                        let customerMtlItemNo = $(`input[name="txtCustomerMtlItemNo@(itemName)"][data-design-id="${designId}"]`).val();
                        let customerDwgNo = $(`input[name="txtCustomerDwgNo@(itemName)"][data-design-id="${designId}"]`).val();
                        let edition = $(`input[name="txtEdition@(itemName)"][data-design-id="${designId}"]`).val();
                        let version = $(`input[name="txtVersion@(itemName)"][data-design-id="${designId}"]`).val();

                        if (designId@(itemName)) ElementSetValue(designId@(itemName), designId, "change");
                        if (customerMtlItemNo@(itemName)) ElementSetValue(customerMtlItemNo@(itemName), customerMtlItemNo, "change");
                        if (customerDwgNo@(itemName)) ElementSetValue(customerDwgNo@(itemName), customerDwgNo, "change");
                        if (edition@(itemName)) ElementSetValue(edition@(itemName), edition, "change");
                        if (version@(itemName)) ElementSetValue(version@(itemName), version, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
 )
@using Business_Manager.Helpers
@{
    string itemName = "ViewSaleOrder";
    string itemNameText = "訂單資料";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">
                    <h5>@(itemNameText)</h5>
                    <p class="sub-title">目前品號: <span class="sub-text" id="desMtlItmeNo@(itemName)"></span></p>
                </div>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtCustomerMtlItemNoQ@(itemName)" name="txtCustomerMtlItemNoQ@(itemName)"
                                               placeholder="請輸入客戶品號" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">訂單單號</th>
                                        <th scope="col" style="min-width: 150px;">序號</th>
                                        <th scope="col" style="min-width: 175px;">客戶名稱</th>
                                        <th scope="col" style="min-width: 200px;">客戶品號</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let soDetailId@(itemName);
        let soErpFullNo@(itemName);
        let soSequence@(itemName);
        let customerShortName@(itemName);
        let customerMtlItemNo@(itemName);
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            soDetailId@(itemName) = config.objectSoDetailId;
            soErpFullNo@(itemName) = config.objectSoErpFullNo;
            soSequence@(itemName) = config.objectSoSequence;
            customerShortName@(itemName) = config.objectCustomerShortName;
            customerMtlItemNo@(itemName) = config.objectCustomerMtlItemNo;

            $("#desMtlItmeNo@(itemName)").html($("#txtMtlItemNoMtlItem").val());

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetSoDetail", "SaleOrder")";
                let postData = {
                    "OrderBy": "",
                    "PageIndex": (objPage.pageIndex + 1),
                    "PageSize": objPage.pageSize,
                    "MtlItemIdIsNull": "Y",
                    "TransferStatus": "N",
                    "CustomerMtlItemNo": $("#txtCustomerMtlItemNoQ@(itemName)").val()
                };
                let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SoErpFullNo}" style="max-width: 200px;">${item.SoErpFullNo}</td>
                                            <td>${item.SoSequence}</td>
                                            <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerName}" style="max-width: 200px;">${item.CustomerShortName} <code>(${item.CustomerNo})</code></td>
                                            <td class="ellipsis" data-toggle="tooltip" title="${item.CustomerMtlItemNo}" style="max-width: 200px;">${item.CustomerMtlItemNo}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-so-detail-id="${item.SoDetailId}" value="${item.SoDetailId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" name="txtSoErpFullNo@(itemName)" data-so-detail-id="${item.SoDetailId}" value="${item.SoErpFullNo}" />
                                          <input type="hidden" name="txtSoSequence@(itemName)" data-so-detail-id="${item.SoDetailId}" value="${item.SoSequence}" />
                                          <input type="hidden" name="txtCustomerShortName@(itemName)" data-so-detail-id="${item.SoDetailId}" value="${item.CustomerShortName}" />
                                          <input type="hidden" name="txtCustomerMtlItemNo@(itemName)" data-so-detail-id="${item.SoDetailId}" value="${item.CustomerMtlItemNo}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-so-detail-id]:checked") {
                    let soDetailId = $(this).data("so-detail-id");

                    if (soDetailId) {
                        let soErpFullNo = $(`input[name="txtSoErpFullNo@(itemName)"][data-so-detail-id="${soDetailId}"]`).val();
                        let soSequence = $(`input[name="txtSoSequence@(itemName)"][data-so-detail-id="${soDetailId}"]`).val();
                        let customerShortName = $(`input[name="txtCustomerShortName@(itemName)"][data-so-detail-id="${soDetailId}"]`).val();
                        let customerMtlItemNo = $(`input[name="txtCustomerMtlItemNo@(itemName)"][data-so-detail-id="${soDetailId}"]`).val();

                        if (soDetailId@(itemName)) ElementSetValue(soDetailId@(itemName), soDetailId, "change");
                        if (soErpFullNo@(itemName)) ElementSetValue(soErpFullNo@(itemName), soErpFullNo, "change");
                        if (soSequence@(itemName)) ElementSetValue(soSequence@(itemName), soSequence, "change");
                        if (customerShortName@(itemName)) ElementSetValue(customerShortName@(itemName), customerShortName, "change");
                        if (customerMtlItemNo@(itemName)) ElementSetValue(customerMtlItemNo@(itemName), customerMtlItemNo, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
)
@using Business_Manager.Helpers
@{
    string itemName = "ViewBomSubstitution";
    string itemNameText = "查看取替代料資料";
}

@Html.Resource("css",
    @<style>
         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">元件品號: <span class="sub-text" id="desBomMtlItemNo@(itemName)"></span></span>
                    <span class="sub-title">元件品名: <span class="sub-text" id="desBomMtlItemName@(itemName)"></span></span>
                    <span class="sub-title">元件規格: <span class="sub-text" id="desBomMtlItemSpec@(itemName)"></span></span>
                    <span class="sub-title">元件需領用量: <span class="sub-text" id="desQuantity@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row mb-3" id="query@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            @*<fieldset>
                                <input type="hidden" id="txtTransferStatusQ@(itemName)" value="Y" />
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)"
                                               placeholder="請輸入品號" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtMtlItemNameQ@(itemName)" name="txtMtlItemNameQ@(itemName)"
                                               placeholder="請輸入品名" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtMtlItemSpecQ@(itemName)" name="txtMtlItemSpecQ@(itemName)"
                                               placeholder="請輸入規格" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>*@
                        </form>
                    </div>
                </div>
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">替代料品號</th>
                                        <th scope="col" style="min-width: 200px;">替代料品名</th>
                                        <th scope="col" style="min-width: 150px;">替代料規格</th>
                                        <th scope="col" style="min-width: 200px;">庫別</th>
                                        <th scope="col" style="min-width: 135px;">庫存數量</th>
                                        <th scope="col" style="min-width: 150px;">需領用量</th>
                                        <th scope="col" style="min-width: 150px;">替代料單位</th>
                                        <th scope="col" style="min-width: 100px;">類型</th>
                                        <th scope="col" style="min-width: 135px;">替代料順序</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let mrDetailId@(itemName);
        let subMtlItemId@(itemName);
        let billMtlItemNo@(itemName);
        let bomMtlItemNo@(itemName);
        let bomMtlItemName@(itemName);
        let quantity@(itemName);
        let uomId@(itemName);
        let inventoryId@(itemName);

        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };

        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(mrDetailId, bomMtlItemNo, bomMtlItemName, quantity, billMtlItemNo, billMtlItemName, bomMtlItemSpec) {
            mrDetailId@(itemName) = mrDetailId;
            bomMtlItemNo@(itemName) = bomMtlItemNo;
            quantity@(itemName) = quantity;
            billMtlItemNo@(itemName) = billMtlItemNo;
            GetExcessFlagMaterialDetail();
            $("#desBomMtlItemNo@(itemName)").html(bomMtlItemNo);
            $("#desBomMtlItemName@(itemName)").html(bomMtlItemName);
            $("#desBomMtlItemSpec@(itemName)").html(bomMtlItemSpec);
            $("#desQuantity@(itemName)").html(quantity);

            if (billMtlItemNo@(itemName) == "") {
                alert("請先綁定製令後再選擇取替代料!!");
                Close@(itemName)();
                return;
            }

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetBomSubstitution", "Inventory")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "BillMtlItemNo": billMtlItemNo@(itemName),
                "BomMtlItemNo": bomMtlItemNo@(itemName)
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemNo}" style="min-width: 200px;">${item.MtlItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemName}" style="min-width: 200px;">${item.MtlItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemSpec}" style="min-width: 150px;">${item.MtlItemSpec}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.InventoryNo} ${item.InventoryName}" style="min-width: 200px;">${item.InventoryNo} ${item.InventoryName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.InventoryQty}" style="min-width: 135px;">${item.InventoryQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Quantity}" style="min-width: 150px;">${item.Quantity}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UomNo} ${item.UomName}" style="min-width: 150px;">${item.UomNo} ${item.UomName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SubstituteStatusNo}" style="min-width: 100px;">${item.SubstituteStatusNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SortNumber}" style="min-width: 135px;">${item.SortNumber}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" name="txtMtlItemId@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.MtlItemId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" name="txtSubMtlItemNo@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.MtlItemNo}" />
                                          <input type="hidden" name="txtSubMtlItemName@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.MtlItemName}" />
                                          <input type="hidden" name="txtSubMtlItemSpec@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.MtlItemSpec}" />
                                          <input type="hidden" name="txtBomMtlItemId@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.BomMtlItemId}" />
                                          <input type="hidden" name="txtBomMtlItemNo@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.BomMtlItemNo}" />
                                          <input type="hidden" name="txtBomMtlItemName@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.BomMtlItemName}" />
                                          <input type="hidden" name="txtBomMtlItemSpec@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.BomMtlItemSpec}" />
                                          <input type="hidden" name="txtUomId@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.UomId}" />
                                          <input type="hidden" name="txtInventoryId@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.InventoryId}" />
                                          <input type="hidden" name="txtSubQuantity@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.Quantity}" />
                                          <input type="hidden" name="txtQuantity@(itemName)" data-mtl-item-id="${item.MtlItemId}" data-inventory-no="${item.InventoryNo}" value="${item.Quantity * quantity@(itemName)}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="11" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-mtl-item-id]:checked") {
                    let mtlItemId = $(this).data("mtl-item-id");
                    let inventoryNo = $(this).data("inventory-no");

                    if (mtlItemId) {
                        let subMtlItemNo = $(`input[name="txtSubMtlItemNo@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let subMtlItemName = $(`input[name="txtSubMtlItemName@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let subMtlItemSpec = $(`input[name="txtSubMtlItemSpec@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let bomMtlItemId = $(`input[name="txtBomMtlItemId@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let bomMtlItemNo = $(`input[name="txtBomMtlItemNo@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let bomMtlItemName = $(`input[name="txtBomMtlItemName@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let bomMtlItemSpec = $(`input[name="txtBomMtlItemSpec@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let subQuantity = $(`input[name="txtSubQuantity@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let quantity = $(`input[name="txtQuantity@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let uomId = $(`input[name="txtUomId@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();
                        let inventoryId = $(`input[name="txtInventoryId@(itemName)"][data-mtl-item-id="${mtlItemId}"][data-inventory-no="${inventoryNo}"]`).val();

                        $("#txtSubMtlItemIdBomSubstitution").val(mtlItemId);
                        $("#txtQuantityBomSubstitution").val(quantity);
                        $("#txtBomMtlItemIdBomSubstitution").val(bomMtlItemId);
                        $("#txtSubQuantityBomSubstitution").val(subQuantity);

                        swal.fire({
                            titleText: "確認要使用取替代料取代此元件嗎?",
                            text: "此動作無法復原，請確認是否要執行!",
                            icon: "warning",
                            allowOutsideClick: false,
                            allowEscapeKey: false,
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            reverseButtons: true
                        }).then((result) => {
                            if (result.isConfirmed) {
                                let targetUrl = "@Url.Action("UpdateMrBomSubstitution", "Inventory")";
                                let postData = {
                                    "MrDetailId": mrDetailId@(itemName),
                                    "SubMtlItemId": mtlItemId,
                                    "Quantity": quantity,
                                    "BomMtlItemId": bomMtlItemId,
                                    "SubQuantity": subQuantity,
                                    "UomId": uomId,
                                    "InventoryId": inventoryId
                                };

                                let result = DataAccess.Update(targetUrl, postData, false, true);

                                if (result) {
                                    ReturnMaterialDetail();
                                    Close@(itemName)();
                                }
                                else {
                                    $("input[type='radio']").prop("checked", false);
                                }
                            }
                            else {
                                $("input[type='radio']").prop("checked", false);
                            }
                        });
                    }
                }

                //Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            ReturnMaterialDetail();
            $("#modal@(itemName)").modal('hide');
        }
    </script>
        )
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let moIds = [];
        let mrId@(itemName);

        function Pop@(itemName)(mrId) {
            moIds = [];
            mrId@(itemName) = mrId;

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            })

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#txtWoErpFullNoQ@(itemName), #txtMoIdQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    Query@(itemName)();
                    return false;
                }
            });

            $("#cboProdModeQ@(itemName)").select2({
                width: "100%"
            });

            ComboBoxs.Default("#cboProdModeQ@(itemName)", "@Url.Action("GetProdMode", "MesBasicInformation")", {}, "", "NA", "", "txtProdModeWithText", "ModeId");

            $("#cbxSelectAll@(itemName)").prop("checked", false);

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                const isChecked = $(this).is(":checked");
                const $checkboxes = $("input[type='checkbox'][data-mo-id]").not(":disabled");

                $checkboxes.prop("checked", isChecked);

                $checkboxes.each(function () {
                    const moId = $(this).data("mo-id");
                    if (isChecked) {
                        if (!moIds.includes(moId)) {
                            moIds.push(moId);
                        }
                    } else {
                        moIds = moIds.filter(id => id !== moId);
                    }
                });
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            $("#cbxSelectAll@(itemName)").prop("checked", false);

            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetManufactureOrder", "Production")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val(),
                "MoId": $("#txtMoIdQ@(itemName)").val(),
                "ModeId": $("#cboProdModeQ@(itemName)").val()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.WoErpPrefix}-${item.WoErpNo}(${item.WoSeq})</td>
                                        <td>${item.ModeNo} ${item.ModeName}</td>
                                        <td>${item.MtlItemNo}</td>
                                        <td>${item.MtlItemName}</td>
                                        ${JudgeMoRouting(`${item.MoRoutingId}`)}
                                        <td>${item.Quantity}</td>
                                        <td>${item.RequisitionSetQty}</td>
                                        <td>${item.InputQty}</td>
                                        <td>${item.CompleteQty}</td>
                                        <td>${item.ScrapQty}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--checkbox">
                                              <input type="checkbox" data-mo-id="${item.MoId}" value="${item.MoId}" ${moIds.indexOf(item.MoId) != -1 ? `checked` : ``} />
                                              <span class="control__indicator"></span>
                                          </label>
                                        </td>
                                      </tr>`;

                        function JudgeMoRouting(moRoutingId) {
                            let innerHtml = '';
                            if (moRoutingId != "null") {
                                innerHtml += `<td>已綁定途程</td>`;
                            }
                            else {
                                innerHtml += `<td>未綁定途程</td>`;
                            }
                            return innerHtml;
                        }
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="13" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[data-mo-id]").change(function () {
                let moId = $(this).data("mo-id")
                let checked = $(this).prop("checked");

                if (checked) {
                    moIds.push(moId);
                }
                else {
                    moIds = moIds.filter(id => id !== moId);
                }
            });
        }

        function Save@(itemName)() {
            swal.fire({
                titleText: "是否要批次註冊製令到領料單?",
                text: "此動作會將勾選的製令批量匯入領料單，請確認後再執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    targetUrl = "@Url.Action("AddBatchMrWipOrder", "Inventory")";
                    let postData = {
                        "MrId": mrId@(itemName),
                        "MoIds": moIds.toString()
                    };

                    let resultData = DataAccess.Update(targetUrl, postData, false, true);

                    if (resultData) {
                        ReturnViewMrWipOrder();
                        ReturnMaterialDetail();
                        Close@(itemName)();
                    }
                }
            });
        }

        //#region 切換顯示「有效、全部」品號
        let Effective@(itemName) = true;
        function StatusSwitch@(itemName)(value) {
            //var mtlItemId = $(this).data("mtlitem-id");

            Effective@(itemName) = value;
            Query@(itemName)();
        }
        //#endregion

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }

        function SetEffectiveText(status) {
            return status == 1 ? `有效` : `無效`;
        }

        function SetStatusText(status) {
            return status == 'N' ? '否' : `是`;
        }

        function trimStr(e, input) {
            $(e).val(ToCDB(input).replace(/\s+/g, ''));
        }

        function ToCDB(str) {
            var output = "";
            for (var i = 0; i < str.length; i++) {
                if (str.charCodeAt(i) == 12288) {
                    output += String.fromCharCode(str.charCodeAt(i) - 12256);
                    continue;
                }
                if (str.charCodeAt(i) > 65280 && str.charCodeAt(i) < 65375) {
                    output += String.fromCharCode(str.charCodeAt(i) - 65248);
                }
                else {
                    output += String.fromCharCode(str.charCodeAt(i));
                }
            }
            return output
        }

        function GetCurrentDate@(itemName)() {
            // 建立一個新的 Date 物件
            let currentDate = new Date();

            // 獲取年、月、日
            let year = currentDate.getFullYear();
            let month = ('0' + (currentDate.getMonth() + 1)).slice(-2); // 月份從 0 開始，所以要加1；再用 slice(-2) 取得兩位數，不足補0
            let day = ('0' + currentDate.getDate()).slice(-2); // 取得日期，同樣補0

            // 格式化成 YYYY-MM-DD 的形式
            let formattedDate = year + '-' + month + '-' + day;

            return formattedDate
        }
    </script>
                )
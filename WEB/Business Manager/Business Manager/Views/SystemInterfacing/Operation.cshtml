@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let json@(itemName) = {
            InterfacingId: -1,
            OperationNo: "",
            OperationName: "",
            Import: {},
            Synchronize: {}
        };

        let Operations = new OperationControl@(itemName)();

        $(document).ready(function () {
            ComboBoxs.Default("#cboCompanyIdQ@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", { "Status": "A" }, "", "ALL", "", "CompanyWithNo", "CompanyId");
            ComboBoxs.Default("#cboInterfacingIdQ@(itemName)", "@Url.Action("GetInterfacing", "SystemInterfacing")", {}, "", "ALL", "", "InterfacingName", "InterfacingId");

            $("#cboCompanyIdQ@(itemName), #cboInterfacingIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#cboCompanyIdQ@(itemName)").change(function () {
                ComboBoxs.Default("#cboInterfacingIdQ@(itemName)", "@Url.Action("GetInterfacing", "SystemInterfacing")", { "CompanyId": $("#cboCompanyIdQ@(itemName)").val() }, "", "ALL", "", "InterfacingName", "InterfacingId");
            });

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetOperation", "SystemInterfacing")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "CompanyId": $("#cboCompanyIdQ@(itemName)").val(),
                "InterfacingId": $("#cboInterfacingIdQ@(itemName)").val(),
                "OperationNo": $("#txtOperationNoQ@(itemName)").val(),
                "OperationName": $("#txtOperationNameQ@(itemName)").val(),
                "Status": $("input[name='cbxStatusQ@(itemName)']:checked").toArray().map(item => item.value).join()
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr data-operation-id="${item.OperationId}" data-previous="${item.PreviousId}" data-next="${item.NextId}">
                                        <td>${_row}</td>
                                        <td>${(item.LogoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${item.LogoIcon}" />`)}${item.CompanyName}</td>
                                        <td>${item.InterfacingTypeName}</td>
                                        <td>${item.OperationNo} ${item.OperationName}</td>
                                        <td class="text-center active-content">
                                          <div class="btn-group mb-4 show" style="margin-bottom: 0 !important; position: static;">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-operation-id="${item.OperationId}" style="padding-top: 0; padding-bottom: 0;">動作</button>
                                            <div class="dropdown-menu btn-text-left-block" data-operation-id="${item.OperationId}" style="overflow-y: auto; z-index: 999; max-height: 150px;">
                                              <a class="dropdown-item btn-text-left auth-update" href="javascript:Edit@(itemName)(${item.OperationId});"><i class="fas fa-edit"></i>修改</a>
                                            </div>
                                          </div>
                                        </td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" name="chkStatus@(itemName)" data-operation-id="${item.OperationId}" ${(item.Status == `A` ? `checked` : ``)} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch"><span class="stack-title">狀態</span>${item.StatusName}</td>
                                        <td style="padding: 0;">
                                          <table class="table table-bordered table-sm mb-0 table-non-rwd table-striped-custom table-row-detail">
                                            <tbody>
                                              <tr>
                                                <th style="width: 75px;">拋轉</th>
                                                <td style="width: 100px;">${item.AutoImportName}</td>
                                                <td style="width: 150px;">${TimeTransform(item.ImportTimeInterval)}</td>
                                                <td style="width: 100px;">${item.ImportExecuteModeName}</td>
                                              </tr>
                                              <tr>
                                                <th style="width: 75px;">同步</th>
                                                <td style="width: 100px;">${item.AutoSynchronizeName}</td>
                                                <td style="width: 150px;">${TimeTransform(item.SynchronizeTimeInterval)}</td>
                                                <td style="width: 100px;">${item.SynchronizeExecuteModeName}</td>
                                              </tr>
                                            </tbody>
                                          </table>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-operation-id]").change(function () {
                Operations.StatusSwitch($(this).data("operation-id"));
            });

            $(".dropdown-toggle").off("click").on("click", function () {
                let operationId = $(this).data("operation-id");

                if ($(`.dropdown-menu[data-operation-id='${operationId}']`).hasClass("show")) {
                    $(".dropdown-menu").removeClass("show");
                } else {
                    $(".dropdown-menu").removeClass("show");

                    $(`.dropdown-menu[data-operation-id='${operationId}']`).addClass("show");
                    $(`.dropdown-menu[data-operation-id='${operationId}']`).css({
                        top: `${$(this).position().top + $(this).height() + 5}px`,
                        left: `${$(this).position().left - $(this).width() + 38}px`
                    });
                }
            });

            $("body").off("click").on("click", function (e) {
                if ($(".dropdown-menu").hasClass("show")) {
                    if (!$(e.target).hasClass("dropdown-toggle")
                        && !$(e.target).parents().hasClass("dropdown-toggle")) {
                        $(".dropdown-menu").removeClass("show");
                    }
                }
            });
        }

        function Edit@(itemName)(OperationId) {
            $("tr[data-operation-id]").removeClass("data-selected");

            json@(itemName) = {
                InterfacingId: -1,
                OperationNo: "",
                OperationName: "",
                Import: {},
                Synchronize: {}
            };

            $("#OperationId").val(OperationId ? OperationId : 0);
            $("#PreviousId").val(0);
            $("#NextId").val(0);

            $(objForm@(itemName) + " fieldset").attr("disabled", false);
            $(objForm@(itemName) + " select").attr("disabled", false);

            $("#editData@(itemName)").addClass("active");

            ComboBoxs.Default("#cboInterfacingId@(itemName)", "@Url.Action("GetInterfacing", "SystemInterfacing")", {}, "", "NA", "", "InterfacingName", "InterfacingId");
            ComboBoxs.Default("#cboAuto@(itemImport)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "Boolean" }, "", "NA", "", "StatusName", "StatusNo");
            ComboBoxs.Default("#cboExecuteMode@(itemImport)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "OperationSetting.ExecuteMode" }, "L", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboAuto@(itemSynchronize)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "Boolean" }, "", "NA", "", "StatusName", "StatusNo");
            ComboBoxs.Default("#cboExecuteMode@(itemSynchronize)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "OperationSetting.ExecuteMode" }, "L", "NA", "", "TypeName", "TypeNo");

            $("#editForm@(itemName) .form-control").off("change").on("change", function () {
                json@(itemName).InterfacingId = $("#cboInterfacingId@(itemName)").val();
                json@(itemName).OperationNo = $("#txtOperationNo@(itemName)").val();
                json@(itemName).OperationName = $("#txtOperationName@(itemName)").val();
            });

            $("#editForm@(itemImport) .form-control").off("change").on("change", function () {
                let days = parseInt($("#txtDayTimeInterval@(itemImport)").val()) * 24 * 60 * 60;
                let hours = parseInt($("#txtHourTimeInterval@(itemImport)").val()) * 60 * 60;
                let minutes = parseInt($("#txtMinuteTimeInterval@(itemImport)").val()) * 60;
                let seconds = parseInt($("#txtSecondTimeInterval@(itemImport)").val());
                let timeInterval = days + hours + minutes + seconds;

                json@(itemName).Import.Auto = $("#cboAuto@(itemImport)").val();
                json@(itemName).Import.TimeInterval = timeInterval;
                json@(itemName).Import.ExecuteMode = $("#cboExecuteMode@(itemImport)").val();
            });

            $("#editForm@(itemSynchronize) .form-control").off("change").on("change", function () {
                let days = parseInt($("#txtDayTimeInterval@(itemSynchronize)").val()) * 24 * 60 * 60;
                let hours = parseInt($("#txtHourTimeInterval@(itemSynchronize)").val()) * 60 * 60;
                let minutes = parseInt($("#txtMinuteTimeInterval@(itemSynchronize)").val()) * 60;
                let seconds = parseInt($("#txtSecondTimeInterval@(itemSynchronize)").val());
                let timeInterval = days + hours + minutes + seconds;

                json@(itemName).Synchronize.Auto = $("#cboAuto@(itemSynchronize)").val();
                json@(itemName).Synchronize.TimeInterval = timeInterval;
                json@(itemName).Synchronize.ExecuteMode = $("#cboExecuteMode@(itemSynchronize)").val();
            });

            $("#cboInterfacingId@(itemName), #cboAuto@(itemImport), #cboExecuteMode@(itemImport), #cboAuto@(itemSynchronize), #cboExecuteMode@(itemSynchronize)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            if (OperationId > 0) {
                let targetUrl = "@Url.Action("GetOperation", "SystemInterfacing")";
                let postData = {
                    "OperationId": OperationId
                };
                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#PreviousId").val($(`tr[data-operation-id="${OperationId}"]`).data("previous"));
                        $("#NextId").val($(`tr[data-operation-id="${OperationId}"]`).data("next"));

                        $("#cboInterfacingId@(itemName)").val(item.InterfacingId).trigger("change.select2");
                        $("#txtOperationNo@(itemName)").val(item.OperationNo);
                        $("#txtOperationName@(itemName)").val(item.OperationName);
                        $("#cboAuto@(itemImport)").val(item.AutoImport).trigger('change.select2');
                        $("#cboExecuteMode@(itemImport)").val(item.ImportExecuteMode).trigger('change.select2');
                        $("#cboAuto@(itemSynchronize)").val(item.AutoSynchronize).trigger('change.select2');
                        $("#cboExecuteMode@(itemSynchronize)").val(item.SynchronizeExecuteMode).trigger('change.select2');

                        json@(itemName).InterfacingId = item.InterfacingId;
                        json@(itemName).OperationNo = item.OperationNo;
                        json@(itemName).OperationName = item.OperationName;
                        json@(itemName).Import.Auto = item.AutoImport;
                        json@(itemName).Import.TimeInterval = item.ImportTimeInterval;
                        json@(itemName).Import.ExecuteMode = item.ImportExecuteMode;
                        json@(itemName).Synchronize.Auto = item.AutoSynchronize;
                        json@(itemName).Synchronize.TimeInterval = item.SynchronizeTimeInterval;
                        json@(itemName).Synchronize.ExecuteMode = item.SynchronizeExecuteMode;

                        let timeInterval = parseInt(item.ImportTimeInterval);
                        let days = parseInt(timeInterval / 60 / 60 / 24);
                        let hours = parseInt(timeInterval / (60 * 60) % 24);
                        let minutes = parseInt(timeInterval / 60 % 60);
                        let seconds = parseInt(timeInterval % 60);

                        $("#txtDayTimeInterval@(itemImport)").val(days);
                        $("#txtHourTimeInterval@(itemImport)").val(hours);
                        $("#txtMinuteTimeInterval@(itemImport)").val(minutes);
                        $("#txtSecondTimeInterval@(itemImport)").val(seconds);

                        timeInterval = parseInt(item.SynchronizeTimeInterval);
                        days = parseInt(timeInterval / 60 / 60 / 24);
                        hours = parseInt(timeInterval / (60 * 60) % 24);
                        minutes = parseInt(timeInterval / 60 % 60);
                        seconds = parseInt(timeInterval % 60);

                        $("#txtDayTimeInterval@(itemSynchronize)").val(days);
                        $("#txtHourTimeInterval@(itemSynchronize)").val(hours);
                        $("#txtMinuteTimeInterval@(itemSynchronize)").val(minutes);
                        $("#txtSecondTimeInterval@(itemSynchronize)").val(seconds);

                        $(`tr[data-operation-id="${OperationId}"]`).addClass("data-selected");
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function OperationControl@(itemName)() {
            addMethod(this, "StatusSwitch", function (OperationId) {
                let targetUrl = "@Url.Action("UpdateOperationStatus", "SystemInterfacing")";
                let postData = {
                    "OperationId": OperationId
                };

                let result = DataAccess.Update(targetUrl, postData, false, true);

                if (result) {
                    Query@(itemName)();
                }
            });

            addMethod(this, "Previous", function () {
                let PreviousId = parseInt($("#PreviousId").val());

                if (PreviousId > 0) {
                    Edit@(itemName)(PreviousId);
                } else {
                    alert("已是第一筆資料!");
                }
            });

            addMethod(this, "Next", function () {
                let NextId = parseInt($("#NextId").val());

                if (NextId > 0) {
                    Edit@(itemName)(NextId);
                } else {
                    alert("已是最後一筆資料!");
                }
            });

            addMethod(this, "Save", function () {
                let formValid = [];
                formValid.push($(objForm@(itemName)).valid());
                formValid.push($("#editForm@(itemImport)").valid());
                formValid.push($("#editForm@(itemSynchronize)").valid());

                if (formValid.indexOf(false) == -1) {
                    let OperationId = parseInt($("#OperationId").val());

                    if (OperationId <= 0) {
                        let targetUrl = "@Url.Action("AddOperation", "SystemInterfacing")";
                        let postData = {
                            "OperationJson": JSON.stringify(json@(itemName))
                        };
                        let result = DataAccess.Add(targetUrl, postData, false, true);

                        if (result) {
                            Operations.EditClose();
                        }
                    } else {
                        let targetUrl = "@Url.Action("UpdateOperation", "SystemInterfacing")";
                        let postData = {
                            "OperationId": OperationId,
                            "OperationJson": JSON.stringify(json@(itemName))
                        };

                        let result = DataAccess.Update(targetUrl, postData, false, true);

                        if (result) {
                            Operations.EditClose();
                        }
                    }
                }
            });

            addMethod(this, "EditClose", function () {
                ResetForm(objForm@(itemName));
                $("#editData@(itemName)").removeClass("active");
                Query@(itemName)();
            });
        }
    </script>

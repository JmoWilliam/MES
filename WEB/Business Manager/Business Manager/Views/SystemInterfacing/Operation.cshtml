                            <div class="col-12 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="txtOperationName@(itemName)" name="txtOperationName@(itemName)" placeholder="請輸入作業模式名稱"
                                       data-msg-maxlength="必須少於 50 個字元" maxlength="50"

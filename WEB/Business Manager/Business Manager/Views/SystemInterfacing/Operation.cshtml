                    <form class="nav-form" autocomplete="off" id="editForm@(itemImport)">
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-12 col-md-3 col-lg-3 col-form-label" for="cboAuto@(itemImport)">自動 <span class="text-danger">*</span></label>

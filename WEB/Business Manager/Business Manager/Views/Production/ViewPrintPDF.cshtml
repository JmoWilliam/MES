@using Business_Manager.Helpers
@{
    string itemName = "ViewPrintPDF";
    string itemNameText = "列印PDF管理";
}

@Html.Resource("css",
    @<style>
         .modal-body {
             max-height: 50vh;
             overflow-y: auto;
         }
        
    </style>
)

<div class="modal fade" data-backdrop="static" id="modal@(itemName)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">製令: <span class="sub-text" id="desWoErpFullNo@(itemName)"></span></span>
                    <span class="sub-title">品號: <span class="sub-text" id="desMtlItemNo@(itemName)"></span></span>
                    <span class="sub-title">品名: <span class="sub-text" id="desMtlItemName@(itemName)"></span></span>
                    
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <a class="active-link" href="javascript:PrintFlowCardPdf@(itemName)();"><i class="fas fa-print"></i><span>流程卡</span></a>
                <a class="active-link CallSlipPdf" href="javascript:PrintCallSlipPdf@(itemName)();"><i class="fas fa-print"></i><span>領料卡</span></a>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
@<script>
    let moId@(itemName);
    let objForm@(itemName) = "#editForm@(itemName)";
    let objPage@(itemName) = {
        "pageIndex": 0,
        "pageSize": 5
    };
    $(function () {
        
    });

    function Pop@(itemName)(moId, woErpFullNo, mtlItemNo, mtlItemName) {
        moId@(itemName) = moId;
        $("#desWoErpFullNo@(itemName)").html(woErpFullNo);
        $("#desMtlItemNo@(itemName)").html(mtlItemNo);
        $("#desMtlItemName@(itemName)").html(mtlItemName);

        GetCallSlipStatus@(itemName)()

        $("#modal@(itemName)").modal({
            backdrop: "static",
            keyboard: false,
            show: true
        });
    }
    function GetCallSlipStatus@(itemName)() {
        $(".CallSlipPdf").hide()
        let targetUrl = "@Url.Action("GetCallSlipStatus", "Production")";
        let postData = {
            "MoId": moId@(itemName)
        };
        let data = DataAccess.Get(targetUrl, postData, false);

        if (data.status == "success") {
            $.each(data.result, function (i, item) {
                if (item.ConfirmStatus == "Y") {
                    $(".CallSlipPdf").show()
                }
            });
        } else {
            alert(data.msg, "alert", 0);
        }
    }

    function PrintFlowCardPdf@(itemName)() {
        let targetUrl = "@Url.Action("GetFlowCardPdf", "Production")";
        let postData = {
            "MoId": moId@(itemName)
        };
        FileAccess.AjaxDownload(targetUrl, postData, false);
    }
    function PrintBarcodePdf@(itemName)() {
        let targetUrl = "@Url.Action("GetCallSlipPdf", "Production")";
        let postData = {
            "MoId": moId@(itemName)
        };
        FileAccess.AjaxDownload(targetUrl, postData, false);
    }
    function Close@(itemName)() {
        $("#modal@(itemName)").modal('hide');
    }
    @*function PrintFlowCardPdf@(itemName)() {
        let targetUrl = "@Url.Action("GetFlowCardPdf", "Production")";
        let postData = {
            "MoId": moId@(itemName)
        };
        FileAccess.AjaxDownload(targetUrl, postData, false);
    }*@
    function PrintCallSlipPdf@(itemName)() {
        let targetUrl = "@Url.Action("GetCallSlipPdf", "Production")";
        let postData = {
            "MoId": moId@(itemName)
        };
        FileAccess.AjaxDownload(targetUrl, postData, false);
    }
</script>
    )
@using Business_Manager.Helpers
@{
    string itemName = "ViewLetteringHistory";
    string itemNameText = "查詢刻字歷史紀錄資料";
}

@Html.Resource("css",
    @<style>
         #modal@(itemName) .modal-body {
             max-height: 75vh;
             overflow-y: auto;
         }
</style>
                        )

<div class="modal fade" data-backdrop="static" id="modal@(itemName)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前製令: <span class="sub-text" id="desWoErpFullNo@(itemName)"></span></span>
                </h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="form-row align-items-center mb-2">
                            <div class="col-auto">
                                <input type="text" class="form-control" id="txtMtlItemNoQ@(itemName)" name="txtMtlItemNoQ@(itemName)"
                                       placeholder="請輸入品號"
                                       onkeyup="this.value=this.value.replace(/[, ]/g,'')" />
                            </div>
                            <div class="col-auto">
                                <input type="text" class="form-control" id="txtWoErpFullNoQ@(itemName)" name="txtWoErpFullNoQ@(itemName)"
                                       placeholder="請輸入製令"
                                       onkeyup="this.value=this.value.replace(/[, ]/g,'')" />
                            </div>
                            <div class="col-auto">
                                <input type="text" class="form-control" id="txtLetteringQ@(itemName)" name="txtLetteringQ@(itemName)"
                                       placeholder="請輸入刻字"
                                       onkeyup="this.value=this.value.replace(/[, ]/g,'')" />
                            </div>
                            <div class="col-auto">
                                <button type="button" class="btn btn-info auth-print text-right" onclick="Print@(itemName)()"><i class="fas fa-print"></i>列印</button>
                            </div>
                            <div class="col-auto">
                                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th class="text-center active-content" scope="col" style="min-width: 100px;">
                                            <label class="control control-solid control-solid-info control--checkbox">
                                                選取
                                                <input type="checkbox" id="cbxBarcodeLetteringAll@(itemName)" name="cbxBarcodeLetteringAll@(itemName)">
                                                <span class="control__indicator"></span>
                                            </label>
                                        </th>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">刻字碼</th>
                                        <th scope="col" style="min-width: 135px;">產品條碼</th>
                                        <th scope="col" style="min-width: 200px;">製令</th>
                                        <th scope="col" style="min-width: 175px;">建立日期</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success edit-mode" onclick="Save@(itemName)()" style="display: none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
@<script>
    let woErpFullNo@(itemName);
    
    let objPage@(itemName) = {
        "pageIndex": 0,
        "pageSize": 999
    };

    function Pop@(itemName)(woErpFullNo, mtlItemNo) {

        $("#txtWoErpFullNoQ@(itemName)").val("");
        $("#txtLetteringQ@(itemName)").val("");
        $("#txtMtlItemNoQ@(itemName)").val("");
        $("#cbxBarcodeLetteringAll@(itemName)").prop("checked", false);

        woErpFullNo@(itemName) = woErpFullNo;
        mtlItemNo@(itemName) = mtlItemNo;

        $("#desWoErpFullNo@(itemName)").html(woErpFullNo);
        $("#txtMtlItemNoQ@(itemName)").val(mtlItemNo);

        Query@(itemName)();

        $("#cbxBarcodeLetteringAll@(itemName)").click(function () {
            if ($(this).prop("checked")) {
                $("input[type='checkbox'][data-type='LetteringHistory']").prop("checked", true);
            }
            else {
                $("input[type='checkbox'][data-type='LetteringHistory']").prop("checked", false);
            }
        });

        $("#modal@(itemName)").modal({
            backdrop: "static",
            keyboard: false,
            show: true
        });
    }

    function Query@(itemName)() {
        objPage@(itemName).pageIndex = 0;
        InitData@(itemName)(objPage@(itemName));
    }

    function InitData@(itemName)(objPage) {
        let innerHtml = '';
        let pageCount = 0;

        let targetUrl = "@Url.Action("GetLetteringHistory", "Production")";
        let postData = {
            "OrderBy": "",
            "PageIndex": (objPage.pageIndex + 1),
            "PageSize": objPage.pageSize,
            "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val(),
            "Lettering": $("#txtLetteringQ@(itemName)").val(),
            "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val()
        };

        let data = DataAccess.Get(targetUrl, postData, false);

        if (data.status == "success") {
            pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

            if (pageCount > 0) {
                objPage = PageCaculate(pageCount, objPage);

                $.each(data.result, function (i, item) {
                    let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                    innerHtml += `<tr>
                                    <td class="text-center active-content" scope="col" style="min-width: 100px;">
                                        <label class="control control-solid control-solid-info control--checkbox">
                                            <input type="checkbox" data-type="LetteringHistory" id="cbxBarcodeLettering@(itemName)${item.BarcodeAttrId}" name="cbxBarcodeLettering@(itemName)" value="${item.BarcodeNo}">
                                            <span class="control__indicator"></span>
                                        </label>
                                    </td>
                                    <td>${_row}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.ItemValue}" style="min-width: 200px;">${item.ItemValue}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}" style="min-width: 135px;">${item.BarcodeNo}</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.WoErpPrefix}-${item.WoErpNo}(${item.WoSeq})" style="max-width: 200px;">${item.WoErpPrefix}-${item.WoErpNo}(${item.WoSeq})</td>
                                    <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}" style="max-width: 175px;">${item.CreateDate}</td>
                                  </tr>`;
                });
            } else {
                innerHtml += `<tr>
                                <td class="text-center" colspan="6" style="background-color: #fff3cd;">
                                    <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                </td>
                              </tr>`;
            }
        } else {
            alert(data.msg, "alert", 0);
        }

        $("#tblData@(itemName) tbody").html(innerHtml);

        TableComponentInit();
        Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
    }

    function Print@(itemName)() {
        let BarcodeNoList = [];
        $.each($("input[type='checkbox'][data-type='LetteringHistory']:checked"), function (i) {
            BarcodeNoList.push($(this).val());
        });

        let targetUrl = "@Url.Action("DownloadBarcodeLetteringPdf", "Production")";
        let postData = {
            "BarcodeNoList": BarcodeNoList.toString(),
            "WoErpFullNo": woErpFullNo@(itemName)
        };
        FileAccess.AjaxDownload(targetUrl, postData, false);
    }
</script>
   )
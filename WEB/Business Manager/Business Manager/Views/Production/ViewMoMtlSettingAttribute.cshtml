@using Business_Manager.Helpers
@{
    string itemName = "ViewMoMtlSettingAttribute";
    string itemNameText = "查看MES製令用料設定屬性";
}

@Html.Resource("css",
    @<style>
         /*.modal-body {
             max-height: 75vh;
             overflow-y: auto;
         }*/

        .table-sticky thead .col-sticky:nth-last-child(1) {
            right: 0;
        }

        .table-sticky tbody .col-sticky:nth-last-child(1) {
            right: 0;
        }
    </style>
        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前製令: <span class="sub-text" id="desWoErpFullNo@(itemName)"></span></span>
                    <span class="sub-title">目前品號: <span class="sub-text" id="desMtlItemNo@(itemName)"></span></span>
                </h5>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtItemNameQ@(itemName)" name="txtItemNameQ@(itemName)"
                                               placeholder="請輸入屬性名稱" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                        <button type="button" class="btn btn-info auth-add" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">項目代碼</th>
                                        <th scope="col" style="min-width: 200px;">項目名稱</th>
                                        <th scope="col" style="min-width: 250px;">項目說明</th>
                                        <th scope="col" style="min-width: 150px;">檢核範圍</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">需檢核重覆值</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 250px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
                <div class="row" id="editData@(itemName)" style="display: none;">
                    <div class="col-12">
                        <form class="container" autocomplete="off" id="editForm@(itemName)">
                            <input type="hidden" id="MoMtlSettingAttrId" value="-1" />
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="cboItemNo@(itemName)">屬性資料<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboItemNo@(itemName)" name="cboItemNo@(itemName)" required></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="txtItemName@(itemName)">屬性名稱 <span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" id="txtItemName@(itemName)" name="txtItemName@(itemName)"
                                               placeholder="請輸入屬性名稱"
                                               data-msg-required="請輸入屬性名稱" data-rule-required="true"
                                               data-msg-maxlength="必須少於 30 個字元" maxlength="30"
                                               readonly />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="txtItemDesc@(itemName)">屬性描述</label>
                                    <div class="col-12">
                                        <textarea class="form-control" id="txtItemDesc@(itemName)" name="txtItemDesc@(itemName)" rows="2"
                                                  placeholder="請輸入變更原因"
                                                  data-msg-required="請輸入變更原因"
                                                  data-msg-maxlength="必須少於 200 個字元" maxlength="200"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboChkUnique@(itemName)">需檢核重覆值<span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboChkUnique@(itemName)" name="cboChkUnique@(itemName)" required>
                                            <option value="Y" selected>需檢核重覆值</option>
                                            <option value="N">不需檢核重覆值</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="form-label col-12" for="cboChkRange@(itemName)">檢核範圍</label>
                                    <div class="col-12">
                                        <select class="form-control" id="cboChkRange@(itemName)" name="cboChkRange@(itemName)">
                                            <option value="" selected>請選擇</option>
                                            <option value="Y" selected>整張製令</option>
                                            <option value="N">僅檢核單一物料</option>
                                        </select>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary list-mode" onclick="Close@(itemName)()"><i class="fas fa-times"></i>關閉</button>
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success edit-mode" onclick="Save@(itemName)()" style="display: none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let moMtlSettingId@(itemName);

        function Pop@(itemName)(MoMtlSettingId) {
            moMtlSettingId@(itemName) = MoMtlSettingId;

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetMoMtlSettingAttribute", "Production")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MoMtlSettingId": moMtlSettingId@(itemName),
                "ItemName": $("#txtItemNameQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ItemNo}" style="min-width: 200px;">${item.ItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ItemName}" style="min-width: 200px;">${item.ItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ItemDesc}" style="min-width: 200px;">${item.ItemDesc}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ChkRange == `Y` ? `整張製令` : `單一物料`}" style="min-width: 200px;">${item.ChkRange == `Y` ? `整張製令` : `單一物料`}</td>
                                        <td class="text-center auth-status-switch" style="min-width: 150px;">
                                          <input type="checkbox" name="chkChkUnique@(itemName)" data-mo-mtl-setting-attr-id="${item.MoMtlSettingAttrId}" ${item.ChkUnique == `Y` ? `checked` : ''} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch" style="min-width: 150px;">${StatusName(`Boolean`, `${item.ChkUnique}`)}</td>
                                        <td class="text-center active-content col-sticky" scope="col" style="min-width: 250px;">
                                            <!--修改-->
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.MoMtlSettingAttrId}');">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <!--刪除-->
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.MoMtlSettingAttrId}');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkChkUnique@(itemName)']").bootstrapToggle({
                on: "是",
                off: "否",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkChkUnique@(itemName)'][data-mo-mtl-setting-attr-id]").change(ChkUniqueSwitch@(itemName));
        }

        function Edit@(itemName)(MoMtlSettingAttrId) {
            $("#MoMtlSettingAttrId").val(MoMtlSettingAttrId ? MoMtlSettingAttrId : 0);
            Switch("#editData@(itemName), .edit-mode", "#listData@(itemName), .list-mode");

            $("#cboChkRange@(itemName)").prop("disabled", false);
            $("#cboChkRange@(itemName)").prop("required", true);

            ComboBoxs.Default("#cboItemNo@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MoMtlSettingAttribute.ItemNo" }, "", "NA", "", "TypeName", "TypeNo");

            if (!isMobile) {
                $("#cboItemNo@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#cboItemNo@(itemName)").on("change", function () {
                if ($("#cboItemNo@(itemName) option:selected").val() != "") {
                    $("#txtItemName@(itemName)").val($("#cboItemNo@(itemName) option:selected").text()).focus();
                }
            });

            if (MoMtlSettingAttrId > 0) {
                let targetUrl = "@Url.Action("GetMoMtlSettingAttribute", "Production")";
                let postData = {
                    "MoMtlSettingAttrId": MoMtlSettingAttrId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    ComboBoxs.Default("#cboItemNo@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "MoMtlSettingAttribute.ItemNo" }, "", "NA", "", "TypeName", "TypeNo");
                    $.each(data.result, function (i, item) {
                        console.log(item);
                        $("#cboItemNo@(itemName)").val(item.TypeNo);
                        $("#txtItemName@(itemName)").val(item.ItemName);
                        $("#txtItemDesc@(itemName)").val(item.ItemDesc);
                        $("#cboChkUnique@(itemName)").val(item.ChkUnique);

                        if (item.ChkUnique == "Y") {
                            $("#cboChkRange@(itemName)").prop("disabled", false);
                            $("#cboChkRange@(itemName)").prop("required", true);
                            $("#cboChkRange@(itemName)").val(item.ChkRange);
                        }
                        else {
                            $("#cboChkRange@(itemName)").prop("disabled", true);
                            $("#cboChkRange@(itemName)").prop("required", false);
                            $("#cboChkRange@(itemName)").val("");
                        }
                    });
                }
                else {
                    alert(data.msg, "alert", 0);
                }
            }

            $("#cboChkUnique@(itemName)").change(function () {
                let ChkUnique = $("#cboChkUnique@(itemName)").val();
                if (ChkUnique == "Y") {
                    $("#cboChkRange@(itemName)").prop("disabled", false);
                    $("#cboChkRange@(itemName)").prop("required", true);
                }
                else {
                    $("#cboChkRange@(itemName)").prop("disabled", true);
                    $("#cboChkRange@(itemName)").prop("required", false);
                    $("#cboChkRange@(itemName)").val("");
                }
            });
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let MoMtlSettingAttrId = parseInt($("#MoMtlSettingAttrId").val());
                console.log(MoMtlSettingAttrId);
                if (MoMtlSettingAttrId <= 0) {
                    let targetUrl = "@Url.Action("AddMoMtlSettingAttribute", "Production")";
                    let postData = {
                        "MoMtlSettingId": moMtlSettingId@(itemName),
                        "ItemNo": $("#cboItemNo@(itemName)").val(),
                        "ItemName": $("#txtItemName@(itemName)").val(),
                        "ItemDesc": $("#txtItemDesc@(itemName)").val(),
                        "ChkUnique": $("#cboChkUnique@(itemName)").val(),
                        "ChkRange": $("#cboChkRange@(itemName)").val()
                    };

                    let result = DataAccess.Add(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
                else {
                    let targetUrl = "@Url.Action("UpdateMoMtlSettingAttribute", "Production")";
                    let postData = {
                        "MoMtlSettingAttrId": MoMtlSettingAttrId,
                        "MoMtlSettingId": moMtlSettingId@(itemName),
                        "ItemNo": $("#cboItemNo@(itemName)").val(),
                        "ItemName": $("#txtItemName@(itemName)").val(),
                        "ItemDesc": $("#txtItemDesc@(itemName)").val(),
                        "ChkUnique": $("#cboChkUnique@(itemName)").val(),
                        "ChkRange": $("#cboChkRange@(itemName)").val()
                    };

                    var result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)();
                    }
                }
            }
        }

        function Delete@(itemName)(MoMtlSettingAttrId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteMoMtlSettingAttribute", "Production")";
                    let postData = {
                        "MoMtlSettingAttrId": MoMtlSettingAttrId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }

        function ChkUniqueSwitch@(itemName)() {
            var moMtlSettingAttrId = $(this).data("mo-mtl-setting-attr-id");

            let targetUrl = "@Url.Action("UpdateMoMtlSettingAttributeChkUnique", "Production")";
            let postData = {
                "MoMtlSettingAttrId": moMtlSettingAttrId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Query@(itemName)();
            }
        }
    </script>
                )
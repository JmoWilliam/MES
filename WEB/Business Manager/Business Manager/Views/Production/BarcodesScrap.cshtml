                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let userId@(itemName);
        let companyId@(itemName);
        let MoId@(itemName);

        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {

            GetUserInfo@(itemName)()
            //Query@(itemName)();

            if (!isMobile) {
                $("#process@(itemName)").select2({
                    width: "100%"
                });
            }

            $("#WoErpFullNo@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    GetManufactureOrder@(itemName)();
                    return false;
                }
            });

            //全選
            $("#cbxScrapAll@(itemName)").off("click").on("click", function () {
                if ($(this).is(":checked")) {
                    // **選取所有 checkbox，且只加入未重複的值**
                    $("input[type='checkbox'][name='cbxBarcodeId@(itemName)']").not(":disabled").each(function () {
                        let barcodeId = $(this).val();
                        $(this).prop("checked", true);
                        if (!scrapBarcodeList@(itemName).includes(barcodeId)) {
                            scrapBarcodeList@(itemName).push(barcodeId);
                        }
                    });
                } else {
                    // **取消所有選取的 checkbox，並清除對應的值**
                    $("input[type='checkbox'][name='cbxBarcodeId@(itemName)']").not(":disabled").each(function () {
                        let barcodeId = $(this).val();
                        $(this).prop("checked", false);
                        scrapBarcodeList@(itemName) = scrapBarcodeList@(itemName).filter(id => id !== barcodeId);
                    });
                }
            });
        

            
        });

        var scrapBarcodeList@(itemName) = [];

        // 監聽 checkbox 點擊事件
        $(document).on("change", "input[type='checkbox'][name='cbxBarcodeId@(itemName)']", function () {
            let barcodeId = $(this).val();

            if ($(this).is(":checked")) {
                if (!scrapBarcodeList@(itemName).includes(barcodeId)) {
                    scrapBarcodeList@(itemName).push(barcodeId); // 只加入未重複的項目
                }
            } else {
                scrapBarcodeList@(itemName) = scrapBarcodeList@(itemName).filter(id => id !== barcodeId); // 取消勾選則移除
            }
        });

        // 換頁後更新 checkbox 狀態
        function updateCheckboxState@(itemName)() {
            $("input[type='checkbox'][name='cbxBarcodeId@(itemName)']").each(function () {
                let barcodeId = $(this).val();
                $(this).prop("checked", dfmmaterialInfo.includes(barcodeId));
            });
        }



        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            if ($("#WoErpFullNo@(itemName)").val() == "") {
                alert("請輸入製令!!");

            }
            if (!objPage) objPage = objPage@(itemName);
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetInProcessBarcode", "ProductionHistory")";
            $('#cbxScrapAll@(itemName)').prop('checked', false);


            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "WoErpFullNo": $("#WoErpFullNo@(itemName)").val(),
                "MoProcessId": $("#MoProcess@(itemName)").val(),
                "StartDate": $("#StartDate@(itemName)").val(),
                "FinishDate": $("#FinishDate@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                //pageCount = data.result.length > 0 ? parseInt(data.TotalCount) : 0;
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                updateCheckboxState@(itemName)()
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        WipNo = `${item.WoErpPrefix}-${item.WoErpNo}(${item.WoSeq})`
                        innerHtml += `<tr>
                                        <td>${_row}
                                            <label class="control control-solid control-solid-info ">
                                                <input type="checkbox" data-key="${item.BarcodeId}" value="${item.BarcodeId}" data-barcode-no="${item.BarcodeNo}" name="cbxBarcodeId@(itemName)"/>
                                                <span class="control__indicator"></span>
                                            </label>
                                        </td>
                                        
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}" style="max-width: 200px;">${item.BarcodeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeQty}" style="max-width: 250px;">${item.BarcodeQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CurrentProdStatus}" style="max-width: 250px;">${item.CurrentProdStatus}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CurrentProdStatus}" style="max-width: 250px;">${item.ProcessNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.StartUserName}" style="max-width: 200px;">${item.StartUserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FinishUserName}" style="max-width: 150px;">${item.FinishUserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.StartDate}" style="max-width: 150px; min-width: 110px;">${item.StartDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FinishDate}" style="max-width: 150px; min-width: 110px;">${item.FinishDate}</td>

                                    </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="14" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }




            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));


            if ($("input[type='checkbox'][name='cbxBarcodeId@(itemName)']:checked").length > 0) {

                $.each($("input[type='checkbox'][name='cbxBarcodeId@(itemName)']:checked"), function (i) {

                    let barcodeId = $(this).val();

                    
                    //dfmmaterialInfo.push(inputData);
                });
            }
        
        }

        function Edit@(itemName)(moId, woId, woErpFullNo) {
            
        }

        function Save@(itemName)() {
           swal.fire({
                titleText: "確認要報廢這些條碼嗎?",
                text: "此動作會將所選條碼報廢，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateBarcodesToScrap", "ProductionHistory")";
                    let postData = {
                        "BarcodeInfo": scrapBarcodeList@(itemName),
                        "ScrapReason": $("#scrapReason@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        
                    }
                }
            });

            
        }

        function GetUserInfo@(itemName)() {
            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function GetManufactureOrder@(itemName)() {
            let woErpFullNo = $("#WoErpFullNo@(itemName)").val();
            if (woErpFullNo.indexOf("-") != -1 && woErpFullNo.indexOf("(") == -1) {
                alert("請連同製令序號一起輸入! EX: 5101-20230226(1)");
                return false;
            }

            let targetUrl = "@Url.Action("GetManufactureOrder", "Production")";

            let postData = {
                "OtherInfo": $("#WoErpFullNo@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {

                        ComboBoxs.Default("#MoProcess@(itemName)", "@Url.Action("GetMoProcess", "Production")", { "MoId": item.MoId }, "", "ALL", "", "ProcessAlias", "MoProcessId");
                    });
                }
                else {
                    alert("查無製令資料!");
                   
                }
            }
            else {
                alert(data.msg);
            }
        }
        
    </script>
                        )
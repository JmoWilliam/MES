@Html.Partial("~/Views/Inventory/ViewManufactureOrder.cshtml")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {

            ComboBoxs.Default("#cboMpcUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", {}, "", "NA", "", "UserWithNo", "UserId"); //變更者

            Query@(itemName)();

            let currentDate = new Date();
            @*Suites.DateDropper("#txtStartDocDateQ@(itemName),#txtEndDocDateQ@(itemName)");
            Suites.SetDateDropper("#txtEndDocDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 7);
            Suites.SetDateDropper("#txtStartDocDateQ@(itemName)", currentDate);*@

            Suites.DatePicker("txtEndDocDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.DatePicker("txtStartDocDateQ@(itemName)", currentDate);

            if (!isMobile) {
                $("#cboMpcUserId@(itemName)").select2({
                    width: "100%"
                });
            }

            $('.advanced-block a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                InitParameter@(itemName)($(this));
            });
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetMoProcessChange", "Production")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "MoId": $("#txtMoIdQ@(itemName)").val(),
                "StartDocDate": ($("#cbxDocDateQ@(itemName)").is(":checked") ? $("#txtStartDocDateQ@(itemName)").val() : ""),
                "EndDocDate": ($("#cbxDocDateQ@(itemName)").is(":checked") ? $("#txtEndDocDateQ@(itemName)").val() : ""),
                "Status": statusList.join(",")

            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MoId}" style="max-width: 200px;">${item.MoNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MpcNo}" style="max-width: 200px;">${item.MpcNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DocDate}" style="max-width: 200px;">${item.DocDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MpcUserId}" style="max-width: 200px;">${item.MpcUserName}</td>
                                        <td class="text-center auth-status-switch">
                                          <input type="checkbox" id="ckxchkStatus@(itemName)${item.MpcId}" name="chkStatus@(itemName)" data-mpc-id="${item.MpcId}" ${item.Status == `A` ? `checked` : ``} />
                                        </td>
                                        <td class="text-center un-auth auth-status-switch">${StatusName(`Status`, item.Status)}</td>
                                        <td class="text-center active-content">
                                          <a class="active-link auth-update" href="javascript:Edit@(itemName)(${item.MpcId});"><i class="fas fa-edit"></i></a>
                                          ${item.Status ==`S`?
                                          `<a class="active-link auth-delete" href="javascript:Delete@(itemName)(${item.MpcId});"><i class="fas fa-trash-alt"></i></a>`
                                        : `<a class="active-link auth-delete active-disable" href="javascript:void(0);"><i class="fas fa-trash-alt"></i></a>`
                                            }
                                        </td >
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[name='chkStatus@(itemName)']").bootstrapToggle({
                on: "啟用",
                off: "停用",
                onstyle: "success",
                offstyle: "danger",
                size: "mini"
            });

            $("input[name='chkStatus@(itemName)'][data-mpc-id]").change(StatusSwitch@(itemName));
        }

        function Edit@(itemName)(MpcId) {
            $("#MpcId").val(MpcId ? MpcId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboMpcUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", {}, "", "NA", "", "UserWithNo", "UserId"); //變更者

            //日期欄位 Suites.DateDropper(功能開啟) Suites.SetDateDropper(日期設置)
            //Suites.DateDropper("#txtDocDate@(itemName)");
            //開單日預設今日
            let currentDate = new Date();
            //Suites.SetDateDropper("#txtDocDate@(itemName)", currentDate);
            Suites.DatePicker("txtDocDate@(itemName)", currentDate);
            $("#txtDocDate@(itemName)").attr("disabled", false);
            $("#cboMpcUserId@(itemName)").attr("disabled", false);
            $("#txtRemark@(itemName)").attr("readonly", false);

            $(".showMoProcess").hide();
            $(".choose-MoId").show()


            if (MpcId > 0) {
                let targetUrl = "@Url.Action("GetMoProcessChange", "Production")";
                let postData = {
                    "MpcId": MpcId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $(".choose-MoId").hide()
                        //如果有拋轉過就不能更改開單日
                        //$('#txtDocDate@(itemName)').dateDropper('destroy');
                        $("#txtDocDate@(itemName)").attr("disabled", true);
                        $("#cboMpcUserId@(itemName)").attr("disabled", true);
                        $("#txtRemark@(itemName)").attr("readonly", true);



                        $("#txtMpcNo@(itemName)").val(item.MpcNo);
                        $("#txtDocDate@(itemName)").val(item.DocDate);
                        $("#txtRemark@(itemName)").val(item.Remark);
                        $("#cboMpcUserId@(itemName)").val(item.MpcUserId);

                        $("#desWoErpFullNo@(itemName)").text(item.MoNo);
                        $("#desMtlItemNo@(itemName)").text(item.MtlItemNo);
                        $("#desMtlItemName@(itemName)").text(item.MtlItemName);
                        $("#desLotStatus@(itemName)").text(item.LotStatus);
                    
                        $("#txtMoId@(itemName)").val(item.MoId);
                        $("#MoId").val(item.MoId);
                        $("#MpcStatus").val(item.Status);
                        $("#LotStatus").val(item.LotStatus);
                        $(".help-block").show();
                    });
                    if ($(".advanced-block .flag-tabs > .flag-item > .flag-link").first().hasClass("active")) {
                        InitParameter@(itemName)($(".advanced-block .flag-tabs > .flag-item").first().find("a"));
                        ExpandMpcBarcode(MpcId);

                    } else {
                        $(".advanced-block .flag-tabs > .flag-item").first().find("a").trigger("click");
                        ExpandMpcRoutingProcess(MpcId);

                    }

                } else {
                    alert(data.msg, "alert", 0);
                }
            }
            if (!isMobile) {
                $("#cboAbnormalqualityStatus@(itemName)").select2({
                    width: "100%"
                });
            }

            let popConfig = {
                targetSelector: "#txtMoId@(itemName)",
                popFunction: "PopViewManufactureOrder",
                objectMoId: "#txtMoId@(itemName), #MoId",
                objectWoErpFullNo: "#desWoErpFullNo@(itemName)",
                objectMtlItemNo: "#desMtlItemNo@(itemName)",
                objectMtlItemName: "#desMtlItemName@(itemName)",
                objectMtlItemSpec: "#desMtlItemSpec@(itemName)",
                objectQuantity: "#txtQuantity@(itemName)",
                objectInventoryId: "#cboInventoryId@(itemName)",
                objectPlanQty: "#desPlanQty@(itemName)",
                objectRequisitionSetQty: "#desRequisitionSetQty@(itemName)",
                objectStockInQty: "#desStockInQty@(itemName)",
                objectLotStatus: "#desLotStatus@(itemName)",
                objectLotStatus: "#LotStatus",
            };
            InitPopView(popConfig);
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let MpcId = parseInt($("#MpcId").val());

                if (MpcId <= 0) {
                    let targetUrl = "@Url.Action("AddMoProcessChange", "Production")";
                    let postData = {
                        "DocDate": $("#txtDocDate@(itemName)").val(),
                        "MoId": $("#txtMoId@(itemName)").val(),
                        "MpcUserId": $("#cboMpcUserId@(itemName)").val(),
                        "Remark": $("#txtRemark@(itemName)").val()
                    };

                    let data = DataAccess.EditContinued(targetUrl, postData, false);

                    if (data) {
                        $.each(data.result, function (i, item) {
                            ComboBoxs.Default("#cboMpcUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", {}, "", "NA", "", "UserWithNo", "UserId"); //變更者
                            $("#MpcId").val(item.MpcId);
                            $("#txtMpcNo@(itemName)").val(item.MpcNo);
                            $("#cboMpcUserId@(itemName)").val(item.MpcUserId);
                            $(".choose-MoId").hide()

                        });
                        if ($(".advanced-block .flag-tabs > .flag-item > .flag-link").first().hasClass("active")) {
                            InitParameter@(itemName)($(".advanced-block .flag-tabs > .flag-item").first().find("a"));
                            ExpandMpcBarcode(MpcId);
                        } else {
                            $(".advanced-block .flag-tabs > .flag-item").first().find("a").trigger("click");
                            ExpandMpcRoutingProcess(MpcId);
                        }
                    }
                }
            }
        }

        function Delete@(itemName)(MpcId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteMoProcessChange", "Production")";
                    let postData = {
                        "MpcId": MpcId,
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }

        function Return@(itemName)() {
            $("#MpcId").val("")
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName)", "#editData@(itemName), .unit-block, .advanced-block");
            $("#txtMoId@(itemName)").siblings().find(".pop-clear").trigger("click")
            Query@(itemName)();
        }
        function clearMoId() {
            $("#MoId").val("")
        }
        function clearMoProcess() {
            $("#MoProcessId").val("")
            $("#desProcessAlias@(itemName)").text("")
            $(".showMoProcess").hide()
        }

        function StatusSwitch@(itemName)() {
            var MpcId = $(this).data("mpc-id");

            let targetUrl = "@Url.Action("UpdateMpcIdStatus", "Production")";
            let postData = {
                "MpcId": MpcId
            };

            let result = DataAccess.Update(targetUrl, postData, false, true);

            if (result) {
                Return@(itemName)();
            }
            else {
                Query@(itemName)();
            }
        }
        function InitParameter@(itemName)(selector) {
            let initFnString = "Query";
            let content = selector.attr("href").split('#tab')[1].split('@(itemName)')[0];

            switch (content) {
                case "MpcRoutingProcess":
                    initFnString += "MpcRoutingProcess";
                    break;
                case "MpcBarcode":
                    initFnString += "MpcBarcode";
                    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        }
    </script>
                )
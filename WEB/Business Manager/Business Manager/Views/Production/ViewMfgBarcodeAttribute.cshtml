@using Business_Manager.Helpers
@{
    string itemName = "ViewMfgBarcodeAttribute";
    string itemNameText = "刻號資料明細";
}

@Html.Resource("css",
    @<style>
        .table-sticky thead .col-sticky:nth-last-child(1) {
            right: 0;
        }

        .table-sticky tbody .col-sticky:nth-last-child(1) {
            right: 0;
        }
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">刻號: <span class="sub-text" id="desItemValue@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 35px;">#</th>
                                        <th scope="col" style="min-width: 100px;">製令</th>
                                        <th scope="col" style="min-width: 150px;">品號</th>
                                        <th scope="col" style="min-width: 250px;">品名</th>
                                        <th scope="col" style="min-width: 100px;">屬性類別</th>
                                        <th scope="col" style="min-width: 250px;">刻號</th>
                                        <th scope="col" style="min-width: 100px;">條碼</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        var inputValue@(itemName) = "";//使用者輸入條件
        var itemNo@(itemName) = "";//使用者選擇屬性
        var desBarcodeId@(itemName) = "";//前端的BarcodeId隱藏欄位
        var desMoId@(itemName) = "";//前端的MoId隱藏欄位
        var desErpFullNo@(itemName) = "";//前端的ErpFullNo隱藏欄位
        var desItemNo@(itemName) = "";//前端的ItemNo隱藏欄位
        var desItemValue@(itemName) = "";//前端的ItemValue隱藏欄位
        var desBarcodeAttrId@(itemName) = "";//前端的BarcodeAttrId隱藏欄位
        var desBarcodeProcessId@(itemName) = "";//前端的BarcodeProcessId隱藏欄位

        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 999
        };

        function Pop@(itemName)(inputValue, itemNo, desBarcodeAttrId, desBarcodeId, desMoId, desErpFullNo, desItemNo, desItemValue) {
            inputValue@(itemName) = inputValue;
            itemNo@(itemName) = itemNo;
            desBarcodeId@(itemName) = desBarcodeId;
            desMoId@(itemName) = desMoId;
            desErpFullNo@(itemName) = desErpFullNo;
            desItemNo@(itemName) = desItemNo;
            desItemValue@(itemName) = desItemValue;
            desBarcodeAttrId@(itemName) = desBarcodeAttrId;

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetBarcodeAttribute", "Production")";
            let postData = {
                "BarcodeNo": inputValue@(itemName),
                "ItemNo": itemNo@(itemName)
            };
            let data = DataAccess.Get(targetUrl, postData, false);
            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {

                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.WoErpFullNo}" style="min-width: 100px;">${item.WoErpFullNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemNo}" style="min-width: 150px;">${item.MtlItemNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.MtlItemName}" style="min-width: 250px;">${item.MtlItemName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TypeName}" style="min-width: 100px;">${item.TypeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ItemValue}" style="min-width: 250px;">${item.ItemValue}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}" style="min-width: 100px;">${item.BarcodeNo}</td>
                                        ${item.Status == `Ｙ` ? `<td class="text-center col-sticky"></td>`:`
                                        <td class="text-center col-sticky">
                                          ${JudgeStatusNo@(itemName)(`${item.BarcodeAttrId}`, `${item.MoId}`, `${item.BarcodeId}`)}
                                          <input type="hidden" id="BarcodeAttrId@(itemName)" data-mo-id="${item.MoId}" value="${item.BarcodeAttrId}"/>
                                          <input type="hidden" id="BarcodeId@(itemName)" data-mo-id="${item.MoId}" value="${item.BarcodeId}"/>
                                          <input type="hidden" id="BarcodeProcessId@(itemName)" data-mo-id="${item.MoId}" value="${item.BarcodeProcessId}"/>
                                          <input type="hidden" id="WoErpFullNo@(itemName)" data-mo-id="${item.MoId}" value="${item.WoErpFullNo}"/>
                                          <input type="hidden" id="ItemNo@(itemName)" data-mo-id="${item.MoId}" value="${item.BarcodeNo}"/>
                                          <input type="hidden" id="ItemValue@(itemName)" data-mo-id="${item.MoId}" value="${item.ItemValue}"/>
                                        </td>`}
                                      </tr>`;
                    });

                    function JudgeStatusNo@(itemName)(barcodeAttrId, moId, barcodeId) {
                        let innerHtml = '';
                        if (barcodeAttrId != "null") {
                            innerHtml += `<label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-mo-id="${moId}" value="${moId}" />
                                            <span class="control__indicator"></span>
                                          </label>`;
                        }
                        else {
                            innerHtml += `<label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-mo-id="${moId}" value="${moId}" />
                                            <span class="control__indicator"></span>
                                          </label>`;
                        }
                        return innerHtml;
                    }
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="8" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
                $("#.modal@(itemName)").hide();
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-mo-id]:checked") {
                    let moId = $(this).data("mo-id");

                    if (moId) {
                        let barcodeAttrId = $(`input[id="BarcodeAttrId@(itemName)"][data-mo-id="${moId}"]`).val();
                        let barcodeId = $(`input[id="BarcodeId@(itemName)"][data-mo-id="${moId}"]`).val();
                        let barcodeProcessId = $(`input[id="BarcodeProcessId@(itemName)"][data-mo-id="${moId}"]`).val();
                        let erpFullNo = $(`input[id="WoErpFullNo@(itemName)"][data-mo-id="${moId}"]`).val();
                        let itemNo = $(`input[id="ItemNo@(itemName)"][data-mo-id="${moId}"]`).val();
                        let itemValue = $(`input[id="ItemValue@(itemName)"][data-mo-id="${moId}"]`).val();

                        //變數設定
                        $(`${desBarcodeProcessId@(itemName)}`).val(barcodeProcessId);
                        $(`${desBarcodeAttrId@(itemName)}`).val(barcodeAttrId);
                        $(`${desBarcodeId@(itemName)}`).val(barcodeId);
                        $(`${desMoId@(itemName)}`).val(moId);
                        $(`${desErpFullNo@(itemName)}`).val(erpFullNo);
                        $(`${desItemNo@(itemName)}`).html(itemNo);
                        $(`${desItemValue@(itemName)}`).html(itemValue);
                    }
                }
                Close@(itemName)();
            });
        }
        
        function Close@(itemName)() {
            $("#modal@(itemName)").modal('hide');
        }
</script>
)
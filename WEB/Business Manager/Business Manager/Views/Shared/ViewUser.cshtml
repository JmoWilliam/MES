@using Business_Manager.Helpers
@{
    string itemName = "ViewUser";
    string itemNameText = "使用者資料";
}

@Html.Resource("css",
    @<style>
        .table-sticky thead .col-sticky:nth-last-child(1) {
            right: 0;
        }

        .table-sticky tbody .col-sticky:nth-last-child(1) {
            right: 0;
        }
    </style>
)

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(itemNameText)</h5>
                <button class="close" type="button" onclick="Close@(itemName)()">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <select class="form-control" id="cboCompanyIdQ@(itemName)" name="cboCompanyIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <select class="form-control" id="cboDepartmentIdQ@(itemName)" name="cboDepartmentIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto mb-2 mb-md-0 mb-lg-0">
                                        <input type="text" class="form-control" id="txtSearchKeyQ@(itemName)" name="txtSearchKeyQ@(itemName)"
                                               placeholder="請輸入使用者工號/姓名" />
                                    </div>
                                    <div class="col-12 col-md-auto col-lg-auto text-right text-md-left text-lg-left">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                        <button type="button" class="btn btn-success checkbox-mode" onclick="Save@(itemName)()"><i class="fas fa-check"></i>確定</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 200px;">部門</th>
                                        <th scope="col" style="min-width: 125px;">使用者編號</th>
                                        <th scope="col" style="min-width: 125px;">使用者名稱</th>
                                        <th class="text-center checkbox-mode" scope="col" style="min-width: 110px;">
                                            <label class="col-12 col-form-label">
                                                全選 <input type="checkbox" id="cbxSelectAll@(itemName)" />
                                            </label>
                                        </th>
                                        <th class="text-center radio-mode" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let targetSelector@(itemName);
        let userId@(itemName);
        let user@(itemName);
        let departmentId@(itemName);
        let department@(itemName);
        let companyId@(itemName);
        let company@(itemName);
        let type@(itemName);
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            userId@(itemName) = config.objectUserId;
            user@(itemName) = config.objectUser;
            departmentId@(itemName) = config.objectDepartmentId;
            department@(itemName) = config.objectDepartment;
            companyId@(itemName) = config.objectCompanyId;
            company@(itemName) = config.objectCompany;
            type@(itemName) = config.type;

            ComboBoxs.Default("#cboCompanyIdQ@(itemName)", "@Url.Action("GetCompany", "BasicInformation")", { "Status": "A" }, "", "CHOOSE-NUMBER", "請選擇公司", "CompanyWithNo", "CompanyId");
            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "Status": "A" }, "", "CHOOSE-NUMBER", "請選擇部門", "DepartmentWithNo", "DepartmentId");

            if (!!companyId@(itemName)) $("#cboCompanyIdQ@(itemName)").val(companyId@(itemName));

            $("#cboCompanyIdQ@(itemName), #cboDepartmentIdQ@(itemName)").select2({
                dropdownAutoWidth: true,
                width: "100%"
            });

            $("#cboCompanyIdQ@(itemName)").off("change").on("change", function () {
                ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "CompanyId": $("#cboCompanyIdQ@(itemName)").val(), "Status": "A" }, "", "CHOOSE-NUMBER", "請選擇部門", "DepartmentWithNo", "DepartmentId");
            }).trigger("change");

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                if ($("#cbxSelectAll@(itemName)").is(":checked")) {
                    $("input[type='checkbox'][data-user-id]").not(":disabled").prop("checked", true);
                } else {
                    $("input[type='checkbox'][data-user-id]").not(":disabled").prop("checked", false);
                }
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetUser", "BasicInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "CompanyId": $("#cboCompanyIdQ@(itemName)").val(),
                "DepartmentId": $("#cboDepartmentIdQ@(itemName)").val(),
                "SearchKey": $("#txtSearchKeyQ@(itemName)").val(),
                "Status": "A"
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";

                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td>${item.LogoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${item.LogoIcon}" />`}${item.DepartmentNo} ${item.DepartmentName}</td>
                                        <td>${item.UserNo}</td>
                                        <td>${item.Gender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>` : item.Gender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>` : ``}${item.UserName}</td>
                                        <td class="text-center">`;
                        switch (type@(itemName)) {
                            case "radio":
                                innerHtml += `<label class="control control-solid control-solid-info control--radio">
                                                <input type="radio" data-user-id="${item.UserId}" value="${item.UserId}" />
                                                <span class="control__indicator"></span>
                                              </label>`;
                                break;
                            case "checkbox":
                                innerHtml += `<label class="control control-solid control-solid-info control--checkbox">
                                                <input type="checkbox" data-user-id="${item.UserId}" value="${item.UserId}" />
                                                <span class="control__indicator"></span>
                                              </label>`;
                                break;
                        }
                        innerHtml += `    <input type="hidden" name="txtUserNo@(itemName)" data-user-id="${item.UserId}" value="${item.UserNo}" />
                                          <input type="hidden" name="txtUserName@(itemName)" data-user-id="${item.UserId}" value="${item.UserName}" />
                                          <input type="hidden" name="txtGender@(itemName)" data-user-id="${item.UserId}" value="${item.Gender}" />
                                          <input type="hidden" name="txtDepartmentId@(itemName)" data-user-id="${item.UserId}" value="${item.DepartmentId}" />
                                          <input type="hidden" name="txtDepartmentNo@(itemName)" data-user-id="${item.UserId}" value="${item.DepartmentNo}" />
                                          <input type="hidden" name="txtDepartmentName@(itemName)" data-user-id="${item.UserId}" value="${item.DepartmentName}" />
                                          <input type="hidden" name="txtCompanyId@(itemName)" data-user-id="${item.UserId}" value="${item.CompanyId}" />
                                          <input type="hidden" name="txtCompanyNo@(itemName)" data-user-id="${item.UserId}" value="${item.CompanyNo}" />
                                          <input type="hidden" name="txtCompanyName@(itemName)" data-user-id="${item.UserId}" value="${item.CompanyName}" />
                                          <input type="hidden" name="txtLogoIcon@(itemName)" data-user-id="${item.UserId}" value="${item.LogoIcon}" />
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="5" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            switch (type@(itemName)) {
                case "radio":
                    $(".radio-mode").show();
                    $(".checkbox-mode").hide();

                    $("input[type='radio']").click(function () {
                        if ("[data-user-id]:checked") {
                            let userId = $(this).data("user-id");

                            if (userId) {
                                let userNo = $(`input[name='txtUserNo@(itemName)'][data-user-id='${userId}']`).val();
                                let userName = $(`input[name='txtUserName@(itemName)'][data-user-id='${userId}']`).val();
                                let gender = $(`input[name='txtGender@(itemName)'][data-user-id='${userId}']`).val();
                                let departmentId = $(`input[name='txtDepartmentId@(itemName)'][data-user-id='${userId}']`).val();
                                let departmentNo = $(`input[name='txtDepartmentNo@(itemName)'][data-user-id='${userId}']`).val();
                                let departmentName = $(`input[name='txtDepartmentName@(itemName)'][data-user-id='${userId}']`).val();
                                let companyId = $(`input[name='txtCompanyId@(itemName)'][data-user-id='${userId}']`).val();
                                let companyNo = $(`input[name='txtCompanyNo@(itemName)'][data-user-id='${userId}']`).val();
                                let companyName = $(`input[name='txtCompanyName@(itemName)'][data-user-id='${userId}']`).val();
                                let logoIcon = $(`input[name='txtLogoIcon@(itemName)'][data-user-id='${userId}']`).val();

                                if (userId@(itemName)) ElementSetValue(userId@(itemName), userId, "change");
                                if (user@(itemName)) {
                                    let user = `
                                                ${gender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>` : gender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>` : ``}${userNo} ${userName}`;

                                    ElementSetValue(user@(itemName), user, "change");
                                }
                                if (departmentId@(itemName)) ElementSetValue(departmentId@(itemName), departmentId, "change");
                                if (department@(itemName)) {
                                    let department = `
                                                      ${logoIcon == -1 ? `` : `<img class="company-logo" src="/Web/GetFile?fileId=${logoIcon}" />`}${departmentNo} ${departmentName}`;

                                    ElementSetValue(department@(itemName), department, "change");
                                }
                                if (companyId@(itemName)) ElementSetValue(companyId@(itemName), companyId, "change");
                                if (company@(itemName)) {
                                    let company = `${companyNo} ${companyName}`;

                                    ElementSetValue(company@(itemName), company, "change");
                                }

                                $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                                $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                            }
                        }

                        Close@(itemName)();
                    });
                    break;
                case "checkbox":
                    $(".radio-mode").hide();
                    $(".checkbox-mode").show();
                    break;
            }
        }

        function Save@(itemName)() {
            let userList = [];

            if ($("input[type='checkbox'][data-user-id]:checked").length > 0) {
                $.each($("input[type='checkbox'][data-user-id]:checked"), function (i) {
                    let userId = $(this).data("user-id");

                    userList.push(userId);
                });

                if (userId@(itemName)) ElementSetValue(userId@(itemName), userList, "change");
            }

            $("#cbxSelectAll@(itemName)").prop("checked", false);
            Close@(itemName)();
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
)
@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        let VersionDfm

        $(document).ready(function () {
            GetUserInfo@(itemName)();

            ComboBoxs.Default("#cboDifficultyLevelQ@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "DesignForManufacturing.DifficultyLevel" }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboModeIdQ@(itemName)", "@Url.Action("GetProdMode", "MesBasicInformation")", {}, "", "NA", "", "txtProdModeWithText", "ModeId");
            ComboBoxs.Default("#cboRdUserIdQ@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "", "NA", "", "UserWithNo", "UserId"); //研發者

            let currentDate = new Date();
            Suites.DatePicker("txtEndCreateDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 30);
            Suites.DatePicker("txtStartCreateDateQ@(itemName)", currentDate);

            $(".advanced-block a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });

            $("#cboDfmDetailLog@(itemName)").change(function () {
                InitData@(itemName)(objPage@(itemName));
                ReturnDfmDetail()
            })


            if (!isMobile) {
                $("#cboDifficultyLevelQ@(itemName), #cboModeIdQ@(itemName), #cboRdUserIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            Query@(itemName)();
        });

        function InitParameter@(itemName)(selector) {
            let initFnString = "Expand";
            let content = selector.attr("href").split('#tab')[1];
            if ($("#cboDifficultyLevelDesignForManufacturingManagement").val() == "") {
                alert("請將DFM單頭頭資料維護完整","warning")
                return
            }
            switch (content) {
                case "DfmDetail":
                    initFnString += "DfmDetail";
                    break;
                case "DfmQuotationItem":
                    initFnString += "DfmQuotationItem";
                    break;
                case "RfqDetail":
                    initFnString += "RfqDetail";
                    break;
            }

            let initFn = window[initFnString];
            if (initFn && typeof (initFn) == "function") {
                initFn();
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let statusList = [];
            $.each($("input[name='cbxStatusQ@(itemName)']:checked"), function () {
                statusList.push($(this).val());
            });

            let statusListRFQ = [];
            $.each($("input[name='cbxStatusRFQQ@(itemName)']:checked"), function () {
                statusListRFQ.push($(this).val());
            });

            let targetUrl = "@Url.Action("GetDesignForManufacturing", "DfmInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "DfmNo": $("#txtDfmNoQ@(itemName)").val().trim(),
                "RfqNo": $("#txtRfqNoQ@(itemName)").val().trim(),
                "AssemblyName": $("#txtAssemblyNameQ@(itemName)").val().trim(),
                "DifficultyLevel": $("#cboDifficultyLevelQ@(itemName)").val(),
                "ModeId": $("#cboModeIdQ@(itemName)").val(),
                "RdUserId": $("#cboRdUserIdQ@(itemName)").val(),
                "Status": statusList.join(","),
                "RFQDocType": statusListRFQ.join(","),
                "StartCreateDate": ($("#cbxDfmDateQ@(itemName)").is(":checked") ? $("#txtStartCreateDateQ@(itemName)").val() : ""),
                "EndCreateDate": ($("#cbxDfmDateQ@(itemName)").is(":checked") ? $("#txtEndCreateDateQ@(itemName)").val() : "")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);

                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td>${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmNo}" style="max-width: 200px;">${item.DfmNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RfqNo}" style="max-width: 200px;">${item.RfqNo} ${item.DocType == `F` ? `<span style="color:red;">(已失效)</span>` : ``}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.AssemblyName}" style="max-width: 200px;">${item.AssemblyName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.RfqProductClassName}" style="max-width: 170px;">${item.RfqProductClassName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DifficultyLevel}" style="max-width: 70px;">${item.DifficultyLevel}</td>
                                        <td class="text-center">${item.Gender == `M` ? `<span class="gender-male"><i class="fas fa-male"></i></span>` : item.Gender == `F` ? `<span class="gender-female"><i class="fas fa-female"></i></span>` : ``}${item.UserNo} ${item.UserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DfmProcessStatus}" style="max-width: 180px;">${StatusName(`DesignForManufacturing.DfmProcessStatus`, item.DfmProcessStatus)}</td>
                                        <td class="text-center">
                                          <a class="active-link" href="javascript:Edit@(itemName)(${item.DfmId});"><i class="fas fa-edit"></i></a>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
            
        }

        function Edit@(itemName)(DfmId) {
            $("#DfmId").val(DfmId ? DfmId : 0);

            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            ComboBoxs.Default("#cboDifficultyLevel@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "DesignForManufacturing.DifficultyLevel" }, "", "NA", "", "TypeName", "TypeNo");
            ComboBoxs.Default("#cboRdUserId@(itemName)", "@Url.Action("GetUser", "BasicInformation")", { "CompanyId": companyId@(itemName), "Status": "A" }, "", "NA", "", "UserWithNo", "UserId"); //研發者
            ComboBoxs.Default("#cboDfmProcessStatus@(itemName)", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "DesignForManufacturing.DfmProcessStatus" }, "", "NA", "", "StatusName", "StatusNo");
            ComboBoxs.Default(`#cboDfmDetailLog@(itemName)`, "@Url.Action("GetDfmVersion", "DfmInformation")", { }, "", "CHOOSE", "000", "Version", "Version");

            //產品品號彈跳視窗開啟相關
            let popConfig1 = {
                targetSelector: "#txtMtlItemId@(itemName)",
                popFunction: "PopViewMtlItem",
                objectMtlItemId: "#txtMtlItemId@(itemName)",
                objectMtlItemNo: "#desMtlItemNo@(itemName)",
                objectMtlItemName: "#desMtlItemName@(itemName)",
                objectMtlItemSpec: "#desMtlItemSpec@(itemName)",
                objectUomNo: "#desUomNo@(itemName)",
                objectUomId: "#cboUomId@(itemName)",
                objectInventoryId: "#cboInventoryId@(itemName)",
            };
            //InitPopView(popConfig1);

            let currentDate = new Date();
            Suites.DatePicker("txtDfmDate@(itemName)", currentDate);

            if (DfmId > 0) {
                let targetUrl = "@Url.Action("GetDesignForManufacturing", "DfmInformation")";
                let postData = {
                    "DfmId": DfmId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

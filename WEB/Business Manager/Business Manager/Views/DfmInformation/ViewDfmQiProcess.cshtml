@using Business_Manager.Helpers
@{
    string itemName = "ViewDfmQiProcess";
    string itemNameText = "所需製程管理";
}

@Html.Resource("css",
    @<style>
        .showStyle{
            display:inline-block;
            margin-top:-1px;
        }
        .AddNewItem{
            margin:2px 0;
        }
    </style>
                                        )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">目前報價項目 <span class="sub-text" id="desModeId@(itemName)"></span></span>
                </h5>
                <a class="close" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-lg-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto" style="display:flex;margin-left: auto;">
                                        <input type="hidden" id="txtProcessId@(itemName)" name="txtProcessId@(itemName)" value="-1" />
                                        <a class="btn btn-warning " id="AllEdit@(itemName)" href="javascript:AllEdit@(itemName)();"><i class="far fa-chalkboard-teacher"></i>操作</a>
                                        <div class="input-group-append" id="AddNewItem" style="margin-left: 5px;">
                                            <a class="btn btn-info pop-view" id="AddNewItem@(itemName)" href="javascript:void(0);"><i class="fal fa-search"></i>新增</a>
                                        </div>
                                        <a class="btn btn-success " id="AllSave@(itemName)" style="margin-left: 5px;" href="javascript:AllSave@(itemName)();"><i class="fas fa-save"></i>全部儲存</a>
                                        <a class="btn btn-danger " id="SelectDelete@(itemName)" style="margin-left: 5px;" href="javascript:SelectDelete@(itemName)();"><i class="fas fa-trash-alt"></i>項目刪除</a>
                                        <a class="btn btn-secondary " id="Cancel@(itemName)" style="margin-left: 5px;" href="javascript:Cancel@(itemName)();"><i class="far fa-house-leave"></i>取消</a>
                                        <a class="btn btn-success" id="Confirm@(itemName)" style="margin-left: 5px;"  href="javascript:Confirm@(itemName)();"><i class="fas fa-cloud-upload"></i>確認</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col" style="min-width: 50px;">#</th>
                                        <th class="text-center" scope="col" style="min-width: 150px;">製程</th>
                                        <th class="text-center" scope="col" style="min-width: 120px;">工時分配類別</th>
                                        <th class="text-center" scope="col" style="min-width: 130px;">分配基數數量</th>
                                        <th class="text-center" scope="col" style="min-width: 90px;">工時/秒</th>
                                        <th class="text-center" scope="col" style="min-width: 90px;">機時/秒</th>
                                        <th class="text-center" scope="col" style="min-width: 90px;">良率</th>
                                        <th class="text-center checkbox-mode" scope="col" style="min-width: 110px;">
                                            <label class="col-12 col-form-label">
                                                全選 <input type="checkbox" id="cbxSelectAll@(itemName)" />
                                            </label>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="baseData@(itemName)"></tbody>
                                <tbody class="newItem@(itemName)"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
            </div>
        </div>
    </div>
</div>


@Html.Partial("ViewProcessDfm")


@Html.Resource("js",
    @<script>
        var listNum@(itemName) = 0;
        var dfmqpMaxId = 0;
        var dfmqpMaxIdBase = 0;
        var ModeId@(itemName) = 0;
        var DfmQiProcessMaxNum = 1;

        var DfmQiProcessStatus@(itemName) = "";

        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        function Pop@(itemName)(DfmQiId, ProdModeWithText, ModeId) {
            $("#DfmQiId").val(DfmQiId)
            $("#desModeId@(itemName)").text(ProdModeWithText)
            ModeId@(itemName) = ModeId
            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            Query@(itemName)();

            $("#cbxSelectAll@(itemName)").prop("checked", false);

        }

        function Query@(itemName)() {
            listNum@(itemName) = 0;
            $("#AllEdit@(itemName)").show()
            $("#AllSave@(itemName)").hide()
            $("#SelectDelete@(itemName)").hide()
            $("#Cancel@(itemName)").hide()
            $("#AddNewItem@(itemName)").hide()
            $(".newItem@(itemName)").html("")
            processJson =
                {
                    processInfo: []
                }
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            var DfmQiProcessIdList = [];

            let pageCount = 999;
            let targetUrl = "@Url.Action("GetDfmQiProcess", "DfmInformation")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "DfmQiId": $("#DfmQiId").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                GetDfmQiProcessMaxNum()

                if (data.result.length > 0) {
                    listNum@(itemName) += data.result.length
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        
                        DfmQiProcessStatus@(itemName) = item.DfmQiProcessStatus
                        DfmQiProcessIdList.push(item.DfmQiProcessId + "❤" + item.AllocationType)

                        innerHtml += `<tr id="detailDfmqp${item.DfmQiProcessId}" data-process-id=${item.ParameterId} data-database-action="Update">
                                        <td class="dfmqpItem text-center" data-dfmqp-id="${item.DfmQiProcessId}">${_row}</td>
                                        <td class="ellipsis text-center" data-toggle="tooltip" title="ParameterId" style="max-width: 150px;"><input type="text" class="form-control inputStyle" id="txtProcessDfmqp${item.DfmQiProcessId}" name="" value="${item.ProcessName}" data-dfmqp-id="${item.DfmQiProcessId}" style="width: 100%;" readonly /> </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="AllocationType" style="max-width: 130px;"><select class="form-control" id="cboAllocationType${item.DfmQiProcessId}" name="inputStyle@(itemName)" value="${item.AllocationType}" data-dfmqp-id="${item.DfmQiProcessId}" data-msg-required="請選擇項目" data-rule-required="true" onchange="AllocationTypeChamge(${item.DfmQiProcessId})" disabled></select></td>
                                        <td class="ellipsis text-right" data-toggle="tooltip" title="AllocationQty" style="max-width: 130px;"><input type="number" class="form-control inputStyle text-right" id="txtAllocationQtyDfmqp${item.DfmQiProcessId}" name="inputStyle@(itemName)" value="${item.AllocationQty != null ? item.AllocationQty : ``}" data-dfmqp-id="${item.DfmQiProcessId}" style="width: 100%;" readonly /> </td>
                                        <td class="ellipsis text-right" data-toggle="tooltip" title="ManHours" style="max-width: 90px;"><input type="number" class="form-control inputStyle text-right" id="txtManHoursDfmqp${item.DfmQiProcessId}" name="inputStyle@(itemName)" value="${item.ManHours != null ? item.ManHours : ``}" data-dfmqp-id="${item.DfmQiProcessId}" style="width: 100%;" readonly /> </td>
                                        <td class="ellipsis text-right" data-toggle="tooltip" title="MachineHours" style="max-width: 90px;"><input type="number" class="form-control inputStyle text-right" id="txtMachineHoursDfmqp${item.DfmQiProcessId}" name="inputStyle@(itemName)" value="${item.MachineHours != null ? item.MachineHours : ``}" data-dfmqp-id="${item.DfmQiProcessId}" style="width: 100%;" readonly /> </td>
                                        <td class="ellipsis text-right" data-toggle="tooltip" title="YieldRate" style="max-width: 90px;"><input type="number" class="form-control inputStyle text-right" id="txtYieldRateDfmqp${item.DfmQiProcessId}" name="inputStyle@(itemName)" value="${item.YieldRate != null ? item.YieldRate : ``}" data-dfmqp-id="${item.DfmQiProcessId}" style="width: 100%;" readonly /> </td>
                                        <td class="text-center active-content">
                                            <label class="control control-solid control-solid-info control--checkbox">
                                                <input type="checkbox" data-type="DfmQiMaterialId" id="cbxDfmQiProcessId@(itemName)${item.DfmQiProcessId}" name="cbxDfmQiProcessId@(itemName)" value="${item.DfmQiProcessId}">
                                                <span class="control__indicator"></span>
                                            </label>
                                        </td>
                                     </tr>`;               
                    });      
                    if (DfmQiProcessStatus@(itemName) == "Y") {
                        $("#AllEdit@(itemName)").hide()
                        $("#Confirm@(itemName)").hide()
                    } else {
                        $("#AllEdit@(itemName)").show()
                        $("#Confirm@(itemName)").show()
                    }
                } else {
                    innerHtml += `<tr class="noData@(itemName)">
                                    <td class="text-center" colspan="10" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料
                                    </td>
                                  </tr>`;
                    DfmQiProcessStatus@(itemName) == ""
                    $("#AllEdit@(itemName)").show()
                    $("#Confirm@(itemName)").show()
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            let popConfig = {
                targetSelector: "#txtProcessId@(itemName)",
                popFunction: "PopViewProcessDfm",
                objectProcessId: "#txtProcessId@(itemName)",
                objectProcess: "#txtProcess@(itemName)",
                objectModeId: ModeId@(itemName)
            };

            InitPopView(popConfig);

            $("#tblData@(itemName) .baseData@(itemName)").html(innerHtml);
            TableComponentInit();

            DfmQiProcessIdList.forEach(function (v) {
                var dfmQiProcessId = v.split("❤")[0]
                var allocationType = v.split("❤")[1]
                ComboBoxs.Default(`#cboAllocationType${dfmQiProcessId}`, "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "DfmQiProcess.AllocationType" }, allocationType, "NA", "", "TypeName", "TypeNo"); 
                $(`#cboAllocationType${dfmQiProcessId}`).val(allocationType) 
                if (!isMobile) {
                    $(`#cboAllocationType${dfmQiProcessId}`).select2({
                        width: "100%"
                    });
                }
            }) 

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                if ($("#cbxSelectAll@(itemName)").is(":checked")) {
                    $("input[type='checkbox'][name='cbxDfmQiProcessId@(itemName)']").not(":disabled").prop("checked", true);
                } else {
                    $("input[type='checkbox'][name='cbxDfmQiProcessId@(itemName)']").not(":disabled").prop("checked", false);
                }
            });
        }

        function RemoveDfmqp(MaxId) {
            $(`#detailDfmqp${MaxId}`).remove()
            if ($(".newItem@(itemName)").html() == "") {
                $(".noData@(itemName)").show()
            }
        }

        function AllEdit@(itemName)() {
            $.each($("input[name='inputStyle@(itemName)']"), function () {
                $(this).removeClass("inputStyle")
                $(this).attr("readonly", false);
            });
            $.each($("select[name='inputStyle@(itemName)']"), function () {
                $(this).removeClass("inputStyle")
                $(this).attr("disabled", false);
            });
            $("#AllEdit@(itemName)").hide()
            $("#AllSave@(itemName)").show()
            $("#SelectDelete@(itemName)").show()
            $("#Cancel@(itemName)").show()
            $("#AddNewItem@(itemName)").show()
            $("#AddNewItem").addClass("showStyle")
        }

        function AllSave@(itemName)() {
            let innerHtml = ""
            innerHtml += `<tr class="newItem@(itemName)"> </tr>`;

            //let noWriteDfmItemId = []
            //$.each($("select[name='inputStyle']"), function () {
            //    $(this).next("span").removeClass("noWriteDfmItem")
            //    if ($(this).val() == "") {
            //        noWriteDfmItemId.push($(this).data("dfmqp-id"))
            //        $(this).next("span").addClass("noWriteDfmItem")
            //    }
            //});
            //if (noWriteDfmItemId.length > 0) {
            //    alert("項目尚未維護完成不能儲存!!!")
            //    return
            //}

            let dfmqpItemList = [];
            $.each($(".dfmqpItem"), function () {
                var DfmQiProcessId = $(this).data("dfmqp-id")
                dfmqpItemList.push(DfmQiProcessId);
            });

            let dfmqpContentList = [];
            dfmqpItemList.forEach(function (item) {
                var DfmQiProcessId = item
                var ParameterId = $(`#detailDfmqp${DfmQiProcessId}`).data("process-id")
                var AllocationType = $(`#cboAllocationType${DfmQiProcessId}`).val()
                var AllocationQty = $(`#txtAllocationQtyDfmqp${DfmQiProcessId}`).val()
                var ManHours = $(`#txtManHoursDfmqp${DfmQiProcessId}`).val()
                var MachineHours = $(`#txtMachineHoursDfmqp${DfmQiProcessId}`).val()
                var YieldRate = $(`#txtYieldRateDfmqp${DfmQiProcessId}`).val()
                var DatabaseAction = $(`#detailDfmqp${DfmQiProcessId}`).data("database-action")

                var str = DfmQiProcessId + "❤" + ParameterId + "❤" + AllocationType + "❤" + AllocationQty + "❤" + ManHours + "❤" + MachineHours + "❤" + YieldRate + "❤" + DatabaseAction

                dfmqpContentList.push(str);
            })


            let targetUrl = "@Url.Action("AddDfmQiProcess", "DfmInformation")";
            let postData = {
                "DfmQiId": $("#DfmQiId").val(),
                "DfmqpContentList": dfmqpContentList.join(','),
            };

            let result = DataAccess.Add(targetUrl, postData, false, true);

            if (result) {

                Return@(itemName)();
                
            }
        }

        function SelectDelete@(itemName)() {
            var DfmQiProcessIdList = []
            $.each($("input[name='cbxDfmQiProcessId@(itemName)']:checked"), function () {
                DfmQiProcessIdList.push($(this).val())
            });

            swal.fire({
                title: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteDfmQiProcess", "DfmInformation")";
                    let postData = {
                        "DfmQiProcessIdList": DfmQiProcessIdList.join(',')
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        Return@(itemName)()
                    }
                }
            });
        }

        function Confirm@(itemName)() {
            let targetUrl = "@Url.Action("updateConfirmDfmDataStatus", "DfmInformation")";
            let postData = {
                "DfmQiId": $("#DfmQiId").val(),
                "Data": "DfmQiProcess"
            };

            let data = DataAccess.EditContinued(targetUrl, postData, false);

            if (data) {
                console.log(data)
                console.log(data.result)
                if (data.result == "Finish") {
                    console.log("成功!!!!!")

                    ComboBoxs.Default("#cboDfmProcessStatusDesignForManufacturingManagement", "@Url.Action("GetStatus", "BasicInformation")", { "StatusSchema": "DesignForManufacturing.DfmProcessStatus" }, "3", "NA", "", "StatusName", "StatusNo");
                }
                Return@(itemName)()
                alert("確認成功", "success", 0);
            }
        }

        function AllocationTypeChamge(v) {
            if ($(`#cboAllocationType${v}`).val() != 2) {
                $(`#txtAllocationQtyDfmqp${v}`).prop("disabled", true)
                $(`#txtAllocationQtyDfmqp${v}`).val(0)
            }
            else {
                $(`#txtAllocationQtyDfmqp${v}`).prop("disabled", false)
            }
        }

        function Cancel@(itemName)() {
            Return@(itemName)()
            NowMaxNum = -1
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
            Return@(itemName)()
            ReturnDfmQuotationItem()
            NowMaxNum = -1
        }

        function GetDfmQiProcessMaxNum() {
            let targetUrl = "@Url.Action("GetDfmQiProcessMaxNum", "DfmInformation")";
            let postData = {
                "DfmId": $("#DfmId").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                if (data.result.length > 0) {
                    $.each(data.result, function (i, item) {
                        DfmQiProcessMaxNum = item.DfmQiProcessMaxNum; 
                    })
                }
            }
            dfmqpMaxId = DfmQiProcessMaxNum
            dfmqpMaxIdBase = DfmQiProcessMaxNum
        }

        function Return@(itemName)() {
            $("#tblData@(itemName) .newItem@(itemName)").html("");
            $("#AllEdit@(itemName)").show()
            $("#AllSave@(itemName)").hide()
            $("#AddNewItem@(itemName)").hide()
            $("#AddNewItem").removeClass("showStyle")
            $("#cbxSelectAll@(itemName)").prop("checked",false)
            Query@(itemName)();
        }
</script>
                        )
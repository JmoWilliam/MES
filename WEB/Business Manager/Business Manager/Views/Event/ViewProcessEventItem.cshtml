                            <fieldset>
                                @*<div class="form-row align-items-center mb-2">

                                    <label class="col-12 col-md-2 col-lg-2 col-form-label" for="">選擇生產模式<span class="text-danger">*</span></label>
                                    <div class="col-12 col-md-3 col-lg-3">
                                        <select class="form-control" id="cboModeIdQ@(itemName)" name="cboModeIdQ@(itemName)"></select>
                                    </div>
                                    <div class="col-12 col-md-3 col-lg-3" style="margin-top:auto;margin-bottom:3px;">

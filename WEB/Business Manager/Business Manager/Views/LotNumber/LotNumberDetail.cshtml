
@using Business_Manager.Helpers
@{
    string itemName = "LotNumberDetail";
    string itemNameText = "批號詳細資料";
    string authority = ViewBag.authority;

    ViewBag.Title = itemNameText;
}

@Html.Resource("css",
    @<style>
         .help-block {
             display: none;
             margin: 5px 0 0;
             border: 3px dashed #b1b1b1;
             border-radius: 5px;
             padding: 5px 10px;
         }

         dt {
             float: left;
             clear: left;
             width: 110px;
         }

             dt::after {
                 content: "：";
             }

         dd {
             margin: 0 0 0 80px;
             padding: 0;
             color: #36a2f5;
             font-weight: bold;
         }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .no-allow-control {
             margin-right: 5px;
             background-color: rgba(155,155,155,.5);
             border-color: aliceblue;
             cursor: not-allowed !important;
             color: #fff;
         }

             .no-allow-control:hover {
                 color: #fff;
             }
    </style>
                                                                       )

<!--搜尋-->
<div class="modal fade" id="modalQuery@(itemName)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">搜尋</h5>
                <button class="close" data-dismiss="modal" type="button">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container" autocomplete="off" id="queryForm@(itemName)">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動單號</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="txtFromErpFullNoQ@(itemName)" name="txtFromErpFullNoQ@(itemName)" placeholder="請輸入異動單號">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動庫別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboInventoryIdQ@(itemName)"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動日期區間</label>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtStartDateQ@(itemName)" name="txtStartDateQ@(itemName)"
                                       placeholder="請輸入開始日期"
                                       data-msg-required="請輸入開始日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" id="txtEndDateQ@(itemName)" name="txtEndDateQ@(itemName)"
                                       placeholder="請輸入結束日期"
                                       data-msg-required="請輸入結束日期" data-rule-required="true"
                                       data-msg-extraRegex="請輸入正確的日期格式" data-rule-extraRegex="([12]\d{3}\-(0[1-9]|1[0-2])\-(0[1-9]|[12]\d|3[01]))" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動類別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboTransactionTypeQ@(itemName)">
                                    <option value="">請選擇異動類別</option>
                                    <option value="1">入庫</option>
                                    <option value="-1">出庫</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-12 col-form-label">異動別</label>
                            <div class="col-12">
                                <select class="form-control" id="cboDocTypeQ@(itemName)">
                                    <option value="">請選擇異動別</option>
                                    <option value="1">入庫</option>
                                    <option value="2">銷貨</option>
                                    <option value="3">領用</option>
                                    <option value="4">轉撥</option>
                                    <option value="5">調整</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Query@(itemName)()" style="margin: auto;"><i class="fal fa-wrench"></i>套用</button>
            </div>
        </div>
    </div>
</div>

<!--清單-->
<div class="row" id="listData@(itemName)">
    <div class="col-12">
        <div class="card card-shadow mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6 col-sm-6 col-md-6">
                        <a class="btn btn-primary" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#modalQuery@(itemName)"><i class="fal fa-search"></i>搜尋</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 145px;">異動日期</th>
                                        <th scope="col" style="min-width: 200px;">異動單號</th>
                                        <th scope="col" style="min-width: 200px;">異動庫別</th>
                                        <th scope="col" style="min-width: 115px;">數量</th>
                                        <th scope="col" style="min-width: 115px;">出/入庫別</th>
                                        <th scope="col" style="min-width: 115px;">單據類別</th>
                                        <th scope="col" style="min-width: 200px;">備註</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objForm@(itemName) = "#editForm@(itemName)";

        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };

        let lotNumberId@(itemName);

        function Expand@(itemName)(lotNumberId) {
            if (lotNumberId > 0) {
                lotNumberId@(itemName) = lotNumberId;
                $(".advanced-block").slideDown("slow");

                Suites.DateDropper("#txtStartDateQ@(itemName), #txtEndDateQ@(itemName)");
                let currentDate = new Date();
                Suites.SetDateDropper("#txtEndDateQ@(itemName)", currentDate);
                currentDate.setDate(currentDate.getDate() - 90);
                Suites.SetDateDropper("#txtStartDateQ@(itemName)", currentDate);

                if (!isMobile) {
                    $("#cboInventoryIdQ@(itemName), #cboTransactionTypeQ@(itemName), #cboDocTypeQ@(itemName)").select2({
                        width: "100%"
                    });
                }

                ComboBoxs.Default("#cboInventoryIdQ@(itemName)", "@Url.Action("GetInventory", "ScmBasicInformation")", {}, "", "NA", "", "InventoryWithNo", "InventoryId");

                Query@(itemName)();
            }
            else {
                alert("請先儲存單頭資料後再查詢單身!!");
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetLnDetail", "LotNumber")";

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "LotNumberId": lotNumberId@(itemName),
                "FromErpFullNo": $("#txtFromErpFullNoQ@(itemName)").val(),
                "InventoryId": $("#cboInventoryIdQ@(itemName)").val(),
                "TransactionType": $("#cboTransactionTypeQ@(itemName)").val(),
                "DocType": $("#cboDocTypeQ@(itemName)").val(),
                "StartDate": $("#txtStartDateQ@(itemName)").val(),
                "EndDate": $("#txtEndDateQ@(itemName)").val(),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TransactionDate}" style="min-width: 145px;">${item.TransactionDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.FromErpPrefix}-${item.FromErpNo}(${item.FromSeq})" style="min-width: 200px;">${item.FromErpPrefix}-${item.FromErpNo}<code>(${item.FromSeq})</code></td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.InventoryNo} ${item.InventoryName}" style="min-width: 200px;">${item.InventoryNo} ${item.InventoryName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Quantity}" style="min-width: 115px;">${item.Quantity}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TransactionType == `1` ? `入庫` : `出庫`}" style="min-width: 200px;">${item.TransactionType == `1` ? `入庫` : `出庫`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DocTypeNo}" style="min-width: 115px;">${item.DocTypeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Remark}" style="min-width: 115px;">${item.Remark}</td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }
    </script>
  )
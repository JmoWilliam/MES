@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            if (!isMobile) {
                $("#cboSupplierIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            //供應商資料
            ComboBoxs.Default("#cboSupplierIdQ@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "NA", "", "SupplierWithNo", "SupplierId");

            Suites.DateDropper("#txtOsrStartDateQ@(itemName), #txtOsrEndDateQ@(itemName)");
            let currentDate = new Date();
            Suites.SetDateDropper("#txtOsrEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 90);
            Suites.SetDateDropper("#txtOsrStartDateQ@(itemName)", currentDate);

            Query@(itemName)();
        });

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetOspReceipt", "OutsourcingProduction")";

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "OsrErpFullNo": $("#txtOsrErpFullNoQ@(itemName)").val(),
                "SupplierId": $("#cboSupplierIdQ@(itemName)").val(),
                "OsrStartDate": $("#txtOsrStartDateQ@(itemName)").val(),
                "OsrEndDate": $("#txtOsrEndDateQ@(itemName)").val(),
                "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val(),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OsrErpPrefix}-${item.OsrErpNo}" style="max-width: 200px;">${item.OsrErpPrefix}-${item.OsrErpNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SupplierNo} ${item.SupplierName}" style="max-width: 200px;">${item.SupplierNo} ${item.SupplierName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DocumentDate}" style="max-width: 200px; min-width: 100px;">${item.DocumentDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ReceiptDate}" style="max-width: 200px; min-width: 100px;">${item.ReceiptDate}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo}${item.UserName}" style="min-width: 175px;"><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.TransferStatus == `Y` ? `已拋轉` : `未拋轉`}" style="max-width: 200px; min-width: 100px;">${item.TransferStatus == `Y` ? `已拋轉` : `未拋轉`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.StatusName}" style="max-width: 200px; min-width: 100px;">${item.StatusName}</td>
                                        ${JudgeConfirmUserNo(`${item.ConfirmUserNo}`, `${item.ConfirmUserName}`)}
                                        <td class="text-center active-content" style="min-width: 350px;">
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.OsrId}');"><i class="fas fa-edit"></i></a>
                                            ${JudgeConfirm(`${item.ConfirmStatus}`, `${item.OsrId}`, `${item.ConfirmUserNo}`)}
                                        </td>
                                      </tr>`;
                    });

                    function JudgeConfirm(confirmStatus, osrId, confirmUserNo) {
                        let innerHtml = '';
                        switch (confirmStatus)
                        {
                            case "V": {
                                innerHtml += `<a class="active-link auth-confirm active-disable" href="javascript:void();"><i class="far fa-arrow-alt-square-up"> 拋轉</i></a>
                                              <a class="active-link auth-confirm active-disable" href="javascript:void();"><i class="fas fa-check"> 拋單及核單</i></a>
                                              <a class="active-link auth-reconfirm active-disable" href="javascript:void();"><i class="fas fa-undo-alt"> 反確認</i></a>
                                              <a class="active-link auth-void active-disable" href="javascript:void();"><i class="fas fa-ban"> 作廢</i></a>`;
                                break;
                            }
                            case "N": {
                                innerHtml += `<a class="active-link auth-update" href="javascript:TransferErp@(itemName)('${osrId}');"><i class="far fa-arrow-alt-square-up"></i> 拋轉</a>
                                              <a class="active-link auth-confirm" href="javascript:Confirm@(itemName)('${osrId}');"><i class="fas fa-check"> 拋單及核單</i></a>
                                              <a class="active-link auth-reconfirm active-disable" href="javascript:void();"><i class="fas fa-undo-alt"> 反確認</i></a>`;
                                if (confirmUserNo != "null") {
                                    innerHtml += ` <a class="active-link auth-void" href="javascript:Void@(itemName)('${osrId}');"><i class="fas fa-ban"> 作廢</i></a>`;
                                }
                                else {
                                    innerHtml += ` <a class="active-link auth-void active-disable" href="javascript:void();"><i class="fas fa-ban"> 作廢</i></a>`;
                                }
                                break;
                            }
                            case "Y": {
                                innerHtml += `<a class="active-link auth-confirm active-disable" href="javascript:void();"><i class="far fa-arrow-alt-square-up"> 拋轉</i></a>
                                              <a class="active-link auth-confirm active-disable" href="javascript:void();"><i class="fas fa-check"> 拋單及核單</i></a>
                                              <a class="active-link auth-reconfirm" href="javascript:ReConfirm@(itemName)('${osrId}');"><i class="fas fa-undo-alt"> 反確認</i></a>
                                              <a class="active-link auth-void active-disable" href="javascript:void();"><i class="fas fa-ban"> 作廢</i></a>`;
                                break;
                            }

                        }
                        return innerHtml;
                    }

                    function JudgeConfirmUserNo(confirmUserNo, confirmUserName) {
                        let innerHtml = '';
                        if (confirmUserNo != "null") {
                            innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="${confirmUserNo}${confirmUserName}" style="min-width: 100px;"><i class="fas fa-user"></i>&nbsp;<code>${confirmUserNo}</code>&nbsp;${confirmUserName}</td>`;
                        }
                        else {
                            innerHtml += `<td style="min-width: 150px;"></td>`;
                        }
                        return innerHtml;
                    }
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="9" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            }
            else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));
        }

        function Edit@(itemName)(OsrId) {
            $("#OsrId").val(OsrId ? OsrId : 0);
            Switch("#editData@(itemName), .unit-block", "#listData@(itemName)");

            $(".btn-group@(itemName)").show();

            $("#cboCurrencyCode@(itemName)").prop("disabled", true);
            $("#txtExchange@(itemName)").prop("readonly", true);

            $("#txtOspDetailId@(itemName)").siblings(".help-block").hide();
            $("#txtOspDetailId@(itemName)").val("");

            if (!isMobile) {
                $("#cboSupplierId@(itemName)").select2({
                    width: "100%"
                });
                $("#cboOsrErpPrefix@(itemName)").select2({
                    width: "100%"
                });
                $("#cboTaxCode@(itemName)").select2({
                    width: "100%"
                });
                $("#cboTaxType@(itemName)").select2({
                    width: "100%"
                });
                $("#cboDeductType@(itemName)").select2({
                    width: "100%"
                });
                $("#cboInvoiceType@(itemName)").select2({
                    width: "100%"
                });
                $("#cboCurrencyCode@(itemName)").select2({
                    width: "100%"
                });
                $("#cboPaymentTerm@(itemName)").select2({
                    width: "100%"
                });
            }

            //供應商資料
            ComboBoxs.Default("#cboSupplierId@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "NA", "", "SupplierWithNo", "SupplierId");

            //入庫單別
            ComboBoxs.WithText("#cboOsrErpPrefix@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "MoErpPrefix" }, "5902", "NA", "", "MweErpPrefixName", "MweErpPrefix");

            //抵扣區分
            ComboBoxs.WithText("#cboDeductType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "OspReceipt.DeductType" }, "1", "NA", "", "TypeName", "TypeNo");

            $("#cboTaxCode@(itemName)").on("change", function () {
                ComboBoxs.Default("#cboInvoiceType@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "InvoiceCount", "Condition": $("#cboTaxCode@(itemName)").val() }, "", "CHOOSE", "", "InvoiceCountName", "InvoiceCountNo");

                let taxation;
                let targetUrl = "@Url.Action("GetErpData", "BasicInformation")";
                let postData = {
                    "ColumnName": "TaxNo",
                    "Condition": $("#cboTaxCode@(itemName)").val()
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        taxation = item.Taxation;
                        $("#txtTaxRate@(itemName)").val(parseFloat(item.BusinessTaxRate));
                    });
                }

                ComboBoxs.Default("#cboTaxType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Customer.Taxation" }, taxation, "NA", "", "TypeName", "TypeNo");
            });

            $("#cboCurrencyCode@(itemName)").change(function () {
                //匯率
                targetUrl = "@Url.Action("GetErpData", "BasicInformation")";
                postData = {
                    "ColumnName": "ExchangeRate",
                    "Condition": $("#cboCurrencyCode@(itemName)").val()
                };
                data = DataAccess.Get(targetUrl, postData, false);
                if (data.status == "success") {
                    $.each(data.result, function (i, item) {
                        $("#txtExchange@(itemName)").val(item.ExchangeRateName)
                    });

                    EditOrigUnitPriceOspReceiptConfirmDetail();
                }
            });

            if (OsrId > 0) {
                $("#cboSupplierId@(itemName)").attr("disabled", true);
                ExpandOspReceiptConfirmDetail(OsrId);

                //稅別碼
                ComboBoxs.WithText("#cboTaxCode@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "TaxNo" }, "", "NA", "", "TaxName", "TaxNo");

                //課稅別
                ComboBoxs.Default("#cboTaxType@(itemName)", "@Url.Action("GetType", "BasicInformation")", { "TypeSchema": "Customer.Taxation" }, "", "NA", "", "TypeName", "TypeNo");

                //發票聯數
                ComboBoxs.Default("#cboInvoiceType@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "InvoiceCount" }, "", "CHOOSE", "", "InvoiceCountName", "InvoiceCountNo");

                //交易幣別
                ComboBoxs.WithText("#cboCurrencyCode@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "Currency" }, "", "NA", "", "CurrencyName", "Currency");

                //付款條件
                ComboBoxs.Default("#cboPaymentTerm@(itemName)", "@Url.Action("GetErpData", "BasicInformation")", { "ColumnName": "PaymentTerm" }, "", "NA", "", "PaymentTermName", "PaymentTermNo");

                let targetUrl = "@Url.Action("GetOspReceipt", "OutsourcingProduction")";
                let postData = {
                    "OsrId": OsrId
                };

                let data = DataAccess.Get(targetUrl, postData, false);

                if (data.status == "success") {
                    $("#txtOspDetailId@(itemName)").siblings(".help-block").show();
                    $(".btn-group@(itemName)").hide();
                    $.each(data.result, function (i, item) {
                        //基本資料
                        $("#cboSupplierId@(itemName)").val(item.SupplierId);
                        $("#txtDocumentDate@(itemName)").val(item.DocumentDate);
                        $("#txtReceiptDate@(itemName)").val(item.ReceiptDate);
                        $("#cboReserveTaxCode@(itemName)").val(item.ReserveTaxCode);
                        $("#cboOsrErpPrefix@(itemName)").val(item.OsrErpPrefix);
                        $("#txtOsrErpNo@(itemName)").val(item.OsrErpNo);

                        //發票資料
                        $("#cboTaxCode@(itemName)").val(item.TaxCode);
                        $("#cboTaxType@(itemName)").val(item.TaxType);
                        $("#cboInvoiceType@(itemName)").val(item.InvoiceType);
                        $("#txtUiNo@(itemName)").val(item.UiNo);
                        $("#txtInvoiceDate@(itemName)").val(item.InvoiceDate);
                        $("#txtInvoiceNo@(itemName)").val(item.InvoiceNo);
                        $("#cboDeductType@(itemName)").val(item.DeductType);
                        $("#txtApplyYYMM@(itemName)").val(item.ApplyYYMM);

                        //其他資料
                        $("#cboCurrencyCode@(itemName)").val(item.CurrencyCode);
                        $("#txtExchange@(itemName)").val(item.Exchange);
                        $("#txtRowCnt@(itemName)").val(item.RowCnt);
                        $("#txtTaxRate@(itemName)").val(item.TaxRate);
                        $("#cboPaymentTerm@(itemName)").val(item.PaymentTerm);
                        $("#txtRemark@(itemName)").val(item.Remark);
                    });
                } else {
                    alert(data.msg, "alert", 0);
                }
            }
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let OsrId = parseInt($("#OsrId").val());
                let targetUrl = "@Url.Action("UpdateOspReceipt", "OutsourcingProduction")";
                let postData = {
                    "OsrId": OsrId,
                    "SupplierId": $("#cboSupplierId@(itemName)").val(),
                    "SupplierSo": $("#txtSupplierSo@(itemName)").val(),
                    "OsrErpPrefix": $("#cboOsrErpPrefix@(itemName)").val(),
                    "OsrErpNo": $("#txtOsrErpNo@(itemName)").val(),
                    "DocumentDate": $("#txtDocumentDate@(itemName)").val(),
                    "ReceiptDate": $("#txtReceiptDate@(itemName)").val(),
                    "ReserveTaxCode": $("#cboReserveTaxCode@(itemName)").val(),
                    "TaxCode": $("#cboTaxCode@(itemName)").val(),
                    "TaxType": $("#cboTaxType@(itemName)").val(),
                    "InvoiceType": $("#cboInvoiceType@(itemName)").val(),
                    "TaxRate": $("#txtTaxRate@(itemName)").val(),
                    "UiNo": $("#txtUiNo@(itemName)").val(),
                    "InvoiceDate": $("#txtInvoiceDate@(itemName)").val(),
                    "InvoiceNo": $("#txtInvoiceNo@(itemName)").val(),
                    "ApplyYYMM": $("#txtApplyYYMM@(itemName)").val(),
                    "CurrencyCode": $("#cboCurrencyCode@(itemName)").val(),
                    "Exchange": $("#txtExchange@(itemName)").val(),
                    "RowCnt": $("#txtRowCnt@(itemName)").val(),
                    "Remark": $("#txtRemark@(itemName)").val(),
                    "DeductType": $("#cboDeductType@(itemName)").val(),
                    "PaymentTerm": $("#cboPaymentTerm@(itemName)").val()
                };

                let result = DataAccess.Update(targetUrl, postData, false, true);

                if (result) {
                    ReturnOspReceiptConfirmDetail();
                    let OsrDetailId = parseInt($("#OsrDetailId").val());

                    if (OsrDetailId > 0) {
                        EditOspReceiptConfirmDetail(OsrDetailId);
                        SaveOspReceiptConfirmDetail();
                        EditOspReceiptConfirmDetail(OsrDetailId);
                    }
                }
            }
        }

        function Confirm@(itemName)(OsrId) {
            swal.fire({
                titleText: "拋轉並核准託外入庫單",
                text: "拋轉並核准託外入庫單",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("UpdateTACOspReceipt", "OutsourcingProduction")";
                    let postData = {
                        "OsrId": OsrId
                    };

                    let result = DataAccess.Update(targetUrl, postData, false, true);

                    if (result) {
                        Query@(itemName)();
                    }
                }
            });
        }


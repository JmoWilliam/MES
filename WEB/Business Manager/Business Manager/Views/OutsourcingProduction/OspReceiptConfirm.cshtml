                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="max-width: 75px;">#</th>
                                        <th scope="col" style="max-width: 200px;">ERP託外入庫單號</th>
                                        <th scope="col" style="max-width: 200px;">供應商</th>
                                        <th scope="col" style="max-width: 150px;">單據日期</th>

        let timer;
        function EditOrigUnitPrice@(itemName)() {
            clearTimeout(timer);
            timer = setTimeout(function () {
                let availableQty = $("#txtAvailableQty@(itemName)").val();
                let origUnitPrice = $("#txtOrigUnitPrice@(itemName)").val();
                let origDiscountAmt = $("#txtOrigDiscountAmt@(itemName)").val();
                let taxRate = $("#txtTaxRateOspReceipt").val();
                let exchange = $("#txtExchangeOspReceipt").val();

                //原幣加工金額
                $("#txtOrigAmount@(itemName)").val(Math.round(availableQty * origUnitPrice));

                let taxType = $("#cboTaxTypeOspReceipt").val();
                if (taxType == "1") //內含
                {
                    t1OrigTaxAmt = Math.round((availableQty * origUnitPrice - origDiscountAmt) * taxRate);

                    //原幣未稅金額
                    $("#txtOrigPreTaxAmt@(itemName)").val(Math.round((availableQty * origUnitPrice - origDiscountAmt) - t1OrigTaxAmt));

                    //原幣稅額
                    $("#txtOrigTaxAmt@(itemName)").val(t1OrigTaxAmt);

                    let origPreTaxAmt = $("#txtOrigPreTaxAmt@(itemName)").val();
                    let origTaxAmt = $("#txtOrigTaxAmt@(itemName)").val();

                    //本幣未稅金額
                    $("#txtPreTaxAmt@(itemName)").val(Math.round(origPreTaxAmt * exchange));

                    //本幣稅額
                    $("#txtTaxAmt@(itemName)").val(Math.round(origTaxAmt * exchange));
                }
                else if (taxType == "2") //外加
                {
                    $("#txtOrigPreTaxAmt@(itemName)").val(Math.round(availableQty * origUnitPrice - origDiscountAmt));
                    $("#txtOrigTaxAmt@(itemName)").val(Math.round((availableQty * origUnitPrice - origDiscountAmt) * taxRate));

                    let origPreTaxAmt = $("#txtOrigPreTaxAmt@(itemName)").val();

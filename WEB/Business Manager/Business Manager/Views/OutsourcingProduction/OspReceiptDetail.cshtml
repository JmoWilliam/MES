                else if (taxType == "3" || taxType == "4" || taxType == "9") { //免稅
                    $("#txtOrigPreTaxAmt@(itemName)").val(Math.round(availableQty * origUnitPrice - origDiscountAmt));
                    $("#txtOrigTaxAmt@(itemName)").val("0");
                    let origPreTaxAmt = $("#txtOrigPreTaxAmt@(itemName)").val();
                    $("#txtPreTaxAmt@(itemName)").val(Math.round(origPreTaxAmt * exchange));
                    $("#txtTaxAmt@(itemName)").val("0");

@Html.Resource("js",
    @<script>
        let Status
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";

        $(document).ready(function () {
            if (!isMobile) {
                $("#cboDepartmentIdQ@(itemName)").select2({
                    width: "100%"
                });
                $("#cboSupplierIdQ@(itemName)").select2({
                    width: "100%"
                });
            }

            let RequestOspNo = "@RequestOspNo";
            if (RequestOspNo) {
                $("#txtOspNoQ@(itemName)").val(RequestOspNo);
            }

            GetUserInfo@(itemName)();

            //部門資料
            ComboBoxs.Default("#cboDepartmentIdQ@(itemName)", "@Url.Action("GetDepartment", "BasicInformation")", { "Status": "A", "CompanyId": companyId@(itemName) }, "", "NA", "", "DepartmentWithNo", "DepartmentId");

            //供應商資料
            ComboBoxs.Default("#cboSupplierIdQ@(itemName)", "@Url.Action("GetSupplier", "ScmBasicInformation")", { "PermitStatus": "1" }, "", "NA", "", "SupplierWithNo", "SupplierId");

            Suites.DateDropper("#txtOspStartDateQ@(itemName), #txtOspEndDateQ@(itemName)");
            let currentDate = new Date();
            Suites.SetDateDropper("#txtOspEndDateQ@(itemName)", currentDate);
            currentDate.setDate(currentDate.getDate() - 90);
            Suites.SetDateDropper("#txtOspStartDateQ@(itemName)", currentDate);

            $(".advanced-block a[data-toggle='tab']").on("shown.bs.tab", function (e) {
                InitParameter@(itemName)($(this));
            });
            $("#cboStatusQ@(itemName)").change(function () {
                $(".Confirm").hide()
                $(".ReConfirm").hide()
                if ($(".CancelBatchShow").is(':visible')) {
                    let StatusQ = $("#cboStatusQ@(itemName)").val()
                    switch (StatusQ) {
                        case "Y":
                            $(".ReConfirm").show()
                            break
                        case "N":
                            $(".Confirm").show()
                            break
                        default:
                           // CancelBatch@(itemName)()
                            $(".batchShow").show()
                            $(".CancelBatchShow").hide()
                            break
                    }
                }


            })

            $("#cbxSelectAll@(itemName)").prop("checked", false);

            $("#cbxSelectAll@(itemName)").off("click").on("click", function () {
                const isChecked = $(this).is(":checked");
                const $checkboxes = $("input[type='checkbox'][data-osp-id]").not(":disabled");

                $checkboxes.prop("checked", isChecked);
            });

            Query@(itemName)();

            $(".batchShow").show()
            $(".CancelBatchShow").hide()
        });

        function GetUserInfo@(itemName)() {
            pageAuthoritys@(itemName) = JSON.parse($(`#pageAuthority`).val());

            let targetUrl = "@Url.Action("GetLoginByKey", "User")";
            let postData = {
                "UserNo": $.cookie("Login"),
                "KeyText": $.cookie("LoginKey")
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                userId@(itemName) = data.returnData.UserId;
                companyId@(itemName) = data.returnData.CompanyId;
                companyName@(itemName) = data.returnData.CompanyName;
            } else {
                alert(data.msg, "alert", 0);
            }
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));

            $("#modalQuery@(itemName)").modal("hide");
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;
            let targetUrl = "@Url.Action("GetOutsourcingProduction", "OutsourcingProduction")";

            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "OspNo": $("#txtOspNoQ@(itemName)").val(),
                "DepartmentId": $("#cboDepartmentIdQ@(itemName)").val(),
                "SupplierId": $("#cboSupplierIdQ@(itemName)").val(),
                "OspStatus": $("#cboOspStatusQ@(itemName)").val(),
                "Status": $("#cboStatusQ@(itemName)").val(),
                "OspStartDate": $("#txtOspStartDateQ@(itemName)").val(),
                "OspEndDate": $("#txtOspEndDateQ@(itemName)").val(),
                "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val(),
                "MtlItemNo": $("#txtMtlItemNoQ@(itemName)").val()
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--checkbox">
                                              ${_row} <input type="checkbox" data-osp-id="${item.OspId}" value="${item.OspId}" />
                                              <span class="control__indicator"></span>
                                          </label>
                                        </td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DepartmentNo} ${item.DepartmentName}" style="max-width: 200px">${item.DepartmentNo} ${item.DepartmentName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspNo}" style="max-width: 200px;">${item.OspNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SupplierNo} ${item.SupplierName}" style="max-width: 200px;">${item.SupplierNo} ${item.SupplierName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspStatus == `Y` ? `是` : `否`}" style="min-width: 150px;">${item.OspStatus == `Y` ? `是` : `否`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspDesc}" style="max-width: 200px; min-width: 100px;">${item.OspDesc}</td>
                                        ${initStatus(`${item.Status}`)}
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspDate}" style="max-width: 200px; min-width: 120px;">${item.OspDate}</td>
                                        <td class="text-center active-content" style="min-width: 350px;">
                                            <a class="active-link auth-update" href="javascript:Edit@(itemName)('${item.OspId}');"><i class="fas fa-edit"></i></a>
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.OspId}');"><i class="fas fa-trash-alt"></i></a>
                                            ${JudgeStatus(`${item.Status}`, `${item.OspId}`)}
                                            <a class="active-link auth-print" href="javascript:Print@(itemName)('${item.OspId}','${item.PassStationControl}','N');"><i class="fas fa-print"></i><span>列印</span></a>
                                            ${item.Status == `N` || item.Status == `E` ? `<a class="active-link auth-transfer" href="javascript:TrasferBpm@(itemName)('${item.OspId}');"><i class="fas fa-exchange-alt"></i> 拋轉BPM簽核` : ``}
                                            ${item.Status == `E` || item.Status == `Y` ? `<a class="active-link auth-transfer" href="javascript:Void@(itemName)('${item.OspId}');"><i class="fas fa-exclamation-circle"></i> 單據作廢` : ``}
                                        </td>
                                      </tr>`;
                    });

                    function initStatus(status) {
                        let innerHtml = '';
                        switch (status) {
                            case "Y":
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="已確認" style="max-width: 200px; min-width: 100px;"><i style="color: green;" class="fas fa-check-circle"></i> 已確認</td>`;
                                break;
                            case "N":
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="未確認" style="max-width: 200px; min-width: 100px;"><i style="color: red;" class="fas fa-exclamation-circle"></i> 未確認</td>`;
                                break;
                            case "P":
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="BPM簽核中" style="max-width: 200px; min-width: 100px;"><i style="color: #a747a3;" class="fas fa-file-signature"></i> BPM簽核中</td>`;
                                break;
                            case "E":
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="BPM駁回修改" style="max-width: 200px; min-width: 100px;"><i style="color: #509aa7;" class="fas fa-user-edit"></i> BPM駁回修改</td>`;
                                break;
                            case "V":
                                innerHtml += `<td class="ellipsis" data-toggle="tooltip" title="單據作廢" style="max-width: 200px; min-width: 100px;"><i style="color: #aeb4b5;" class="fas fa-exclamation-triangle"></i> 單據作廢</td>`;
                                break;
                        }

                        return innerHtml;
                    }

                    function JudgeStatus(status, ospId) {
                        let innerHtml = '';
                        if (status == "N") {

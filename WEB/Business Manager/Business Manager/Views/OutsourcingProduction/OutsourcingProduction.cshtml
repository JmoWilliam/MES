                        OspIdList.push(Key)
                    }
                }
            })
            if (OspIdList.length <= 0) {
                alert("至少需勾選一筆資料才能執行儲存", "alert", 0);
                return
            }

            let titleText = ""
            let text = ""
            let targetUrl = "";
            let postData = {
                "OspIdList": OspIdList.join(",")
            };
            switch (Type) {
                case "Delete":
                    titleText = "是否執行單據批量刪除"
                    text = "該動作無法復原,請確認是否要執行!"
                    targetUrl = "@Url.Action("DeleteOspBatch", "OutsourcingProduction")";
                    break;

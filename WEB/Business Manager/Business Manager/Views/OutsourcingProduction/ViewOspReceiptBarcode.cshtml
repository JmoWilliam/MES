@using Business_Manager.Helpers
@{
    string itemName = "ViewOspReceiptBarcode";
    string itemNameText = "查看託外入庫條碼";
}

@Html.Resource("css",
    @<style>
        .osr-barcode-info {
            border: 1px solid rgba(0,0,0,.125);
            border-radius: 0.25rem;
            padding: 10px;
            box-shadow: 0 0 4px rgb(139 110 110 / 60%);
            margin-bottom: 10px;
        }

         .tag-group {
             display: inline-block;
             background-color: #ebebeb;
             border-radius: 4px;
             cursor: text;
             line-height: 1;
             padding: 0.35rem 0.5rem;
             margin: 0.15rem 0.375rem 0.15rem 0;
             white-space: nowrap;
             color: #0580ff;
             font-weight: 700;
         }

        .table-sticky thead .col-sticky:nth-last-child(1) {
            right: 0;
        }

        .table-sticky tbody .col-sticky:nth-last-child(1) {
            right: 0;
        }
    </style>
                                                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">託外入庫單號: <span class="sub-text" id="desOsrErpFullNo@(itemName)"></span></span>
                    <span class="sub-title">託外生產單號: <span class="sub-text" id="desOspNo@(itemName)"></span></span>
                    <span class="sub-title">供應商: <span class="sub-text" id="desSupplierName@(itemName)"></span></span>
                    <span class="sub-title">委託部門: <span class="sub-text" id="desDepartmentName@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-info auth-add" onclick="Edit@(itemName)()"><i class="fas fa-plus"></i>新增</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="max-width:200px; min-width: 100px;">條碼代碼</th>
                                        <th scope="col" style="max-width:200px; min-width: 100px;">條碼數量</th>
                                        <th scope="col" style="max-width:200px; min-width: 100px;">條碼狀態</th>
                                        <th scope="col" style="max-width:200px; min-width: 100px;">建立人員</th>
                                        <th scope="col" style="max-width:200px; min-width: 100px;">建立時間</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 250px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
                <div class="row" id="editData@(itemName)" style="display: none;">
                    <div class="col-12">
                        <form class="container" autocomplete="off" id="editForm@(itemName)">
                            <input type="hidden" id="ItemProcessId" value="-1" />
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label" for="txtBarcodeId@(itemName)">入庫條碼 <span class="text-danger">*</span></label>
                                    <div class="col-12">
                                        <div class="input-group">
                                            <input type="hidden" id="txtOspBarcodeId@(itemName)" name="txtOspBarcodeId@(itemName)" value="-1" />
                                            <div class="input-group-append">
                                                <a class="btn btn-success pop-view" href="javascript:void(0);"><i class="fal fa-search"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tag-class">
                                    <div class="osr-barcode-info">
                                        <span><code>入庫條碼:</code></span>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary edit-mode" onclick="Return@(itemName)()" style="display: none;"><i class="fas fa-undo"></i>返回</button>
                <button type="button" class="btn btn-success edit-mode" onclick="Save@(itemName)()" style="display: none;"><i class="fas fa-save"></i>儲存</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("ViewOspBarcodeSelect")

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#editForm@(itemName)";
        let osrDetailId@(itemName);
        let ospDetailId@(itemName);
        let moId@(itemName);
        let moProcessId@(itemName);

        let osrReceiptBarcodeJson =
        {
            osrReceiptBarcodeInfo: []
        };

        let popFlag = "";

        function Pop@(itemName)(config) {
            popFlag = "POP1";
            moId@(itemName) = config.objectMoId;
            moProcessId@(itemName) = config.objectMoProcessId;
            osrDetailId@(itemName) = config.objectOsrDetailId;
            ospDetailId@(itemName) = config.objectOspDetailId;
            if (osrDetailId@(itemName) <= 0) {
                alert("請先建立託外入庫詳細資料!")
                return false;
            }

            $("#desOsrErpFullNo@(itemName)").html($("#cboOsrErpPrefixOspReceipt").val() + "-" + $("#txtOsrErpNoOspReceipt").val());
            $("#desOspNo@(itemName)").html($("#desOspNoOspReceiptDetail").text());
            $("#desSupplierName@(itemName)").html($("#desSupplierNameOspReceiptDetail").text());
            $("#desDepartmentName@(itemName)").html($("#desDepartmentNameOspReceiptDetail").text());

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Pop2@(itemName)(moId, moProcessId, ospNo, supplierName, departmentName, osrDetailId, ospDetailId) {
            if (osrDetailId <= 0) {
                alert("請先建立託外入庫詳細資料!")
                return false;
            }

            popFlag = "POP2";

            moId@(itemName) = moId;
            moProcessId@(itemName) = moProcessId;
            osrDetailId@(itemName) = osrDetailId;
            ospDetailId@(itemName) = ospDetailId;
            Query@(itemName)();

            $("#desOsrErpFullNo@(itemName)").html($("#cboOsrErpPrefixOspReceipt").val() + "-" + $("#txtOsrErpNoOspReceipt").val());
            $("#desOspNo@(itemName)").html(ospNo);
            $("#desSupplierName@(itemName)").html(supplierName);
            $("#desDepartmentName@(itemName)").html(departmentName);

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetOspReceiptBarcode", "OutsourcingProduction")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "OsrDetailId": osrDetailId@(itemName),
            };

            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;

                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td scope="col" style="min-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeNo}" style="min-width: 100px;">${item.BarcodeNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.BarcodeQty}" style="min-width: 100px;">${item.BarcodeQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.Status == `I` ? `已進貨` : `不良品退回`}" style="min-width: 100px;">${item.Status == `I` ? `已進貨` : `不良品退回`}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.UserNo}${item.UserName}" style="min-width: 150px;"><i class="fas fa-user"></i>&nbsp;<code>${item.UserNo}</code>&nbsp;${item.UserName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.CreateDate}" style="min-width: 200px;">${item.CreateDate}</td>
                                        <td class="text-center active-content col-sticky" scope="col" style="min-width: 250px;">
                                            <!--刪除-->
                                            <a class="active-link auth-delete" href="javascript:Delete@(itemName)('${item.OsrDetailId}', '${item.OspBarcodeId}');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                      </tr>`;
                    });
                }
                else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="7" style="background-color: #fff3cd;">
                                        <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);

            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            let popConfig = {
                targetSelector: "#txtOspBarcodeId@(itemName)",
                popFunction: "PopViewOspBarcodeSelect",
                objectMoId: moId@(itemName),
                objectMoProcessId: moProcessId@(itemName),
                objectOspDetailId: ospDetailId@(itemName),
                objectOsrDetailId: osrDetailId@(itemName)
            };
            InitPopView(popConfig);
        }

        function Edit@(itemName)() {
            Switch("#editData@(itemName), .add-group@(itemName), .edit-mode", "#listData@(itemName), .edit-group@(itemName), .list-mode");
        }

        function Save@(itemName)() {
            if ($(objForm@(itemName)).valid()) {
                let targetUrl = "@Url.Action("AddOspReceiptBarcode", "OutsourcingProduction")";
                let postData = {
                    "OsrReceiptBarcodeData": JSON.stringify(osrReceiptBarcodeJson)
                };

                let result = DataAccess.Add(targetUrl, postData, false, true);

                if (result) {
                    Return@(itemName)();
                    ReturnOspReceiptDetail();

                    if (popFlag == "POP1") {
                        EditOspReceiptDetail($("#OsrDetailId").val());
                        setTimeout(function () {
                            SaveOspReceiptDetail();
                        }, 500);
                    }
                }
            }
        }

        function Delete@(itemName)(OsrDetailId, OspBarcodeId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    let targetUrl = "@Url.Action("DeleteOspReceiptBarcode", "OutsourcingProduction")";
                    let postData = {
                        "OsrDetailId": OsrDetailId,
                        "OspBarcodeId": OspBarcodeId
                    };

                    let result = DataAccess.Delete(targetUrl, postData, false, true);

                    if (result) {
                        //Query@(itemName)();
                        Return@(itemName)();
                        ReturnOspReceiptDetail();
                        if (popFlag == "POP1") {
                            EditOspReceiptDetail($("#OsrDetailId").val());

                            //重新UPDATE單身資料
                            setTimeout(function () {
                                SaveOspReceiptDetail();
                            }, 500);
                        }
                    }
                }
            });
        }

        function DeleteTag@(itemName)(tagId) {
            swal.fire({
                titleText: "確認要刪除嗎?",
                text: "此動作無法復原，請確認是否要執行!",
                icon: "warning",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.each(osrReceiptBarcodeJson.osrReceiptBarcodeInfo, function (i, item) {
                        let tempNumber = item.TempNumber;
                        if (tempNumber == tagId) {
                            osrReceiptBarcodeJson.osrReceiptBarcodeInfo.splice(i, 1);
                            return false;
                        }
                    });
                    ResetViewOspBarcodeSelect();
                }
            });
        }

        function Return@(itemName)() {
            ResetForm(objForm@(itemName));
            Switch("#listData@(itemName), .list-mode", "#editData@(itemName), .edit-mode");
            osrReceiptBarcodeJson.osrReceiptBarcodeInfo = [];
            $(".osr-barcode-info").empty();
            Query@(itemName)();
        }

        function Close@(itemName)() {
            $("#modal@(itemName)").modal("hide");
        }
    </script>
            )
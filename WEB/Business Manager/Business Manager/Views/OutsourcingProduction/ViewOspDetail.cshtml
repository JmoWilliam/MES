@using Business_Manager.Helpers
@{
    string itemName = "ViewOspDetail";
    string itemNameText = "查看託外生產單詳細資料";
}

@Html.Resource("css",
    @<style>
         .source-user {
             font-size: 1rem;
             color: #4d80c4;
         }

         .source-contact {
             font-size: 1rem;
             color: #27b390;
         }

             .source-user i, .source-contact i {
                 margin-right: 5px;
             }

         .table-sticky thead .col-sticky:nth-last-child(1) {
             right: 0;
         }

         .table-sticky tbody .col-sticky:nth-last-child(1) {
             right: 0;
         }
    </style>
                )

<div class="modal fade" id="modal@(itemName)">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(itemNameText)
                    <span class="sub-title">供應商: <span class="sub-text" id="desSupplierName@(itemName)"></span></span>
                </h5>
                <a class="close list-mode" href="javascript:void(0);" onclick="Close@(itemName)()"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="row" id="listData@(itemName)">
                    <div class="col-12">
                        <form autocomplete="off" id="queryForm@(itemName)">
                            <fieldset>
                                <div class="form-row align-items-center mb-2">
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtOspNoQ@(itemName)" name="txtOspNoQ@(itemName)"
                                               placeholder="請輸入MES託外生產單號" />
                                    </div>
                                    <div class="col-auto">
                                        <input type="text" class="form-control" id="txtWoErpFullNoQ@(itemName)" name="txtWoErpFullNoQ@(itemName)"
                                               placeholder="請輸入ERP製令" />
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary" onclick="Query@(itemName)()"><i class="fal fa-search"></i>搜尋</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="table-custom">
                            <table class="table table-bordered table-striped table-sticky" id="tblData@(itemName)">
                                <thead>
                                    <tr>
                                        <th scope="col" style="min-width: 75px;">#</th>
                                        <th scope="col" style="min-width: 250px;">MES託外生產單號</th>
                                        <th scope="col" style="min-width: 250px;">製令</th>
                                        <th scope="col" style="min-width: 200px;">製令製程</th>
                                        <th scope="col" style="min-width: 200px;">加工代碼</th>
                                        <th scope="col" style="min-width: 200px;">所屬部門</th>
                                        <th scope="col" style="min-width: 200px;">供應商</th>
                                        <th scope="col" style="min-width: 175px;">託外生產數量</th>
                                        <th scope="col" style="min-width: 175px;">供貨生產數量</th>
                                        <th scope="col" style="min-width: 175px;">預計回廠日期</th>
                                        <th class="text-center col-sticky" scope="col" style="min-width: 110px;">請選擇</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="pagination" id="page@(itemName)"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@Html.Resource("js",
    @<script>
        let objPage@(itemName) = {
            "pageIndex": 0,
            "pageSize": 10
        };
        let objForm@(itemName) = "#queryForm@(itemName)";

        let targetSelector@(itemName);
        let ospDetailId@(itemName);
        let ospNo@(itemName);
        let woErpFullNo@(itemName);
        let supplierName@(itemName);
        let processAlias@(itemName);
        let processCodeName@(itemName);
        let ospQty@(itemName);
        let suppliedQty@(itemName);
        let expectedDate@(itemName);
        let departmentName@(itemName);
        let mtlItemNo@(itemName);
        let mtlItemName@(itemName);
        let inventoryId@(itemName);
        let uomId@(itemName);

        function Pop@(itemName)(config) {
            targetSelector@(itemName) = config.targetSelector;
            ospDetailId@(itemName) = config.objectOspDetailId;
            ospNo@(itemName) = config.objectOspNo;
            woErpFullNo@(itemName) = config.objectWoErpFullNo;
            supplierName@(itemName) = config.objectSupplierName;
            processAlias@(itemName) = config.objectProcessAlias;
            processCodeName@(itemName) = config.objectProcessCodeName;
            ospQty@(itemName) = config.objectOspQty;
            suppliedQty@(itemName) = config.objectSuppliedQty;
            expectedDate@(itemName) = config.objectExpectedDate;
            departmentName@(itemName) = config.objectDepartmentName;
            mtlItemNo@(itemName) = config.objectMtlItemNo;
            mtlItemName@(itemName) = config.objectMtlItemName;
            inventoryId@(itemName) = config.objectInventoryId;
            uomId@(itemName) = config.objectUomId;
            $("#desSupplierName@(itemName)").html($("#cboSupplierIdOspReceipt option:selected").text());

            if (!isMobile) {
                $("#cboProdModeQ@(itemName)").select2({
                    width: "100%"
                });
            }

            ComboBoxs.Default("#cboProdModeQ@(itemName)", "@Url.Action("GetProdMode", "MesBasicInformation")", {}, "", "NA", "", "txtProdModeWithText", "ModeId");

            Query@(itemName)();

            $("#modal@(itemName)").modal({
                backdrop: "static",
                keyboard: false,
                show: true
            });

            $("#queryForm@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#txtOspNoQ@(itemName), #txtWoErpFullNoQ@(itemName)").keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    Query@(itemName)();
                    return false;
                }
            });
        }

        function Query@(itemName)() {
            objPage@(itemName).pageIndex = 0;
            InitData@(itemName)(objPage@(itemName));
        }

        function InitData@(itemName)(objPage) {
            let innerHtml = '';
            let pageCount = 0;

            let targetUrl = "@Url.Action("GetOspDetailForPop", "OutsourcingProduction")";
            let postData = {
                "OrderBy": "",
                "PageIndex": (objPage.pageIndex + 1),
                "PageSize": objPage.pageSize,
                "OspNo": $("#txtOspNoQ@(itemName)").val(),
                "Status": "Y",
                "SupplierId": $("#cboSupplierIdOspReceipt").val(),
                "WoErpFullNo": $("#txtWoErpFullNoQ@(itemName)").val() 
            };
            let data = DataAccess.Get(targetUrl, postData, false);

            if (data.status == "success") {
                pageCount = data.result.length > 0 ? parseInt(data.result[0]["TotalCount"]) : 0;
                if (pageCount > 0) {
                    objPage = PageCaculate(pageCount, objPage);
                    $.each(data.result, function (i, item) {
                        let _row = (objPage.pageSize * objPage.pageIndex + (i + 1)) + ".";
                        innerHtml += `<tr>
                                        <td style="max-width: 75px;">${_row}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspNo}" style="max-width: 250px;">${item.OspNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.WoErpPrefix}-${item.WoErpNo}" style="max-width: 250px;">${item.WoErpPrefix}-${item.WoErpNo}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessAlias}" style="max-width: 200px;">${item.ProcessAlias}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ProcessCodeName}" style="max-width: 200px;">${item.ProcessCodeName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.DepartmentNo} ${item.DepartmentName}" style="max-width: 200px;">${item.DepartmentNo} ${item.DepartmentName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SupplierNo} ${item.SupplierName}" style="max-width: 200px;">${item.SupplierNo} ${item.SupplierName}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.OspQty}" style="max-width: 175px;">${item.OspQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.SuppliedQty}" style="max-width: 175px;">${item.SuppliedQty}</td>
                                        <td class="ellipsis" data-toggle="tooltip" title="${item.ExpectedDate}" style="max-width: 175px;">${item.ExpectedDate}</td>
                                        <td class="text-center col-sticky">
                                          <label class="control control-solid control-solid-info control--radio">
                                            <input type="radio" data-osp-detail-id="${item.OspDetailId}" value="${item.OspDetailId}" />
                                            <span class="control__indicator"></span>
                                          </label>
                                          <input type="hidden" id="txtOspDetailId@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.OspDetailId}"/>
                                          <input type="hidden" id="txtWoErpPrefix@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.WoErpPrefix}"/>
                                          <input type="hidden" id="txtWoErpNo@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.WoErpNo}"/>
                                          <input type="hidden" id="txtOspNo@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.OspNo}"/>
                                          <input type="hidden" id="txtSupplierName@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.SupplierName}"/>
                                          <input type="hidden" id="txtProcessAlias@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.ProcessAlias}"/>
                                          <input type="hidden" id="txtProcessCodeName@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.ProcessCodeName}"/>
                                          <input type="hidden" id="txtOspQty@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.OspQty}"/>
                                          <input type="hidden" id="txtSuppliedQty@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.SuppliedQty}"/>
                                          <input type="hidden" id="txtExpectedDate@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.ExpectedDate}"/>
                                          <input type="hidden" id="txtDepartmentName@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.DepartmentName}"/>
                                          <input type="hidden" id="txtMtlItemNo@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.MtlItemNo}"/>
                                          <input type="hidden" id="txtMtlItemName@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.MtlItemName}"/>
                                          <input type="hidden" id="txtInventoryId@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.InventoryId}"/>
                                          <input type="hidden" id="txtUomId@(itemName)" data-osp-detail-id="${item.OspDetailId}" value="${item.UomId}"/>
                                        </td>
                                      </tr>`;
                    });
                } else {
                    innerHtml += `<tr>
                                    <td class="text-center" colspan="11" style="background-color: #fff3cd;">
                                      <i class="fal fa-exclamation-circle"></i>&nbsp;目前尚無資料。
                                    </td>
                                  </tr>`;
                }
            } else {
                alert(data.msg, "alert", 0);
            }

            $("#tblData@(itemName) tbody").html(innerHtml);
            TableComponentInit();
            Pager("#page@(itemName)", pageCount, objPage, InitData@(itemName));

            $("input[type='radio']").click(function () {
                if ("[data-osp-detail-id]:checked") {
                    let ospDetailId = $(this).data("osp-detail-id");

                    if (ospDetailId) {
                        let woErpPrefix = $(`input[id="txtWoErpPrefix@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let woErpNo = $(`input[id="txtWoErpNo@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let ospNo = $(`input[id="txtOspNo@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let supplierName = $(`input[id="txtSupplierName@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let processAlias = $(`input[id="txtProcessAlias@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let processCodeName = $(`input[id="txtProcessCodeName@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let ospQty = $(`input[id="txtOspQty@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let suppliedQty = $(`input[id="txtSuppliedQty@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let expectedDate = $(`input[id="txtExpectedDate@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let departmentName = $(`input[id="txtDepartmentName@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let mtlItemNo = $(`input[id="txtMtlItemNo@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let mtlItemName = $(`input[id="txtMtlItemName@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let inventoryId = $(`input[id="txtInventoryId@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();
                        let uomId = $(`input[id="txtUomId@(itemName)"][data-osp-detail-id="${ospDetailId}"]`).val();

                        if (ospDetailId@(itemName)) ElementSetValue(ospDetailId@(itemName), ospDetailId, "change");
                        if (woErpFullNo@(itemName)) ElementSetValue(woErpFullNo@(itemName), woErpPrefix + "-" + woErpNo, "change");
                        if (ospNo@(itemName)) ElementSetValue(ospNo@(itemName), ospNo, "change");
                        if (supplierName@(itemName)) ElementSetValue(supplierName@(itemName), supplierName, "change");
                        if (processAlias@(itemName)) ElementSetValue(processAlias@(itemName), processAlias, "change");
                        if (processCodeName@(itemName)) ElementSetValue(processCodeName@(itemName), processCodeName, "change");
                        if (ospQty@(itemName)) ElementSetValue(ospQty@(itemName), ospQty, "change");
                        if (suppliedQty@(itemName)) ElementSetValue(suppliedQty@(itemName), suppliedQty, "change");
                        if (expectedDate@(itemName)) ElementSetValue(expectedDate@(itemName), expectedDate, "change");
                        if (departmentName@(itemName)) ElementSetValue(departmentName@(itemName), departmentName, "change");
                        if (mtlItemNo@(itemName)) ElementSetValue(mtlItemNo@(itemName), mtlItemNo, "change");
                        if (mtlItemName@(itemName)) ElementSetValue(mtlItemName@(itemName), mtlItemName, "change");
                        if (inventoryId@(itemName)) ElementSetValue(inventoryId@(itemName), inventoryId, "change");
                        if (uomId@(itemName)) ElementSetValue(uomId@(itemName), uomId, "change");

                        $(targetSelector@(itemName)).parent().find(".help-block").css("display", "grid");
                        $(targetSelector@(itemName)).parent().siblings().find(".help-block").css("display", "grid");
                    }
                }

                Close@(itemName)();
            });
        }

        function Close@(itemName)() {
            ResetForm(objForm@(itemName));
            $("#modal@(itemName)").modal('hide');
        }
    </script>
                )
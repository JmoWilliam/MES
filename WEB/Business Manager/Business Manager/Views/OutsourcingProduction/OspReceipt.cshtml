                    let innerHtml = `<td class="ellipsis" data-toggle="tooltip" title="未過站" style="max-width: 200px; min-width: 100px;">未過站</td>`;
                    let checkbool = false;
                    if (processStatus == "null") {
                        return innerHtml;
                    }
                    else {
                        let processStatusJson = JSON.parse(processStatus);
                        $.each(processStatusJson.data, function (i, item) {
                            if (item.ProcessStatus == "N") {
                                checkbool = true;
                                return false;
                            }
                        });

                        if (checkbool == true) {
                            innerHtml = `<td class="ellipsis" data-toggle="tooltip" title="未過站" style="max-width: 200px; min-width: 100px;">未過站</td>`;

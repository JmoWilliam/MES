<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.txt" >
  <targets>    
    <target name="fileTarget"
            xsi:type="File" 
            layout="[${longdate}] [${uppercase:${level}}] [${logger}] ${message} ${exception:format=tostring}"
            concurrentWrites="false" 
            keepFileOpen="false"
            fileName="${basedir}/logs/${shortdate}.txt"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30"
            archiveFileName="${basedir}/logs/History/${shortdate}.txt" />
    <target name="consoleTraget" 
            xsi:type="ColoredConsole"
            layout="[${longdate}] [${uppercase:${level}}] [${logger:shortName=true}] ${message} ${exception:format=tostring}" />
  </targets>
  <rules>
    <logger name="*" writeTo="consoleTraget,fileTarget" />
  </rules>
</nlog>